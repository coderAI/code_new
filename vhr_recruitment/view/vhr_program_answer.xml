<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data noupdate='0'>
        <record id="view_vhr_program_answer_form" model="ir.ui.view">
            <field name="name">vhr.program.answer.form</field>
            <field name="model">vhr.program.answer</field>
            <field name="arch" type="xml">
                <form string="HRS Program Answer" version="7.0">
                    <sheet>
                    	<group cols="4">
	                    	<field name="name" required='1'/>
	                    	<field name="name_en" required='1'/>
	                    	<field name="is_result"/>
	                    	<field name="description"/>
	                    	<field name="active"/>
	                    </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_vhr_program_answer_tree" model="ir.ui.view">
            <field name="name">vhr.program.answer.tree</field>
            <field name="model">vhr.program.answer</field>
            <field name="arch" type="xml">
                <tree string="HRS Program Answer" version="7.0">
                	<field name="name" required='1'/>
                  	<field name="name_en" required='1'/>
                  	<field name="is_result"/>
                  	<field name="description"/>
                  	<field name="active"/>
                </tree>
            </field>
        </record>
    </data>
</openerp>
