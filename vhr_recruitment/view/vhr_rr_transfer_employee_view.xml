<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	
    	
    	<record id="view_vhr_rr_transfer_employee_submit_form" model="ir.ui.view">
            <field name="name">vhr.rr.transfer.employee.submit.form</field>
            <field name="model">vhr.rr.transfer.employee</field>
            <field name="type">form</field>
            <field name="groups_id" eval="[(4, ref('vhr_human_resource.vhr_cb'))]"/>
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <form string="Note" version="7.0">
                    <separator string="Comment" colspan="4" required="context.get('required_comment',False)"/>
                    <footer>
                        <button name="execute_workflow"
                                string="Submit"  one_click_button="True"
                                type="object" icon="gtk-save"
                                class="oe_highlight" context="{'ACTION_COMMENT': action_comment}"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        
    	<record id="view_vhr_rr_transfer_employee_form" model="ir.ui.view">
       		<field name="name">vhr.rr.transfer.employee.view.form</field>
       		<field name="model">vhr.rr.transfer.employee</field>
       		<field name="groups_id" eval="[(4, ref('vhr_human_resource.vhr_cb'))]"/>
       		<field name="arch" type="xml">
       			<form string="Transfer Candidate" version="7.0" create='false'>
       				<header>
       					<field name="state" widget="statusbar" 
       						options="{'save_readonly': True}"
							statusbar_visible="draft,finish"/>
       				</header>
       				<sheet>
       					<div class="oe_right" name="buttons">
	       					
	                        <div class="oe_button_box" attrs="{'invisible': [('is_person_do_action','=',False)]}">
	                            <button string="Transfer" name="open_window" type="object"
	                            	class="oe_stat_button bg_icon_green"
		                            icon="fa-mail-forward"
	                            	context="{'required_comment':True,'action':'submit'}" 
									 states="draft"/>
	                        </div>
	                    </div>
       					<group col="4">
   							<field name="applicant_id" readonly='1' options="{'no_open': True,'save_readonly': True}"/>
   							<field name="offer_job_type" options="{'no_open': True,'save_readonly': True}"/>
   							<field name="offer_com_group_id" options="{'no_open': True,'save_readonly': True}"/>
   							<field name="offer_company_id" options="{'no_open': True,'save_readonly': True}"/>
   							<field name="offer_department" options="{'no_open': True,'save_readonly': True}"/>
   							<field name="offer_team_id" options="{'no_open': True,'save_readonly': True}"/>
   							<field name="contract_type_id" options="{'no_open': True,'save_readonly': True}"/>
   							<field name="join_date"/>
   							<field name="offer_gross_salary" options="{'currency_field': 'company_currency_id', 'save_no_required': True}"  />
   							<field name="offer_probation_salary" options="{'currency_field': 'company_currency_id', 'save_no_required': True}"  />
   							<field name="offer_job_title_id" options="{'no_open': True,'save_readonly': True}"/>
   							<field name="offer_job_level_id" options="{'no_open': True,'save_readonly': True}"/>
   							<field name="emp_id" options="{'no_open': True,'save_readonly': True}"/>
   							<field name="employee_code" options="{'no_open': True,'save_readonly': True}"/>
   							<field name="ex_employee"/>
   							<field name="is_person_do_action" invisible='1'/>
       					</group>
       					<notebook>
       						<page string="Log state changes" attrs="{'invisible': [('state','=',False)]}">
                                    <field name="state_log_ids" readonly="1"/>
                            </page>
       					</notebook>
       				</sheet>
       			</form>
       		</field>
       	</record>
       	
       	<record id="view_vhr_rr_transfer_employee_tree" model="ir.ui.view">
       		<field name="name">vhr.rr.transfer.employee.view.tree</field>
       		<field name="model">vhr.rr.transfer.employee</field>
       		<field name="groups_id" eval="[(4, ref('vhr_human_resource.vhr_cb'))]"/>
       		<field name="arch" type="xml">
      			<tree string="Transfer Candidate" version="7.0" create='false' colors="blue:state == 'draft'">
					<field name="applicant_id"/>
					<field name='emp_id'/>
					<field name="join_date"/>
					<field name="offer_department"/>
					<field name="employee_code"/>
					<field name="state"/>
      			</tree>
     		</field>
       	</record>
       	
       	<record id="view_vhr_rr_transfer_employee_search" model="ir.ui.view">
        	<field name="name">vhr.rr.transfer.employee.view.search</field>
        	<field name="model">vhr.rr.transfer.employee</field>
        	<field name="groups_id" eval="[(4, ref('vhr_human_resource.vhr_cb'))]"/>
        	<field name="arch" type="xml">
        		<search string="Transfer Candidate">
        			
        			<group expand="0" string="Filter">
        				<filter string="Status = Waiting" name="state_waiting" icon="terp-stage"
                            domain="[('state', '=', 'draft')]"/>
	                    <filter string="Status = Transfered" name="state_transfer" icon="STOCK_NEW"
	                            domain="[('state', '=', 'finish')]"/>
        			</group>
        			 <field name="name" string="Transfer Candidate" 
	                  		filter_domain="['|',('name','ilike',self),('applicant_id.name','ilike',self)]"/>

        		</search>
        	</field>
        </record>
        
        <record model="ir.actions.act_window" id="act_vhr_rr_transfer_employee">
       		<field name="name">Transfer Candidate</field> 
            <field name="res_model">vhr.rr.transfer.employee</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_state_waiting': 1}</field>
            <field name="view_id" ref="view_vhr_rr_transfer_employee_tree"/>
            <field name="search_view_id" ref="view_vhr_rr_transfer_employee_search"/>
       	</record>
       	
       	
    </data>
</openerp>