<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="vhr_rr_talent_expertise_tree_view">
			<field name="name">vhr.rr.talent.expertise.tree</field>
			<field name="model">vhr.rr.talent.expertise</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Expertises">
					<field name="code"/>
                    <field name="name"/>
                    <field name="name_en"/>
                    <field name="active"/>
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="vhr_rr_talent_expertise_form_view">
			<field name="name">vhr.rr.talent.expertise.form</field>
			<field name="model">vhr.rr.talent.expertise</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Expertises">
					<sheet>
       					<group col="4">
       						<group>
       							<field name="name" required="1"/>
       							<field name="code" readonly="1"/>
       						</group>
       						<group>
       							<field name="name_en"/>
	       						<field name="active"/>
       						</group>
       					</group>
       					<group>
       						<field name="description" String="Description"/>
       					</group>
       					<notebook>
       						<page string="Logs">
       							<label string="*** Please press F5 to refresh the list of logs !" colspan="4"/>	
       							<field name="audit_log_ids" mode="tree"
                       		 		widget="one2many_list" readonly="1">
	       							<tree version="7.0">
	       								<field name="timestamp" required="1" readonly="1"/>
				                        <field name="user_id" readonly="1"/>
				                        <field name="method" readonly="1"/>
				                        <field name="field_description"/>
                            			<field name="old_value_text"/>
                            			<field name="new_value_text"/>
	       							</tree>
	       						</field>	
       						</page>	
       					</notebook>		
       				</sheet>
				</form>
			</field>
		</record>
		
		<record id="vhr_rr_talent_expertise_search_view" model="ir.ui.view">
			<field name="name">vhr.rr.talent.expertise.form.search</field>
			<field name="model">vhr.rr.talent.expertise</field>
			<field name="arch" type="xml">
				<search string="Search">
					<field name="name" string="Rel Type" 
        			 filter_domain="['|','|',('name','ilike',self),('name_en','ilike',self),('code','ilike',self)]"/>
					<separator />
					<filter string="Active = True" name="active_true" icon="terp-stage"
                            domain="[('active', '=', True)]"/>
                    <filter string="Active = False" name="active_false" icon="STOCK_NEW"
                            domain="[('active', '=', False)]"/>
				</search>
			</field>
		</record>
		
		<record model="ir.actions.act_window" id="action_vhr_rr_talent_expertise">
			<field name="name">Talent Expertises</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">vhr.rr.talent.expertise</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="vhr_rr_talent_expertise_tree_view" />
			<field name="search_view_id" ref="vhr_rr_talent_expertise_search_view"/>
		</record>

	</data>
</openerp>