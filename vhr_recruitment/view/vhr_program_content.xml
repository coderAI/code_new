<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data noupdate="0">
	
		<record model="ir.ui.view" id="vhr_program_content_tree_view">
			<field name="name">vhr.program.content.tree</field>
			<field name="model">vhr.program.content</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Program Content">
					<field name="code" />
					<field name="name" />
					<field name="name_en" />
					<field name="short_description" />
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="vhr_program_content_form_view">
			<field name="name">vhr.program.content.form</field>
			<field name="model">vhr.program.content</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Program Content" version="7.0">
					<sheet>
						<group>
							<field name="code" required="1" />
						</group>
						<group>
							<group col="1">
								<field name="name" required="1" />
								<field name="short_description"/>
								<field name="description" widget="html"/>
							</group>
							<group col="1">
								<field name="name_en"/>
								<field name="short_description_en"/>
								<field name="description_en" widget="html"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
	</data>
</openerp>