<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_vhr_erp_exclusion_department_line_form" model="ir.ui.view">
            <field name="name">vhr.erp.exclusion.department.line.form</field>
            <field name="model">vhr.erp.exclusion.department.line</field>
            <field name="arch" type="xml">
                <form string="Dept Line" version="7.0">
       				<sheet>
       					<group>
	       					<group>
	                            <field name="department_id"
	                            	options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}"/>
	                            	
	                            <field name="department_team_ids" widget="many2many_tags" 
	                            	domain="[('parent_id', '=', department_id)]"
	                            	options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}"/>
	       					</group>
	       				</group>
       					
       				</sheet>
       			</form>
            </field>
        </record>

        <record id="view_vhr_erp_exclusion_department_line_tree" model="ir.ui.view">
            <field name="name">vhr.erp.exclusion.department.line.tree</field>
            <field name="model">vhr.erp.exclusion.department.line</field>
            <field name="arch" type="xml">
                <tree string="Exclusion Dept" version="7.0" create="0">
                    <field name="department_id"/>
                    <field name="department_team_ids"/>
                </tree>
            </field>
        </record>
        
    </data>
</openerp>