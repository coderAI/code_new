<?xml version="1.0" encoding="utf-8"?>
<!-- vim:fdn=3:
-->
<openerp>
    <data  noupdate='0'>
         <record id="view_vhr_evaluation_form" model="ir.ui.view">
            <field name="name">vhr.evaluation.view.form</field>
            <field name="model">vhr.evaluation</field>
            <field name="arch" type="xml">
                <form string="Interview result" version="7.0">
                     <sheet>
                      	<div class="oe_right oe_button_box">
		                </div>
                        <group name="General Information">
                            <group>
                                <field name="interview_round_id"
                                       context="{'dimension_type': 'INTERVIEW_ROUND'}" required="1"/>
                                <field name="name" required="1"/>
                                <field name="name_en"/>
                                <field name="active"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_vhr_evaluation_tree" model="ir.ui.view">
            <field name="name">vhr.evaluation.view.tree</field>
            <field name="model">vhr.evaluation</field>
            <field name="arch" type="xml">
                <tree string="Interview results" version="7.0">
					<field name="interview_round_id"/>
                   	<field name="name"/>
                   	<field name="name_en"/>
                   	<field name="active"/>
                </tree>
            </field>
        </record>

        <record id="view_vhr_evaluation_search" model="ir.ui.view">
            <field name="name">vhr.evaluation.view.search</field>
            <field name="model">vhr.evaluation</field>
            <field name="arch" type="xml">
                <search string="Search">
                   <group expand="0" string="Group by...">
                       <filter string='Round' name="group_by_round_id" icon="terp-stock_symbol-selection"
                            context="{'group_by': 'interview_round_id'}"/>
                   </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_vhr_evaluation">
            <field name="name">Evaluation</field>
            <field name="res_model">vhr.evaluation</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="groups_id" eval=""/>
            <field name="context">
                {'search_default_group_by_round_id': 1}
            </field>
        </record>
    </data>
</openerp>
