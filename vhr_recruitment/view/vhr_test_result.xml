<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_vhr_test_result" model="ir.ui.view">
            <field name="name">vhr.test.result.form</field>
            <field name="model">vhr.test.result</field>
            <field name="groups_id" eval=""/>
            <field name="arch" type="xml">
                <form string="Test Result" version="7.0">
       				<sheet>
       					<group col="4">
       						<field name="test_type_id" required="1"  context="{'dimension_type':'RR_TEST_TYPE'}"/>
                            <field name="candidate_id" required="1"/>
       						<field name="test_date" required="1"/>
                            <field name="test_result"/>
       					</group>
       					<group>
       						<field name="note"/>
       					</group>
       				</sheet>
       			</form>
            </field>
        </record>

        <record id="view_vhr_test_result_tree" model="ir.ui.view">
            <field name="name">vhr.test.result.view.tree</field>
            <field name="model">vhr.test.result</field>
            <field name="groups_id" eval=""/>
            <field name="arch" type="xml">
                <tree string="Test Result" version="7.0" editable="top">
                    <field name="test_type_id" required="1"  context="{'dimension_type':'RR_TEST_TYPE'}"/>
                    <field name="candidate_id" required="1"/>
					<field name="test_date" required="1"/>
                    <field name="test_result" required="1"/>
                    <field name="note"/>
                </tree>
            </field>
        </record>

        <record id="view_vhr_test_result_search" model="ir.ui.view">
            <field name="name">vhr.test.result.view.search</field>
            <field name="model">vhr.test.result</field>
            <field name="arch" type="xml">
                <search string="Search">
                	<field name="name" string="Job" 
        			 filter_domain="['|','|','|',('name','ilike',self),('candidate_id.name','ilike',self)]"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_vhr_test_result">
            <field name="name">Test Result</field>
            <field name="res_model">vhr.test.result</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_test_result_tree"/>
            <field name="groups_id" eval=""/>
            <field name="search_view_id" ref="view_vhr_test_result_search"/>
        </record>
    </data>
</openerp>