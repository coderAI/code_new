<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_vhr_erp_bonus_exclusion_form" model="ir.ui.view">
            <field name="name">vhr.erp.bonus.exclusion.form</field>
            <field name="model">vhr.erp.bonus.exclusion</field>
            <field name="arch" type="xml">
                <form string="ERP Bonus Exclusion" version="7.0">
       				<sheet>
       					<group>
	       					<group>
	       						<field name="name" required="1"/>	       						
	                            <field name="department_ids" widget="one2many_list" invisible="1"
	                            	attrs="{'invisible':  [('code', '!=', 'EXCLUSION_1')]}"
	                            	options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}"/>
	                            	
<!-- 	                           	<field name="level_ids" widget="many2many_tags"  -->
<!-- 	                            	attrs="{'invisible':  [('code', 'not in', ['EXCLUSION_2','EXCLUSION_3'])]}" -->
<!-- 	                            	options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}"/>	    -->
	                            
	                            <field name="level_position_ids" widget="many2many_tags" 
	                            	attrs="{'invisible':  [('code', 'not in', ['EXCLUSION_2'])]}"
	                            	options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}"/>
	                            	 
	                            <field name="employee_ids" widget="many2many_tags"
	                            	attrs="{'invisible':  [('code', 'not in', ['EXCLUSION_3'])]}"
	                            	context="{'is_employee_exlusion': True}" options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}" /> 	
	                            	
	                           <field name="special_employee_ids" widget="many2many_tags"
	                            	attrs="{'invisible':  [('code', 'not in', ['EXCLUSION_7'])]}"
	                            	options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}" /> 	                                              
	       					
	       					</group>
	       					<group>
	       						<field name="code" readonly="1"/>
	       						<field name="active"/>	       						
	       					</group>	       					
	       				</group>
	       				<group>
	       					<field name="description"/>
	       				</group>	       				
       					<notebook>
       					<page string="Dept Exclustion Line" attrs="{'invisible':  [('code', '!=', 'EXCLUSION_1')]}">
			                 <field name="department_line_ids" mode="tree"
			                     widget="one2many_list" nolabel="1" colspan="4">
			                     <tree version="7.0" editable="1">
			                                <field name="department_id" options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}"/>
			                                <field name="department_team_ids" widget="many2many_tags" domain="[('parent_id', '=', department_id)]"
			                                options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}"/>
			                        </tree>
			                     </field>
	                        </page>
	       					<page string="Logs" >
		                        	<label string="*** Please press F5 to refresh the list of logs !" colspan="4"/>
			                        <field name="audit_log_ids" mode="tree"
			                               widget="one2many_list" readonly="1" nolabel="1" colspan="4">
			                            <tree version="7.0">
			                                <field name="timestamp" required="1" readonly="1"/>
			                                <field name="user_id" readonly="1"/>
			                                <field name="method" readonly="1"/>
			                                <field name="field_description"/>
			                                <field name="old_value_text"/>
			                                <field name="new_value_text"/>
			                            </tree>
			                        </field>
	                        </page>
                     	</notebook>
       				</sheet>
       			</form>
            </field>
        </record>

        <record id="view_vhr_erp_bonus_exclusion_tree" model="ir.ui.view">
            <field name="name">vhr.erp.bonus.exclusion.tree</field>
            <field name="model">vhr.erp.bonus.exclusion</field>
            <field name="arch" type="xml">
                <tree string="ERP Bonus Exclusion" version="7.0" create="0">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="department_ids"/>
                    <field name="level_position_ids"/>
                    <field name="employee_ids"/>
                    <field name="special_employee_ids"/>
					<field name="description"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="view_vhr_erp_bonus_exclusion_search" model="ir.ui.view">
            <field name="name">vhr.erp.bonus.exclusion.search</field>
            <field name="model">vhr.erp.bonus.exclusion</field>
            <field name="arch" type="xml">
                <search string="Search">
                	<field name="code" string="Bonus Exclusion" 
        			 filter_domain="['|','|','|',('code','ilike',self),('value','ilike',self),('description','ilike',self)]"/>
        			<filter string="Active = True" name="active_true" icon="terp-stage"
                            domain="[('active', '=', True)]"/>
                    <filter string="Active = False" name="active_false" icon="STOCK_NEW"
                            domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_vhr_erp_bonus_exclusion">
            <field name="name">ERP Bonus Exclusion</field>
            <field name="res_model">vhr.erp.bonus.exclusion</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_erp_bonus_exclusion_tree"/>
            <field name="groups_id" eval=""/>
            <field name="search_view_id" ref="view_vhr_erp_bonus_exclusion_search"/>
        </record>
    </data>
</openerp>