<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="vhr_rr_talent_communi_tree_view">
			<field name="name">vhr.rr.talent.communi.tree</field>
			<field name="model">vhr.rr.talent.communi</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Communicates">
					<field name="who_met_ids"/>
					<field name="time" />
					<field name="place" />
					<field name="content" string="Comment/ Next Action"/>
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="vhr_rr_talent_communi_form_view">
			<field name="name">vhr.rr.talent.communi.form</field>
			<field name="model">vhr.rr.talent.communi</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Communicates">
					<sheet>
						<group>
							<field name="talent_group_id" required="1"
								widget="many2many_tags"
								options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}"/>
							<field name="who_met_ids" required="1"
								widget="many2many_tags"
								options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}"/>
							<field name="time" required="1"/>
							<field name="place" required="1"/>							
						</group>
						<group>
							<field name="content" required="1" string="Comment/ Next Action"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_vhr_rr_talent_communi_tree_view">
			<field name="name">Talent Community</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">vhr.rr.talent.communi</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="vhr_rr_talent_communi_tree_view" />
		</record>

	</data>
</openerp>