<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="view_vhr_rr_send_multi_cvs_hr_applicant" model="ir.ui.view">
			<field name="name">Send multi cvs hr applicant</field>
			<field name="model">vhr.send.multi.cvs</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Send CVs" version="7.0">
                    <newline />
                    <label for="job_id" string="For request :"/>
					<field name="job_id" colspan="3" required="1" domain="[('state','in',['in_progress'])]"
						options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}" 
						on_change="onchange_job_id(job_id)" 
						context="{'tree_view_ref': 'vhr_recruitment.view_vhr_resource_request_tree'}"/>
					<label for="emp_receive_cvs" string="Send CVs To :"/>
					<field name="emp_receive_cvs" colspan="3" widget="many2many_tags" required="1"
					options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}" />
					
					<label for="emp_cc_cvs" string="CC To :"/>
					<field name="emp_cc_cvs" colspan="3" widget="many2many_tags" required="1"
					options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}" />
					
					<label for="note" string="Note :"/>
					<field name="note" colspan="3"/>
                    <footer>
                        <button one_click_button="True" name="func_send_multi_cvs_hr_applicant"
                                string="Send CVs"
                                type="object" icon="gtk-save"
                                class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
            	</form>
			</field>
		</record>
		
		<record id="view_vhr_rr_send_multi_cvs_hr_job" model="ir.ui.view">
			<field name="name">Send multi cvs hr job</field>
			<field name="model">vhr.send.multi.cvs</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Send CVs" version="7.0">
                    <newline />
                    <field name="job_id" invisible="1" options="{'save_readonly': True}"
                    	on_change="onchange_job_id(job_id)" />
                    <label for="emp_receive_cvs" string="Send CVs To :"/>
					<field name="emp_receive_cvs" colspan="3" widget="many2many_tags" required="1"
					options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}" />
					
					<label for="emp_cc_cvs" string="CC To :"/>
					<field name="emp_cc_cvs" colspan="3" widget="many2many_tags" required="1"
					options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}" />
					
					<label for="note" string="Note :"/>
					<field name="note" colspan="3"/>
                    <footer>
                        <button one_click_button="True" name="func_send_multi_cvs_hr_job"
                                string="Send CVs"
                                type="object" icon="gtk-save"
                                class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
            	</form>
			</field>
		</record>

		<act_window name="Send multi CVs" res_model="vhr.send.multi.cvs"
			src_model="hr.applicant" 
			groups="vhr_recruitment.vhr_recruiter"
			view_id="view_vhr_rr_send_multi_cvs_hr_applicant"
			key2="client_action_multi"
			id="act_vhr_rr_send_multi_cvs_hr_applicant"
			view_mode="form" target="new" view_type="form"
			/>
			
		<!-- <act_window name="VHR RR Send multi CVs" res_model="vhr.send.multi.cvs"
			src_model="hr.job"
			groups="vhr_recruitment.vhr_recruiter"
			view_id="view_vhr_rr_send_multi_cvs_hr_job"
			key2="client_action_multi"
			id="act_vhr_rr_send_multi_cvs_hr_job"
			view_mode="form" target="new" view_type="form"
			/> -->
	</data>
</openerp>

