<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	<record id="view_vhr_close_reason_form" model="ir.ui.view">
       		<field name="name">vhr.close.reason.view.form</field>
       		<field name="model">vhr.close.reason</field>
       		<field name="arch" type="xml">
       				<form string="Close Reason" version="7.0">
	       				<sheet>
	       					<group col="4">
	       						<field name="name" required='1'/>
	       						<field name="name_en"/>
	       						<field name="code" required='1'/>
	       						<field name="reason_type_id" required='1' options="{'no_quick_create' : True}"/>
	       						<field name="active"/>
	       					</group>
	       					<group>
	       						<field name="description"/>
	       					</group>
	       					<notebook>
       						<page string="Logs">
	                        	<label string="*** Please press F5 to refresh the list of logs !" colspan="4"/>
		                        <field name="audit_log_ids" mode="tree"
		                               widget="one2many_list" readonly="1" nolabel="1" colspan="4">
		                            <tree version="7.0">
		                                <field name="timestamp" required="1" readonly="1"/>
		                                <field name="user_id" readonly="1"/>
		                                <field name="method" readonly="1"/>
		                                <field name="field_description"/>
		                                <field name="old_value_text"/>
		                                <field name="new_value_text"/>
		                            </tree>
		                        </field>
	                        </page>
       					</notebook>
	       				</sheet>
	       			</form>
       		</field>
       	</record>
       	
       	<record id="view_vhr_close_reason_tree" model="ir.ui.view">
       		<field name="name">vhr.close.reason.view.tree</field>
       		<field name="model">vhr.close.reason</field>
       		<field name="arch" type="xml">
      			<tree string="Close Reason" version="7.0">
      				<field name="code"/>
      				<field name="name"/>
					<field name="name_en"/>
					<field name="reason_type_id" required='1'/>
       				<field name="description"/>
					<field name="active"/>
      			</tree>
     		</field>
       	</record>
       	
       	<record id="view_vhr_close_reason_search" model="ir.ui.view">
        	<field name="name">vhr.close.reason.view.search</field>
        	<field name="model">vhr.close.reason</field>
        	<field name="arch" type="xml">
        		<search string="Close Reason">
        			<field name="name" string="Close Reason" 
        			 filter_domain="['|','|','|',('name','ilike',self),('name_en','ilike',self),('code','ilike',self),('description','ilike',self)]"/>
        			
					<group expand="0" string="Group By">
						<filter name="group_by_source" string="Source"
                               context="{'group_by':'reason_type_id'}"/>
					</group>
					<group expand="0" string="Filter">                    
						<filter string="Active = True" name="active_true" icon="terp-stage"
	                            domain="[('active', '=', True)]"/>
	                    <filter string="Active = False" name="active_false" icon="STOCK_NEW"
	                            domain="[('active', '=', False)]"/>
                    </group>	
        		</search>
        	</field>
        </record>
        
        <record model="ir.actions.act_window" id="act_vhr_close_reason">
       		<field name="name">Close Reason</field> 
            <field name="res_model">vhr.close.reason</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_close_reason_tree"/>
            <field name="search_view_id" ref="view_vhr_close_reason_search"/>
       	</record>
       	
       	
    </data>
</openerp>