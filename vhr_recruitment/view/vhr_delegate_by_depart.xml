<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data noupdate='0'>
        <record id="view_vhr_delegate_by_depart_form" model="ir.ui.view">
            <field name="name">vhr.delegate.by.depart.form</field>
            <field name="model">vhr.delegate.by.depart</field>
            <field name="arch" type="xml">
                <form string="Delegates" version="7.0">
                    <sheet>
                        <group string="Delegates">
                            <group>
                                <field name="emp_del_from_id" required='1'
                                	options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}"
                                	on_change="onchange_emp_del_from_id(emp_del_from_id)"/>
                                <field name="emp_del_to_id" required='1'
                                	options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}"/>
                            </group>
                            <group>
                            	<field name="active"/>
                            	<field name="department_code" invisible="1"/>
                                <field name="description"/>
                            </group>
                        </group>
                        <group string="Departments" col='4'>
                            <field name="department_ids" nolabel='1' required='1' 
                            	domain="[('manager_id', '=', emp_del_from_id), ('organization_class_id.level', 'in', [3, 6])]">
                            	<tree string="Departments" editable='top'>
				                    <field name="code" attrs="{'readonly' : True}"/>
				                    <field name="name" attrs="{'readonly' : True}"/>
				                    <field name="name_en" attrs="{'readonly' : True}"/>
				                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_vhr_delegate_by_depart_tree" model="ir.ui.view">
            <field name="name">vhr.delegate.by.depart.tree</field>
            <field name="model">vhr.delegate.by.depart</field>
            <field name="arch" type="xml">
                <tree string="Delegates" version="7.0">
                    <field name="emp_del_from_id"/>
                    <field name="emp_del_to_id"/>
                    <field name="department_code" invisible="1"/>
                    <field name="department_ids" />                  
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="view_vhr_delegate_by_depart_search" model="ir.ui.view">
            <field name="name">vhr.delegate.by.depart.search</field>
            <field name="model">vhr.delegate.by.depart</field>
            <field name="arch" type="xml">
                <search string="Search Delegates">
                    <!-- <field name="department_id" filter_domain="['|', ('department_id','ilike',self), ('emp_delegate_id','ilike',self)]"
                           string="Delegate"/> -->
                    <group expand="0" string="Filter">
                    	<filter string="Active = True" name="active_true" icon="terp-stage"
                            domain="[('active', '=', True)]"/>
                    	<filter string="Active = False" name="active_false" icon="STOCK_NEW"
                            domain="[('active', '=', False)]"/>
	                   </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_vhr_delegate_by_depart">
            <field name="name">Delegate by Depart</field>
            <field name="res_model">vhr.delegate.by.depart</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="groups_id" eval=""/>
        </record>
    </data>
</openerp>
