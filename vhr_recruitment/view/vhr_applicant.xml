		<record id="view_vhr_applicant_talent_profile_form" model="ir.ui.view">
			<field name="name">vhr.applicant.view.talent.profile.form</field>
			<field name="model">hr.applicant</field>
			<field name="type">form</field>
			<field name="sequence">1001</field>
			<field name="arch" type="xml">
				<form string="Candidate" version="7.0" edit="0" create='0'
					delete="0">
					<sheet>
					 	<group>
							<div>
								<div class="oe_left" width="30%">
									<field name="image" widget='image' class="oe_left oe_avatar"
										options='{"preview_image": "image", "size": [120, 120]}' />
								</div>
								<div class="oe_left" width="70%" style="margin-top:40px">
									<table>
										<tr>
											<td>
												<label for="name" string="Name:" />
											</td>
											<td>
												<field name="name" String="name" readonly="1" />
											</td>
										</tr>
										<tr>
											<td>
												<label for="email" string="Email:" />
											</td>
											<td>
												<field name="email" String="Email" readonly="1" />
											</td>
										</tr>
										<tr>
											<td>
												<label for="mobile" string="Mobile:" />
											</td>
											<td>
												<field name="mobile" String="Mobile" readonly="1" />
											</td>
										</tr>
										<tr>
											<td>
												<label for="talent_expertise_ids" string="Expertise:" />
												<field name="talent_expertise_ids" widget="many2many_tags" readonly="1"/>
											</td>
										</tr>
	
									</table>
								</div>
							</div>
							</group> 
							<group>
								
								<separator string="Certificates/Degree" colspan="4"/>
								<field name="certificate_ids" context="{'hide_field':True}" colspan="4" nolabel="1" readonly="1">
									<tree>
										<field name="school_id" />
										<field name="recruitment_degree_id" />
										<field name="speciality_id" />
										<field name="faculty_id" />
										<field name="oversea" />
										<field name="is_main_degree" />
									</tree>
								</field>
								
								<separator string="Award" colspan="4"/>
								<field name="talent_award_ids" mode="tree" widget="one2many_list" colspan="4" nolabel="1"
									readonly="1" string="Awards"/>
								<separator string="Working background" colspan="4"/>
								<field name="working_background" context="{'hide_field':True}" colspan="4" nolabel="1"
									readonly="1">
									<tree>
										<field name="company" />
										<field name="from_date" />
										<field name="to_date" />
										<field name="job_title" />
										<field name="move_reason" />
									</tree>
								</field>
								<separator string="Recommendation" colspan="4"/>
								<field name="talent_recom_ids" mode="tree" widget="one2many_list"  colspan="4" nolabel="1"
									readonly="1" string="Recommendations"/>
								
								<separator string="Communication" colspan="4"/>
								<field name="talent_communi_ids" mode="tree" widget="one2many_list" colspan="4" nolabel="1"
									readonly="1" string="Communications"/>
							</group>
					</sheet>
				</form>
			</field>
		</record>
	
         <record id="view_vhr_applicant_form" model="ir.ui.view">
            <field name="name">vhr.applicant.view.form</field>
            <field name="model">hr.applicant</field>
            <field name="sequence">1</field>
            <field name="inherit_id" ref="hr_recruitment.crm_case_form_view_job"/>
            <field name="arch" type="xml">
                <form position="replace">
                    <form string="Candidate">
                    	<header>
                        	<field name="state" widget="statusbar" statusbar_visible="opening,processing,offered,employee,blacklist"/>
	                    </header>
                        <sheet>
                            <div class="oe_title" style="width:650px">
		                        <table border="0" cellpadding="0" cellspacing="0" class="oe_form_group oe_edit_only">
	                                <tbody>
		                                <tr class="oe_form_group_row">
			                                <td class="oe_form_group_cell oe_form_group_cell_label" width="100px">
			                                	<label for="last_name" string="Last &amp; mid name*"/>
			                                </td>
										    <td class="oe_form_group_cell" width="200px">
												<field name="last_name" required="1" default_focus="1"
	                                            on_change="onchange_name(first_name,last_name)"/>
										    </td>
										    <td class="oe_form_group_cell" width="150px">
			                                	<label string="e.g. Phan Phi"/>
			                                </td>
			                                 <td class="oe_form_group_cell">
			                                	<field name="talent_state" invisible="1" options="{'save_readonly':True}"/>
			                                	<field name="is_talent" options="{'show_popup':True}"
			                                		on_change="onchange_is_talent(is_talent)"/>	
			                                </td>
			                               <td class="oe_form_group_cell">
			                               		<label for="is_talent" string="Is talent"/>
			                               </td>
									    </tr>
									    <tr class="oe_form_group_row">
			                                <td class="oe_form_group_cell oe_form_group_cell_label" width="100px">
			                                	<label for="first_name" string="First name*"/>
			                                </td>
										    <td class="oe_form_group_cell" width="200px">
												<field name="first_name" required="1" on_change="onchange_name(first_name,last_name)"/>
										    </td>
										    <td class="oe_form_group_cell" width="150px">
			                                	<label string="e.g. Long"/>
			                                </td>			                                
			                               <td class="oe_form_group_cell">
			                                	<field name="is_potential" options="{'show_popup':True}"/>		
			                                </td>
			                                <td class="oe_form_group_cell">
			                               		<label for="is_potential" string="Is Potential"/>
			                               </td>
									    </tr>									   
									</tbody>
								</table>
								<h1>
                                    <field name="name" string="Full Name" placeholder="e.g. Hoàng Bạch Dương" readonly="1" options="{'save_readonly': True}"/>
                                </h1>
                            </div>
                           <div style="width:150px" class="oe_right">
	                            <field name="image" widget='image' class="oe_avatar"  options='{"preview_image": "image_medium", "size": [90, 90]}'>
	                            	
	                            </field>
	                            <button name="view_talent_profile" string="View profile" type="object"
	                            						attrs="{'invisible':[('is_talent','=',False),('is_potential','=',False)]}"
	                            						context="{'VIEW_ID':'vhr_recruitment.view_vhr_applicant_talent_profile_form','TARGET':'new'}"/>
                            </div>
                   	        <notebook colspan="6">
                                <page string="Personal">
                                    <group  string="Status - Birth" col="4">
		                                <field name="birthday" string="Birthday*" attrs="{'required':[('is_talent','=', False),('is_potential','=', False)]}" on_change="onchange_date(birthday)"/>
		                                <field name="gender" string="Gender*" attrs="{'required':[('is_talent','=', False),('is_potential','=', False)]}"/>
		                                <field name="country_id" string="Nationality*"  attrs="{'required':[('is_talent','=', False),('is_potential','=', False)]}" 
		                                	options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}"/>		                                
		                                <field name="marital"/>
		                                <!-- <field name="identification_no" options="{'validate_number': True}"/> -->
                                    </group>
                                    <group string="Contact Information">
                                    	<group>
                                    		<field name="email" options="{'validate_email': True}" string="Email*" required="1"/>
                                    		<field name="mobile" options="{'validate_phone': True}" string="Mobile*" 
                                    			attrs="{'required':[('partner_country_code','=','VN')]}"/>
                                    		<field name="phone" options="{'validate_number': True}"  string="Phone"/>
                                    	</group>
                                    	<group>
                                    		<label for="street" string="Address"/>
				                            <div>
				                                <field name="street" placeholder="Street..."/>
				                                <div class="address_format">
				                                    <field name="city_id" placeholder="City" style="width: 40%%"
				                                    	options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}"
                       									attrs="{'readonly': [('use_parent_address','=',True)]}"/>
				                                    <field name="district_id" placeholder="District" domain="[('city_id', '=', city_id)]"
							                           options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}"
							                           style="width: 37%%" attrs="{'readonly': [('use_parent_address','=',True)]}"/>
				                                </div>
				                                <field name="partner_country_id" placeholder="Country" class="oe_no_button" 
					                                options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}"
					                                on_change="on_change_partner_country_id(partner_country_id)"
					                                attrs="{'readonly': [('use_parent_address','=',True)]}"/>
				                                <field name="partner_country_code" invisible="1" readonly="1"/>
                                    		</div>
                                    		<!-- <label for="temp_address" string="Temp Address"/>
						                    <div>
						                        <field name="temp_address" placeholder="Street..."
						                               attrs="{'readonly': [('use_parent_address','=',True)]}"/>
						                        <div class="address_format">
						                            <field name="temp_city_id" placeholder="City" style="width: 50%%"
						                                   options='{"no_open": True}' attrs="{'readonly': [('use_parent_address','=',True)]}"/>
						                            <field name="temp_district_id" placeholder="District" style="width: 50%%"
						                                   domain="[('city_id', '=', temp_city_id)]"
						                                   attrs="{'readonly': [('use_parent_address','=',True)]}"/>
						                        </div>
						                    </div> -->
                                    		<field name="use_parent_address" invisible="1"/>
                                    	</group>
                                    	
                                    	<field name="partner_id" invisible="1" options="{'no_quick_create' : True}" context="{'default_name':name,'default_is_company':False}"/>
                                        <newline/>
                                    </group>
                                    <group string="Candidate Information">
                                        <group>
                                        	<field name="source_type_id" required="1" options="{'no_quick_create' : True, 'no_create':True, 'no_open': True, 'limit': 20}" 
                                        								on_change="on_change_source_type_id(source_type_id)"/>
                                            <field name="source_id" required="1" options="{'no_quick_create' : True, 'no_create':True, 'no_open': True, 'limit': 20}" 
                                            							on_change="on_change_source_id(source_id)"/>
                                            <field name="source_code" invisible="1" readonly="1"/>
                                            <field name="recommender_id" options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}"
                                                   attrs="{'required': [('source_code', 'in', ('ERP','SR-100'))], 'invisible':  [('source_code', 'not in', ('ERP','SR-100'))]}"/>
                                            
                                            
                                            <field name="recommender_outsiderp" attrs="{'required': [('source_code', 'in', ('SR-103'))],'invisible':  [('source_code', 'not in', ('SR-103'))]}"/>
                                            <field name="recommender_email" attrs="{'required': [('source_code', 'in', ('SR-103'))],'invisible':  [('source_code', 'not in', ('SR-103'))]}"/>
                                            
                                            <field name="is_erp_mail" attrs="{'invisible':  [('source_code', 'not in', ('ERP','SR-100'))]}"/>
                                            <field name="note_erp" class="textarea_small" attrs="{'invisible':  [('source_code', 'not in', ('ERP','SR-100'))]}"/>
                                            
                                            <label for="auto_send_email"/> 
                                            <div>
				                                <field name="auto_send_email" style="width: 8%%"/>
				                                <field name="option_apply_date" class="oe_inline"/>
				                             </div>
				                             
				                            <label for="erp_dupplicate"/> 
                                            <div>
                                            	<field name="erp_dupplicate" on_change="on_change_erp_dupplicate(erp_dupplicate)"/>
                                           		<field name="emp_erp_dupplicate_id" string='ERP Duplicate' options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}" 
	                                				attrs="{'required': [('erp_dupplicate', '=',True)],'invisible': [('erp_dupplicate','=',False)]}"/>
                                            </div>
                                            
                                            <field name="collaborator" attrs="{'required':[('is_talent','=', False),('is_potential','=', False)]}"/>
                                            <field name="key_student" invisible="1"/><!-- attrs="{'required':[('is_talent','=', False)]}" -->
                                            
                                            <field name="in_charge_student" invisible="1"
                                            								options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}"/>    
                                            						<!--  attrs="{'required':[('key_student','=', 'yes')],
                                            								  		'invisible':[('key_student','=', 'no')]}" -->                                        
                                            <field name="job_type_id" context="{'dimension_type': 'JOB_TYPE'}"
                                            	options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}" invisible="1"/>
                                            <field name="apply_date" context="{'default_option_apply_date':apply_date}"/>
                                        </group>
                                        <group>
                                        	<field name="is_staff_movement" attrs="{'invisible':  [('state', '!=', 'employee')]}"/>
                                        	<field name="ex_employee" on_change="on_change_ex_employee(ex_employee, email, mobile, name, birthday, gender)"
                                            	options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}"/>
	                                		<field name="emp_id" string='Account Domain' options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}" 
	                                				 context="{'active_test':False}" on_change="on_change_emp_id(emp_id)" attrs="{'invisible': [('emp_id','=',False),('ex_employee','=',False)]}"/>
                                         	<field name="never_recruit" />
                                         	<field name="never_recruit_comment"  class="textarea_small"
                                         		attrs="{'required': [('never_recruit','=',True)],'invisible': [('never_recruit','=',False)]}"/>
                                         	<field name="current_salary" options="{'show_zero_blank':True}"/>
                                         	<field name="expected_salary" options="{'show_zero_blank':True}"/>
                                         	<field name="total_income"/>
                                         	<field name="benefits"/>                                         	
                                        </group>
                                    </group>
                                     <separator/>
                                     <label for="certificate_ids" string="Certificates/Degree*"/>
                                     <field name="certificate_ids"  context="{'hide_field':True}" attrs="{'required':[('is_talent','=', False),('is_potential','=', False)]}">
                                   		<tree>
                                   			 <field name="school_id"/>
                                   			 <field name="recruitment_degree_id"/>
						                     <field name="speciality_id"/>
						                     <field name="faculty_id"/>
						                     <field name="oversea"/>
						                     <field name="is_main_degree"/>
					                     </tree>
                                  	</field>
                                  	<separator/>
                                  	<label for="note_ids"/>
                                    <field name="note_ids" context="{'default_model':'hr.applicant'}">
                                   		<tree editable="1">
                                   			 <field name="create_uid" readonly="1"/>
                                   			 <field name="create_date" readonly="1"/>
						                     <field name="write_uid" readonly="1"/>
						                     <field name="write_date" readonly="1"/>
						                     <field name="message"/>
						                     <field name="model" invisible="1"/>
					                     </tree>
                                  	</field>
									<separator/>
                                  	<label for="contact_ids"/>
                                    <field name="contact_ids">
                                   		<tree editable="1">
                                   			 <field name="create_uid" readonly="1"/>
                                   			 <field name="create_date" readonly="1"/>
						                     <field name="contact_type_id" required="1"
						                     	options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}" />
						                     <field name="contact" required="1"/>
					                     </tree>
                                  	</field>                                              	
                                </page>
                                <page string="Working Background">
                                    <label for="job_track_ids" string="Job Track"/>
                                    <field name="job_track_ids" widget="many2many_tags"
                                    	required="1"
                                    	options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}"/>
                                    <label for="categ_ids" string="Skills"/>
                                    <field name="categ_ids" widget="many2many_tags" />
                                    <separator/>
                                    <label for="working_background" string="Working background"/>
                                    <field name="working_background" context="{'hide_field':True}" attrs="{'required':['|',('is_talent','=', True),('is_potential','=', True)]}">
                                    	<tree>
                                    		<field name="company"/>
						      				<field name="from_date"/>
											<field name="to_date"/>
						       				<field name="job_title"/>
											<field name="move_reason"/>
										</tree>
                                    </field>
                                    <separator/>
                                    <label for="cv_ids" value="CV"/>
                                    <field name="cv_ids" context="{'form_view_ref':'vhr_recruitment.view_vhr_cv_attachment_form','FROM_VIEW':'APPLICANT'}">
                                    	<tree string="Curriculum Vitaes" version="7.0" create="0" edit="1" editable="top">
						                    <field name="datas_fname" options='{"file_download": 1, "field_data": "datas"}'  readonly="1"/>
						                    <field name="create_date"/>
						                    <field name="write_uid" string="Updated by" readonly="1"/>
						                    <field name="is_main" string="Is Main"/>
						                </tree>
                                    </field>
                                    <separator/>
                                    <label for="description" value="CV Context"/>
                                    <field name="description"/>
                                    
                                </page>
                                <page string="Test Result">
                                    <field name="test_result_ids">
                                    	<tree string="Test Result" version="7.0" editable="top">
						                    <field name="test_type_id" required="1"  context="{'dimension_type':'RR_TEST_TYPE'}"/>
						                    <field name="candidate_id" invisible="1"/>
											<field name="test_date" required="1"/>
											<field name="test_result" required="1"/>
						                    <field name="note"/>
						                </tree>
                                    </field>
                                </page>
                                <page string="Interviews">
                                    <field name="applicant_job_ids"
                                    	context="{'form_view_ref':'vhr_recruitment.view_vhr_job_applicant_form','FROM_VIEW':'APPLICANT'}">
                                    	<tree string="Candidate’s Interview" version="7.0" create="0" delete="0" edit="0" readonly="1" >
						                    <field name="job_id" string="Job Code"/>
						                    <field name="job_level_id" string="Job Level" invisible="1"/>
						                    <field name="job_title_id" string="Job Title"/>
						                    <field name="current_row"/>
							               	<field name="state" string="State"/>
						                </tree>
                                    </field>
                                </page>
                                <page string="Log state changes">
       								<field name="state_log_ids" mode="tree" widget="one2many_list" readonly="1"/>	
       							</page>	
       							<page string="Talent/ Potential" attrs="{'invisible':[('is_talent','=',False),('is_potential','=',False)]}">
       								<group>
       									<group>
       										<field name="in_charge_talent" attrs="{'required':['|',('is_talent','=',True),('is_potential','=', True)]}"
       											options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}" string="In charge person"/>
       									</group>
       									<group>
       										<field name="talent_expertise_ids"  attrs="{'required':['|',('is_talent','=',True),('is_potential','=', True)]}"
       												string="Expertise" widget="many2many_tags"/>
       									</group>
       								</group>
       								<label for="talent_communi_ids" string="Communication"/>
       								<field name="talent_communi_ids" mode="tree" string="Communication" widget="one2many_list" />
       								<label for="talent_recom_ids" string="Recommendation"/>
       								<field name="talent_recom_ids" mode="tree" string="Recommendation" widget="one2many_list" />	
       								<label for="talent_award_ids" string="Award"/>
       								<field name="talent_award_ids" mode="tree" string="Award" widget="one2many_list" />
       								
       							</page>	
       							<page string="Logs"  groups="vhr_recruitment.vhr_recruitment_admin">
	       							<label string="*** Please press F5 to refresh the list of logs !" colspan="4"/>	
	       							<field name="audit_log_ids" mode="tree"
	                       		 		widget="one2many_list" readonly="1">
		       							<tree version="7.0">
		       								<field name="timestamp" required="1" readonly="1"/>
					                        <field name="user_id" readonly="1"/>
					                        <field name="method" readonly="1"/>
					                        <field name="field_description"/>
	                            			<field name="old_value_text"/>
	                            			<field name="new_value_text"/>
		       							</tree>
		       						</field>	
	       						</page>	
                            </notebook>
                        </sheet>
                        <!-- <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div> -->
                    </form>
                </form>
            </field>
        </record>

       <record id="view_vhr_applicant_tree" model="ir.ui.view">
