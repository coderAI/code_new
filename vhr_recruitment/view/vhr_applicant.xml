		<record id="view_vhr_applicant_search" model="ir.ui.view">
            <field name="name">vhr.applicant.view.search</field>
            <field name="model">hr.applicant</field>
            <field name="groups_id" eval=""/>
            <field name="arch" type="xml">
               	<search string="Search Candidate">
                   <field name="name" string="Candidates" filter_domain="['|','|','|','|',('name','ilike',self),('name_eng','ilike',self),('email','ilike',self),
                                                                                                  ('mobile','ilike',self),('applicant_job_ids.job_id','ilike',self)]"/>
					<field name="job_track_ids" string="Job Track" />
					
					<field name="job_track_ids" string="Job Track Group" filter_domain="[('job_track_ids.job_track_group_id.name','ilike',self)]"/>
                   <separator/>
                   <group expand="0" string="Group By">
                       <filter name="group_by_department" string="Source"
                               context="{'group_by':'source_id'}"/>
                       <filter name="group_by_job_type" string="Job type"
