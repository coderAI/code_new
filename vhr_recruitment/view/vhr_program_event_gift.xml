<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data noupdate='0'>
        <record id="view_vhr_program_event_gift_form" model="ir.ui.view">
            <field name="name">vhr.program.event.gift.form</field>
            <field name="model">vhr.program.event.gift</field>
            <field name="arch" type="xml">
                <form string="Program Event Gift" version="7.0">
                    <sheet>
                    	<group cols="4">
	                    	<field name="name" required='1'/>
	                    	<field name="name_en" required='1'/>
	                    	<field name="event_id" required='1'/>
	                    	<field name="event_code"/>
	                    	<field name="quantity" attrs="{'required': [('unlimited','=', False)]}"/>
                            <field name="weight" required="1"/>
	                    	<field name="unlimited"/>
	                    	<field name="is_lucky"/>
                            <field name="used"/>
                            <field name="remain"/>
                            <field name="active"/>
	                    	<field name="description"/>
	                    </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_vhr_program_event_gift_tree" model="ir.ui.view">
            <field name="name">vhr.program.event.gift.tree</field>
            <field name="model">vhr.program.event.gift</field>
            <field name="arch" type="xml">
                <tree string="Program Event Gift" version="7.0">
                    <field name="event_id" invisible="1"/>
                    <field name="event_code"/>
                	<field name="name"/>
                  	<field name="name_en"/>
                  	<field name="quantity"/>
                  	<field name="unlimited"/>
                  	<field name="is_lucky"/>
                  	<field name="weight"/>
                  	<field name="used"/>
                  	<field name="remain"/>
                  	<field name="description"/>
                  	<field name="active"/>
                </tree>
            </field>
        </record>
    </data>
</openerp>
