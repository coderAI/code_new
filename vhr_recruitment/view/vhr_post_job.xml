<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data noupdate='0'>
        <record id="view_vhr_post_job_form" model="ir.ui.view">
            <field name="name">vhr.post.job.form</field>
            <field name="model">vhr.post.job</field>
            <field name="arch" type="xml">
                <form string="Post Job" version="7.0" duplicate='false'>
                    <header>
                        <field name="state" widget="statusbar" nolabel="1" clickable="true"/>
                    </header>
                    <sheet>
                    	
                       <button class="oe_stat_button bg_icon_red oe_right" name="action_print_report" 
                    		string="Export EN"
     	   				   	groups='vhr_recruitment.vhr_recruiter'
     	   				   	context="{'report_name':'rr_jd_template_en'}"
                            icon="fa-print" type="object"/>
						<button class="oe_stat_button bg_icon_blue oe_right" name="action_print_report" 
                    		string="Export VN"
     	   				   	groups='vhr_recruitment.vhr_recruiter'
                            context="{'report_name':'rr_jd_template_vn'}"
                            icon="fa-print" type="object"/>
                        <div class="oe_title">
                            <label for="code" class="oe_edit_only"/>
                            <h2>
                                <field name="code" readonly="1" options="{'save_readonly' : True}"/>
                            </h2>
                        </div>
                        <group>
                            <group>
                                <field name="name" required='1' string="Vietnamese Name*"/>
                                <field name="name_en" required='1' string="English Name*"/>
                                <field name="date_start" required='1' on_change="onchange_date(date_start, date_end)" 
                                	string="Start date*" options="{'save_readonly': True}"/>
                                <field name="date_end" on_change="onchange_date(date_start, date_end)"
                                       string="End date" invisible="context.get('ACTION_TYPE', False)"/>
                                <field name="job_flags" />
                                <field name="hash_tags" widget="many2many_tags"/>
                            </group>
                            <group>
                            	<field name="job_category_id" on_change="onchange_job_category_id(job_category_id)"
                            	options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}"/>
                                <field name="vhr_job_id" required='1' string="Job type in RR*"
                                options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}"/>                            
                                <field name="city_id" required="1" string="City*"
                                options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}"/>
                                <field name="office_id" invisible="1"
                                options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}"/>
                                <field name="salary"/>
                                <field name="salary_en"/>
                                <field name="allow_internal" />
                            </group>
                        </group>

                        <notebook colspan="6">
                            <page string="Detail Information">
                                <group name="Detail Information">
                                    <group col='1'>
                                        <field name="description" string="Mô tả*" required='1'
                                               widget="html"/>
                                        <field name="requirement" string="Yêu cầu*" required='1'
                                               widget="html"/>
                                        <field name="preference" string="Ưu tiên"
                                               widget="html"/>
                                    </group>
                                    <group col='1'>
                                        <field name="description_en" widget="html"/>
                                        <field name="requirement_en" widget="html"/>
                                        <field name="preference_en" widget="html"/>
                                    </group>
                                </group>
                                <label for="post_location_ids" string="Post locations"/>
                                <field name="post_location_ids"/>
                                <label for="note" string="Note"/>
                                <field name="note"/>
                            </page>
							<!--<page string="Resource Requests">
                                <field name="request_job_ids" context="{'form_view_ref':'vhr_recruitment.view_vhr_resource_request_form',
                                	 										'tree_view_ref':'vhr_recruitment.view_vhr_resource_request_tree'}">
                                    <tree string="Task List">
                                        <field name="code"/>
                                        <field name="requestor_id"/>
                                        <field name="job_title_id"/>
                                        <field name="job_level_id"/>
                                        <field name="request_date"/>
                                        <field name="no_of_recruitment" string="No of request"/>
                                        <field name="no_of_hired_recruitment" string="No of recruited"/>
                                        <field name="office_id"/>
                                        <field name="job_type_id"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page> -->
                            <page string="Logs">
                                <label string="*** Please press F5 to refresh the list of logs !" colspan="4"/>
                                <field name="audit_log_ids" mode="tree"
                                       widget="one2many_list" readonly="1">
                                    <tree version="7.0">
                                        <field name="timestamp" required="1" readonly="1"/>
                                        <field name="user_id" readonly="1"/>
                                        <field name="method" readonly="1"/>
                                        <field name="field_description"/>
                                        <field name="old_value_text"/>
                                        <field name="new_value_text"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_vhr_post_job_search" model="ir.ui.view">
            <field name="name">vhr.post.job.search</field>
            <field name="model">vhr.post.job</field>
            <field name="arch" type="xml">
                <search string="Post Jobs">
                    <field name="code" string="Post Jobs"
                           filter_domain="['|',('name','ilike',self),('code','ilike',self)]"/>
                    <field name="name" string="Descriptions" filter_domain="['|','|','|','|',('description','ilike',self),('requirement','ilike',self),('preference','ilike',self),
                   																	  ('description_en','ilike',self),('requirement_en','ilike',self)]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter name="group_by_job_id" string="Job Type"
                                context="{'group_by':'vhr_job_id'}"/>
                        <filter name="group_by_start_date" string="Start date"
                                context="{'group_by':'date_start'}"/>
                        <filter name="group_by_end_date" string="End date"
                                context="{'group_by':'date_end'}"/>
                        <filter name="group_by_city" string="City"
                                context="{'group_by':'city_id'}"/>
                        <filter name="group_by_state" string="Status"
                                context="{'group_by':'state'}"/>
                    </group>

                    <group expand="0" string="Filter">
                        <filter name="filter_draft" string="Draft"
                                domain="[('state', '=', 'draft')]"/>
                        <filter name="filter_inprocess" string="In progress"
                                domain="[('state', '=', 'in_progress')]"/>
                        <filter name="filter_done" string="Done"
                                domain="[('state', '=', 'done')]"/>
                    </group>

                </search>
            </field>
        </record>

        <record id="view_vhr_post_job_tree" model="ir.ui.view">
            <field name="name">vhr.post.job.tree</field>
            <field name="model">vhr.post.job</field>
            <field name="arch" type="xml">
                <tree string="Post Jobs" version="7.0">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="vhr_job_id"/>
                    <field name="job_category_id"/>
                    <field name="city_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_vhr_post_job">
            <field name="name">Post Job</field>
            <field name="res_model">vhr.post.job</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_filter_draft': 1, 'search_default_filter_inprocess': 1}</field>
            <field name="groups_id" eval=""/>
        </record>
    </data>
</openerp>
