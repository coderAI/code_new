<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data noupdate='0'>
        <record id="view_email_news_form" model="ir.ui.view">
            <field name="name">vhr.email.news.form</field>
            <field name="model">vhr.email.news</field>
            <field name="arch" type="xml">
                <form string="Email Marketing" version="7.0">
                    <sheet>
                        <group string="Information">
                            <group>
                                <field name="name" required='1' string="Name*"/>
                                <field name="email" required='1'  string="Email*" options="{'validate_email': True}"/>
                                <field name="candidate_id"/>
                                <field name="is_unsubcribes"/>
                                <field name="active" attrs="{'readonly': [('candidate_id', '!=', False)]}"/>
                            </group>
                            <group>
                                <field name="job_track_ids" widget="many2many_tags"
                                    	attrs="{'required': [('candidate_id', '!=', False)]}"
                                    	options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}"/>
                                <field name="description"/>
                            </group>
                        </group>
                        <div>
                            <field name="program_type_ids" />
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_vhr_vhr_program_tree" model="ir.ui.view">
            <field name="name">vhr.email.news.tree</field>
            <field name="model">vhr.email.news</field>
            <field name="arch" type="xml">
                <tree string="Email Marketing" version="7.0">
                    <field name="create_date" invisible="True"/>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="job_track_ids" widget="many2many_tags"/>
                    <field name="candidate_id" invisible="True"/>
                    <field name="active"/>
                    <field name="is_unsubcribes"/>
                    <field name="program_type_ids" widget="many2many_tags"/>
                    <field name="create_uid" invisible="True"/>
                </tree>
            </field>
        </record>

        <record id="view_email_news_filter" model="ir.ui.view">
            <field name="name">vhr.email.news.search</field>
            <field name="model">vhr.email.news</field>
            <field name="arch" type="xml">
                <search string="Search Email Marketing">
                    <field name="name"/>
                    <field name="email"/>
                    <field name="program_type_ids"/>
                    <field name="job_track_ids"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter name="group_by_create_uid" string="Create User"
                                context="{'group_by':'create_uid'}"/>
                        <filter name="group_by_create_date" string="Create Date"
                                context="{'group_by':'create_date'}"/>
                    </group>
                    <group expand="0" string="Filter">
                        <filter name="filter_candidate" string="Candidate"
                                domain="[('program_type_ids', 'ilike', 'Candidate')]"/>
                        <filter name="filter_fresher" string="Fresher"
                                domain="[('program_type_ids', 'ilike', 'Fresher')]"/>
                        <filter name="filter_internship" string="Internship"
                                domain="[('program_type_ids', 'ilike', 'Internship')]"/>
                        <filter name="filter_tour" string="Tour"
                                domain="[('program_type_ids', 'ilike', 'Tour')]"/>
                        <filter string="Active = True" name="active_true" icon="terp-stage"
								domain="[('active', '=', True)]" />
						<filter string="Active = False" name="active_false" icon="STOCK_NEW"
								domain="[('active', '=', False)]" />
                        <filter string="Unsubcribes = True" name="unsubcribes_true" icon="terp-stage"
								domain="[('is_unsubcribes', '=', True)]" />
						<filter string="Unsubcribes = False" name="unsubcribes_false" icon="STOCK_NEW"
								domain="[('is_unsubcribes', '=', False)]" />
                        <filter string="Active = True and Unsubcribes = False" name="active_true_unsubcribes_false" icon="STOCK_NEW"
								domain="[('active', '=', True), ('is_unsubcribes', '=', False)]" />
                    </group>

                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_vhr_email_news">
            <field name="name">Email notification</field>
            <field name="res_model">vhr.email.news</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_active_true_unsubcribes_false': True}</field>
            <field name="search_view_id" ref="view_email_news_filter"/>
            <field name="groups_id" eval=""/>
        </record>
    </data>
</openerp>
