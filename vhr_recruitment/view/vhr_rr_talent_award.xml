<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="vhr_rr_talent_award_tree_view">
			<field name="name">vhr.rr.talent.award.tree</field>
			<field name="model">vhr.rr.talent.award</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Awards">
					<field name="name" />
					<field name="ratings" />
					<field name="year" />
					<field name="organization" />
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="vhr_rr_talent_award_form_view">
			<field name="name">vhr.rr.talent.award.form</field>
			<field name="model">vhr.rr.talent.award</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Awards">
					<sheet>
						<group col="4">
							<field name="name" required="1"/>
							<field name="ratings"  required="1"/>
							<field name="year"  required="1"/>
							<field name="organization"  required="1"/>
						</group>
						<label for="description" string="Description"/>
						<field name="description" />
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_vhr_rr_talent_award_tree_view">
			<field name="name">Talent Awards</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">vhr.rr.talent.award</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="vhr_rr_talent_award_tree_view" />
		</record>

	</data>
</openerp>