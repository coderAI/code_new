<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="view_vhr_rr_temp_survey" model="ir.ui.view">
			<field name="name">vhr.recruitment.temp.survey.form</field>
			<field name="model">vhr.recruitment.temp.survey</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Send survey" version="7.0">
                    <sheet>
                    <group>
                     <field name="request_code"/>
                    </group>
                    <group>
                     <field name="rating"/> 
                    </group>
                     <field name="rep1"/>
                     <field name="rep2"/>
                    </sheet>
            	</form>
			</field>
		</record>
		
		<record id="view_vhr_recruitment_temp_survey_tree" model="ir.ui.view">
            <field name="name">vhr.recruitment.temp.survey.tree</field>
            <field name="model">vhr.recruitment.temp.survey</field>
            <field name="arch" type="xml">
                <tree string="RR Survey" version="7.0">
                	<field name="request_code"/>
                	<field name="rating"/>
                    <field name="rep1"/>
                    <field name="rep2"/>
                    <field name="md5" invisible="1"/>
                </tree>
            </field>
        </record>
        
         <record id="view_vhr_recruitment_temp_survey_search" model="ir.ui.view">
            <field name="name">vhr.recruitment.temp.survey.search</field>
            <field name="model">vhr.recruitment.temp.survey</field>
            <field name="arch" type="xml">
                <search string="Search">
                	<field name="request_code" string="For Request" 
        			 filter_domain="[('request_code','ilike',self)]"/>
      			 	<group expand="0" string="Group By">
                        <filter name="group_by_request_code" string="For Request"
                               context="{'group_by':'request_code'}"/>
                      
                    </group>
	                    
                </search>
            </field>
        </record>
        
        
        <record model="ir.actions.act_window" id="act_vhr_recruitment_temp_survey">
            <field name="name">Confirm Survey By Email</field>
            <field name="res_model">vhr.recruitment.temp.survey</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_vhr_recruitment_temp_survey_tree"/>
            <field name="search_view_id" ref="view_vhr_recruitment_temp_survey_search"/>
        </record>

	</data>
</openerp>

