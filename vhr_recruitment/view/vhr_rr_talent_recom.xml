<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="vhr_rr_talent_recom_tree_view">
			<field name="name">vhr.rr.talent.recom.tree</field>
			<field name="model">vhr.rr.talent.recom</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Recommenders">
					<field name="name" />
					<field name="company" />
					<field name="position" />
					<field name="contact" />
					<field name="recom_rel_type_id" />
					<field name="comment" />
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="vhr_rr_talent_recom_form_view">
			<field name="name">vhr.rr.talent.recom.form</field>
			<field name="model">vhr.rr.talent.recom</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Recommender">
					<sheet>
						<group col="4">
							<field name="name" required="1"/>
							<field name="company" required="1"/>
							<field name="position" required="1"/>
							<field name="contact" required="1"/>
							<field name="recom_rel_type_id" required="1"/>							
						</group>
						<label for="comment" string="Comment"/>
						<field name="comment" />
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_vhr_rr_talent_recom_tree_view">
			<field name="name">Talent Recommender</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">vhr.rr.talent.recom</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="vhr_rr_talent_recom_tree_view" />
		</record>

	</data>
</openerp>