<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data noupdate='0'>
        <record id="view_vhr_program_question_form" model="ir.ui.view">
            <field name="name">vhr.program.question.form</field>
            <field name="model">vhr.program.question</field>
            <field name="arch" type="xml">
                <form string="HRS Program Question" version="7.0">
                    <sheet>
                    	<group cols="4">
	                    	<field name="name" required='1'/>
	                    	<field name="name_en" required='1'/>
	                    	<field name="question_type_id" required='1'
	                    		options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}"/>
	                    	<field name="program_part_id" required='1'
	                    		options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}"/>
	                    	<field name="is_required"/>
	                    	<field name="active"/>
	                    	<field name="description"/>
	                    </group>
	                    <group>
	                    	<field name="answer_ids"/>
	                    </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_vhr_program_question_tree" model="ir.ui.view">
            <field name="name">vhr.program.question.tree</field>
            <field name="model">vhr.program.question</field>
            <field name="arch" type="xml">
                <tree string="HRS Program Question" version="7.0">
                	<field name="name"/>
                   	<field name="name_en"/>
                   	<field name="question_type_id"/>
                   	<field name="program_part_id"/>
                   	<field name="is_required"/>
                   	<field name="active"/>
                   	<field name="description"/>
                </tree>
            </field>
        </record>
    </data>
</openerp>
