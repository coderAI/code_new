<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	<record id="view_vhr_applicant_job_track_group_tree" model="ir.ui.view">
			<field name="name">vhr.applicant.job.track.group.tree</field>
			<field name="model">vhr.applicant.job.track.group</field>
			<field name="arch" type="xml">
				<tree string="Applicant Job Track Group" version="7.0">
					<field name="name"/>
					<field name="job_track_ids"/>
				</tree>
			</field>
		</record>
		<record id="view_vhr_applicant_job_track_group_form" model="ir.ui.view">
			<field name="name">vhr.applicant.job.track.group.form</field>
			<field name="model">vhr.applicant.job.track.group</field>
			<field name="arch" type="xml">
				<form string="Applicant Job Track Group">
					<sheet>
						<div>
                            <div class="oe_edit_only">
                                <label for="name" string="Name"/>
                            </div>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <label for="job_track_ids" string="Job Track"/>
                        <field name="job_track_ids" mode="tree">
   							<tree version="7.0" editable="top">
   								<field name="name" />
   							</tree>
   						</field>
					</sheet>
				</form>
			</field>
		</record>
        <record model="ir.actions.act_window" id="action_vhr_applicant_job_track_group">
			<field name="name">Applicant Job Track Group</field>
			<field name="res_model">vhr.applicant.job.track.group</field>
			<field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_applicant_job_track_group_tree"/>
		</record>


		<record id="view_vhr_applicant_job_track_tree" model="ir.ui.view">
			<field name="name">vhr.applicant.job.track.tree</field>
			<field name="model">vhr.applicant.job.track</field>
			<field name="arch" type="xml">
				<tree string="Applicant Job Track" version="7.0" editable="top">
					<field name="name" required="1"/>
					<field name="job_track_group_id" required="1"/>
				</tree>
			</field>
		</record>
		<record id="view_vhr_applicant_job_track_form" model="ir.ui.view">
			<field name="name">vhr.applicant.job.track.form</field>
			<field name="model">vhr.applicant.job.track</field>
			<field name="arch" type="xml">
				<form string="Applicant Job Track">
					<field name="job_track_group_id"/>
					<field name="name"/>
				</form>
			</field>
		</record>
        <record model="ir.actions.act_window" id="action_vhr_applicant_job_track">
			<field name="name">Applicant Job Track</field>
			<field name="res_model">vhr.applicant.job.track</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree</field>
		</record>
    </data>
</openerp>
