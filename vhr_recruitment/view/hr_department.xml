<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate='0'>
		<record id="view_hr_department_recruitment_form" model="ir.ui.view">
            <field name="name">hr.department.recruitment.form.view</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="vhr_master_data.view_hr_department_form"/>
            <field name="arch" type="xml">
                <field name="hrbps" position="after">
                	<separator string="Main HRBP"/>
                    <field name="main_hrbps" widget="many2many_tags" 
                    	options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}"/>
	                <separator string="RR HRBPs"/>
	                 <field name="rr_hrbps" nolabel="1">
						<tree string="Employees">
	                     <field name="code"/>
	                     <field name="name"/>
	                     <field name="login" string='Account'/>			                        
	                     <field name="title_id"/>
	                     <field name="job_level_id"/>
	                     <field name="department_id"/>
	                     <field name="company_id"/>
	                 	</tree>
	          		</field>      
                </field>
                 
            </field>
        </record>
    </data>
</openerp>