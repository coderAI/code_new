<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data noupdate='0'>
		<record id="view_vhr_rr_talent_tree" model="ir.ui.view">
			<field name="name">vhr.rr.talent.tree</field>
			<field name="model">vhr.rr.talent</field>
			<field name="arch" type="xml">
				<tree string="Talents" version="7.0" editable="1">
					<field name="last_name" required="1" />
					<field name="first_name" required="1" />
					<field name="email" required="1" />
					<field name="mobile_phone" />
					<field name="birthday" string="DOB" required="1"
						on_change="onchange_date(birthday)" />
					<field name="gender" />
					<field name="recruitment_source_id"
						options="{'no_quick_create' : True, 'no_create':True, 'no_open':True}" />
					<field name="pic"
						options="{'no_quick_create' : True, 'no_create':True, 'no_open':True}" />
					<field name="create_date" />
					<field name="create_uid" />
				</tree>
			</field>
		</record>

		<record id="view_vhr_rr_talentform" model="ir.ui.view">
			<field name="name">vhr.rr.talent.form</field>
			<field name="model">vhr.rr.talent</field>
			<field name="arch" type="xml">
				<form string="Talent" version="7.0">
					<sheet>
						<group string="General Information">
							<group>
								<field name="last_name" required='1' string="Last  &amp; mid Name*" />
								<field name="first_name" required='1' string=" First Name*" />
								<field name="birthday" required='1' on_change="onchange_date(birthday)"
									string="Date of birth*" />
								<field name="gender" />
								<field name="pic"
									options="{'no_quick_create' : True, 'no_create':True, 'no_open':True}" />
							</group>
							<group>
								<field name="email" required='1' widget="email"
									options="{'validate_email': True}" string="Email*" />
								<field name="mobile_phone" required='1'
									options="{'validate_number': True}" string="Mobile Phone*" />
								<field name="link" />
								<field name="note" />
							</group>
						</group>
						<notebook>
							<page string="General Information">
								<group>
									<group>
										<field name="speciality_id" string="Speciality"
											options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}" />
										<field name="recruitment_source_online_id"
											options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}" />

									</group>
									<group>
										<field name="recruitment_source_id"
											options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}" />
										<field name="recruitment_source_type_id"
											options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}" />
									</group>
								</group>
							</page>
							<page string="Working Information">
								<group>
									<group>
										<field name="current_company" />
										<field name="current_position" />
									</group>
									<group>
										<field name="current_salary" />
										<field name="status_hiring" />
									</group>

								</group>
								<group>
									<field name="target_source" />
									<field name="target_skill" />
									<field name="current_benefit" />
									<field name="expectation" />
								</group>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>


		<record id="view_vhr_rr_talent_search" model="ir.ui.view">
			<field name="name">vhr.rr.talent.search</field>
			<field name="model">vhr.rr.talent</field>
			<field name="arch" type="xml">
				<search string="Search Talent">
					<field name="name" string="Talent Info"
						filter_domain="['|', '|', '|', '|', ('name', 'ilike', self), ('first_name','ilike',self), ('last_name','ilike',self), ('email','ilike',self), ('mobile_phone','ilike',self)]" />
					<separator />
					<group expand="0" string="Group By">
						<filter name="group_by_recruitment_source_id" string="Source"
							context="{'group_by':'recruitment_source_id'}" />
						<filter name="group_by_pic" string="PIC" context="{'group_by':'pic'}" />
						<filter name="group_by_create_date" string="Create Date"
							context="{'group_by':'create_date'}" />
						<filter name="group_by_create_uid" string="Create User"
							context="{'group_by':'create_uid'}" />
					</group>
				</search>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_vhr_rr_talent">
			<field name="name">Talents</field>
			<field name="res_model">vhr.rr.talent</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="groups_id" eval="" />
			<field name="search_view_id" ref="view_vhr_rr_talent_search" />
		</record>

	</data>
</openerp>