<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
    	<record id="view_vhr_business_impact_tree" model="ir.ui.view">
            <field name="name">vhr.business.impact.tree</field>
            <field name="model">vhr.business.impact</field>
            <field name="arch" type="xml">
                <tree string="Business Impact" version="7.0">
                    <field name="name"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        
        <record id="view_vhr_business_impact_form" model="ir.ui.view">
            <field name="name">vhr.business.impact.form</field>
            <field name="model">vhr.business.impact</field>
            <field name="arch" type="xml">
                <form string="Account">
<!--                     <label for="code" class="oe_edit_only" string="Account Code and Name"/>
                    <h1>
                        <field name="code" class="oe_inline" placeholder="Account code" style="width: 6em"/> -
                        <field name="name" class="oe_inline" placeholder="Account name"/>
                    </h1> -->
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="code"/>
                    		<field name="active"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>
    	
    	<record model="ir.actions.act_window" id="act_vhr_business_impact">
            <field name="name">Business Impact</field>
            <field name="res_model">vhr.business.impact</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_business_impact_tree"/>
        </record>
    
    </data>
</openerp>