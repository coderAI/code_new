<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate='0'>
		
        <record id="view_vhr_recruitment_res_groups_form" model="ir.ui.view">
            <field name="name">vhr.recruitment.res.groups.form</field>
            <field name="model">res.groups</field>
            <field name="arch" type="xml">
            	<form string="Groups" create="0" delete="0">
					<sheet>
						<group col="4">
							<field name="category_id" readonly="1"/>
							<field name="name" readonly="1"/>
							<field name="share" readonly="1"/>
							<field name="is_portal" readonly="1"/>
						</group>
						<notebook>
							<page string="Users">
								<field name="users" context="{'search_default_no_share':1}"
									options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}">
									<tree string="Users" editable="1" >
										<field name="name" readonly="1"/>
										<field name="login" readonly="1"/>
										<field name="login_date" readonly="1"/>
									</tree>
								</field>
							</page>
						</notebook>
					</sheet>
				</form>
            </field>
        </record>
        <record id="view_vhr_recruitment_res_groups_tree" model="ir.ui.view">
            <field name="name">vhr.recruitment.res.groups.tree</field>
            <field name="model">res.groups</field>
            <field name="arch" type="xml">
            	 <tree string="Res Groups" version="7.0" create="0" delete="0">
                    <field name="name" readonly="1"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_vhr_rr_res_groups">
            <field name="name">Groups</field>
            <field name="res_model">res.groups</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'rule_for_tree_form': True, 'attachment': False}</field>
            <field name="domain"
                   eval="[('category_id', '=', ref('vhr_recruitment.module_vhr_rr_category'))]"/>
        </record>

        <record id="action_vhr_recruitment_res_group_form" model="ir.actions.act_window.view">
            <field name="sequence">2</field>
            <field name="view_id" ref="view_vhr_recruitment_res_groups_form"/>
            <field name="act_window_id" ref="action_vhr_rr_res_groups"/>
            <field name="view_mode">form</field>
        </record>  
        <record id="action_vhr_recruitment_res_group_tree" model="ir.actions.act_window.view">
            <field name="sequence">1</field>
            <field name="view_id" ref="view_vhr_recruitment_res_groups_tree"/>
            <field name="act_window_id" ref="action_vhr_rr_res_groups"/>
            <field name="view_mode">tree</field>
        </record>  
    </data>
</openerp>