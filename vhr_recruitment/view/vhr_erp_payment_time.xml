<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_vhr_erp_payment_time_form" model="ir.ui.view">
            <field name="name">vhr.erp.payment.time.form</field>
            <field name="model">vhr.erp.payment.time</field>
            <field name="arch" type="xml">
                <form string="VHR ERP Payment Time" version="7.0">
       				<sheet>
      					<group>
	       					<group>
	       						<field name="name" required="1"/>
			                    <field name="payment_time" required="1" string="Code"/>
	       					</group>
	       					<group>
       							<field name="period_days" required="1"/>
			                    <field name="active"/>
	       					</group>
       					</group>
       					<group>
       						<field name="description"/>
       					</group>
	       				<notebook>
	       					<page string="Logs">
		                        	<label string="*** Please press F5 to refresh the list of logs !" colspan="4"/>
			                        <field name="audit_log_ids" mode="tree"
			                               widget="one2many_list" readonly="1" nolabel="1" colspan="4">
			                            <tree version="7.0">
			                                <field name="timestamp" required="1" readonly="1"/>
			                                <field name="user_id" readonly="1"/>
			                                <field name="method" readonly="1"/>
			                                <field name="field_description"/>
			                                <field name="old_value_text"/>
			                                <field name="new_value_text"/>
			                            </tree>
			                        </field>
		                       </page>
		                  </notebook>
       				</sheet>
       			</form>
            </field>
        </record>

        <record id="view_vhr_erp_payment_time_tree" model="ir.ui.view">
            <field name="name">vhr.erp.payment.time.tree</field>
            <field name="model">vhr.erp.payment.time</field>
            <field name="arch" type="xml">
                <tree string="VHR ERP Payment Time" version="7.0">
                    <field name="name"/>
                    <field name="payment_time"/>
					<field name="period_days"/>
                    <field name="description"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="view_vhr_erp_payment_time_search" model="ir.ui.view">
            <field name="name">vhr.erp.payment.time.search</field>
            <field name="model">vhr.erp.payment.time</field>
            <field name="arch" type="xml">
                <search>
                 <group expand="0" string="Filter">
                       <filter string="Active = True" name="active_true" icon="terp-stage"
                            domain="[('active', '=', True)]"/>
	                    <filter string="Active = False" name="active_false" icon="STOCK_NEW"
	                            domain="[('active', '=', False)]"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_vhr_erp_payment_time">
            <field name="name">VHR ERP Payment Time</field>
            <field name="res_model">vhr.erp.payment.time</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_erp_payment_time_tree"/>
            <field name="groups_id" eval=""/>
            <field name="search_view_id" ref="view_vhr_erp_payment_time_search"/>
        </record>
    </data>
</openerp>