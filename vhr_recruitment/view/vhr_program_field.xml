<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data noupdate="0">
		<record model="ir.ui.view" id="vhr_program_field_tree_view">
			<field name="name">vhr.program.field.tree</field>
			<field name="model">vhr.program.field</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Program field">
					<field name="field_model" />
					<field name="field_type" />
					<field name="name" />
					<field name="placeholder" />
					<field name="attribute" />
					<field name="default" />
					<field name="is_required" />
					<field name="is_public" />
					<field name="sequence" />
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="vhr_program_field_form_view">
			<field name="name">vhr.program.field.form</field>
			<field name="model">vhr.program.field</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Program field">
					<sheet>
						<group string="Model information">
							<group>
								<field name="field_model" required="1" attrs="{'readonly':[('is_group_addmin','=', False)]}"/>
								<field name="field_type" required="1" attrs="{'readonly':[('is_group_addmin','=', False)]}" />
								<field name="is_group_addmin" invisible="1"/>														
							</group>
							<group>
								<field name="name" required="1" attrs="{'readonly':[('is_group_addmin','=', False)]}"/>
								<field name="name_en" required="1" attrs="{'readonly':[('is_group_addmin','=', False)]}"/>
								is_public
							</group>
						</group>						

						<group attrs="{'invisible':[('field_type','!=', 'binary')]}">
							<group>
								<field name="filter" attrs="{'readonly':[('is_group_addmin','=', False)]}" />
							</group>
							<group>
								<field name="limit_size" attrs="{'readonly':[('is_group_addmin','=', False)]}"/>
							</group>
						</group>
						<group string="More Information">
							<field name="default"
								attrs="{'invisible':[('field_type','!=', 'selection')],'readonly':[('is_group_addmin','=', False)]}" />
							<field name="description" attrs="{'readonly':[('is_group_addmin','=', False)]}"/>
							<field name="description_en" attrs="{'readonly':[('is_group_addmin','=', False)]}"/>
							<field name="placeholder" attrs="{'readonly':[('is_group_addmin','=', False)]}"/>
							<field name="placeholder_en" attrs="{'readonly':[('is_group_addmin','=', False)]}"/>
							<field name="error" attrs="{'readonly':[('is_group_addmin','=', False)]}"/>
							<field name="error_en" attrs="{'readonly':[('is_group_addmin','=', False)]}"/>
						</group>

						<group col="4">
							<field name="attribute" class="oe_inline"
								attrs="{'invisible':[('field_type','not in', ['char','text'])],'readonly':[('is_group_addmin','=', False)]}" />
							<field name="sequence" attrs="{'readonly':[('is_group_addmin','=', False)]}"/>
							<field name="is_required" attrs="{'readonly':[('is_group_addmin','=', False)]}"/>
							
							<field name="is_public" attrs="{'readonly':[('is_group_addmin','=', False)]}"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="vhr_program_field_form_search" model="ir.ui.view">
			<field name="name">vhr.program.field.search</field>
			<field name="model">vhr.program.field</field>
			<field name="arch" type="xml">
				<search string="Program field">
					<field name="field_model" />
					<field name="field_type" />
					<separator />
					<group expand="0" string="Group By">
						<filter name="model" string="Model" context="{'group_by':'field_type'}" />
					</group>
				</search>
			</field>
		</record>
		<record model="ir.actions.act_window" id="action_vhr_program_field">
			<field name="name">HRS Program Field</field>
			<field name="res_model">vhr.program.field</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="groups_id" eval="" />
		</record>
	</data>
</openerp>