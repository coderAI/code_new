<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_vhr_erp_bonus_rate_by_dept_form" model="ir.ui.view">
            <field name="name">vhr.erp.bonus.rate.by.dept.form</field>
            <field name="model">vhr.erp.bonus.rate.by.dept</field>
            <field name="arch" type="xml">
                <form string="ERP Bonus Payment" edit="0" create="0" version="7.0">
       				<sheet>
       					<group col="4">
       						<field name="department_id" required="1"
       							options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}"/>
       						<field name="rate" required="1"/>
       						<field name="from_date"/>
                            <field name="to_date"/>
       						<field name="job_title_ids" widget="many2many_tags"
       							options="{'no_quick_create' : True, 'no_create':True, 'no_open': True, 'limit': 25}"/>
       						
                            <field name="active"/>
       					</group>
       					<group>
       						<field name="description"/>
       					</group>
       					<notebook>
	       					<page string="Logs">
		                        	<label string="*** Please press F5 to refresh the list of logs !" colspan="4"/>
			                        <field name="audit_log_ids" mode="tree"
			                               widget="one2many_list" readonly="1" nolabel="1" colspan="4">
			                            <tree version="7.0">
			                                <field name="timestamp" required="1" readonly="1"/>
			                                <field name="user_id" readonly="1"/>
			                                <field name="method" readonly="1"/>
			                                <field name="field_description"/>
			                                <field name="old_value_text"/>
			                                <field name="new_value_text"/>
			                            </tree>
			                        </field>
	                       	</page>
	                  	</notebook>
       				</sheet>
       			</form>
            </field>
        </record>

        <record id="view_vhr_erp_bonus_rate_by_dept_tree" model="ir.ui.view">
            <field name="name">vhr.erp.bonus.rate.by.dept.tree</field>
            <field name="model">vhr.erp.bonus.rate.by.dept</field>
            <field name="arch" type="xml">
                <tree string="ERP Rate By Dept" version="7.0">
                	<field name="department_id"/>
                    <field name="rate"/>
                    <field name="job_title_ids"/>
					<field name="from_date"/>
                    <field name="to_date"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="view_vhr_erp_bonus_rate_by_dept_search" model="ir.ui.view">
            <field name="name">vhr.erp.bonus.rate.by.dept.search</field>
            <field name="model">vhr.erp.bonus.rate.by.dept</field>
            <field name="arch" type="xml">
                <search>
                	<field name="department_id" string="Rate By Dept" 
        			 filter_domain="['|','|',('department_id','ilike',self),('rate','ilike',self),('from_date','ilike',self)]"/>
                	
                	<group expand="0" string="Group By">
                        <filter name="group_by_department" string="Department"
                               context="{'group_by':'department_id'}"/>
                        <filter name="group_by_from_date" string="From Date"
                               context="{'group_by':'from_date'}"/>
                    </group>
                    <group expand="0" string="Filter">
                       <filter string="Active = True" name="active_true" icon="terp-stage"
                            domain="[('active', '=', True)]"/>
	                    <filter string="Active = False" name="active_false" icon="STOCK_NEW"
	                            domain="[('active', '=', False)]"/>
                    </group>
                    
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_view_vhr_erp_bonus_rate_by_dept">
            <field name="name">ERP Rate By Dept</field>
            <field name="res_model">vhr.erp.bonus.rate.by.dept</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_erp_bonus_rate_by_dept_tree"/>
            <field name="groups_id" eval=""/>
            <field name="search_view_id" ref="view_vhr_erp_bonus_rate_by_dept_search"/>
        </record>
    </data>
</openerp>