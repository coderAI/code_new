<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data noupdate='0'>
        <record id="hr_job_wkf" model="workflow">
		    <field name="name">HR JOB - Resource Request Workflow</field>
		    <field name="osv">hr.job</field>
		    <field name="on_create" eval="1"/>
		</record>=
		<record id="act_vhr_job_draft" model="workflow.activity">
            <field name="wkf_id" ref="hr_job_wkf"/>
            <field name="flow_start">True</field>
            <field name="name">draft</field>
            <field name="kind">function</field>
            <field name="action">vhr_job_execute_workflow('draft')</field>
        </record>
        <record id="act_vhr_job_waiting_hrbp" model="workflow.activity">
            <field name="wkf_id" ref="hr_job_wkf"/>
            <field name="name">waiting_hrbp</field>
            <field name="kind">function</field>
            <field name="action">vhr_job_execute_workflow('waiting_hrbp')</field>
        </record>
        <record id="act_vhr_job_waiting_dept" model="workflow.activity">
            <field name="wkf_id" ref="hr_job_wkf"/>
            <field name="name">waiting_dept</field>
            <field name="kind">function</field>
            <field name="action">vhr_job_execute_workflow('waiting_dept')</field>
        </record>
                
        <record id="act_vhr_job_waiting_rrm" model="workflow.activity">
            <field name="wkf_id" ref="hr_job_wkf"/>
            <field name="name">waiting_rrm</field>
            <field name="kind">function</field>
            <field name="action">vhr_job_execute_workflow('waiting_rrm')</field>
        </record>
        <record id="act_vhr_job_in_progress" model="workflow.activity">
            <field name="wkf_id" ref="hr_job_wkf"/>
            <field name="name">in_progress</field>
            <field name="kind">function</field>
            <field name="action">vhr_job_execute_workflow('in_progress')</field>
        </record>
        <record id="act_vhr_job_done" model="workflow.activity">
            <field name="wkf_id" ref="hr_job_wkf"/>
            <field name="name">done</field>
            <field name="kind">function</field>
            <field name="action">vhr_job_execute_workflow('done')</field>
        </record>
        <record id="act_vhr_job_close" model="workflow.activity">
            <field name="wkf_id" ref="hr_job_wkf"/>
            <field name="flow_stop">True</field>
            <field name="name">close</field>
            <field name="kind">function</field>
            <field name="action">vhr_job_execute_workflow('close')</field>
        </record>
         <record id="act_vhr_job_cancel" model="workflow.activity">
            <field name="wkf_id" ref="hr_job_wkf"/>
            <field name="flow_stop">True</field>
            <field name="name">cancel</field>
            <field name="kind">function</field>
            <field name="action">vhr_job_execute_workflow('cancel')</field>
        </record>
        
        <!-- ================================================================= -->
        <!-- draft -->
        <record id="trans_draft_waiting_hrbp" model="workflow.transition">
            <field name="act_from" ref="act_vhr_job_draft"/>
            <field name="act_to" ref="act_vhr_job_waiting_hrbp"/>
            <field name="signal">draft_waiting_hrbp</field>
            <field name="condition">True</field>
        </record>
        <record id="trans_draft_waiting_rrm" model="workflow.transition">
            <field name="act_from" ref="act_vhr_job_draft"/>
            <field name="act_to" ref="act_vhr_job_waiting_rrm"/>
            <field name="signal">draft_waiting_rrm</field>
            <field name="condition">True</field>
        </record>
        <!-- waiting hrbp -->
        <record id="trans_waiting_hrbp_waiting_dept" model="workflow.transition">
            <field name="act_from" ref="act_vhr_job_waiting_hrbp"/>
            <field name="act_to" ref="act_vhr_job_waiting_dept"/>
            <field name="signal">waiting_hrbp_waiting_dept</field>
            <field name="condition">True</field>
        </record>
		<record id="trans_waiting_hrbp_waiting_rrm" model="workflow.transition">
            <field name="act_from" ref="act_vhr_job_waiting_hrbp"/>
            <field name="act_to" ref="act_vhr_job_waiting_rrm"/>
            <field name="signal">waiting_hrbp_waiting_rrm</field>
            <field name="condition">True</field>
        </record>
        <record id="trans_waiting_hrbp_draft" model="workflow.transition">
            <field name="act_from" ref="act_vhr_job_waiting_hrbp"/>
            <field name="act_to" ref="act_vhr_job_draft"/>
            <field name="signal">waiting_hrbp_draft</field>
            <field name="condition">True</field>
        </record>
        <record id="trans_waiting_hrbp_in_progress" model="workflow.transition">
            <field name="act_from" ref="act_vhr_job_waiting_hrbp"/>
            <field name="act_to" ref="act_vhr_job_in_progress"/>
            <field name="signal">waiting_hrbp_in_progress</field>
            <field name="condition">True</field>
        </record>
		<!-- waiting div -->
		<record id="trans_waiting_dept_waiting_rrm" model="workflow.transition">
            <field name="act_from" ref="act_vhr_job_waiting_dept"/>
            <field name="act_to" ref="act_vhr_job_waiting_rrm"/>
            <field name="signal">waiting_dept_waiting_rrm</field>
            <field name="condition">True</field>
        </record>
        <record id="trans_waiting_dept_waiting_hrbp" model="workflow.transition">
            <field name="act_from" ref="act_vhr_job_waiting_dept"/>
            <field name="act_to" ref="act_vhr_job_waiting_hrbp"/>
            <field name="signal">waiting_dept_waiting_hrbp</field>
            <field name="condition">True</field>
        </record>
        <!-- waiting_rrm -->
        <record id="trans_waiting_rrm_draft" model="workflow.transition">
            <field name="act_from" ref="act_vhr_job_waiting_rrm"/>
            <field name="act_to" ref="act_vhr_job_draft"/>
            <field name="signal">waiting_rrm_draft</field>
            <field name="condition">True</field>
        </record>
         <record id="trans_waiting_rrm_waiting_hrbp" model="workflow.transition">
            <field name="act_from" ref="act_vhr_job_waiting_rrm"/>
            <field name="act_to" ref="act_vhr_job_waiting_hrbp"/>
            <field name="signal">waiting_rrm_waiting_hrbp</field>
            <field name="condition">True</field>
        </record>
        <record id="trans_waiting_rrm_in_progress" model="workflow.transition">
            <field name="act_from" ref="act_vhr_job_waiting_rrm"/>
            <field name="act_to" ref="act_vhr_job_in_progress"/>
            <field name="signal">waiting_rrm_in_progress</field>
            <field name="condition">True</field>
        </record>
        <!-- in_progress -->
        <record id="trans_in_progress_done" model="workflow.transition">
            <field name="act_from" ref="act_vhr_job_in_progress"/>
            <field name="act_to" ref="act_vhr_job_done"/>
            <field name="signal">in_progress_done</field>
            <field name="condition">True</field>
        </record>
        <record id="trans_in_progress_close" model="workflow.transition">
            <field name="act_from" ref="act_vhr_job_in_progress"/>
            <field name="act_to" ref="act_vhr_job_close"/>
            <field name="signal">in_progress_close</field>
            <field name="condition">True</field>
        </record>
        <record id="trans_in_progress_cancel" model="workflow.transition">
            <field name="act_from" ref="act_vhr_job_in_progress"/>
            <field name="act_to" ref="act_vhr_job_cancel"/>
            <field name="signal">in_progress_cancel</field>
            <field name="condition">True</field>
        </record>
        <!-- Done -->
        <record id="trans_done_in_progress" model="workflow.transition">
            <field name="act_from" ref="act_vhr_job_done"/>
            <field name="act_to" ref="act_vhr_job_in_progress"/>
            <field name="signal">done_in_progress</field>
            <field name="condition">True</field>
        </record>
	</data>
</openerp>