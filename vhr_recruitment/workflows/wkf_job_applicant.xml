<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data noupdate='0'>
        <record id="wkf_declare" model="workflow">
		    <field name="name">JOB APPLICANT - Match CV Workflow</field>
		    <field name="osv">vhr.job.applicant</field>
		    <field name="on_create" eval="1"/>
		</record>
		
		
		<record id="act_draft" model="workflow.activity"> 
		    <field name="name">draft</field> 
		    <field name="wkf_id" ref="wkf_declare"/> 
		    <field name="flow_start">True</field>
		    <field name="kind">function</field> 
		    <field name="action">vhr_job_applicant_workflow('draft')</field> 
		</record>
		
		<record id="act_confirm" model="workflow.activity"> 
		    <field name="name">confirm</field> 
		    <field name="wkf_id" ref="wkf_declare"/> 
		    <field name="kind">function</field> 
		    <field name="action">vhr_job_applicant_workflow('confirm')</field> 
		</record>
		
		<record id="act_interview" model="workflow.activity"> 
		    <field name="name">interview</field> 
		    <field name="wkf_id" ref="wkf_declare"/> 
		    <field name="kind">function</field> 
		    <field name="action">vhr_job_applicant_workflow('interview')</field> 
		</record>
		
		<record id="act_offer" model="workflow.activity"> 
		    <field name="name">offer</field> 
		    <field name="wkf_id" ref="wkf_declare"/> 
		    <field name="kind">function</field> 
		    <field name="action">vhr_job_applicant_workflow('offer')</field> 
		</record>
		
		<record id="act_done" model="workflow.activity"> 
		    <field name="name">done</field> 
		    <field name="wkf_id" ref="wkf_declare"/> 
		    <field name="kind">function</field> 
		    <field name="action">vhr_job_applicant_workflow('done')</field>
		</record>
		
		<record id="act_close" model="workflow.activity"> 
		    <field name="name">close</field> 
		    <field name="wkf_id" ref="wkf_declare"/> 
		    <field name="kind">function</field> 
		    <field name="action">vhr_job_applicant_workflow('close')</field> 
		</record>

		<!--  TRANSISTION -->
		
		<!-- DRAFT -->
		<record id="trans_draft_confirm" model="workflow.transition">
		    <field name="act_from" ref="act_draft"/>
		    <field name="act_to" ref="act_confirm"/>
		    <field name="signal">trans_draft_confirm</field>
		    <field name="condition">True</field>
		</record>
		
		<record id="trans_draft_interview" model="workflow.transition">
		    <field name="act_from" ref="act_draft"/>
		    <field name="act_to" ref="act_interview"/>
		    <field name="signal">trans_draft_interview</field>
		    <field name="condition">True</field>
		</record>
		
		<record id="trans_draft_done" model="workflow.transition">
		    <field name="act_from" ref="act_draft"/>
		    <field name="act_to" ref="act_done"/>
		    <field name="signal">trans_draft_done</field>
		    <field name="condition">True</field>
		</record>
		
		<record id="trans_draft_close" model="workflow.transition">
		    <field name="act_from" ref="act_draft"/>
		    <field name="act_to" ref="act_close"/>
		    <field name="signal">trans_draft_close</field>
		    <field name="condition">True</field>
		</record>
		
		<!-- CONFIRM -->
		<record id="trans_confirm_interview" model="workflow.transition">
		    <field name="act_from" ref="act_confirm"/>
		    <field name="act_to" ref="act_interview"/>
		    <field name="signal">trans_confirm_interview</field>
		    <field name="condition">True</field>
		</record>
		
		<record id="trans_confirm_close" model="workflow.transition">
		    <field name="act_from" ref="act_confirm"/>
		    <field name="act_to" ref="act_close"/>
		    <field name="signal">trans_confirm_close</field>
		    <field name="condition">True</field>
		</record>
		
		<record id="trans_confirm_done" model="workflow.transition">
		    <field name="act_from" ref="act_confirm"/>
		    <field name="act_to" ref="act_done"/>
		    <field name="signal">trans_confirm_done</field>
		    <field name="condition">True</field>
		</record>
		
		<!-- INTERVIEW -->
		<record id="trans_interview_offer" model="workflow.transition">
		    <field name="act_from" ref="act_interview"/>
		    <field name="act_to" ref="act_offer"/>
		    <field name="signal">trans_interview_offer</field>
		    <field name="condition">True</field>
		</record>
		
		<record id="trans_interview_close" model="workflow.transition">
		    <field name="act_from" ref="act_interview"/>
		    <field name="act_to" ref="act_close"/>
		    <field name="signal">trans_interview_close</field>
		    <field name="condition">True</field>
		</record>
		<!-- OFFER -->
		<record id="trans_offer_done" model="workflow.transition">
		    <field name="act_from" ref="act_offer"/>
		    <field name="act_to" ref="act_done"/>
		    <field name="signal">trans_offer_done</field>
		    <field name="condition">True</field>
		</record>
		<record id="trans_offer_close" model="workflow.transition">
		    <field name="act_from" ref="act_offer"/>
		    <field name="act_to" ref="act_close"/>
		    <field name="signal">trans_offer_close</field>
		    <field name="condition">True</field>
		</record>
		<!--Done-->
		<record id="trans_done_close" model="workflow.transition">
		    <field name="act_from" ref="act_done"/>
		    <field name="act_to" ref="act_close"/>
		    <field name="signal">trans_done_close</field>
		    <field name="condition">True</field>
		</record>
		<!--Close-->
		<record id="trans_close_draft" model="workflow.transition">
		    <field name="act_from" ref="act_close"/>
		    <field name="act_to" ref="act_draft"/>
		    <field name="signal">trans_close_draft</field>
		    <field name="condition">True</field>
		</record>
		<record id="trans_close_interview" model="workflow.transition">
		    <field name="act_from" ref="act_close"/>
		    <field name="act_to" ref="act_interview"/>
		    <field name="signal">trans_close_interview</field>
		    <field name="condition">True</field>
		</record>
		<record id="trans_close_confirm" model="workflow.transition">
		    <field name="act_from" ref="act_close"/>
		    <field name="act_to" ref="act_confirm"/>
		    <field name="signal">trans_close_confirm</field>
		    <field name="condition">True</field>
		</record>
		<record id="trans_close_offer" model="workflow.transition">
		    <field name="act_from" ref="act_close"/>
		    <field name="act_to" ref="act_offer"/>
		    <field name="signal">trans_close_offer</field>
		    <field name="condition">True</field>
		</record>
		<record id="trans_close_done" model="workflow.transition">
		    <field name="act_from" ref="act_close"/>
		    <field name="act_to" ref="act_done"/>
		    <field name="signal">trans_close_done</field>
		    <field name="condition">True</field>
		</record>
	</data>
</openerp>