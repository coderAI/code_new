<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_vhr_employee_partner_form" model="ir.ui.view">
            <field name="name">vhr.employee.partner.view.form</field>
            <field name="model">vhr.employee.partner</field>
            <field name="groups_id" eval=""/>
            <field name="arch" type="xml">
                <form string="Employee Partners" version="7.0">
                    <sheet>
                        <group>
                            <group>
                                <field name="is_employee"
                                       on_change="onchange_employee(relation_employee_id, is_employee)"/>
                                <field name="name"
                                       attrs="{'invisible': [('is_employee', '=', True)],
                                               'required': [('is_employee', '=', False)]}"/>
                                <field name="relation_employee_id" attrs="{'invisible': [('is_employee', '=', False)],
                                            'required': [('is_employee', '=', True)]}"
                                       on_change="onchange_employee(relation_employee_id, is_employee)"
                                       options="{'no_quick_create' : True}"/>
                                <label for="street" string="Address"/>
                                <div>
                                    <field name="street" placeholder="Street..."/>
                                    <div class="address_format">
                                        <field name="city_id" placeholder="City" style="width: 50%%"
                                               options='{"no_open": True}'
                                               attrs="{'readonly': [('use_parent_address','=',True)]}"/>
                                        <field name="district_id" placeholder="District"
                                               domain="[('city_id', '=', city_id)]"
                                               options='{"no_open": True}' style="width: 50%%"
                                               attrs="{'readonly': [('use_parent_address','=',True)]}"/>
                                    </div>
                                </div>

                                <label for="day_of_birth" string="Birthday(d/m/Y)"/>
                                <div>
                                    <field name="day_of_birth" style="width: 25%%"
                                           on_change="onchange_birthday(day_of_birth,month_of_birth,year_of_birth)"/>
                                    <field name="month_of_birth" style="width: 25%%"
                                           on_change="onchange_birthday(day_of_birth,month_of_birth,year_of_birth)"/>
                                    <field name="year_of_birth" style="width: 50%%"
                                           on_change="onchange_birthday(day_of_birth,month_of_birth,year_of_birth)"/>
                                </div>
                                <!--<field name="gender"/>-->
                                <field name="identity_number" options="{'validate_number': True}"/>
                                <field name="career_id" context="{'dimension_type': 'CAREER'}"/>

                                <field name="is_referee" string="Reference"/>

                                <field name="use_parent_address" invisible="1"/>
                                <field name="employee_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="relationship_id" required="1"
                                        options="{'no_quick_create':True, 'no_create':True,'no_open':True,}"
                                       on_change="onchange_relationship_type_id(relationship_id)"/>
                                <field name="mobile" options="{'validate_number': True}"/>
                                <field name="phone" options="{'validate_number': True}"/>
                                <field name="age" readonly='1'/>
                                <field name="status" required='1'/>
                                <field name="active"/>
                                <field name="working_place"/>

                                <field name="is_emergency"/>

                            </group>
                        </group>
                        <group col='1'>
                            <field name="notes"/>
                        </group>
                        <notebook>
                            <page string="Logs">
                                <label string="*** Please press F5 to refresh the list of logs !" colspan="4"/>
                                <field name="audit_log_ids" mode="tree"
                                       widget="one2many_list" readonly="1" nolabel="1" colspan="4">
                                    <tree version="7.0">
                                        <field name="timestamp" required="1" readonly="1"/>
                                        <field name="user_id" readonly="1"/>
                                        <field name="method" readonly="1"/>
                                        <field name="field_description"/>
                                        <field name="old_value_text"/>
                                        <field name="new_value_text"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_vhr_employee_partner_tree" model="ir.ui.view">
            <field name="name">vhr.employee.partner.view.tree</field>
            <field name="model">vhr.employee.partner</field>
            <field name="groups_id" eval=""/>
            <field name="arch" type="xml">
                <tree string="Employee Partners" version="7.0">
                    <field name="name"/>
                    <field name="employee_id" invisible="1"/>
                    <field name="relationship_id" string="Relationship"/>
                    <field name="street"/>
                    <field name="mobile"/>
                    <field name="phone"/>
                    <field name="is_emergency"/>
                    <field name="is_referee" string="Reference"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="view_vhr_employee_partner_search" model="ir.ui.view">
            <field name="name">vhr.employee.partner.view.search</field>
            <field name="model">vhr.employee.partner</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name='relationship_id'/>
                    <filter string="Active = True" name="active_true" icon="terp-stage"
                            domain="[('active', '=', True)]"/>
                    <filter string="Active = False" name="active_false" icon="STOCK_NEW"
                            domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_vhr_employee_partner">
            <field name="name">Employee Partners</field>
            <field name="res_model">vhr.employee.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_employee_partner_tree"/>
            <field name="groups_id" eval=""/>
            <field name="search_view_id" ref="view_vhr_employee_partner_search"/>
        </record>
    </data>
</openerp>