<?xml version="1.0" ?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_vhr_delegate_by_process_view_form">
            <field name="name">vhr.delegate.by.process.form</field>
            <field name="model">vhr.delegate.by.process</field>
            <field name="arch" type="xml">
                <form string="Delegate By Process" version="7.0">
                    <sheet>
                        <group>
                        	<group>
                        		<field name="employee_id" required='1' 
                        		on_change="onchange_employee_id(employee_id)"   
                        		options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"   />
                        		<field name="delegate_from_id" required="True" 
								on_change="onchange_delegate_from_id(delegate_from_id)"                            
	                            options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"   />
                        		<field name="delegate_id" required="True" 
								on_change="onchange_delegate_id(delegate_id)"                            
	                            options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"   />
                        		<field name="module_id" 
	                            options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}" readonly='1'/>
	                            
                        	</group>
                        	<group>
                        		<field name="employee_code" readonly='1'/>
                        		<field name="delegate_from_code" readonly='1'/>
                            	<field name="delegate_code" readonly='1'/>
                            	<field name="active"/>
                        	</group>
                            
                        </group>
                        <group col='4' string="Model">
                        	<field name="model_ids" nolabel='1'  context="{'module_id':module_id}" widget="many2many_tags" required='1'
                        	 options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_vhr_delegate_by_process_view_tree" model="ir.ui.view">
            <field name="name">vhr.delegate.by.process.tree</field>
            <field name="model">vhr.delegate.by.process</field>
            <field name="arch" type="xml">
                <tree string="Delegate By Process">
                    <field name="employee_code"/>
                    <field name="employee_id"/>
                    <field name="delegate_code"/>
                    <field name="delegate_from_id" required='1'/>
                    <field name="delegate_from_code"/>
                    <field name="delegate_id" required='1'/>
                    <field name="module_id"/>
                    <field name="model_ids"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="view_vhr_delegate_by_process_view_search" model="ir.ui.view">
            <field name="name">vhr.delegate.by.process.search</field>
            <field name="model">vhr.delegate.by.process</field>
            <field name="arch" type="xml">
                <search string="Delegate By Process">
                	<group expand="0" string="Group by...">
        				<filter string="Module" name="module" context="{'group_by':'module_id'}"/>
        			</group>  
        			
                	<field name="name" string="Delegate For" 
	                  		filter_domain="['|','|',('delegate_id.name','ilike',self),('delegate_id.login','ilike',self),('delegate_id.code','ilike',self)]"/>
					
	                <field name="employee_id" string="Employee" 
	                  		filter_domain="['|','|',('employee_id.name','ilike',self),('employee_id.login','ilike',self),('employee_id.code','ilike',self)]"/>
	                  			
        			<field name="employee_id" string="Delegate From" 
	                  		filter_domain="['|','|',('delegate_from_id.name','ilike',self),('delegate_from_id.login','ilike',self),('delegate_from_id.code','ilike',self)]"/>
	                 
                    <field name="module_id"/>
                    <group expand="0" string="Filter">
        				<filter string="Active = True" name="active_true" icon="terp-stage"
                            domain="[('active', '=', True)]"/>
                    	<filter string="Active = False" name="active_false" icon="STOCK_NEW"
                            domain="[('active', '=', False)]"/>
                    </group>
                </search>
            </field>
        </record>


        <record id="action_vhr_delegate_by_process_view_tree" model="ir.actions.act_window">
            <field name="name">Delegate By Process</field>
            <field name="res_model">vhr.delegate.by.process</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_delegate_by_process_view_tree"/>
            <field name="search_view_id" ref="view_vhr_delegate_by_process_view_search"/>
        </record>

    </data>
</openerp>


