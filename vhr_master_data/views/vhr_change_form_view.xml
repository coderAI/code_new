<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_vhr_change_form_form" model="ir.ui.view">
            <field name="name">vhr.change.form.view.form</field>
            <field name="model">vhr.change.form</field>
            <field name="arch" type="xml">
                <form string="Change Form" version="7.0">
                    <sheet>
                        <group col="4">
                            <group>
                                <field name="name" required='1'/>
                                <field name="code" required='1'/>
                                <field name="change_form_type_id" required='1'  options="{'no_quick_create':True, 'no_create':True}"
                                       on_change="onchange_change_form_type_id(change_form_type_id)"/>
                                <field name="show_qltv_admin" string="Show In Working Record (Dept Admin)"/>
                                <field name="show_qltv_af_admin" string="Show In Working Record (AF Admin)"/>
                                <field name="show_qltv_hrbp" string="Show In Working Record (HRBP)"/>
                                <field name="show_hr_rotate" string="Show In Staff Movement"/>
                                <field name="show_in_contract"/>
<!--                                <field name="show_in_termination_request"/-->
                            </group>
                            <group>
                                <field name="name_en"/>
                                <field name="sign_emp_id" string="Signer"  options="{'no_quick_create':True, 'no_create':True}"
                                       on_change="onchange_sign_emp_id(sign_emp_id)"/>
                                <field name="job_title_id" string="Signer's Title"
                                        options="{'no_quick_create':True, 'no_create':True}"/>
                                <field name="email_type_id" options="{'no_quick_create':True, 'no_create':True}"
                                       context="{'dimension_type': 'EMAIL_TYPE'}"/>
                                <field name="is_salary_adjustment"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                        <notebook>
                        	<page string="Access Fields">
                        		<field name="access_field_ids" nolabel='1' options="{'no_create' : True}"/>
                        	</page>
                            <page string="Logs">
                                <label string="*** Please press F5 to refresh the list of logs !" colspan="4"/>
                                <field name="audit_log_ids" mode="tree"
                                       widget="one2many_list" readonly="1" nolabel="1" colspan="4">
                                    <tree version="7.0">
                                        <field name="timestamp" required="1" readonly="1"/>
                                        <field name="user_id" readonly="1"/>
                                        <field name="method" readonly="1"/>
                                        <field name="field_description"/>
                                        <field name="old_value_text"/>
                                        <field name="new_value_text"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_vhr_change_form_tree" model="ir.ui.view">
            <field name="name">vhr.change.form.view.tree</field>
            <field name="model">vhr.change.form</field>
            <field name="arch" type="xml">
                <tree string="Change Form" version="7.0">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="name_en"/>
                    <field name="change_form_type_id"/>
                    <field name="is_salary_adjustment"/>
                    <field name="show_hr_rotate"/>
                    <field name="show_in_contract"/>
                    <field name="show_qltv_hrbp"/>
                    <field name="show_qltv_admin"/>
                    <field name="show_qltv_af_admin"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="view_vhr_change_form_search" model="ir.ui.view">
            <field name="name">vhr.change.form.view.search</field>
            <field name="model">vhr.change.form</field>
            <field name="arch" type="xml">
                <search string="Change Form">
                	<group expand="0" string="Group By">
                        <filter string="Change Form Type" icon="terp-gtk-select-all" domain="[]"
                                context="{'group_by':'change_form_type_id'}"/>
                    </group>
                    <group expand="0" string="Filter">
                    	<filter string="Active = True" name="active_true" icon="terp-stage"
                            domain="[('active', '=', True)]"/>
	                    <filter string="Active = False" name="active_false" icon="STOCK_NEW"
	                            domain="[('active', '=', False)]"/>                    	
                    </group>                    
                    <field name="name" string="Change Form"
                           filter_domain="['|','|','|',('name','ilike',self),('name_en','ilike',self),('code','ilike',self),('description','ilike',self)]"/>                    
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_vhr_change_form">
            <field name="name">Change Form</field>
            <field name="res_model">vhr.change.form</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_change_form_tree"/>
            <field name="search_view_id" ref="view_vhr_change_form_search"/>
        </record>


    </data>
</openerp>