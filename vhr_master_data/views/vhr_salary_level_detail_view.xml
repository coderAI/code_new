<?xml version="1.0" ?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_vhr_salary_level_detail_form">
            <field name="name">vhr.salary.level.detail.form</field>
            <field name="model">vhr.salary.level.detail</field>
            <field name="arch" type="xml">
                <form string="Salary Level Detail" version="7.0">
                    <sheet>
                        <group col="4">
                        	<group>
                        		<field name="salary_level_id" required="True" options="{'no_quick_create':True, 'no_create':True}"/>
                        		<field name="effective_date" required="True"/>
                        		<field name="active"/>
                        	</group>
                            <group>
                            	<field name="salary_from" required="True"/>
                            <field name="salary_to" required="True"/>
                            </group>	
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                        <notebook>
                            <page string="Logs">
                                <label string="*** Please press F5 to refresh the list of logs !" colspan="4"/>
                                <field name="audit_log_ids" mode="tree"
                                       widget="one2many_list" readonly="1" nolabel="1" colspan="4">
                                    <tree version="7.0">
                                        <field name="timestamp" required="1" readonly="1"/>
                                        <field name="user_id" readonly="1"/>
                                        <field name="method" readonly="1"/>
                                        <field name="field_description"/>
                                        <field name="old_value_text"/>
                                        <field name="new_value_text"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_vhr_salary_level_detail_tree" model="ir.ui.view">
            <field name="name">vhr.salary.level.detail.tree</field>
            <field name="model">vhr.salary.level.detail</field>
            <field name="arch" type="xml">
                <tree string="Salary Level Detail">
                    <field name="salary_level_id" options="{'no_quick_create':True}"/>
                    <field name="salary_from"/>
                    <field name="salary_to"/>
                    <field name="effective_date"/>
                    <field name="description"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="view_vhr_salary_level_detail_search" model="ir.ui.view">
            <field name="name">vhr.salary.level.detail.search</field>
            <field name="model">vhr.salary.level.detail</field>
            <field name="arch" type="xml">
                <search string="Salary Level Detail">
                	<field name="name" string="Salary Level Detail" 
        			 filter_domain="['|',('name','ilike',self),('description','ilike',self)]"/>
                	
                    <field name="salary_level_id"/>
                    <field name="salary_from"/>
                    <field name="salary_to"/>
                    <field name="effective_date"/>
                    <filter string="Active = True" name="active_true" icon="terp-stage"
                            domain="[('active', '=', True)]"/>
                    <filter string="Active = False" name="active_false" icon="STOCK_NEW"
                            domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>


        <record id="action_vhr_salary_level_detail_tree" model="ir.actions.act_window">
            <field name="name">Salary Level Detail</field>
            <field name="res_model">vhr.salary.level.detail</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_salary_level_detail_tree"/>
            <field name="search_view_id" ref="view_vhr_salary_level_detail_search"/>
        </record>

    </data>
</openerp>


