<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_vhr_job_category_form" model="ir.ui.view">
            <field name="name">vhr.job.category.view.form</field>
            <field name="model">vhr.job.category</field>
            <field name="groups_id" eval=""/>
            <field name="arch" type="xml">
                <form string="Job Category" version="7.0">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" class="oe_inline" required="True"/>
                            </h1>
                        </div>
                        <group col="4">
                            <field name="name_en"/>
                            <field name="code" required="1"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                        <notebook>
       						<page string="Logs">
	                        	<label string="*** Please press F5 to refresh the list of logs !" colspan="4"/>
		                        <field name="audit_log_ids" mode="tree"
		                               widget="one2many_list" readonly="1" nolabel="1" colspan="4">
		                            <tree version="7.0">
		                                <field name="timestamp" required="1" readonly="1"/>
		                                <field name="user_id" readonly="1"/>
		                                <field name="method" readonly="1"/>
		                                <field name="field_description"/>
		                                <field name="old_value_text"/>
		                                <field name="new_value_text"/>
		                            </tree>
		                        </field>
	                        </page>
       					</notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_vhr_job_category_tree" model="ir.ui.view">
            <field name="name">vhr.job.category.view.tree</field>
            <field name="model">vhr.job.category</field>
            <field name="groups_id" eval=""/>
            <field name="arch" type="xml">
                <tree string="Job Category" version="7.0">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="name_en"/>
                    <field name="description"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="view_vhr_job_category_search" model="ir.ui.view">
            <field name="name">vhr.job.category.view.search</field>
            <field name="model">vhr.job.category</field>
            <field name="arch" type="xml">
                <search string="Search">
                	<field name="name" string="Job Category" 
        			 filter_domain="['|','|','|',('name','ilike',self),('name_en','ilike',self),('code','ilike',self),('description','ilike',self)]"/>
        			
                    <filter string="Active = True" name="active_true" icon="terp-stage"
                            domain="[('active', '=', True)]"/>
                    <filter string="Active = False" name="active_false" icon="STOCK_NEW"
                            domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_vhr_job_category">
            <field name="name">Job Category</field>
            <field name="res_model">vhr.job.category</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_job_category_tree"/>
            <field name="groups_id" eval=""/>
            <field name="search_view_id" ref="view_vhr_job_category_search"/>
        </record>
    </data>
</openerp>