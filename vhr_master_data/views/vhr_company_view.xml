<?xml version="1.0" ?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_vhr_company_form">
            <field name="name">vhr.company.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="priority">20</field>
            <field name="arch" type="xml">
				<xpath expr="//form[@string='Company']//label[@for='name']" position="replace">
					<label for="name" string="Vietnamese Name" class="oe_edit_only"/>										            	
            	</xpath>
                <xpath expr="//page[@string='General Information']//field[@name='partner_id']" position="replace">
                    <field name="code" required="True"/>
                    <field name="com_group_id" required="True"  options="{'no_quick_create':True, 'no_create':True}"/>                    
                    <field name="authorization_date" required="True"/>
                    <field name="partner_id" domain="[('is_company', '=', True)]" invisible="1" required="False"
                     options="{'no_quick_create':True, 'no_create':True}"/>
                    <field name="sign_emp_id" options="{'no_quick_create':True, 'no_create':True}"/>
                    <field name="job_title_id" options="{'no_quick_create':True, 'no_create':True}"/>
                    <field name="country_signer" options="{'no_quick_create':True, 'no_create':True}"/>
                    <field name="ceo_id" options="{'no_quick_create':True, 'no_create':True}"/>
                </xpath>
                <xpath expr="//page[@string='General Information']//field[@name='phone']" position="before">                
                	<field name="name_en"/>
                </xpath>
                <xpath expr="//page[@string='General Information']//field[@name='zip']" position="replace">
                </xpath>
                <xpath expr="//page[@string='General Information']//field[@name='company_registry']" position="replace">
                    <field name="company_registry" invisible="1"/>
                    <field name="suffix_email"/>
                    <field name="office_id" options="{'no_quick_create':True, 'no_create':True}"/>
                    <field name="active"/>
                    <field name="is_member" on_change="onchange_is_member(is_member)"/>
                    <field name="establish_license"/>
                    <field name="description"/>
                </xpath>
                <xpath expr="//page[@string='General Information']//field[@name='city']" position="replace">
                    <field name="city_id" placeholder="City"  options="{'no_quick_create':True, 'no_create':True}"/>
                    <field name="district_id" placeholder="District" domain="[('city_id', '=', city_id)]"
                     options="{'no_quick_create':True, 'no_create':True}"/>
                </xpath>
                <xpath expr="//page[@string='General Information']//field[@name='state_id']" position="replace"/>
                <xpath expr="//page[@string='General Information']//field[@name='country_id']" position="replace">
                    <field name="country_id" placeholder="Country"  options="{'no_quick_create':True, 'no_create':True}"/>
                </xpath>
                <xpath expr="//page[@string='Configuration']//field[@name='currency_id']" position="replace">
                    <field name="currency_id"  options="{'no_quick_create':True, 'no_create':True}"/>
                </xpath>
                <xpath expr="//page[@string='Configuration']//field[@name='project_time_mode_id']" position="replace">
                    <field name="project_time_mode_id"  options="{'no_quick_create':True, 'no_create':True}"/>
                </xpath>
                <xpath expr="//page[@string='Report Configuration']//field[@name='paperformat_id']" position="replace">
                    <field name="paperformat_id"  options="{'no_quick_create':True, 'no_create':True}"/>
                </xpath>
                <xpath expr="//page[@string='Report Configuration']//field[@name='font']" position="replace">
                    <field name="font"/>
                </xpath>
                <xpath expr="//page[@string='General Information']" position="after">
                    <page string="Logs">
                        <label string="*** Please press F5 to refresh the list of logs !" colspan="4"/>
                        <field name="audit_log_ids" mode="tree"
                               widget="one2many_list" readonly="1" nolabel="1" colspan="4">
                            <tree version="7.0">
                                <field name="timestamp" required="1" readonly="1"/>
                                <field name="user_id" readonly="1"/>
                                <field name="method" readonly="1"/>
                                <field name="field_description"/>
                                <field name="old_value_text"/>
                                <field name="new_value_text"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
                
                <xpath expr="//page[@string='Configuration']" position="attributes">
                	<attribute name="groups">vhr_base.hrs_group_system</attribute>
                </xpath>
                <xpath expr="//page[@string='Report Configuration']" position="attributes">
                	<attribute name="groups">vhr_base.hrs_group_system</attribute>
                </xpath>
                <xpath expr="//field[@name='parent_id']" position="attributes">
                	<attribute name="options">{'no_quick_create': True,'no_open': True}</attribute>
                	<attribute name="groups"></attribute>
                	<attribute name="attrs">{'required': [('is_member','=',True)], 'invisible': [('is_member','=',False)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='phone']" position="attributes">
                	<attribute name="options">{'validate_number': True}</attribute>
                </xpath>
                <xpath expr="//field[@name='fax']" position="attributes">
                	<attribute name="options">{'validate_number': True}</attribute>
                </xpath>
                <xpath expr="//field[@name='email']" position="attributes">
                	<attribute name="options">{'validate_email': True}</attribute>
                </xpath>
                <xpath expr="//field[@name='vat']" position="attributes">
                	<attribute name="options">{'validate_number': True}</attribute>
                </xpath>                
            </field>
        </record>

        <record id="view_vhr_company_tree" model="ir.ui.view">
            <field name="name">vhr.company.tree</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_tree"/>
            <field name="arch" type="xml">
                <tree position="replace">
                	<tree string="Companies">
                		<field name="com_group_id"/>
                		<field name="code"/>
	                    <field name="name" string="Vietnamese Name"/>
	                    <field name="name_en"/>
	                    <field name="office_id"/>
	                    <field name="street" string="Address"/>
	                    <field name="active"/>
	                </tree>
                </tree>
            </field>
        </record>
        <record id="view_vhr_company_search" model="ir.ui.view">
            <field name="name">vhr.company.search</field>
            <field name="model">res.company</field>
            <field name="arch" type="xml">
                <search string="Company">
                	<field name="name" string="Company" 
        			 filter_domain="['|','|','|',('name','ilike',self),('name_en','ilike',self),('code','ilike',self),('description','ilike',self)]"/>
        			
                    <filter string="Active = True" name="active_true" icon="terp-stage"
                            domain="[('active', '=', True)]"/>
                    <filter string="Active = False" name="active_false" icon="STOCK_NEW"
                            domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>


        <record id="action_vhr_company_tree" model="ir.actions.act_window">
            <field name="name">Company</field>
            <field name="res_model">res.company</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_company_tree"/>
            <field name="search_view_id" ref="view_vhr_company_search"/>
        </record>

    </data>
</openerp>


