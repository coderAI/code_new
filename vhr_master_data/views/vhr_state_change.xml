<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data noupdate='0'>
       	<record id="view_vhr_state_change_form" model="ir.ui.view">
            <field name="name">vhr.state.change.form</field>
            <field name="model">vhr.state.change</field>
            <field name="arch" type="xml">
                <form string="State Change" version="7.0">
                    <sheet>
                    	<group col='4'>
							   <field name="create_date"/>
                               <field name="login_create_uid"  options="{'no_quick_create':True, 'no_create':True}"/>
                               <field name="old_state"/>
                               <field name="new_state"/>
                               <field name="comment"/>
                               <field name="create_uid" invisible='1'/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_vhr_state_change_tree" model="ir.ui.view">
            <field name="name">vhr.state.change.tree</field>
            <field name="model">vhr.state.change</field>
            <field name="arch" type="xml">
                <tree string="State change" version="7.0">
                	<field name="create_date"/>
                    <field name="create_uid" invisible='1'/>
                    <field name="login_create_uid"/>
                    <field name="old_state"/>
                    <field name="new_state"/>
                    <field name="comment"/>
                </tree>
            </field>
        </record>
    </data>
</openerp>
