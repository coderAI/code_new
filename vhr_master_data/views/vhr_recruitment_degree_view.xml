<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_vhr_recruitment_degree_form" model="ir.ui.view">
            <field name="name">hr.recruitment.degree.view.form</field>
            <field name="model">hr.recruitment.degree</field>
            <field name="arch" type="xml">
                <form string="Degree/ Certificate" version="7.0">
                    <sheet>
                        <group col="4">
                            <field name="name" required="True"/>
                            <field name="name_en"/>
                            <field name="code" required="True"/>
                            <field name="active"/>
                            <field name="certificate_type" required="True"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                        <notebook>
                            <page string="Logs">
                                <label string="*** Please press F5 to refresh the list of logs !" colspan="4"/>
                                <field name="audit_log_ids" mode="tree"
                                       widget="one2many_list" readonly="1" nolabel="1" colspan="4">
                                    <tree version="7.0">
                                        <field name="timestamp" required="1" readonly="1"/>
                                        <field name="user_id" readonly="1"/>
                                        <field name="method" readonly="1"/>
                                        <field name="field_description"/>
                                        <field name="old_value_text"/>
                                        <field name="new_value_text"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_hr_recruitment_degree_tree" model="ir.ui.view">
            <field name="name">hr.recruitment.degree.view.tree</field>
            <field name="model">hr.recruitment.degree</field>
            <field name="arch" type="xml">
                <tree string="Degree/ Certificate" version="7.0">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="name_en"/>
                    <field name="description"/>
                    <field name="certificate_type"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="view_hr_recruitment_degree_search" model="ir.ui.view">
            <field name="name">hr.recruitment.degree.view.search</field>
            <field name="model">hr.recruitment.degree</field>
            <field name="arch" type="xml">
                <search string="Degree/ Certificate">
                	<field name="name" string="Degree" 
        			 filter_domain="['|','|','|',('name','ilike',self),('name_en','ilike',self),('code','ilike',self),('description','ilike',self)]"/>
        			
                    <filter string="Active = True" name="active_true" icon="terp-stage"
                            domain="[('active', '=', True)]"/>
                    <filter string="Active = False" name="active_false" icon="STOCK_NEW"
                            domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_vhr_recruitment_degree_tree">
            <field name="name">Degree/ Certificate</field>
            <field name="res_model">hr.recruitment.degree</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_hr_recruitment_degree_search"/>
        </record>

        <record id="action_view_tree_type" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_hr_recruitment_degree_tree"/>
            <field name="act_window_id" ref="action_vhr_recruitment_degree_tree"/>
        </record>

        <record id="action_view_form_type" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_vhr_recruitment_degree_form"/>
            <field name="act_window_id" ref="action_vhr_recruitment_degree_tree"/>
        </record>

    </data>
</openerp>