<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	
    	<record id="view_res_partner_bank_form" model="ir.ui.view">
       		<field name="name">res.partner.bank.view.form</field>
       		<field name="model">res.partner.bank</field>
       		<field name="inherit_id" ref="base.view_partner_bank_form"/>
       		<field name="arch" type="xml">
       			<xpath expr="//form[@string='Bank account']" position="replace">
       				 <form string="Bank account">
	                    <group col="4">
	                        <group>
	                        	<field name="acc_number" placeholder="Account Number"/>
                                <field name="is_main" attrs="{'readonly':[('active','=',False)]}"/>
                                <field name="active" on_change="onchange_active(active)"/>
	                        </group>
	                        <group>
	                        	<field name="owner_name" placeholder="Name" required="1"
	                        	 options="{'save_readonly': True}"
	                        	 readonly="context.get('default_owner_name')"/>
	                        	<field name="effect_from" required='1'/>
	                        </group>
	                    </group>
	                    <group>
	                        <group name="owner" string="Bank Account Owner" invisible="1">
	                        	<field name="company_id" groups="base.group_multi_company" on_change="onchange_company_id(company_id)"
	                             options="{'no_quick_create':True, 'no_create':True}"
	                        	invisible="1" widget="selection"/>
	                            <field name="footer" invisible="1"/>
	                            <field name="state" invisible="1" required='0'/>
	                            <field name="partner_id" on_change="onchange_partner_id(partner_id)" options="{'no_quick_create':True, 'no_create':True}"/>
	                            <field name="employee_id" on_change="onchange_employee(employee_id)" options="{'no_quick_create':True, 'no_create':True}"/>
	                            <label for="street" string="Address"/>
	                            <div>
	                                <field name="street" placeholder="Street"/>
	                                <div>
	                                    <field name="zip" class="oe_inline" placeholder="ZIP"/>
	                                    <field name="city" class="oe_inline" placeholder="City"/>
	                                </div>
	                                <field name="state_id" placeholder="State" options="{'no_open':True, 'no_quick_create':True, 'no_create':True}"/>
	                                <field name="country_id" placeholder="Country" options="{'no_open':True, 'no_quick_create':True, 'no_create':True}"/>
	                            </div>
	                        </group>
	                        <group name="bank" string="Information About the Bank">
	                            <field name="bank" on_change="onchange_bank_id(bank)" required="1" options="{'no_quick_create':True, 'no_create':True, 'no_open':True}"/>
	                            <field name="bank_branch" options="{'no_quick_create':True, 'no_create':True}"/>
	                            <field name="bank_name" invisible="1" />
	                            <field name="bank_bic" placeholder="e.g. GEBABEBB" invisible="1"/>
	                        </group>
	                    </group>
	                    <notebook>
   							<page string="Logs">
                        		<label string="*** Please press F5 to refresh the list of logs !" colspan="4"/>
		                        <field name="audit_log_ids" mode="tree"
		                               widget="one2many_list" readonly="1" nolabel="1" colspan="4">
		                            <tree version="7.0">
		                                <field name="timestamp" required="1" readonly="1"/>
		                                <field name="user_id" readonly="1"/>
		                                <field name="method" readonly="1"/>
		                                <field name="field_description"/>
		                                <field name="old_value_text"/>
		                                <field name="new_value_text"/>
	                            	</tree>
	                        	</field>
                        	</page>
   						</notebook>
	                </form>
				</xpath>                
       		</field>
       	</record>
       	
       	<record id="view_res_partner_bank_tree" model="ir.ui.view">
       		<field name="name">res.partner.bank.view.tree</field>
       		<field name="model">res.partner.bank</field>
       		<field name="inherit_id" ref="base.view_partner_bank_tree"/>
       		<field name="arch" type="xml">
       			<xpath expr="//tree" position="replace">
       				<tree string="Bank Accounts">
			            <field name="acc_number"/>
			            <field name="employee_code"/>
			            <field name="owner_name"/>
			            <field name="bank"/>
			            <field name="bank_branch"/>
			            <field name="is_main"/>
			            <field name="effect_from"/>
			            <field name="active"/>
			        </tree>
       			</xpath>
       		</field>
       	</record>
       	
       	<record id="view_res_partner_bank_search" model="ir.ui.view">
            <field name="name">res.partner.bank.view.search</field>
            <field name="model">res.partner.bank</field>
            <field name="arch" type="xml">
                <search string="Bank Accounts">
                	<group expand="0" string="Group By">
                    	<filter string="Bank" icon="terp-go-home" domain="[]"
                                context="{'group_by':'bank'}"/>
                    </group>
                    
                    <group expand="0" string="Filter"> 
	                    <filter string="Is Main" name="is_main" icon="terp-stage"
	                            domain="[('is_main', '=', True)]"/>
	                    <filter string="Active" name="is_active" icon="STOCK_NEW"
	                            domain="[('active', '=', True)]"/>
	                    <filter string="Employee Is Not Null" name="employee_is_not_null" icon="STOCK_NEW"
	                            domain="[('employee_id', '!=', False)]"/>
	                </group>
	                <field name="name" string="Bank Accounts"
                           filter_domain="['|','|','|','|','|',('name','ilike',self),('acc_number','ilike',self),('owner_name','ilike',self),('employee_id.name','ilike',self),('employee_id.login','ilike',self),('employee_id.code','ilike',self)]"/>
					
                    <field name="bank"/>
                </search>
            </field>
        </record>
        
       	<record model="ir.actions.act_window" id="act_res_partner_bank">
            <field name="name">Bank Accounts</field>
            <field name="res_model">res.partner.bank</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_res_partner_bank_tree"/>
            <field name="search_view_id" ref="view_res_partner_bank_search"/>
        </record>
        
    </data>
</openerp>