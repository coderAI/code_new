<?xml version="1.0" ?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_vhr_delegate_detail_view_form">
            <field name="name">vhr.delegate.detail.form</field>
            <field name="model">vhr.delegate.detail</field>
            <field name="arch" type="xml">
                <form string="Delegate Detail" version="7.0">
                    <sheet>
                        <group col="4">
                        	<field name="employee_id" readonly='1' options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"   />
                            <field name="delegate_id" required="True" 
							on_change="onchange_delegate_id(delegate_id)"                            
                            options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"   />
                            <field name="employee_code" readonly='1'/>
                            <field name="delegate_code" readonly='1'/>
                            <field name="module_id" 
                            options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}" readonly='1'/>
                            <field name="active"/>
                        </group>
                        <group col='4' string="Department">
                        	<field name="department_ids" nolabel='1'
                        	 options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
                            
                        </group>
                        <group col='4' string="Model">
                        	<field name="model_ids" nolabel='1'  context="{'module_id':module_id}" 
                        	 options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_vhr_delegate_detail_view_tree" model="ir.ui.view">
            <field name="name">vhr.delegate.detail.tree</field>
            <field name="model">vhr.delegate.detail</field>
            <field name="arch" type="xml">
                <tree string="Delegate Detail">
                    <field name="delegate_master_id" invisible='1'/>
                    <field name="employee_code"/>
                    <field name="employee_id"/>
                    <field name="delegate_code"/>
                    <field name="delegate_id" required='1'/>
                    <field name="department_ids"/>
                    <field name="module_id"/>
                    <field name="model_ids"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="view_vhr_delegate_detail_view_search" model="ir.ui.view">
            <field name="name">vhr.delegate.detail.search</field>
            <field name="model">vhr.delegate.detail</field>
            <field name="arch" type="xml">
                <search string="Delegate Detail">
                	<group expand="0" string="Group by...">
        				<filter string="Module" name="module" context="{'group_by':'module_id'}"/>
        			</group>  
        			
                	<field name="name" string="Delegate For" 
	                  		filter_domain="['|','|',('delegate_id.name','ilike',self),('delegate_id.login','ilike',self),('delegate_id.code','ilike',self)]"/>
					
	                <field name="employee_id" string="Employee" 
	                  		filter_domain="['|','|',('employee_id.name','ilike',self),('employee_id.login','ilike',self),('employee_id.code','ilike',self)]"/>
	                  			
        			
                    <field name="module_id"/>
                    <group expand="0" string="Filter">
        				<filter string="Active = True" name="active_true" icon="terp-stage"
                            domain="[('active', '=', True)]"/>
                    	<filter string="Active = False" name="active_false" icon="STOCK_NEW"
                            domain="[('active', '=', False)]"/>
                    </group>
                </search>
            </field>
        </record>


        <record id="action_vhr_delegate_detail_view_tree" model="ir.actions.act_window">
            <field name="name">Delegate Detail</field>
            <field name="res_model">vhr.delegate.detail</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_delegate_detail_view_tree"/>
            <field name="search_view_id" ref="view_vhr_delegate_detail_view_search"/>
        </record>

    </data>
</openerp>


