<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_vhr_employee_assessment_result_form" model="ir.ui.view">
            <field name="name">vhr.employee.assessment.result.view.form</field>
            <field name="model">vhr.employee.assessment.result</field>
            <field name="groups_id" eval=""/>
            <field name="arch" type="xml">
                <form string="Assessment Result" version="7.0" duplicate='false'>
       				<sheet>
       					<group>
       						<group>
       							<field name="employee_id" required='1'
	       						on_change="onchange_employee_id(employee_id)"
	       						options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>	
       							<field name="period_id" required='1'
       							on_change="onchange_period_id(period_id)"
       							options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>	
       							<field name="calibration_id" required='1'
       							options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>		
       							<field name="kpi_score"/>		
       						</group>	
       						<group>
       							<field name="employee_code" readonly='1'/>	
                            	<field name="from_date" readonly="1"/>
       							<field name="to_date" readonly="1"/>
       						</group>
       						
       						
       					</group>
       					<notebook>
       						<page string="History">
	                        	<label string="*** Please press F5 to refresh the list of logs !" colspan="4"/>
		                        <field name="audit_log_ids" mode="tree"
		                               widget="one2many_list" readonly="1" nolabel="1" colspan="4">
		                            <tree version="7.0">
		                                <field name="timestamp" required="1" readonly="1"/>
		                                <field name="user_id" readonly="1"/>
		                                <field name="method" readonly="1"/>
		                                <field name="field_description"/>
		                                <field name="old_value_text"/>
		                                <field name="new_value_text"/>
		                            </tree>
		                        </field>
	                        </page>
       					</notebook>	
       				</sheet>
       			</form>
            </field>
        </record>

        <record id="view_vhr_employee_assessment_result_tree" model="ir.ui.view">
            <field name="name">vhr.employee.assessment.result.view.tree</field>
            <field name="model">vhr.employee.assessment.result</field>
            <field name="groups_id" eval=""/>
            <field name="arch" type="xml">
                <tree string="Assessment Result" version="7.0">
                    <field name="employee_code"/>
                    <field name="employee_id"/>
                    <field name="from_date"/>
                    <field name="to_date"/>
                    <field name="calibration_id"/> 
                    <field name="kpi_score"/>	
                </tree>
            </field>
        </record>

        <record id="view_vhr_employee_assessment_result_search" model="ir.ui.view">
            <field name="name">vhr.employee.assessment.result.view.search</field>
            <field name="model">vhr.employee.assessment.result</field>
            <field name="arch" type="xml">
                <search string="Search">
                	<group expand="0" string="Group by">	                    
	                    <filter string="Period" icon="terp-go-home" domain="[]"
                                context="{'group_by':'period_id'}"/>
	                    <filter string="Calibration" icon="terp-go-home" domain="[]"
                                context="{'group_by':'calibration_id'}"/>
	                    <filter string="Employee" icon="terp-go-home" domain="[]"
                                context="{'group_by':'employee_id'}"/>
                    </group>	
                	<field name="period_id"/> 
                	<field name="calibration_id"/> 		
               		<field name="name" string="Assessment Result"
                           filter_domain="['|','|','|',('name','ilike',self),('employee_id.name','ilike',self),('employee_id.login','ilike',self),('employee_id.code','ilike',self)]"/>

                </search>
            </field>
        </record>
       
       <act_window name="Duplicate" res_model="vhr.employee.assessment.result"
            src_model="vhr.employee.assessment.result" view_mode="form"
            view_id="view_vhr_employee_assessment_result_form"
            key2="client_action_multi" context="{'duplicate_active_id': active_id}"
            id="action_duplicate_vhr_employee_assessment_result" />
         

        <record model="ir.actions.act_window" id="act_vhr_employee_assessment_result">
            <field name="name">Assessment Result</field>
            <field name="res_model">vhr.employee.assessment.result</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_employee_assessment_result_tree"/>
            <field name="groups_id" eval=""/>
            <field name="search_view_id" ref="view_vhr_employee_assessment_result_search"/>
        </record>
    </data>
</openerp>