<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	<record id="view_vhr_exit_form" model="ir.ui.view">
       		<field name="name">vhr.exit.view.form</field>
       		<field name="model">vhr.exit</field>
       		<field name="arch" type="xml">
       			<form string="Exit" version="7.0">
       				<sheet>
       					<group col="4">
       						<group>
       							<field name="name" required='1'/>
       							<field name="exit_type_id" required='1' options="{'no_quick_create':True, 'no_create':True}"/>
       							<field name="active"/>
       						</group>
       						<group>
       							<field name="name_en"/>
       							<field name="code" required='1'/>	
       						</group>       						
       					</group>
       					<group>
       						<field name="description"/>
       					</group>
       					<notebook>
       						<page string="Logs">
	                        	<label string="*** Please press F5 to refresh the list of logs !" colspan="4"/>
		                        <field name="audit_log_ids" mode="tree"
		                               widget="one2many_list" readonly="1" nolabel="1" colspan="4">
		                            <tree version="7.0">
		                                <field name="timestamp" required="1" readonly="1"/>
		                                <field name="user_id" readonly="1"/>
		                                <field name="method" readonly="1"/>
		                                <field name="field_description"/>
		                                <field name="old_value_text"/>
		                                <field name="new_value_text"/>
		                            </tree>
		                        </field>
	                        </page>
       					</notebook>
       				</sheet>
       			</form>
       		</field>
       	</record>
       	
       	<record id="view_vhr_exit_tree" model="ir.ui.view">
       		<field name="name">vhr.exit.view.tree</field>
       		<field name="model">vhr.exit</field>
       		<field name="arch" type="xml">
      			<tree string="Exit" version="7.0">
      				<field name="code"/>
      				<field name="name"/>
					<field name="name_en"/>
					<field name="exit_type_id"/>
					<field name="active"/>
<!--					<field name="description"/-->
      			</tree>
     		</field>
       	</record>
       	
       	<record id="view_vhr_exit_search" model="ir.ui.view">
        	<field name="name">vhr.exit.view.search</field>
        	<field name="model">vhr.exit</field>
        	<field name="arch" type="xml">
        		<search string="Exit">
        			<group expand="0" string="Group by...">
        				<filter string="Exit Type" name="Exit Type" context="{'group_by':'exit_type_id'}"/>
        			</group>
        			<group expand="0" string="Filter">
        				<field name="exit_type_id"/>
						<filter string="Active = True" name="active_true" icon="terp-stage"
	                            domain="[('active', '=', True)]"/>
	                    <filter string="Active = False" name="active_false" icon="STOCK_NEW"
	                            domain="[('active', '=', False)]"/>
        			</group>
    				<field name="name" string="Exit" 
        			 filter_domain="['|','|','|',('name','ilike',self),('name_en','ilike',self),('code','ilike',self),('description','ilike',self)]"/>
        		</search>
        	</field>
        </record>
        
        <record model="ir.actions.act_window" id="act_vhr_exit">
       		<field name="name">Exit</field> 
            <field name="res_model">vhr.exit</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_exit_tree"/>
            <field name="search_view_id" ref="view_vhr_exit_search"/>
       	</record>
       	
       	
    </data>
</openerp>