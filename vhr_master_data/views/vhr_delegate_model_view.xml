<?xml version="1.0" ?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_vhr_delegate_model_view_form">
            <field name="name">vhr.delegate.model.form</field>
            <field name="model">vhr.delegate.model</field>
            <field name="arch" type="xml">
                <form string="Delegate Model" version="7.0">
                    <sheet>
                        <group col="4">
                        	<field name="model_id" required='1'
                            options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
                            <field name="module_id" required='1' readonly="context.get('default_module')"
                            options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
                            
                            <field name="name" required='1'/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_vhr_delegate_model_view_tree" model="ir.ui.view">
            <field name="name">vhr.delegate.model.tree</field>
            <field name="model">vhr.delegate.model</field>
            <field name="arch" type="xml">
                <tree string="Delegate Model">
                    <field name="name"/>
                    <field name="model_id"/>
                    <field name="module_id"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="view_vhr_delegate_model_view_search" model="ir.ui.view">
            <field name="name">vhr.delegate.model.search</field>
            <field name="model">vhr.delegate.model</field>
            <field name="arch" type="xml">
                <search string="Delegate Model">
                	<group expand="0" string="Group by...">
        				<filter string="Module" name="module" context="{'group_by':'module_id'}"/>
        			</group>  
        			
                	<field name="name" string="Model" 
        			 filter_domain="['|',('name','ilike',self),('model_id.name','ilike',self)]"/>
        			
                    <field name="module_id"/>
                    <group expand="0" string="Filter">
        				<filter string="Active = True" name="active_true" icon="terp-stage"
                            domain="[('active', '=', True)]"/>
                    	<filter string="Active = False" name="active_false" icon="STOCK_NEW"
                            domain="[('active', '=', False)]"/>
                    </group>
                </search>
            </field>
        </record>


        <record id="action_vhr_delegate_model_view_tree" model="ir.actions.act_window">
            <field name="name">Delegate Model</field>
            <field name="res_model">vhr.delegate.model</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_delegate_model_view_tree"/>
            <field name="search_view_id" ref="view_vhr_delegate_model_view_search"/>
        </record>

    </data>
</openerp>


