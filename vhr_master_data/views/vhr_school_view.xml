<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_vhr_school_form" model="ir.ui.view">
            <field name="name">vhr.school.view.form</field>
            <field name="model">vhr.school</field>
            <field name="groups_id" eval=""/>
            <field name="arch" type="xml">
                <form string="School" version="7.0">
                    <sheet>
                        <div class="oe_right" name="buttons"/>
                        <group col="4">
                            <field name="name" class="oe_inline" required="1"/>
                            <field name="name_en"/>
                            <field name="code" required="1"/>
                            <field name="is_university"/>
                            <field name="website_published"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                        <notebook>
                            <page string="Logs">
                                <label string="*** Please press F5 to refresh the list of logs !" colspan="4"/>
                                <field name="audit_log_ids" mode="tree"
                                       widget="one2many_list" readonly="1" nolabel="1" colspan="4">
                                    <tree version="7.0">
                                        <field name="timestamp" required="1" readonly="1"/>
                                        <field name="user_id" readonly="1"/>
                                        <field name="method" readonly="1"/>
                                        <field name="field_description"/>
                                        <field name="old_value_text"/>
                                        <field name="new_value_text"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_vhr_school_tree" model="ir.ui.view">
            <field name="name">vhr.school.view.tree</field>
            <field name="model">vhr.school</field>
            <field name="groups_id" eval=""/>
            <field name="arch" type="xml">
                <tree string="School" version="7.0" editable="top">
                    <field name="code" required="1"/>
                    <field name="name" required="1"/>
                    <field name="name_en"/>
                    <field name="description"/>
                    <field name="is_university"/>
                    <field name="website_published"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="view_vhr_school_search" model="ir.ui.view">
            <field name="name">vhr.school.view.search</field>
            <field name="model">vhr.school</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="name" string="School"
                           filter_domain="['|','|','|',('name','ilike',self),('name_en','ilike',self),('code','ilike',self),('description','ilike',self)]"/>
                    <filter string="Website Published" name="website_published" icon="gtk-apply"
                            domain="[('website_published', '=', True)]"/>
                    <filter string="Active = True" name="active_true" icon="terp-stage"
                            domain="[('active', '=', True)]"/>
                    <filter string="Active = False" name="active_false" icon="STOCK_NEW"
                            domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_vhr_school">
            <field name="name">School</field>
            <field name="res_model">vhr.school</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_school_tree"/>
            <field name="groups_id" eval=""/>
            <field name="search_view_id" ref="view_vhr_school_search"/>
        </record>
    </data>
</openerp>