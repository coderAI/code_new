<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_vhr_property_management_form" model="ir.ui.view">
            <field name="name">vhr.property.management.view.form</field>
            <field name="model">vhr.property.management</field>
            <field name="groups_id" eval=""/>
            <field name="arch" type="xml">
                <form string="Asset Management" version="7.0">
       				<sheet>
       					<group col="4">
       						<group>
       							<field name="employee_id" required="1" options="{'no_quick_create':True, 'no_create':True}"
       						    	on_change="onchange_employee_id(employee_id)"/>
       							<field name="property_type_id" readonly='1'
       							     options="{'no_quick_create':True, 'no_create':True,'save_readonly': True, 'no_open':True,}"/>
       							<field name="property_id" options="{'no_quick_create':True, 'no_create':True, 'no_open':True,}" required="1"
       								context="{'property_type_id':property_type_id}"/>
       							<field name="property_code" required="1"/>
       														
       						</group>	
                            <group>
                            	<field name="department_id" readonly="1"  options="{'no_quick_create':True, 'no_create':True}"/>                            	
	       						<field name="issue_date" required="1"/>   
       							<field name="recovery_date"/>    					
	       						<field name="active"/>
                            </group>                            
       					</group>
                        <group>
       						<field name="description"/>
       					</group>
                        <separator colspan="4" string="Other Information"/>
       					<group col="4">
							<field name="depreciation_expiry_date"/>
                            <newline/>
                            <label for="depreciation_time"/>
                            <div colspan="3" class="oe_inline">
                                <field name="depreciation_time" class="oe_inline"/>
                                <field name="time_type" class="oe_inline"/>
                            </div>
                            <newline/>
                            <field name="company_allowance"/>
						</group>

                        <notebook>
                            <page string="Logs">
                                <label string="*** Please press F5 to refresh the list of logs !" colspan="4"/>
                                <field name="audit_log_ids" mode="tree"
                                       widget="one2many_list" readonly="1" nolabel="1" colspan="4">
                                    <tree version="7.0">
                                        <field name="timestamp" required="1" readonly="1"/>
                                        <field name="user_id" readonly="1"/>
                                        <field name="method" readonly="1"/>
                                        <field name="field_description"/>
                                        <field name="old_value_text"/>
                                        <field name="new_value_text"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
       				</sheet>
       			</form>
            </field>
        </record>

        <record id="view_vhr_property_management_tree" model="ir.ui.view">
            <field name="name">vhr.property.management.view.tree</field>
            <field name="model">vhr.property.management</field>
            <field name="groups_id" eval=""/>
            <field name="arch" type="xml">
                <tree string="Asset Management" version="7.0">
					<field name="employee_id"/>
					<field name="department_id"/>
                    <field name="property_id"/>
                    <field name="property_code"/>
                    <field name="issue_date"/>
       				<field name="recovery_date"/>
                    <field name="description"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="view_vhr_property_management_search" model="ir.ui.view">
            <field name="name">vhr.property.management.view.search</field>
            <field name="model">vhr.property.management</field>
            <field name="arch" type="xml">
                <search string="Search">
                	<group expand="0" string="Group by...">
                        <filter string='Asset Type' domain="[]" name="group_by_property_type" icon="terp-stock_symbol-selection"
                            context="{'group_by': 'property_type_id'}"/>
                    </group>	
                   <group expand="0" string="Filter By Employee">
                        <filter string="Active Employee" name="active_employee" icon="terp-stage"
                                domain="[('employee_id.active', '=', True)]"/>
                        <filter string="Inactive Employee" name="inactive_employee" icon="terp-stage"
                                domain="[('employee_id.active', '=', False)]"/>
                    </group> 
                   <group expand="0" string="Filter">
	                   	<filter string="Active = True" name="active_true" icon="terp-stage"
	                            domain="[('active', '=', True)]"/>
	                    <filter string="Active = False" name="active_false" icon="STOCK_NEW"
	                            domain="[('active', '=', False)]"/>
                   </group> 
                    <field name="name" string="Asset Management" 
	                  		filter_domain="['|','|','|',('name','ilike',self),('employee_id.name','ilike',self),('employee_id.login','ilike',self),('employee_id.code','ilike',self)]"/>

                    <field name="department_id"/>
                    <field name="property_id"/>
                    <field name="property_code"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_vhr_property_management_it">
            <field name="name">Asset Management</field>
            <field name="res_model">vhr.property.management</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_property_management_tree"/>
            <field name="groups_id" eval=""/>
            <field name="context">{'search_default_active_employee':1, 'property_type':'IT'}</field>
            <field name="search_view_id" ref="view_vhr_property_management_search"/>
        </record>
       
       <record model="ir.actions.act_window" id="act_vhr_property_management_af">
            <field name="name">Asset Management</field>
            <field name="res_model">vhr.property.management</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_property_management_tree"/>
            <field name="groups_id" eval=""/>
            <field name="context">{'search_default_active_employee':1, 'property_type':'AF'}</field>
            <field name="search_view_id" ref="view_vhr_property_management_search"/>
        </record>
       
       <record model="ir.actions.act_window" id="act_vhr_property_management_hr">
            <field name="name">Asset Management</field>
            <field name="res_model">vhr.property.management</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_property_management_tree"/>
            <field name="groups_id" eval=""/>
            <field name="context">{'search_default_active_employee':1, 'property_type':'HR'}</field>
            <field name="search_view_id" ref="view_vhr_property_management_search"/>
        </record>    
    </data>
</openerp>