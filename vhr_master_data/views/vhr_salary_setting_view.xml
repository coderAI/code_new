<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_vhr_salary_setting_form" model="ir.ui.view">
            <field name="name">vhr.salary.setting.view.form</field>
            <field name="model">vhr.salary.setting</field>
            <field name="groups_id" eval=""/>
            <field name="arch" type="xml">
                <form string="Type Of Salary" version="7.0">
       				<sheet>
       					<group col="4">
       						<field name="name" required="1"/>
       						<field name="code" required="1"/>
       						<field name="salary_type_id" required="1" context="{'dimension_type': 'SALARY_TYPE'}"
       						 options="{'no_quick_create':True, 'no_create':True}"/>
                            <field name="is_meal"/>
       						<field name="active"/>
       					</group>
       					<group>
       						<field name="note"/>
       					</group>
       					<notebook>
                            <page string="Logs">
                                <label string="*** Please press F5 to refresh the list of logs !" colspan="4"/>
                                <field name="audit_log_ids" mode="tree"
                                       widget="one2many_list" readonly="1" nolabel="1" colspan="4">
                                    <tree version="7.0">
                                        <field name="timestamp" required="1" readonly="1"/>
                                        <field name="user_id" readonly="1"/>
                                        <field name="method" readonly="1"/>
                                        <field name="field_description"/>
                                        <field name="old_value_text"/>
                                        <field name="new_value_text"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
       				</sheet>
       			</form>
            </field>
        </record>

        <record id="view_vhr_salary_setting_tree" model="ir.ui.view">
            <field name="name">vhr.salary.setting.view.tree</field>
            <field name="model">vhr.salary.setting</field>
            <field name="groups_id" eval=""/>
            <field name="arch" type="xml">
                <tree string="Type Of Salary" version="7.0">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="salary_type_id"/>
                    <field name="is_meal"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="view_vhr_salary_setting_search" model="ir.ui.view">
            <field name="name">vhr.salary.setting.view.search</field>
            <field name="model">vhr.salary.setting</field>
            <field name="arch" type="xml">
                <search string="Search">
                	<field name="name" string="Type Of Salary" 
        			 filter_domain="['|',('name','ilike',self),('code','ilike',self)]"/>
        			
                    <filter string="Active = True" name="active_true" icon="terp-stage"
                            domain="[('active', '=', True)]"/>
                    <filter string="Active = False" name="active_false" icon="STOCK_NEW"
                            domain="[('active', '=', False)]"/>
                    <filter string="Is Meal = True" name="is_meal_true" icon="terp-stage"
                            domain="[('is_meal', '=', True)]"/>
                    <filter string="Is Meal = False" name="is_meal_false" icon="STOCK_NEW"
                            domain="[('is_meal', '=', False)]"/>
                    	
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_vhr_salary_setting">
            <field name="name">Type Of Salary</field>
            <field name="res_model">vhr.salary.setting</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_salary_setting_tree"/>
            <field name="groups_id" eval=""/>
            <field name="search_view_id" ref="view_vhr_salary_setting_search"/>
        </record>
    </data>
</openerp>