<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	<record id="view_vhr_task_type_form" model="ir.ui.view">
       		<field name="name">vhr.task.type.view.form</field>
       		<field name="model">vhr.task.type</field>
       		<field name="arch" type="xml">
       			<form string="Task Type" version="7.0">
       				<sheet>
       					<group col="4">
       						<field name="name" required='1'/>
       						<field name="name_en"/>
       						<field name="code" required='1'/>
       						<field name="interview_round_id"
                                   context="{'dimension_type': 'INTERVIEW_ROUND'}"
                                   required='1' options="{'no_quick_create':True, 'no_create':True}"/>
       					</group>
       					<group col="4">
       						<field name="is_last_task"/>
       						<field name="active"/>
       					</group>
       					<group>
       						<field name="description"/>
       					</group>
       					<notebook>
       						<page string="Logs">
	                        	<label string="*** Please press F5 to refresh the list of logs !" colspan="4"/>
		                        <field name="audit_log_ids" mode="tree"
		                               widget="one2many_list" readonly="1" nolabel="1" colspan="4">
		                            <tree version="7.0">
		                                <field name="timestamp" required="1" readonly="1"/>
		                                <field name="user_id" readonly="1"/>
		                                <field name="method" readonly="1"/>
		                                <field name="field_description"/>
		                                <field name="old_value_text"/>
		                                <field name="new_value_text"/>
		                            </tree>
		                        </field>
	                        </page>
       					</notebook>
       				</sheet>
       			</form>
       		</field>
       	</record>
       	
       	<record id="view_vhr_task_type_tree" model="ir.ui.view">
       		<field name="name">vhr.task.type.view.tree</field>
       		<field name="model">vhr.task.type</field>
       		<field name="arch" type="xml">
      			<tree string="Task Type" version="7.0">
      				<field name="code"/>
      				<field name="name"/>
					<field name="name_en"/>
					<field name="interview_round_id"/>
					<field name="active"/>
      			</tree>
     		</field>
       	</record>
       	
       	<record id="view_vhr_task_type_search" model="ir.ui.view">
        	<field name="name">vhr.task.type.view.search</field>
        	<field name="model">vhr.task.type</field>
        	<field name="arch" type="xml">
        		<search string="Task Type">
        			<field name="name" string="Task Type" 
        			 filter_domain="['|','|',('name','ilike',self),('name_en','ilike',self),('code','ilike',self)]"/>
        			
					<field name="interview_round_id"/>
					<filter string="Active = True" name="active_true" icon="terp-stage"
                            domain="[('active', '=', True)]"/>
                    <filter string="Active = False" name="active_false" icon="STOCK_NEW"
                            domain="[('active', '=', False)]"/>
                    <filter string="Is Last Task = True" name="active_true" icon="terp-stage"
                            domain="[('is_last_task', '=', True)]"/>
                    <filter string="Is Last Task = False" name="active_false" icon="STOCK_NEW"
                            domain="[('is_last_task', '=', False)]"/>
        		</search>
        	</field>
        </record>
        
        <record model="ir.actions.act_window" id="act_vhr_task_type">
       		<field name="name">Task Type</field> 
            <field name="res_model">vhr.task.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_task_type_tree"/>
            <field name="search_view_id" ref="view_vhr_task_type_search"/>
       	</record>
       	
       	
    </data>
</openerp>