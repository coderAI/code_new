<?xml version="1.0" ?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_vhr_bank_form">
            <field name="name">vhr.bank.form</field>
            <field name="model">res.bank</field>
            <field name="inherit_id" ref="base.view_res_bank_form"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="code" required="True"/>
                	<field name="name_en"/>                    
                    <field name="description"/>
                </field>
                <xpath expr="//group[2]" position="after">
                    <notebook>
                        <page string="Logs">
                            <label string="*** Please press F5 to refresh the list of logs !" colspan="4"/>
                            <field name="audit_log_ids" mode="tree"
                                   widget="one2many_list" readonly="1" nolabel="1" colspan="4">
                                <tree version="7.0">
                                    <field name="timestamp" required="1" readonly="1"/>
                                    <field name="user_id" readonly="1"/>
                                    <field name="method" readonly="1"/>
                                    <field name="field_description"/>
                                    <field name="old_value_text"/>
                                    <field name="new_value_text"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </xpath>
                <xpath expr="//field[@name='phone']" position="attributes">
                	<attribute name="options">{'validate_number': True}</attribute>
                </xpath>
                 <xpath expr="//field[@name='fax']" position="attributes">
                	<attribute name="options">{'validate_number': True}</attribute>
                </xpath>
                <xpath expr="//field[@name='email']" position="attributes">
                	<attribute name="options">{'validate_email': True}</attribute>
                </xpath>
                <xpath expr="//field[@name='state']" position="attributes">
                	<attribute name="options">{'no_quick_create':True, 'no_create':True}</attribute>
                </xpath>
                <xpath expr="//field[@name='country']" position="attributes">
                	<attribute name="options">{'no_quick_create':True, 'no_create':True}</attribute>
                </xpath>
            </field>

        </record>

        <record id="view_vhr_bank_tree" model="ir.ui.view">
            <field name="name">vhr.bank.tree</field>
            <field name="model">res.bank</field>
            <field name="inherit_id" ref="base.view_res_bank_tree"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="name_en"/>
                    <field name="code"/>
                    <field name="active"/>
                    <field name="description"/>
                </field>
            </field>
        </record>

        <record id="view_vhr_bank_search" model="ir.ui.view">
            <field name="name">vhr.bank.search</field>
            <field name="model">res.bank</field>
            <field name="arch" type="xml">
                <search string="Bank">
                	<field name="name" string="Bank" 
        			 filter_domain="['|','|','|',('name','ilike',self),('name_en','ilike',self),('code','ilike',self),('description','ilike',self)]"/>
        			

                    <filter string="Active = True" name="active_true" icon="terp-stage"
                            domain="[('active', '=', True)]"/>
                    <filter string="Active = False" name="active_false" icon="STOCK_NEW"
                            domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>


        <record id="action_vhr_bank_tree" model="ir.actions.act_window">
            <field name="name">Bank</field>
            <field name="res_model">res.bank</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_bank_tree"/>
            <field name="search_view_id" ref="view_vhr_bank_search"/>
        </record>

    </data>
</openerp>


