<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	<record id="view_vhr_job_level_form" model="ir.ui.view">
       		<field name="name">vhr.job.level.view.form</field>
       		<field name="model">vhr.job.level</field>
       		<field name="arch" type="xml">
       			<form string="Job Level" version="7.0">
       				<sheet>
       					<group col="4">
       						<group>
       							<field name="name" required="1"/>
       							<field name="job_level_type_id" required="1" options="{'no_quick_create':True, 'no_create':True}"/>
       							<field name="staff_classification_id" options="{'no_quick_create':True, 'no_create':True}"/>
       							<field name="level"/>
       							<field name="is_manager"/>
       							<field name="active"/>
       						</group>
       						<group>
       							<field name="name_en"  required="1"/>
       							<field name="code" required="1"/>
       							<field name="effect_date" />
       							<field name="check_ot"/>
       						</group>
       					</group>
       					<group>
       						<field name="description" colspan="4" nolabel="1" placeholder="Description ...."/>
       					</group>
       					<notebook>
		       				<!--<page string="Job Titles">
		                        <field name="job_title_ids"/>
		                    </page>-->
		   					<page string="Logs">
		                        <label string="*** Please press F5 to refresh the list of logs !" colspan="4"/>
		                        <field name="audit_log_ids" mode="tree"
		                               widget="one2many_list" readonly="1" nolabel="1" colspan="4">
		                            <tree version="7.0">
		                                <field name="timestamp" required="1" readonly="1"/>
		                                <field name="user_id" readonly="1"/>
		                                <field name="method" readonly="1"/>
		                                <field name="field_description"/>
		                                <field name="old_value_text"/>
		                                <field name="new_value_text"/>
		                            </tree>
		                        </field>
		                    </page>
						</notebook>
       				</sheet>
       			</form>
       		</field>
       	</record>
       	
       	<record id="view_vhr_job_level_tree" model="ir.ui.view">
       		<field name="name">vhr.job.level.view.tree</field>
       		<field name="model">vhr.job.level</field>
       		<field name="arch" type="xml">
      			<tree string="Job Level" version="7.0">
      				<field name="code"/>
      				<field name="name"/>
      				<field name="name_en" />
      				<field name="job_level_type_id"/>
      				<field name="level"/>
					<field name="is_manager"/>
       				<field name="check_ot"/>
					<field name="active"/>
      			</tree>
     		</field>
       	</record>
       	
       	<record id="view_vhr_job_level_search" model="ir.ui.view">
        	<field name="name">vhr.job.level.view.search</field>
        	<field name="model">vhr.job.level</field>
        	<field name="arch" type="xml">
        		<search string="Job Level">
        			<group expand="0" string="Group by...">
                        <filter string='Job Level Type' domain="[]" name="group_by_job_level_type" icon="terp-stock_symbol-selection"
                            context="{'group_by': 'job_level_type_id'}"/>
                    </group>
                    <group expand="0" string="Filter">
	                   	<filter string="Active = True" name="active_true" icon="terp-stage"
	                            domain="[('active', '=', True)]"/>
	                    <filter string="Active = False" name="active_false" icon="STOCK_NEW"
	                            domain="[('active', '=', False)]"/>
                   </group> 
                   <field name="name" string="Job Level" 
        			 filter_domain="['|','|',('name','ilike',self),('name_en','ilike',self),('code','ilike',self)]"/>
                   
					<field name="job_level_type_id"/>
					<field name="is_manager"/>
       				<field name="check_ot"/>
                    <field name="level"/>
        		</search>
        	</field>
        </record>
        
        <record model="ir.actions.act_window" id="act_vhr_job_level">
       		<field name="name">Job Level</field> 
            <field name="res_model">vhr.job.level</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_job_level_tree"/>
            <field name="search_view_id" ref="view_vhr_job_level_search"/>
       	</record>
       	
       	
    </data>
</openerp>