<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_hr_employee_form" model="ir.ui.view">
            <field name="name">hr.employee.view.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <form position="replace">
                    <form string="Employee">
                        <sheet>
                            <field name="image_medium" widget='image' class="oe_left oe_avatar" style="height:200px"/>
                            <div class="oe_title" style="width:50%%">
                                <h1>
                                    <field name="name" string="Full Name" placeholder="e.g. Hoàng Bạch Dương"
                                           readonly="1" options="{'save_readonly': True}"/>
                                </h1>
                                <group class="oe_edit_only" col='3'>
                                    <field name="last_name" string="Last &amp; Mid Name" required="1"
                                           on_change="onchange_name(first_name,last_name)"/>
                                    <label string="e.g.Võ"/>
                                    <field name="first_name" required="1"
                                           on_change="onchange_name(first_name,last_name)"/>
                                    <label string="e.g.Tòng"/>
                                </group>
                                
                            </div>
                            <div class="oe_right oe_button_box" name="button_box" style="width:30%">
                            </div>
                            <div class="oe_title" style="width:80%%">
                            	<group class="adldress_format" col='4'>
                                	
                                    <field name="code" placeholder="Code" required="1" readonly="1"
                                           options="{'save_readonly': True}"/>
                                    <field name="user_id" string='Account' options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
                                    <!--<field name="barcode" placeholder="Barcode"/>-->
                                    <field name="company_group_id" string='Company Group'
                                    	options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"
                                           required="1" on_change="onchange_company_group(company_group_id)"
                                           attrs="{'readonly': [('create_date','!=', False)]}"/>
                                    
                                    <field name="company_id" readonly="1"
                                    options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
                                    <field name="join_date" required='1'/>
                                    <field name="end_date" readonly='1'/>
                                    <field name="is_create_account" attrs="{'readonly': [('user_id','!=', False)]}"/>
                                    <field name="is_asset"/>
                                    <field name="is_reject" readonly='1'/>
                                    <field name="is_able_to_see_other_tabs" invisible='1'/>
<!--                                    <field name="main_working" invisible="1"/-->
                                </group>
                            </div>
                            <notebook>
                                <page string="General" >
                                    <group>
                                        <group string="Contact Information">
                                            <field name="work_email" widget="email"
                                                   readonly="1"/>
                                            <field name="mobile_phone" readonly="1"  groups="vhr_base.hrs_group_system"/>
                                            <field name="work_phone" readonly="1"/>
                                            <field name="office_id" required="1"
                                            on_change="onchange_office_id(office_id)"
                                            options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
                                            <field name="seat_no" readonly="1"/>
                                            <field name="ext_no" readonly="1"/>
                                            
                                        </group>
                                        <group string="Position" readonly="1">
                                            <field name="job_id" string="Job Apply" invisible="1"/>
                                            <field name="division_id" required='1'
                                            on_change="onchange_division_id(division_id)"
                                            options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
                                            <field name="department_group_id"
                                            on_change="onchange_department_group_id(department_group_id)"
                                            context="{'dept_from_division' : division_id}"
                                            options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
                                            <field name="department_id" required='1'
                                            on_change="onchange_department_id(department_id)"
                                            context="{'dept_from_department_group' : department_group_id,'dept_from_division_bypass_group':division_id}"
                                            options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
                                            <field name="team_id" readonly="1"
                                            context="{'dept_from_department' : department_id}"
                                            options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
                                            <field name="organization_class_id" readonly="1" invisible="1"
                                            options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
                                            <field name="title_id" required='1'
                                            options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
                                            
                                            <!--New job level -->
				   							<field name="job_level_person_id"
				   							groups = "vhr_human_resource.vhr_cb,vhr_master_data.vhr_assistant_to_hrbp,vhr_master_data.vhr_dept_head"
				   							options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
				   							
                                            <field name="parent_id" readonly="1" string="Dept Head"
                                            options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
                                            <field name="report_to" required='1'
                                            options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
                                        </group>
                                    </group>
                                    <field name="notes" placeholder="Other Information ..." colspan="4"/>
                                </page>
                                <page string="Personal" attrs="{'invisible': [('is_able_to_see_other_tabs','=',False)]}">
                                    <group>
                                        <group string="Status - Birth">
                                            <field name="gender"/>
                                            <field name="marital"/>
                                            <field name="birthday" required="1"/>
                                            <field name="birth_city_id" 
                                            options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}" string="Place of Birth"/>
                                        </group>
                                        <group string="Native Info">
                                            <field name="country_id"
                                                   options='{"no_open": True,"no_quick_create" : True,"no_create":True}'/>
                                            <field name="native_place"
                                                   options='{"no_open": True,"no_quick_create" : True,"no_create":True}'/>
                                            <field name="native_city_id"
                                                   options='{"no_open": True,"no_quick_create" : True,"no_create":True}'/>
                                            <field name="nation_id" context="{'dimension_type': 'NATION'}"
                                                   options='{"no_open": True,"no_quick_create" : True,"no_create":True}'/>
                                            <field name="religion_id" context="{'dimension_type': 'RELIGION'}"
                                                   options='{"no_open": True,"no_quick_create" : True,"no_create":True}'/>
                                        </group>
                                    </group>
                                    <group string="More Information"  attrs="{'invisible': [('is_able_to_see_other_tabs','=',False)]}">
                                        <group>
                                            <label for="street" string="Permanent Address"/>
                                            <div>
                                                <field name="street" placeholder="Street..."/>
                                                <field name='ward' placeholder='Ward' />
                                                <div class="address_format">
                                                	<field name="district_id" placeholder="District"
                                                           domain="[('city_id', '=', city_id)]"
                                                            options="{'no_quick_create':True, 'no_create':True, 'no_open':True}" style="width: 37%%"
                                                           attrs="{'readonly': [('use_parent_address','=',True)]}"/>
                                                    <field name="city_id" placeholder="City" style="width: 40%%"
                                                            options="{'no_quick_create':True, 'no_create':True, 'no_open':True}"
                                                           attrs="{'readonly': [('use_parent_address','=',True)]}"/>
                                                    
                                                </div>
                                                <field name="partner_country_id" placeholder="Country"
                                                       class="oe_no_button"  options="{'no_quick_create':True, 'no_create':True, 'no_open':True}"
                                                       attrs="{'readonly': [('use_parent_address','=',True)]}"/>
                                            </div>
                                            <label for="temp_address" string="Temporary Address"/>
                                            <div>
                                                <field name="temp_address" placeholder="Street..."
                                                       attrs="{'readonly': [('use_parent_address','=',True)]}"/>
                                                <field name='temp_ward' placeholder='Ward' />
                                                <div class="address_format">
                                                	<field name="temp_district_id" placeholder="District"
                                                           style="width: 50%%"
                                                    	    options="{'no_quick_create':True, 'no_create':True, 'no_open':True}"
                                                           domain="[('city_id', '=', temp_city_id)]"
                                                           attrs="{'readonly': [('use_parent_address','=',True)]}"/>
                                                           
                                                    <field name="temp_city_id" placeholder="City" style="width: 50%%"
                                                            options="{'no_quick_create':True, 'no_create':True, 'no_open':True}"
                                                           attrs="{'readonly': [('use_parent_address','=',True)]}"/>
                                                    
                                                </div>
                                            </div>
                                            <field name="use_parent_address" invisible="1"/>
                                            <field name="address_home_id" invisible="1"
                                                   context="{'show_address': 1, 'vhr_human_resource': 1}"
                                                   options='{"always_reload": True, "highlight_first_line": True}'/>
                                        </group>
                                        <group>
                                            <field name="phone" options="{'validate_number': True}"/>
                                            <field name="mobile" options="{'validate_number': True}"/>
                                            <field name="email" options="{'validate_email': True}"/>
                                        </group>
                                    </group>
                                </page>
                                <page string="Documents"  attrs="{'invisible': [('is_able_to_see_other_tabs','=',False)]}">
                                    <separator string="Personal Document"/>
                                    <field name="personal_document">
                                        <tree>
                                            <field name="document_type_id"/>
                                            <field name="number"/>
                                            <field name="issue_date"/>
                                            <field name="expiry_date"/>
                                            <field name="country_id"/>
                                            <field name="city_id" string="Place of Issued"/>
                                            <field name="district_id"/>
                                            <field name="status_id"/>
                                            <field name="is_received_hard_copy"/>
                                            <field name="active"/>
                                        </tree>
                                        <form>
                                            <sheet>                                            	
                                                <group col='2'>
                                                    <group>
                                                        <field name="document_type_id" required='1'
                                                               on_change="onchange_document_type_id(document_type_id)"
                                                               options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True,'save_no_required': True}"/>
                                                        <field name="number" required='1'/>
                                                        <field name="has_expiry_date" invisible='1'/>
                                                        <field name="issue_date"
                                                               on_change="onchange_date(issue_date, effect_date, expiry_date)"/>
                                                        <field name="effect_date" invisible='1'
                                                               on_change="onchange_date(issue_date, effect_date, expiry_date)"/>
                                                        <field name="expiry_date"
                                                               attrs="{'readonly': [('has_expiry_date', '=', False)]}"
                                                               on_change="onchange_date(issue_date, effect_date, expiry_date)"/>
                                                        <field name="is_received_hard_copy"/>
                                                     </group>
                                                     <group>
                                                     	<field name="country_id"
                                                     	options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True,'save_no_required': True}"/>
                                                        <field name="city_id"  string="Place of Issued"
                                                        options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True,'save_no_required': True}"/>
                                                        <field name="district_id"
                                                        options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True,'save_no_required': True}"/>
                                                        <field name="status_id"
                                                        context="{'search_by_document_type_id': document_type_id}"
                                                        options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True,'save_no_required': True}"/>                                                      
                                                        <field name="active"/>
                                                     </group>
                                                    <field name="note" nolabel="1" colspan="4"/>
                                                </group>
                                            </sheet>
                                        </form>
                                    </field>
                                    <separator string="Certificates/Degree"/>
                                    <field name="certificate_ids" context="{'hide_field':True}">
                                        <tree>
                                            <field name="school_id"/>
                                            <field name="recruitment_degree_id"/>
                                            <field name="speciality_id"/>
                                            <field name="faculty_id"/>
                                            <field name="issue_date"/>
                                            <field name="oversea"/>
                                            <field name="is_main_degree"/>
                                            <field name="is_received_hard_copy"/>
                                        </tree>
                                    </field>
                                    
                                </page>
                                <page string="Free PIT"  attrs="{'invisible': [('is_able_to_see_other_tabs','=',False)]}">
                                    <field name='duty_free'>
                                        <tree>
                                            <field name="from_date"/>
                                            <field name="to_date"/>
                                            <field name="description"/>
                                            <field name="active"/>
                                        </tree>
                                        <form>
                                            <sheet>
                                                <group>
                                                    <group>
                                                        <field name="from_date" required="1"/>
                                                        <field name="active"/>
                                                    </group>
                                                    <group>
                                                        <field name="to_date" required="1"/>
                                                    </group>
                                                    <field name="description" nolabel="1" colspan="4"/>
                                                </group>
                                            </sheet>
                                        </form>
                                    </field>
                                </page>
                                <page string="Managements"  attrs="{'invisible': [('is_able_to_see_other_tabs','=',False)]}">
                                    <separator string="Health Check Info"/>
                                    <field name="health_care">
                                        <tree>
                                            <field name="date"/>
                                            <field name="doctor_comment"/>
                                            <field name="health_result"/>
                                        </tree>
                                        <form>
                                            <sheet>
                                                <group>
                                                    <group>
                                                        <field name="date" required="1"/>
                                                        <field name="height"/>
                                                        <field name="blood_group_id"
                                                               options="{'no_quick_create' : True,'no_create':True}"
                                                               context="{'dimension_type': 'BLOOD_GROUP'}"/>
                                                        <field name="doctor"/>
                                                        <field name="health_result"/>
                                                        <field name="attached_file" filename="name_data"/>
                                                        <field name="name_data" select="1" invisible="1"/>
                                                    </group>
                                                    <group>
                                                        <field name="active"/>
                                                        <field name="weight"/>
                                                        <field name="hospital_id" options="{'no_quick_create' : True,'no_create':True}"/>
                                                        <field name="is_special"/>
                                                    </group>
                                                    <field name="doctor_comment" colspan="4"/>
                                                    <field name="note" colspan="4"/>
                                                </group>
                                            </sheet>
                                        </form>
                                    </field>
                                    <separator string="Employee's Asset"/>
                                    <field name="property_management">
                                        <tree>
                                            <field name="property_id"/>
                                            <field name="property_code"/>
                                            <field name="issue_date"/>
                                            <field name="recovery_date"/>
                                            <field name="description"/>
                                            <field name="active"/>
                                        </tree>
                                        <form>
                                            <sheet>
                                                <group col="4">
                                                    <field name="property_type_id" readonly='1'
                                                           options="{'no_quick_create':True, 'no_create':True,'save_readonly': True, 'no_open':True,}"/>
                                                    <newline/>
                                                    <field name="property_id" options="{'no_quick_create':True, 'no_create':True,'save_readonly': True, 'no_open':True,}"
                                                           on_change="onchange_property_id(property_id)"
                                                           required="1"/>
                                                    <field name="property_code" required="1"/>
                                                    <field name="issue_date" required="1"/>
                                                    <field name="recovery_date"/>
                                                    <field name="active"/>
                                                </group>
                                                <group>
                                                    <field name="description"/>
                                                </group>
                                                <separator colspan="4" string="Other Information"/>
                                                <group col="4">
                                                    <field name="depreciation_expiry_date"/>
                                                    <newline/>
                                                    <label for="depreciation_time"/>
                                                    <div colspan="3" class="oe_inline">
                                                        <field name="depreciation_time" class="oe_inline"/>
                                                        <field name="time_type" class="oe_inline"/>
                                                    </div>
                                                    <newline/>
                                                    <field name="company_allowance"/>
                                                </group>

                                                <notebook>
                                                    <page string="Logs">
                                                        <label string="*** Please press F5 to refresh the list of logs !"
                                                               colspan="4"/>
                                                        <field name="audit_log_ids" mode="tree"
                                                               widget="one2many_list" readonly="1" nolabel="1"
                                                               colspan="4">
                                                            <tree version="7.0">
                                                                <field name="timestamp" required="1" readonly="1"/>
                                                                <field name="user_id" readonly="1"/>
                                                                <field name="method" readonly="1"/>
                                                                <field name="field_description"/>
                                                                <field name="old_value_text"/>
                                                                <field name="new_value_text"/>
                                                            </tree>
                                                        </field>
                                                    </page>
                                                </notebook>
                                            </sheet>
                                        </form>
                                    </field>
                                </page>
                                <page string="Relationships"  attrs="{'invisible': [('is_able_to_see_other_tabs','=',False)]}">
                                    <field name="relation_partners"/>
                                </page>
                                <page string="Bank Accounts"  attrs="{'invisible': [('is_able_to_see_other_tabs','=',False)]}">
                                    <field name='bank_ids' context="{'default_owner_name':name, 'default_is_main':not is_have_main_bank}"
                                    	on_change="onchange_bank_ids(bank_ids, old_bank_ids)">
                                        <tree string="Bank Accounts">
                                            <field name="acc_number"/>
                                            <field name="owner_name"/>
                                            <field name="bank"/>
                                            <field name="bank_branch"/>
                                            <field name="is_main"/>
                                            <field name="effect_from"/>
                                            <field name="active"/>
                                        </tree>
                                    </field>
                                    <field name="old_bank_ids" invisible='1' />
                                    <field name="is_have_main_bank" invisible='1' />
                                </page>
                                <page string="Invisible" invisible="1">
                                    <!-- Dont use but must have in form -->
                                    <field name="create_date"/>
                                    <!--<field name="user_id" on_change="onchange_user(user_id)"
                                           string="Related User" readonly="1"
                                           context="{'default_groups_ref': ['base.group_user']}"
                                           options="{'no_quick_create' : True}"/>-->
                                    <field name="coach_id" options="{'no_quick_create' : True}"/>
                                    <field name="bank_account_id"/>
                                    <field name="otherid" groups="base.group_hr_user"/>
                                    <label for="category_ids" class="oe_edit_only" groups="base.group_hr_user"/>
                                    <field name="category_ids" widget="many2many_tags" placeholder="e.g. Part Time"
                                           groups="base.group_hr_user"/>
                                    <field name="address_id" on_change="onchange_address_id(address_id)"
                                           context="{'show_address': 1}"
                                           options='{"always_reload": True, "highlight_first_line": True}'/>
                                    <field name="work_location"/>
                                    <group name="active_group"/>
                                </page>
                                <page string="Working backgrounds"  attrs="{'invisible': [('is_able_to_see_other_tabs','=',False)]}">
                                    <separator colspan="4" string="In/Out management"/>
                                    <field name='instance_ids' readonly="1">
                                        <tree string="In/Out management">                                            
                                            <field name="date_start"/>
                                            <field name="date_end"/>
                                            <field name="company_code"/>
                                            <field name="division_id"/>
                                            <field name="department_group_id"/>
                                            <field name="department_id"/>
                                            <field name="team_id"/>
                                            <field name="title_id"/>
                                            <field name="job_level_id"/>
                                            <!--<field name="job_level_position_id"/>-->
                                            <field name="job_level_person_id"/>
                                            <field name="manager_id"/>
                                            <field name="report_to"/>
                                        </tree>
                                        <form version="7.0" string="In/Out management">
                                            <sheet>
                                                <group>
                                                    <group>
                                                        <field name="company_id" options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
                                                        <field name="date_start"/>
                                                        <field name="date_end"/>
                                                    </group>
                                                    <group>
                                                        <field name="division_id" options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
                                                        <field name="department_group_id" options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
                                                        <field name="department_id" options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
                                                        <field name="team_id" options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
                                                        <field name="title_id" options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
                                                        <field name="job_level_id" options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
                                                        <!--<field name="job_level_position_id" options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>-->
                                            			<field name="job_level_person_id" options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
                                                        <field name="manager_id" options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
                                                        <field name="report_to" options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
                                                    </group>
                                                </group>
                                            </sheet>
                                        </form>
                                    </field>
                                    <separator colspan="4" string="Working backgrounds"/>
                                    <field name="working_background" context="{'hide_field':True}">
                                    	<tree string="Working Background" version="7.0">
						      				<field name="employee_id" invisible="1"/>
						       				<field name="applicant_id" invisible="1"/>
						      				<field name="from_date"/>
											<field name="to_date"/>
											<field name="company"/>
						       				<field name="job_title"/>
											<field name="job_type_id"/>
											<field name="active" invisible="1"/>
						      			</tree>
                                    </field>
                                </page>
                                <page string="Assessment Result"  attrs="{'invisible': [('is_able_to_see_other_tabs','=',False)]}">
                                	<field name="assessment_result_ids">
                                		<tree string="Assessment Result">
						                    <field name="from_date"/>
						                    <field name="to_date"/>
						                    <field name="calibration_id"/> 
						                    <field name="kpi_score"/>	
                                		</tree>
                                		<form string="Assessment Result" version="7.0">
						       				<sheet>
						       					<group col="4">
						       						<field name="period_id" required='1'
						       						on_change="onchange_period_id(period_id)"
						       						options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>	
						       						<field name="calibration_id" required='1'
						       						options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>	
						                            <field name="from_date" readonly="1"/>
						       						<field name="to_date" readonly="1"/>
						       						<field name="kpi_score"/>	
						       					</group>
						       				</sheet>
						       			</form>
                                	</field>
                                </page>
                                
                                <page string="History"  groups="vhr_base.hrs_group_system,vhr_human_resource.vhr_cb_profile">
                                    <label string="*** Please press F5 to refresh the list of logs !" colspan="4"/>
                                    <field name="audit_log_ids" mode="tree"
                                           widget="one2many_list" readonly="1" nolabel="1" colspan="4">
                                        <tree version="7.0">
                                            <field name="timestamp" required="1" readonly="1"/>
                                            <field name="user_id" readonly="1"/>
                                            <field name="method" readonly="1"/>
                                            <field name="field_description"/>
                                            <field name="old_value_text"/>
                                            <field name="new_value_text"/>
                                        </tree>
                                    </field>
                                </page>
                            </notebook>
                        </sheet>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                    </form>
                </form>
            </field>
        </record>        

