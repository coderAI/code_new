<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_vhr_family_deduct_line_form" model="ir.ui.view">
            <field name="name">vhr.family.deduct.line.view.form</field>
            <field name="model">vhr.family.deduct.line</field>
            <field name="groups_id" eval=""/>
            <field name="arch" type="xml">
                <form string="Family Deduct Line" version="7.0">
                <sheet>
                        <group>
                            <group>
                                <field name="employee_partner_id" string="Employee Relation" domain="[('employee_id', '=', employee_id)]"
                                 options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"      
                                required="1"/>
                                <field name="from_date" required="1"
                                       on_change="onchange_date(from_date,effect_payroll_date,to_date)"/>
                                <field name="effect_payroll_date" required="1"
                                       on_change="onchange_date(from_date,effect_payroll_date,to_date)"/>
                                <field name="to_date" on_change="onchange_date(from_date,effect_payroll_date,to_date)"/>
                            </group>
                            <group>
                                <field name="notes"/>
                            </group>
                            <group col="2">
                                <field name="attached_file" filename="name_data" name_by_file='1'/>
                            </group>
                        </group>
                    </sheet>
                    <field name="employee_id" invisible="1"/>
                    <field name="name_data" select="1" invisible="1"/>
                </form>
            </field>
        </record>

        <record id="view_vhr_family_deduct_line_tree" model="ir.ui.view">
            <field name="name">vhr.family.deduct.line.view.tree</field>
            <field name="model">vhr.family.deduct.line</field>
            <field name="groups_id" eval=""/>
            <field name="arch" type="xml">
                <tree string="Family Deduct Line" version="7.0">
                    <field name="employee_id" invisible="1"/>
                    <field name="employee_partner_id" domain="[('employee_id', '=', employee_id)]" required="1"/>
                    <field name="from_date" required="1"
                           on_change="onchange_date(from_date,effect_payroll_date,to_date)"/>
                    <field name="effect_payroll_date" required="1"
                           on_change="onchange_date(from_date,effect_payroll_date,to_date)"/>
                    <field name="to_date" on_change="onchange_date(from_date,effect_payroll_date,to_date)"/>
                    <field name="notes"/>
                    <field name="attached_file" filename="name_data" name_by_file='1'/>
                    <field name="name_data" select="1" invisible="1"/>
                </tree>
            </field>
        </record>


        <record model="ir.actions.act_window" id="act_vhr_family_deduct_line">
            <field name="name">Family Deduct Line</field>
            <field name="res_model">vhr.family.deduct.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_family_deduct_line_tree"/>
        </record>
    </data>
</openerp>