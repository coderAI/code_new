<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	<record id="view_vhr_jobtitle_joblevel_form" model="ir.ui.view">
       		<field name="name">vhr.jobtitle.joblevel.view.form</field>
       		<field name="model">vhr.jobtitle.joblevel</field>
       		<field name="arch" type="xml">
       			<form string="JobTitle-JobLevel" version="7.0" duplicate='false'>
       				<sheet>
       					<group col="4">
       						<field name="job_title_id" required="1" options="{'no_quick_create':True, 'no_create':True}"/>
       						<field name="job_level_id" required="1" options="{'no_quick_create':True, 'no_create':True}"/>
       						<field name="active"/>
       					</group>
       					<group>
       						<field name="description" colspan="4" nolabel="1" placeholder="Description ...."/>
       						<label string="*** Please press F5 to refresh the list of logs !" colspan="4"/>
       						<field name="audit_log_ids" mode="tree"
                      		 		widget="one2many_list" readonly="1" nolabel="1" colspan="4">
       							<tree version="7.0">
       								<field name="timestamp" required="1" readonly="1"/>
			                        <field name="user_id" readonly="1"/>
			                        <field name="method" readonly="1"/>
			                        <field name="field_description"/>
                           			<field name="old_value_text"/>
                           			<field name="new_value_text"/>
       							</tree>
       						</field>
       					</group>
       				</sheet>
       			</form>
       		</field>
       	</record>
       	
       	<record id="view_vhr_jobtitle_joblevel_tree" model="ir.ui.view">
       		<field name="name">vhr.jobtitle.joblevel.view.tree</field>
       		<field name="model">vhr.jobtitle.joblevel</field>
       		<field name="arch" type="xml">
      			<tree string="JobTitle-JobLevel" version="7.0">
      				<field name="job_title_id"/>
      				<field name="job_level_id"/>
      				<field name="description"/>
					<field name="active"/>
      			</tree>
     		</field>
       	</record>
       	
       	<record id="view_vhr_jobtitle_joblevel_search" model="ir.ui.view">
        	<field name="name">vhr.jobtitle.joblevel.view.search</field>
        	<field name="model">vhr.jobtitle.joblevel</field>
        	<field name="arch" type="xml">
        		<search string="JobTitle-JobLevel">
        			<group expand="0" string="Group by...">
                        <filter string='Job Level' domain="[]" name="group_by_job_level" icon="terp-stock_symbol-selection"
                            context="{'group_by': 'job_level_id'}"/>
                    </group>
                    <group expand="0" string="Filter">
	                   	<filter string="Active = True" name="active_true" icon="terp-stage"
	                            domain="[('active', '=', True)]"/>
	                    <filter string="Active = False" name="active_false" icon="STOCK_NEW"
	                            domain="[('active', '=', False)]"/>
                   </group> 
					<field name='job_title_id'/>
					<field name='job_level_id'/>
        		</search>
        	</field>
        </record>
        
        <record model="ir.actions.act_window" id="act_vhr_jobtitle_joblevel">
       		<field name="name">JobTitle-JobLevel</field> 
            <field name="res_model">vhr.jobtitle.joblevel</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_jobtitle_joblevel_tree"/>
            <field name="search_view_id" ref="view_vhr_jobtitle_joblevel_search"/>
       	</record>
    </data>
</openerp>