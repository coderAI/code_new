<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	<record id="view_vhr_job_title_form" model="ir.ui.view">
       		<field name="name">vhr.job.title.view.form</field>
       		<field name="model">vhr.job.title</field>
       		<field name="arch" type="xml">
       			<form string="Job Title" version="7.0">
       				<sheet>
       					<group col="4">
       						<group>
       							<field name="name" required="1"/>
       							<field name="effect_date"/>
       							<field name="active"/>
       						</group>
       						<group>
       							<field name="name_en" required="1" />
       							<field name="code" required="1"/>
       						</group>
       					</group>
       					<group>
       						<field name="description" colspan="4" nolabel="1" placeholder="Description ...."/>
       						<label string="*** Please press F5 to refresh the list of logs !" colspan="4"/>
       						<field name="audit_log_ids" mode="tree"
                      		 		widget="one2many_list" readonly="1" nolabel="1" colspan="4">
       							<tree version="7.0">
       								<field name="timestamp" required="1" readonly="1"/>
			                        <field name="user_id" readonly="1"/>
			                        <field name="method" readonly="1"/>
			                        <field name="field_description"/>
                           			<field name="old_value_text"/>
                           			<field name="new_value_text"/>
       							</tree>
       						</field>
       					</group>
       				</sheet>
       			</form>
       		</field>
       	</record>
       	
       	<record id="view_vhr_job_title_tree" model="ir.ui.view">
       		<field name="name">vhr.job.title.view.tree</field>
       		<field name="model">vhr.job.title</field>
       		<field name="arch" type="xml">
      			<tree string="Job Title" version="7.0">
      				<field name="code"/>
      				<field name="name"/>
      				<field name="name_en" />
      				<!--<field name="job_level_id"/>-->
      				<field name="effect_date"/>
					<field name="active"/>
      			</tree>
     		</field>
       	</record>
       	
       	<record id="view_vhr_job_title_search" model="ir.ui.view">
        	<field name="name">vhr.job.title.view.search</field>
        	<field name="model">vhr.job.title</field>
        	<field name="arch" type="xml">
        		<search string="Job Title">
                    <group expand="0" string="Filter">
	                   	<filter string="Active = True" name="active_true" icon="terp-stage"
	                            domain="[('active', '=', True)]"/>
	                    <filter string="Active = False" name="active_false" icon="STOCK_NEW"
	                            domain="[('active', '=', False)]"/>
                   </group> 
                   <field name="name" string="Job Title" 
        			 filter_domain="['|','|',('name','ilike',self),('name_en','ilike',self),('code','ilike',self)]"/>
        			
        		</search>
        	</field>
        </record>
        
        <record model="ir.actions.act_window" id="act_vhr_job_title">
       		<field name="name">Job Title</field> 
            <field name="res_model">vhr.job.title</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_job_title_tree"/>
            <field name="search_view_id" ref="view_vhr_job_title_search"/>
       	</record>
       	
       	
    </data>
</openerp>