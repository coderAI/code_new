<openerp>
    <data>
        <record id="view_vhr_ts_view_result_detail_form" model="ir.ui.view">
            <field name="name">vhr.ts.view.result.detail.view.form</field>
            <field name="model">vhr.ts.view.result.detail</field>
            <field name="arch" type="xml">
                <form string="Timesheet Detail Progress" create="false" edit="false">
                    <sheet>
                        <div class="oe_right oe_button_box" name="button_box">
                            <button name="view_result" one_click_button="True"
                                    string="View" type="object"
                                    class="oe_stat_button bg_icon_green" icon="fa-mail-forward"/>
                            <button string="Cancel" class="oe_stat_button bg_icon_red" special="cancel"
                                    icon="fa-times"/>
                        </div>
                        <group string="Choose Month/Year">
                            <group>
                                <field name="month" required="1"/>
                            </group>
                            <group>

                                <field name="year" required="1" options="{'remove_thousand_seps': 1}"/>
                            </group>
                        </group>
                    </sheet>
                </form>

            </field>
        </record>


        <record id="view_vhr_ts_view_result_summary_form" model="ir.ui.view">
            <field name="name">vhr.ts.view.result.summary.view.form</field>
            <field name="model">vhr.ts.view.result.detail</field>
            <field name="arch" type="xml">
                <form string="Timesheet Summary Progress" create="false" edit="false">
                    <sheet>
                        <div class="oe_right oe_button_box" name="button_box">
                            <button name="view_result_summary" one_click_button="True"
                                    string="View" type="object"
                                    class="oe_stat_button bg_icon_green" icon="fa-mail-forward"/>
                            <button string="Cancel" class="oe_stat_button bg_icon_red" special="cancel"
                                    icon="fa-times"/>
                        </div>
                        <group string="Choose Month/Year">
                            <group>
                                <field name="month" required="1"/>
                            </group>
                            <group>

                                <field name="year" required="1" options="{'remove_thousand_seps': 1}"/>
                            </group>
                        </group>
                    </sheet>
                </form>

            </field>
        </record>


        <record model="ir.actions.act_window" id="act_vhr_ts_view_result_detail">
            <field name="name">View Detail Progress</field>
            <field name="res_model">vhr.ts.view.result.detail</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="view_vhr_ts_view_result_detail_form"/>
            <field name="target">new</field>
        </record>

        <record model="ir.actions.act_window" id="act_vhr_ts_view_result_summary">
            <field name="name">View Summary Progress</field>
            <field name="res_model">vhr.ts.view.result.detail</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="view_vhr_ts_view_result_summary_form"/>
            <field name="target">new</field>
        </record>

    </data>
</openerp>