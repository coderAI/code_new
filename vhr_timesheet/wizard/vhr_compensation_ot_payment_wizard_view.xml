<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	
		<record id="view_vhr_compensation_ot_payment_wizard" model="ir.ui.view">
	        <field name="name">vhr.compensation.ot.payment.wizard</field>
            <field name="model">vhr.compensation.ot.payment.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Compensation OT Calculation" version="7.0">
                    <sheet>
                    	<div class="oe_right oe_button_box" name="button_box">
                            <button name="action_generate" one_click_button="True"
                                    string="Generate" type="object"
                                    class="oe_stat_button bg_icon_green" icon="fa-mail-forward"/>
                            
                            <button string="Cancel" class="oe_stat_button bg_icon_red" special="cancel"
                                    icon="fa-times"/>
                        </div>
                    	<group string="Compensation OT Calculation">
                        	<field name="department_ids" widget="many2many_tags"
                        	 options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>    
                        	 	
                        	<field name="employee_ids" required='0' widget="many2many_tags"
                        	 options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"
                        	 context="{'department_ids_for_compen_ot_payment':department_ids,'tree_view_ref':'vhr_human_resource.view_vhr_human_resource_mimimal_employee_tree'}"/>
                        	<field name="calculation_date" invisible='1' option="{'save_readonly': True}"/>
                        </group>
                    	
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="act_vhr_compensation_ot_payment_wizard" model="ir.actions.act_window">
            <field name="name">Compensation OT Payment Generation</field>
            <field name="res_model">vhr.compensation.ot.payment.wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_vhr_compensation_ot_payment_wizard"/>
            <field name="context">{'default_type': 'remove','hide_form_view_button':True}</field>
            <field name="target">new</field>
       </record>
       
       
       <record model="ir.actions.act_window" id="act_tracking_vhr_compensation_ot_payment_wizard">
           <field name="name">Compensation OT Payment Progress</field>
           <field name="res_model">vhr.mass.status</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('model_id.model','=','vhr.compensation.ot.payment')]</field>
            <field name="context">{'attachment':False,'rule_for_tree_form':True}</field>
            <field name="view_id" ref="vhr_common.view_vhr_mass_status_tree"/>
            <field name="search_view_id" ref="vhr_common.view_vhr_mass_status_search"/>
       	</record>
       
       
       
       
       
       
       
        
    </data>
</openerp>