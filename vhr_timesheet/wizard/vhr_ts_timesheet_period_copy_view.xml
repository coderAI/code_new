<openerp>
    <data>
        <record id="view_vhr_ts_timesheet_period_copy_form" model="ir.ui.view">
        <field name="name">vhr.ts.timesheet.period.copy.form</field>
            <field name="model">vhr.ts.timesheet.period.copy</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Copy">
                    <group col="4">
                        <field name="copy_to_next_year" on_change="onchange_copy_to_year(copy_to_next_year)"/>
                        <field name="copy_to_next_month" on_change="onchange_copy_to_month(copy_to_next_month)"
                        	attrs="{'required': [('copy_to_next_year', '=', False)]}"/>
                        <field name="month_from"
                               attrs="{'invisible': [('copy_to_next_year', '=', False)],'required': [('copy_to_next_year', '=', True)]}"
                               placeholder="mm eg: 1"/>
                        <field name="month_to"
                               attrs="{'invisible': [('copy_to_next_year', '=', False)],'required': [('copy_to_next_year', '=', True)]}"
                               placeholder="mm eg: 12"/>
                    </group>
                    <footer>
                            <button name="btn_copy" class="oe_highlight"
                                    string="Yes" type="object" context="{'ids': context['active_ids']}"/>
                            or
                            <button special="cancel" string="Cancel" class="oe_link"/>
                     </footer>
                </form>
            </field>
        </record>

        <act_window id="act_vhr_timesheet_period_copy"
                    name="Copy"
                    src_model="vhr.ts.timesheet.period"
                    res_model="vhr.ts.timesheet.period.copy"
                    view_mode="form"
                    target="new"
                    key2="client_action_multi"/>


    </data>
</openerp>