<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="vhr_ts_employee_annual_leave_gen_view" model="ir.ui.view">
            <field name="name">vhr.ts.employee.annual.leave.gen.form</field>
            <field name="model">vhr.ts.employee.annual.leave.gen</field>
            <field name="arch" type="xml">
                <form string="Annual Leave Balance Generation">
                    <sheet>
                        <div class="oe_right oe_button_box" name="button_box">
                            <button name="gen_employee_annual_leave" one_click_button="True"
                                    string="Generate" type="object"
                                    class="oe_stat_button bg_icon_green" icon="fa-mail-forward"/>
                            <button string="Cancel" class="oe_stat_button bg_icon_red" special="cancel"
                                    icon="fa-times"/>
                        </div>
                        <group string="Annual Leave Balance Generation">
                            <group col='4'>
                            	<field name="is_gen_for_collaborator" on_change="onchange_is_gen_for_collaborator(is_gen_for_collaborator)"/>
                            	<newline/>
                                <field name="employee_ids" widget="many2many_tags" options="{'no_quick_create' : True, 'no_create':True}"
                                context="{'tree_view_ref':'vhr_human_resource.view_vhr_human_resource_mimimal_employee_tree'}"
                                attrs="{'required':[('is_gen_for_collaborator','=',False)]}" colspan='4'/>
                                <newline/>
                                	
                                <field name="year" required="1" options="{'remove_thousand_seps': 1}"/>
                            </group>
                            <group></group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="act_vhr_ts_employee_annual_leave_gen" model="ir.actions.act_window">
            <field name="name">Annual Leave Balance Generation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vhr.ts.employee.annual.leave.gen</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="vhr_ts_employee_annual_leave_gen_view"/>
            <field name="target">new</field>
        </record>
    </data>
</openerp>