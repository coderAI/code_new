<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_vhr_ts_working_schedule_employee_wizard_access" model="ir.ui.view">
            <field name="name">vhr.ts.working.schedule.employee.wizard.access</field>
            <field name="model">vhr.ts.working.schedule.employee.wizard</field>
            <field eval="16" name="priority"/>
            <field name="arch" type="xml">
                <form string="Working Schedule Employee Wizard" version="7.0">
                    <separator string="Do you want to assign new employees to working schedule ?" colspan="4"/>
                    <footer>
                        <button name="view_input_form"
                                string="OK"
                                type="object" icon="gtk-save"
                                class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        
        <record id="view_vhr_ts_working_schedule_employee_wizard_input" model="ir.ui.view">
	        <field name="name">vhr.ts.working.schedule.employee.wizard.input</field>
            <field name="model">vhr.ts.working.schedule.employee.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Working Schedule Employee Wizard" version="7.0" create='false'>
                    <sheet>
                    	<div class="oe_right" name="buttons">
	                        <div class="oe_right" name="buttons">
                                <button name="execute"
	                                string="Save"
	                                type="object"
		                        	icon="fa-book"
	                        		invisible="context.get('default_state',False)"
	                        		context="{'action':'submit'}"
	                                class="oe_stat_button"/>
	                        </div>
                        </div>
                        <group>
                        	<field name="name" on_change="onchange_name()" invisible='1'/>
                        	<field name="ts_ws_employee_ids" nolabel='1'>
                        		<tree string="Working Schedule Employee" editable='top' create='false' limit='40'>	
                        			<field name="number_index" readonly='1'/>	
				                    <field name="employee_code" readonly='1'/>
				                    <field name="employee_id" readonly='1'
				                    options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
				                    <field name="department_id" readonly='1'/>
				                    <field name="current_timesheet_id" readonly='1'/>
				                    <field name="ws_id"
				                    options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
				                    <field name="ts_working_group_id" readonly='1'
				                    options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
				                    <field name="effect_from" readonly='1'/>
				                </tree>	
                        	</field>
                        </group>
                    </sheet>
                 </form>
            </field>
        </record>
                        
        <record id="act_vhr_ts_working_schedule_employee_wizard" model="ir.actions.act_window">
            <field name="name">Working Schedule Employee Assignment</field>
            <field name="res_model">vhr.ts.working.schedule.employee.wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_vhr_ts_working_schedule_employee_wizard_access"/>
            <field name="target">new</field>
       </record>
        
    </data>
</openerp>