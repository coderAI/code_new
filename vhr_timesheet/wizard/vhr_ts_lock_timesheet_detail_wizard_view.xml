<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	
		<record id="view_vhr_ts_lock_timesheet_detail_wizard" model="ir.ui.view">
	        <field name="name">vhr.ts.lock.timesheet.detail.wizard</field>
            <field name="model">vhr.ts.lock.timesheet.detail.wizard</field>
            <field name="groups_id" eval="[(4, ref('vhr_timesheet.vhr_cb_timesheet')),(4, ref('vhr_base.hrs_group_system'))]"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Lock Timesheet Detail" version="7.0">
                    <sheet>
                    	<div class="oe_right oe_button_box" name="button_box">
                            <button name="action_generate" one_click_button="True"
                                    string="Generate" type="object"
                                    class="oe_stat_button bg_icon_green" icon="fa-mail-forward"/>
                            
                            <button string="Cancel" class="oe_stat_button bg_icon_red" special="cancel"
                                    icon="fa-times"/>
                        </div>
                    	<group string="Lock Calculation" col='4'>
                    		<field name='month' required='1'/>
                    		<field name='year' required='1' options="{'remove_thousand_seps': 1}"/>
                        	<field name="department_ids" widget="many2many_tags"
                        	 options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>    
                        	 	
                        	<field name="employee_ids" widget="many2many_tags"
                        	 options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"
                        	 context="{'department_ids_for_lock_ts_detail':department_ids,'tree_view_ref':'vhr_human_resource.view_vhr_human_resource_mimimal_employee_tree'}"/>
                        	<!--<field name="calculation_date" required='1'/>-->
                        </group>
                    	
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="act_vhr_ts_lock_timesheet_detail_wizard" model="ir.actions.act_window">
            <field name="name">Lock Timesheet Detail Generation</field>
            <field name="res_model">vhr.ts.lock.timesheet.detail.wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_vhr_ts_lock_timesheet_detail_wizard"/>
            <field name="context">{'default_type': 'remove','hide_form_view_button':True}</field>
            <field name="target">new</field>
       </record>
       
       
       <record model="ir.actions.act_window" id="act_tracking_vhr_ts_lock_timesheet_detail_wizard">
           <field name="name">Lock Timesheet Detail Progress</field>
           <field name="res_model">vhr.mass.status</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('model_id.model','=','vhr.ts.lock.timesheet.detail')]</field>
            <field name="context">{'attachment':False,'rule_for_tree_form':True}</field>
            <field name="view_id" ref="vhr_common.view_vhr_mass_status_tree"/>
            <field name="search_view_id" ref="vhr_common.view_vhr_mass_status_search"/>
       	</record>
       
       
       
       
       
       
       
        
    </data>
</openerp>