<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="vhr_ts_monthly_gen_view" model="ir.ui.view">
            <field name="name">vhr.ts.monthly.gen.form</field>
            <field name="model">vhr.ts.monthly.gen</field>
            <field name="arch" type="xml">
                <form string="Timesheet Detail Generation">
                    <sheet>
                        <div class="oe_right oe_button_box" name="button_box">
                            <button name="action_ts_monthly_gen" one_click_button="True"
                                    string="Generate" type="object"
                                    class="oe_stat_button bg_icon_green" icon="fa-mail-forward"/>
                            <button string="Cancel" class="oe_stat_button bg_icon_red" special="cancel"
                                    icon="fa-times"/>
                        </div>
                        <group string="Timesheet Detail Generation">
                        	<group>
                                <field name="month" required="1" 
                                on_change="onchange_month(month, year, admin_id, timesheets, employee_id, run_onchange_month)"/>
                                <field name="year" required="1" options="{'remove_thousand_seps': 1}"
                                  on_change="onchange_year(month, year, admin_id, timesheets, employee_id, run_onchange_year)"/>
                                <field name="is_last_payment" groups="vhr_base.hrs_group_system,vhr_timesheet.vhr_cb_timesheet"/>
                                <field name="run_sql" groups="vhr_base.hrs_group_system"/>
                            </group>
                            <group>
                                <field name="admin_id"
                                       options="{'no_open': True, 'no_create': True}"
                                       on_change="onchange_admin_timesheet_emp(admin_id, timesheets, employee_id, month, year, 
                                     run_onchange_admin_id, run_onchange_timesheet_ids, run_onchange_employee_id, context)"
                                       groups="vhr_human_resource.vhr_cb"
                                       context="{'admin_timesheet': 1, 'context_year': year, 'context_month': month,'onchange_admin':True}"/>
                                <field name="timesheets" widget="many2many_tags" 
                                	context="{'timesheet_admin': 1, 'year': year, 'month': month,'filter_by_admin_id':admin_id,'onchange_timesheet':True}"
                                       options="{'no_open': True, 'no_create': True}"
                                       on_change="onchange_admin_timesheet_emp(admin_id, timesheets, employee_id, month, year, 
                                     run_onchange_admin_id, run_onchange_timesheet_ids, run_onchange_employee_id, context)"
                                        />
                                 <field name="employee_id"
                                       options="{'no_open': True, 'no_create': True}"
                                	   on_change="onchange_admin_timesheet_emp(admin_id, timesheets, employee_id, month, year, 
                                     run_onchange_admin_id, run_onchange_timesheet_ids, run_onchange_employee_id, context)"
                                       context="{'employee_timesheet': 1, 'context_year': year, 'context_month': month, 'timesheet':timesheets,'admin_id':admin_id,
                                				  'tree_view_ref':'vhr_human_resource.view_vhr_human_resource_mimimal_employee_tree','onchange_employee': True}"/>
                            </group>
                            <field name="run_onchange_admin_id" invisible='1'/>
                            <field name="run_onchange_timesheet_ids" invisible='1'/>
                            <field name="run_onchange_employee_id" invisible='1'/>
                            <field name="run_onchange_month" invisible='1'/>
                            <field name="run_onchange_year" invisible='1'/>
                            
                        </group>
                        <group string="List of leave requests is waiting for approval">
                            <field name="waiting_approve_ids"
                                   mode="tree"
                                   context="{'form_view_ref' : 'vhr_timesheet.view_hr_holidays_new_form'}"
                                   readonly="1"
                                   nolabel="1"
                                   colspan="4">
                                <tree>
                                    <field name="employee_code" required="1" readonly="1"/>
                                    <field name="employee_id" readonly="1"/>
                                    <field name="date_from" readonly="1"/>
                                    <field name="date_to"/>
                                    <field name="number_of_days_temp" string="Leave Registration"/>
                                    <field name="holiday_status_id"/>
                                    <field name="state"/>
                                    <field name="waiting_for_id"/>                                        
                                </tree>
                            </field>
                        </group>
                        <!--<group string="List of lock employees">
                            <field name="lock_emp_ids"
                            	   readonly='1'
                                   context="{'form_view_ref' : 'vhr_timesheet.view_vhr_ts_lock_timesheet_detail_form'}"
                                   nolabel="1" colspan="4">
                                <tree string="Lock" editable="none" create="false" delete='false'>
				                    <field name="month"/>
				                    <field name="year" remove_thousand_seps="1"/>
				                    <field name="employee_id"/>
				                    <field name="employee_code"/>
				                    <field name="department_id"/>
				                </tree>
                            </field>
                            <field name="lock_emp_text" invisible='1'/>
                        </group>-->
                    </sheet>
                </form>
            </field>
        </record>

        <record id="act_vhr_ts_monthly_gen" model="ir.actions.act_window">
            <field name="name">Timesheet Detail Generation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vhr.ts.monthly.gen</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="vhr_ts_monthly_gen_view"/>
            <field name="target">new</field>
        </record>

        <record id="vhr_ts_employee_timesheet_summary_gen_view" model="ir.ui.view">
            <field name="name">vhr.ts.monthly.gen.form</field>
            <field name="model">vhr.ts.monthly.gen</field>
            <field name="arch" type="xml">
                <form string="Timesheet Summary Generation">
                    <sheet>
                        <div class="oe_right oe_button_box" name="button_box">
                            <button name="action_ts_summary_gen" one_click_button="True"
                                    string="Generate" type="object"
                                    class="oe_stat_button bg_icon_green" icon="fa-mail-forward"/>
                            <button string="Cancel" class="oe_stat_button bg_icon_red" special="cancel"
                                    icon="fa-times"/>
                        </div>
                        <group string="Timesheet Summary Generation">
                        	<group>
                                <field name="month" required="1" 
                                on_change="onchange_month(month, year, admin_id, timesheets, employee_id, run_onchange_month)"/>
                                <field name="year" required="1" options="{'remove_thousand_seps': 1}"
                                  on_change="onchange_year(month, year, admin_id, timesheets, employee_id, run_onchange_year)"/>                                
                                <field name="run_sql" groups="vhr_base.hrs_group_system"/>
                            </group>
                            <group>
                                <field name="admin_id"
                                       options="{'no_open': True, 'no_create': True}"
                                       on_change="onchange_admin_timesheet_emp(admin_id, timesheets, employee_id, month, year, 
                                     run_onchange_admin_id, run_onchange_timesheet_ids, run_onchange_employee_id, context)"
                                       groups="vhr_human_resource.vhr_cb"
                                       context="{'admin_timesheet': 1, 'context_year': year, 'context_month': month,'onchange_admin':True}"/>
                                <field name="timesheets" widget="many2many_tags" 
                                	context="{'timesheet_admin': 1, 'year': year, 'month': month,'filter_by_admin_id':admin_id,'onchange_timesheet':True}"
                                       options="{'no_open': True, 'no_create': True}"
                                       on_change="onchange_admin_timesheet_emp(admin_id, timesheets, employee_id, month, year, 
                                     run_onchange_admin_id, run_onchange_timesheet_ids, run_onchange_employee_id, context)"
                                        />
                                 <field name="employee_id"
                                       options="{'no_open': True, 'no_create': True}"
                                	   on_change="onchange_admin_timesheet_emp(admin_id, timesheets, employee_id, month, year, 
                                     run_onchange_admin_id, run_onchange_timesheet_ids, run_onchange_employee_id, context)"
                                       context="{'employee_timesheet': 1, 'context_year': year, 'context_month': month, 'timesheet':timesheets,'admin_id':admin_id,
                                				  'tree_view_ref':'vhr_human_resource.view_vhr_human_resource_mimimal_employee_tree','onchange_employee': True}"/>
                            </group>
                            <field name="run_onchange_admin_id" invisible='1'/>
                            <field name="run_onchange_timesheet_ids" invisible='1'/>
                            <field name="run_onchange_employee_id" invisible='1'/>
                            <field name="run_onchange_month" invisible='1'/>
                            <field name="run_onchange_year" invisible='1'/>
                            
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="act_vhr_ts_employee_timesheet_summary_gen" model="ir.actions.act_window">
            <field name="name">Timesheet Summary Generation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vhr.ts.monthly.gen</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="vhr_ts_employee_timesheet_summary_gen_view"/>
            <field name="target">new</field>
        </record>


        <record model="ir.actions.act_window" id="act_tracking_vhr_ts_monthly_gen">
            <field name="name">Timesheet Detail Progress</field>
            <field name="res_model">vhr.mass.status</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('model_id.model','=','vhr.ts.monthly')]</field>
            <field name="context">{'attachment':False,'rule_for_tree_form':True}</field>
            <field name="view_id" ref="vhr_common.view_vhr_mass_status_tree"/>
            <field name="search_view_id" ref="vhr_common.view_vhr_mass_status_search"/>
        </record>
        <record model="ir.actions.act_window" id="act_tracking_vhr_ts_summary_gen">
            <field name="name">Timesheet Summary Progress</field>
            <field name="res_model">vhr.mass.status</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('model_id.model','=','vhr.employee.timesheet.summary')]</field>
            <field name="context">{'attachment':False}</field>
            <field name="view_id" ref="vhr_common.view_vhr_mass_status_tree"/>
            <field name="search_view_id" ref="vhr_common.view_vhr_mass_status_search"/>
        </record>

    </data>
</openerp>