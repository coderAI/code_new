<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	
        <record id="vhr_ts_update_ot_summary_view" model="ir.ui.view">
            <field name="name">vhr.ts.update.ot.summary.form</field>
            <field name="model">vhr.ts.update.ot.summary</field>
            <field name="arch" type="xml">
                <form string="Update OT Summary">
                    	<separator string="Do you want to update OT details which are not summary?"/>
                    	<group>
                    		<field name='year' required='1' options="{'show_zero': 1}"/>
                    	</group>
                    <footer>
                            <button name="update_ot_summary" class="oe_highlight"
                                    string="Yes" type="object" context="{'type': 'update_detail'}"/>
                            or
                            <button special="cancel" string="Cancel" class="oe_link"/>
                     </footer>
                </form>
            </field>
        </record>

        <record id="act_vhr_ts_update_ot_summary" model="ir.actions.act_window">
            <field name="name">Update OT Summary</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vhr.ts.update.ot.summary</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="vhr_ts_update_ot_summary_view"/>
            <field name="target">new</field>
        </record>
        
        <record model="ir.actions.act_window" id="act_tracking_vhr_ts_update_ot_summary">
       		<field name="name">Update OT Summary Progress</field> 
            <field name="res_model">vhr.mass.status</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('model_id.model','=','vhr.ts.overtime.summarize'),('type','=','update_detail')]</field>
            <field name="context">{'attachment':False,'rule_for_tree_form':True}</field>
            <field name="view_id" ref="vhr_common.view_vhr_mass_status_tree"/>
            <field name="search_view_id" ref="vhr_common.view_vhr_mass_status_search"/>
       	</record>


    </data>
</openerp>