<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	
    	
    	<record id="view_vhr_timesheet_hr_department_form_inherit" model="ir.ui.view">
            <field name="name">vhr.ts.timesheet.hr.department.view.form.inherit</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="vhr_master_data.view_hr_department_form"/>
            <field name="arch" type="xml">
            	<xpath expr="//field[@name='email_group_id']" position="after">
                    <field name="timesheet_id"  attrs="{'invisible': [('organization_class_code','!=','DEPT')]}"
                         options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
                </xpath>
            </field>
        </record>
        
        
    </data>
</openerp>