<?xml version="1.0" ?>
<openerp>
    <data>

        <!-- Public Holidays -->
        <record model="ir.ui.view" id="view_vhr_ts_general_param_tree">
            <field name="name">vhr.ts.general.param.tree</field>
            <field name="model">vhr.ts.general.param</field>
            <field name="arch" type="xml">
                <tree string="General Parameter">
                    <field name="company_id" invisible="1"/>
                    <field name="effect_from"/>
                    <field name="effect_to" invisible="1"/>
                    <field name="is_latest" invisible="1"/>
                    <field name="standard_workday"/>
                    <field name="compensation_off_display"/>
                    <field name="new_staff_param_display"/>
                    <field name="termination_param_display"/>
                    <field name="change_level_param_display"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_vhr_ts_general_param_form">
            <field name="name">vhr.ts.general.param.form</field>
            <field name="model">vhr.ts.general.param</field>
            <field name="arch" type="xml">
                <form string="General Parameter">
                    <sheet>
                        <group string="General">
                            <field name="company_id"
                                   options="{'no_open': True, 'no_create': True}"
                                   attrs="{'readonly': [('is_latest','=',False)]}"
                                   invisible="1"/>
                            <field name="effect_from" required="1" attrs="{'readonly': [('is_latest','=',False)]}"/>
                            <field name="standard_workday" required="1"
                                   attrs="{'readonly': [('is_latest','=',False)]}"/>
                            <field name="active" readonly="1"/>
                            <label for="compensation_off_hour" style="padding-top: 10px !important;"
                                   string="Specified number of days off in compensation from the hours (B)"/>
                            <group style="padding-left: 0 !important;">
                                <div name="compensation_off_hour">
                                    <field name="compensation_off_hour" required="1" class="oe_inline"
                                           attrs="{'readonly': [('is_latest','=',False)]}"/>
                                    <label string="hours" class="oe_inline"/>
                                    <span style="margin: 0 10px 0 30px;">=</span>
                                    <field name="compensation_off_day" required="1" class="oe_inline"
                                           attrs="{'readonly': [('is_latest','=',False)]}"/>
                                    <span>days</span>
                                </div>
                            </group>
                        </group>
                        <field name="effect_to" invisible="1"/>
                        <field name="is_latest" invisible="1"/>
                        <group col="4" string="Range of join date to calculate leave days (C)">
                            <field name="new_staff_param_ids" nolabel="1" required="1"
                                   attrs="{'readonly': [('is_latest','=',False)]}">
                                <tree string="New Staff Param" editable="bottom">
                                    <field name="from_date" required="1" options="{'validate_date_number': 1}"/>
                                    <field name="to_date" required="1" options="{'validate_date_number': 1}"/>
                                    <field name="coef" required="1" options="{'show_zero': 1}"/>
                                    <field name="description"/>
                                </tree>
                            </field>
                        </group>
                        <group col="4" string="Range of termination date to calculate leave days (D)">
                            <field name="termination_param_ids" nolabel="1" required="1"
                                   attrs="{'readonly': [('is_latest','=',False)]}">
                                <tree string="Termination Param" editable="bottom">
                                    <field name="from_date" required="1" options="{'validate_date_number': 1}"/>
                                    <field name="to_date" required="1" options="{'validate_date_number': 1}"/>
                                    <field name="coef" required="1" options="{'show_zero': 1}"/>
                                    <field name="description"/>
                                </tree>
                            </field>
                        </group>
                        <group col="4" string="Range of change level date to calculate leave days (E)">
                            <field name="change_level_params_ids" nolabel="1" required="1"
                                   attrs="{'readonly': [('is_latest','=',False)]}">
                                <tree string="Change Level Param" version="7.0" editable="bottom" required="1">
                                    <field name="from_date" required="1" options="{'validate_date_number': 1}"/>
                                    <field name="to_date" required="1" options="{'validate_date_number': 1}"/>
                                    <field name="coef" required="1" options="{'show_zero': 1}"/>
                                    <field name="description"/>
                                </tree>
                            </field>
                        </group>
                        <notebook>
                            <page string="Logs">
                                <label string="*** Please press F5 to refresh the list of logs !" colspan="4"/>
                                <field name="audit_log_ids" mode="tree"
                                       widget="one2many_list" readonly="1" nolabel="1" colspan="4">
                                    <tree>
                                        <field name="timestamp" required="1" readonly="1"/>
                                        <field name="user_id" readonly="1"/>
                                        <field name="method" readonly="1"/>
                                        <field name="field_description"/>
                                        <field name="old_value_text"/>
                                        <field name="new_value_text"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_vhr_ts_general_param_search">
            <field name="name">vhr.ts.general.param.search</field>
            <field name="model">vhr.ts.general.param</field>
            <field name="arch" type="xml">
                <search string="General Parameter">
                    <field name="effect_from"/>
                    <field name="standard_workday"/>
                    <field name="compensation_off_hour"/>
                    <field name="active"/>
                    <filter string="Active = True" name="active_true" icon="terp-stage"
                            domain="[('active', '=', True)]"/>
                    <filter string="Active = False" name="active_false" icon="STOCK_NEW"
                            domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <record id="action_open_vhr_ts_general_param" model="ir.actions.act_window">
            <field name="name">General Parameter</field>
            <field name="res_model">vhr.ts.general.param</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</openerp>
