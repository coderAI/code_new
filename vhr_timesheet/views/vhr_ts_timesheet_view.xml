<openerp>
    <data>
        <record id="view_vhr_ts_timesheet_form" model="ir.ui.view">
            <field name="name">vhr.ts.timesheet.view.form</field>
            <field name="model">vhr.ts.timesheet</field>
            <field name="arch" type="xml">
                <form string="Timesheet" version="7.0">
                    <sheet>
                        <group col="4">
                            <group>
                                <field name="name" required="1"/>
                                <field name="code" required="1"/>
                                <field name="effect_from" required="1"
                                       on_change="onchange_date(effect_from,effect_to)"/>
                                <field name="latest_generation" readonly='1'/>
                            </group>
                            <group>
                                <field name="name_en"/>
                                <field name="active" readonly="1" options="{'save_readonly': True}"/>
                                <field name="effect_to" on_change="onchange_date(effect_from,effect_to)"/>
                            </group>
                        </group>
                        <group>
                            <field name="description" String="Description"/>
                        </group>
                        <notebook>
                            <page string="Details">
                                <field name="detail_ids" mode="tree"
                                       widget="one2many_list" readonly="1">
                                    <tree version="7.0">
                                        <field name="name" invisible="1"/>
                                        <field name="timesheet_id" invisible="1"/>
                                        <field name="from_date"/>
                                        <field name="to_date"/>
                                        <field name="admin_id"/>
                                        <field name="approve_id"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Current Employees">
                                <field name="employees" nolabel="1" readonly='1'>
                                	<tree string="Employees" version="7.0">
				                        <field name="code"/>
				                        <field name="name"/>
				                        <field name="login" string='Account'/>                        
				                        <field name="title_id"/>
				                        <field name="job_level_id"/>
				                        <field name="department_id"/>
				                        <field name="company_id"/>
				                        <field name="team_id"/>
				                        <field name="join_date"/>
				                        <field name="end_date"/>
				                    </tree>
                                </field>
                            </page>
                            <page string="Logs">
                                <label string="*** Please press F5 to refresh the list of logs !" colspan="4"/>
                                <field name="audit_log_ids" mode="tree"
                                       widget="one2many_list" readonly="1">
                                    <tree version="7.0">
                                        <field name="timestamp" required="1" readonly="1"/>
                                        <field name="user_id" readonly="1"/>
                                        <field name="method" readonly="1"/>
                                        <field name="field_description"/>
                                        <field name="old_value_text"/>
                                        <field name="new_value_text"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_vhr_ts_timesheet_tree" model="ir.ui.view">
            <field name="name">vhr.ts.timesheet.view.tree</field>
            <field name="model">vhr.ts.timesheet</field>
            <field name="arch" type="xml">
                <tree string="Timesheet" version="7.0">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="name_en"/>                    
                    <field name="effect_from"/>
                    <field name="effect_to"/>
                    <field name="active"/>
                    <field name="latest_generation"/>
                </tree>
            </field>
        </record>

        <record id="view_vhr_ts_timesheet_search" model="ir.ui.view">
            <field name="name">vhr.ts.timesheet.view.search</field>
            <field name="model">vhr.ts.timesheet</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="name" string="Name"
                           filter_domain="['|','|',('name','ilike',self),('name_en','ilike',self),('code','ilike',self)]"/>
                    <field name="description"/>
                    <filter string="Active = True" name="active_true" icon="terp-stage"
                            domain="[('active', '=', True)]"/>
                    <filter string="Active = False" name="active_false" icon="STOCK_NEW"
                            domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_vhr_ts_timesheet">
            <field name="name">Timesheet</field>
            <field name="res_model">vhr.ts.timesheet</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_ts_timesheet_tree"/>
            <field name="groups_id" eval=""/>
            <field name="search_view_id" ref="view_vhr_ts_timesheet_search"/>
        </record>

    </data>
</openerp>