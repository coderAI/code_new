<openerp>
    <data>
        <record model="ir.ui.view" id="edit_holiday_status_group_form">
            <field name="name">vhr.holidays.status.group.form</field>
            <field name="model">vhr.holidays.status.group</field>
            <field name="arch" type="xml">
                <form string="Leave Type Group">
                    <sheet string="Leave Type Group">
                        <group col='4'>
                            <field name="code" required="1"/>
                            <field name="name" required="1"/>
                            <field name="name_en" required="1"/>
                            <field name="gender" required="1"/>
                        </group>
                        <group>
                            <field name="is_allow_to_register_from_now_to_next_year"/>
                            <field name="is_check_remain_day_on_current_registration"/>
                            <field name="active"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_holiday_status_group_tree">
            <field name="name">vhr.holidays.status.group.tree</field>
            <field name="model">vhr.holidays.status.group</field>
            <field name="arch" type="xml">
                <tree string="Leave Type Group">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="name_en"/>
                    <field name="gender"/>
                    <field name="is_allow_to_register_from_now_to_next_year"/>
                    <field name="is_check_remain_day_on_current_registration"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="view_hr_holidays_status_group_search" model="ir.ui.view">
            <field name="name">vhr.holidays.status.group.search</field>
            <field name="model">vhr.holidays.status.group</field>
            <field name="arch" type="xml">
                <search string="Leave Type Group">
                    <filter string="Active = True" name="active_true" icon="terp-stage"
                            domain="[('active', '=', True)]"/>
                    <filter string="Active = False" name="active_false" icon="STOCK_NEW"
                            domain="[('active', '=', False)]"/>
                    <field name="code" required="1"/>
                    <field name="name" domain="['|', ('name','=',self), ('name_en','=',self)]"/>
                </search>
            </field>
        </record>

        <record id="open_view_holiday_status_group_tree" model="ir.actions.act_window">
            <field name="name">Leave Type Groups</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vhr.holidays.status.group</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" eval="view_holiday_status_group_tree"/>
            <field name="search_view_id" ref="view_hr_holidays_status_group_search"/>
        </record>

    </data>
</openerp>