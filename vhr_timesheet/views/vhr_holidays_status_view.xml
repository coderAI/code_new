<openerp>
    <data>
        <!-- Holidays status -->
        <record id="view_holidays_status_filter" model="ir.ui.view">
            <field name="name">hr.holidays.status.filter</field>
            <field name="model">hr.holidays.status</field>
            <field name="arch" type="xml">
                <search string="Search Leave Type">
                    <field name="name" string="Leave Types"
                           filter_domain="['|','|', ('name_en', 'ilike', self), ('name','ilike', self),('code','ilike',self)]"/>
                    <field name="holiday_status_group_id"/>
                    <filter string="Active = True" name="active_true" icon="terp-stage"
                            domain="[('active', '=', True)]"/>
                    <filter string="Active = False" name="active_false" icon="STOCK_NEW"
                            domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="edit_holiday_status_form">
            <field name="name">hr.holidays.status.form</field>
            <field name="model">hr.holidays.status</field>
            <field name="arch" type="xml">
                <form string="Leave Type">
                    <sheet string="Leave Type">
                        <group col="4">
                            <field name="code" required="1"/>
                            <field name="company_id" required="1" options="{'no_open': True, 'no_create': True}"/>
                            <field name="name" required="1"/>
                            <field name="name_en" required="1"/>
                            <field name="holiday_status_group_id" required="1"
                                   options="{'no_open': True, 'no_create': True}"/>
                            <field name="sequence" help="Position in List View"/>
                            <field name="active"/>
                        </group>
                        <notebook>
                            <page string="General">
                                <group>
                                    <group>
                                        <label for="timelines" style="padding-top: 10px !important;"
                                               string="Timelines"/>
                                        <group>
                                            <div style="margin-left: -13px !important;">
                                                <field name="timelines" required="1" style="width: 40% !important;"
                                                       options="{'show_zero': 1}"/>
                                                <field name="date_type" class="oe_inline" required="1"/>
                                            </div>
                                        </group>
                                        <field name="coefsal" required="1" options="{'show_zero': 1}"/>
                                        <field name="coefsi" options="{'show_zero': 1}"/>
                                        <field name="insurance_day" options="{'show_zero': 1}"/>
                                        <field name="is_allow_to_register_from_now_to_next_year" readonly='1'/>
                            			<field name="is_check_remain_day_on_current_registration" readonly='1' 
                            			   attrs="{'invisible':[('is_check_remain_day_on_current_registration','=',False)]}"/>
                            			<field name="is_check_remain_day_on_current_registration_local" 
                            			   attrs="{'invisible':[('is_check_remain_day_on_current_registration','=',True)]}"/>

                                    </group>
                                    <group>
                                        <field name="is_seniority"/>
                                        <field name="is_collaborator"/>
                                        <field name="is_import"/>
                                        <field name="is_require_paperwork"/>
                                        <field name="limit"/>
                                        <field name="check_to_date_insurance"/>
                                        <field name="is_date_range_include_rest_date"/>
                                        <field name="is_require_children"/>
                                        <field name="double_validation" invisible="1"/>
                                        <!--<field name="is_advance_holidays"/>-->
                                        <!--<field name="number_of_advance_holidays"-->
                                        <!--options="{'show_zero': 1}"-->
                                        <!--attrs="{'invisible':[('is_advance_holidays', '=', False)],-->
                                        <!--'required': [('is_advance_holidays', '=', True)]}"/>-->
                                    </group>

                                </group>
                                <field name="description" placeholder="Note" colspan="4"/>
                            </page>
                            <page string="Misc" invisible="1">
                                <group>
                                    <group name="second" string="Misc" col="2">
                                        <field name="color_name"/>
                                    </group>
                                    <group>
                                    </group>
                                </group>
                            </page>
                            <page string="Logs">
                                <label string="*** Please press F5 to refresh the list of logs !" colspan="4"/>
                                <field name="audit_log_ids" mode="tree"
                                       widget="one2many_list" readonly="1" nolabel="1" colspan="4">
                                    <tree version="7.0">
                                        <field name="timestamp" required="1" readonly="1"/>
                                        <field name="user_id" readonly="1"/>
                                        <field name="method" readonly="1"/>
                                        <field name="field_description"/>
                                        <field name="old_value_text"/>
                                        <field name="new_value_text"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_holiday_status_tree">
            <field name="name">hr.holidays.status.tree</field>
            <field name="model">hr.holidays.status</field>
            <field name="arch" type="xml">
                <tree string="Leave Type">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="name_en"/>
                    <field name="holiday_status_group_id"/>
                    <field name="timelines"/>
                    <field name="coefsal"/>
                    <field name="coefsi"/>
                    <field name="is_collaborator"/>
                    <field name="is_import"/>
                    <field name="is_require_paperwork"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="open_view_holiday_status" model="ir.actions.act_window">
            <field name="name">Leave Types</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.holidays.status</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" eval="view_holiday_status_tree"/>
            <field name="search_view_id" ref="view_holidays_status_filter"/>
        </record>


        <record model="ir.actions.act_window.view" id="action_open_view_holiday_status_tree">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_holiday_status_tree"/>
            <field name="act_window_id" ref="open_view_holiday_status"/>
        </record>

        <record model="ir.actions.act_window.view" id="action_open_view_holiday_status_form">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="edit_holiday_status_form"/>
            <field name="act_window_id" ref="open_view_holiday_status"/>
        </record>

        <record model="ir.ui.view" id="view_holiday_status_tree_simple">
            <field name="name">hr.holidays.status.simple.tree</field>
            <field name="model">hr.holidays.status</field>
            <field name="arch" type="xml">
                <tree string="Leave Type">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="name_en"/>
                </tree>
            </field>
        </record>

    </data>
</openerp>