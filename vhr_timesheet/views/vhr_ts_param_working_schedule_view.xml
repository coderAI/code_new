<?xml version="1.0" ?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_vhr_ts_param_working_schedule_tree">
            <field name="name">vhr.ts.param.working.schedule.tree</field>
            <field name="model">vhr.ts.param.working.schedule</field>
            <field name="arch" type="xml">
                <tree string="Parameter By Working Schedule">
                	<field name="working_schedule_group_id"/>
                    <field name="working_schedule_id"/>
                    <field name="param_type_id"/>
                    <field name="effect_from"/>
                    <field name="effect_to"/>
                    <field name="value"/>
                    <field name="coef_compensation_leave" string="Value of Compensation Leave"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_vhr_ts_param_working_schedule_form">
            <field name="name">vhr.ts.param.working.schedule.form</field>
            <field name="model">vhr.ts.param.working.schedule</field>
            <field name="arch" type="xml">
                <form version="7.0" string="Parameter By Working Schedule">
                    <sheet>
                        <group>
                            <group>
                                <field name="param_type_id" required="1" attrs="{'readonly': [('is_latest','=',False)]}"
                                       context="{'param_type_group': 'TS_SCHEDULE'}"/>
                                <field name="value_type" required="1" attrs="{'readonly': [('is_latest','=',False)]}"
                                       on_change="onchange_value_type()"/>
                                <field name="active" readonly='1'/>
                            </group>
                            <group>
                            	<field name="working_schedule_group_id"
                                       on_change="onchange_working_schedule_group_id(working_schedule_group_id)"
                                       options="{'no_open': True, 'no_create': True}"
                                       attrs="{'readonly': [('is_latest','=',False)]}"/>
                                       
                                <field name="working_schedule_id"
                                       on_change="onchange_working_schedule_id(working_schedule_id)"
                                       options="{'no_open': True, 'no_create': True}"
                                       attrs="{'readonly': [('is_latest','=',False)],'required':[('working_schedule_group_id','=',False)],'invisible':[('working_schedule_group_id','!=',False)]}"/>
                                       
                                <field name="effect_from" required="1" attrs="{'readonly': [('is_latest','=',False)]}"/>
                                <field name="coef"
                                       on_change="onchange_coef(coef)"
                                       attrs="{'invisible': [('value_type','!=','coef')],'required': [('value_type','=','coef')],'readonly': [('is_latest','=',False)]}"/>
                                <field name="coef_compensation_leave" options="{'show_zero': 1}"
                                       on_change="onchange_coef_compensation_leave(coef_compensation_leave)"
                                       attrs="{'invisible': [('value_type','!=','coef')],'required': [('value_type','=','coef')],'readonly': [('is_latest','=',False)]}"/>

                                <label for="time_from" string="Time(hh:mm)"
                                       attrs="{'invisible': [('value_type','!=','time')],'readonly': [('is_latest','=',False)]}"/>
                                <div attrs="{'invisible': [('value_type','!=','time')]}">
                                    <field name="time_from" style="width: 45%%" widget="float_time"
                                           on_change="onchange_time_from_to(time_from,time_to)"
                                           attrs="{'invisible': [('value_type','!=','time')],'required': [('value_type','=','time')],'readonly': [('is_latest','=',False)]}"/>
                                    <label for="time_to" string="-"/>
                                    <field name="time_to" style="width: 45%%" widget="float_time"
                                           on_change="onchange_time_from_to(time_from,time_to)"
                                           attrs="{'invisible': [('value_type','!=','time')],'required': [('value_type','=','time')],'readonly': [('is_latest','=',False)]}"/>
                                </div>
                            </group>

                            <field name="effect_to" invisible="1"/>
                            <field name="is_latest" invisible="1"/>
                        </group>

                        <group>
                            <field name="note" attrs="{'readonly': [('is_latest','=',False)]}"/>
                        </group>
                        <notebook>
                            <page string="Logs">
                                <label string="*** Please press F5 to refresh the list of logs !" colspan="4"/>
                                <field name="audit_log_ids" mode="tree"
                                       widget="one2many_list" readonly="1" nolabel="1" colspan="4">
                                    <tree version="7.0">
                                        <field name="timestamp" required="1" readonly="1"/>
                                        <field name="user_id" readonly="1"/>
                                        <field name="method" readonly="1"/>
                                        <field name="field_description"/>
                                        <field name="old_value_text"/>
                                        <field name="new_value_text"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_vhr_ts_param_working_schedule_search">
            <field name="name">vhr.ts.param.working.schedule.search</field>
            <field name="model">vhr.ts.param.working.schedule</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <group expand="0" string="Group by...">
                        <filter string="Working Schedule" name="working_schedule_id"
                                context="{'group_by':'working_schedule_id'}"/>
                        <filter string="Parameter" name="param_type_id" context="{'group_by':'param_type_id'}"/>
                    </group>
                    <group expand="0" string="Filter">
                        <filter string="Active = True" name="active_true" icon="terp-stage"
                                domain="[('active', '=', True)]"/>
                        <filter string="Active = False" name="active_false" icon="STOCK_NEW"
                                domain="[('active', '=', False)]"/>
                    </group>
                    <field name="working_schedule_id"/>
                    <field name="param_type_id"/>
                </search>
            </field>
        </record>

        <record id="act_vhr_ts_param_working_schedule" model="ir.actions.act_window">
            <field name="name">Parameter By Working Schedule</field>
            <field name="res_model">vhr.ts.param.working.schedule</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</openerp>
