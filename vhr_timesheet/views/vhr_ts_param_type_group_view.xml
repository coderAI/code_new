<?xml version="1.0" ?>
<openerp>
    <data>

        <!-- Public Holidays -->
        <record model="ir.ui.view" id="view_vhr_ts_param_type_group_tree">
            <field name="name">vhr.ts.param.type.group.tree</field>
            <field name="model">vhr.ts.param.type.group</field>
            <field name="arch" type="xml">
                <tree string="Parameter Type Group">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="name_en"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_vhr_ts_param_type_group_form">
            <field name="name">vhr.ts.param.type.group.form</field>
            <field name="model">vhr.ts.param.type.group</field>
            <field name="arch" type="xml">
                <form version="7.0" string="Parameter Type Group">
                    <sheet>
                    	<group col='4'>
                        	<field name="name" required="1"/>
                        	<field name="name_en"/>
       						<field name="code" required="1"/>
                            <field name="active"/>
       					</group>
       					<group>
       						<field name="description"/>
       					</group>
       					<notebook>
       						<page string="Logs">
	                        	<label string="*** Please press F5 to refresh the list of logs !" colspan="4"/>
		                        <field name="audit_log_ids" mode="tree"
		                               widget="one2many_list" readonly="1" nolabel="1" colspan="4">
		                            <tree version="7.0">
		                                <field name="timestamp" required="1" readonly="1"/>
		                                <field name="user_id" readonly="1"/>
		                                <field name="method" readonly="1"/>
		                                <field name="field_description"/>
		                                <field name="old_value_text"/>
		                                <field name="new_value_text"/>
		                            </tree>
		                        </field>
	                        </page>
       					</notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_vhr_ts_param_type_group_search">
            <field name="name">vhr.ts.param.type.group.search</field>
            <field name="model">vhr.ts.param.type.group</field>
            <field name="arch" type="xml">
                <search string="Search">
                	<field name="name" string="Parameter Type Group" 
        			 filter_domain="['|','|','|',('name','ilike',self),('name_en','ilike',self),('code','ilike',self),('description','ilike',self)]"/>
        			
                    <filter string="Active = True" name="active_true" icon="terp-stage"
                            domain="[('active', '=', True)]"/>
                    <filter string="Active = False" name="active_false" icon="STOCK_NEW"
                            domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

		<record id="act_vhr_ts_param_type_group" model="ir.actions.act_window">
            <field name="name">Parameter Type Group</field>
            <field name="res_model">vhr.ts.param.type.group</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        
    </data>
</openerp>
