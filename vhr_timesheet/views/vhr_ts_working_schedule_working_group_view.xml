<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_vhr_ts_working_schedule_working_group_form" model="ir.ui.view">
            <field name="name">vhr.ts.working.schedule.working.group.view.form</field>
            <field name="model">vhr.ts.working.schedule.working.group</field>
            <field name="arch" type="xml">
                <form string="Working Schedule-Working Group" version="7.0" duplicate='false'>
                    <sheet>
                        <group col="4">
                            <field name="ts_working_schedule_id" required="1"
                                   options="{'no_open': True, 'no_create': True}"/>
                            <field name="ts_working_group_id" required="1"
                                   options="{'no_open': True, 'no_create': True}"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="description" colspan="4" nolabel="1" placeholder="Description ...."/>
                            <label string="*** Please press F5 to refresh the list of logs !" colspan="4"/>
                            <field name="audit_log_ids" mode="tree"
                                   widget="one2many_list" readonly="1" nolabel="1" colspan="4">
                                <tree version="7.0">
                                    <field name="timestamp" required="1" readonly="1"/>
                                    <field name="user_id" readonly="1"/>
                                    <field name="method" readonly="1"/>
                                    <field name="field_description"/>
                                    <field name="old_value_text"/>
                                    <field name="new_value_text"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_vhr_ts_working_schedule_working_group_tree" model="ir.ui.view">
            <field name="name">vhr.ts.working.schedule.working.group.view.tree</field>
            <field name="model">vhr.ts.working.schedule.working.group</field>
            <field name="arch" type="xml">
                <tree string="Working Schedule-Working Group" version="7.0">
                    <field name="ts_working_schedule_id"/>
                    <field name="ts_working_group_id"/>
                    <field name="description"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="view_vhr_ts_working_schedule_working_group_search" model="ir.ui.view">
            <field name="name">vhr.ts.working.schedule.working.group.view.search</field>
            <field name="model">vhr.ts.working.schedule.working.group</field>
            <field name="arch" type="xml">
                <search string="Working Schedule-Working Group">
                    <group expand="0" string="Group by...">
                        <filter string='Working Schedule' domain="[]" name="group_by_ts_working_schedule_id"
                                icon="terp-stock_symbol-selection"
                                context="{'group_by': 'ts_working_schedule_id'}"/>
                        <filter string='Working Group' domain="[]" name="group_by_ts_working_group_id"
                                icon="terp-stock_symbol-selection"
                                context="{'group_by': 'ts_working_group_id'}"/>
                    </group>
                    <group expand="0" string="Filter">
                        <filter string="Active = True" name="active_true" icon="terp-stage"
                                domain="[('active', '=', True)]"/>
                        <filter string="Active = False" name="active_false" icon="STOCK_NEW"
                                domain="[('active', '=', False)]"/>
                    </group>
                    <field name='ts_working_schedule_id'/>
                    <field name='ts_working_group_id'/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_vhr_ts_working_schedule_working_group">
            <field name="name">Working Schedule-Working Group</field>
            <field name="res_model">vhr.ts.working.schedule.working.group</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_ts_working_schedule_working_group_tree"/>
            <field name="search_view_id" ref="view_vhr_ts_working_schedule_working_group_search"/>
        </record>
    </data>
</openerp>