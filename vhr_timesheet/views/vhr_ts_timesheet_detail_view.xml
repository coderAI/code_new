<openerp>
    <data>
        <record id="view_vhr_ts_timesheet_detail_form" model="ir.ui.view">
            <field name="name">vhr.ts.timesheet.detail.view.form</field>
            <field name="model">vhr.ts.timesheet.detail</field>
            <field name="arch" type="xml">
                <form string="Timesheet Detail" version="7.0">
                    <sheet>
                        <group col="4">
                            <group>
                                <field name="name" invisible="1"/>
                                <field name="timesheet_id"
                                       required="1"
                                       options="{'no_open': True, 'no_create': True}"/>
                                <field name="admin_id"
                                       required="1"
                                       options="{'no_open': True, 'no_create': True}"/>
                                <field name="approve_id"
                                       required="1"
                                       options="{'no_open': True, 'no_create': True}"/>
                                <field name="is_salary_calculation"/>
                            </group>
                            <group>
                                <field name="year" readonly="1" options="{'remove_thousand_seps': 1}"/>
                                <field name="month" readonly="1"/>
                                <field name="from_date" readonly="1" on_change="onchange_date(from_date, to_date)"/>
                                <field name="to_date" readonly="1" on_change="onchange_date(from_date, to_date)"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Logs">
                                <label string="*** Please press F5 to refresh the list of logs !" colspan="4"/>
                                <field name="audit_log_ids" mode="tree"
                                       widget="one2many_list" readonly="1">
                                    <tree version="7.0">
                                        <field name="timestamp" required="1" readonly="1"/>
                                        <field name="user_id" readonly="1"/>
                                        <field name="method" readonly="1"/>
                                        <field name="field_description"/>
                                        <field name="old_value_text"/>
                                        <field name="new_value_text"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_vhr_ts_timesheet_detail_tree" model="ir.ui.view">
            <field name="name">vhr.ts.timesheet.detail.view.tree</field>
            <field name="model">vhr.ts.timesheet.detail</field>
            <field name="arch" type="xml">
                <tree string="Timesheet Detail" version="7.0" editable="top">
                    <field name="timesheet_id" required="1" options="{'no_open': True, 'no_create': True}"/>
                    <field name="admin_id" required="1" options="{'no_open': True, 'no_create': True}"/>
                    <field name="approve_id" required="1" options="{'no_open': True, 'no_create': True}"/>
                    <field name="is_salary_calculation"/>
                    <field name="year" readonly="1" remove_thousand_seps="1" options="{'remove_thousand_seps': 1}"/>
                    <field name="month" readonly="1"/>
                    <field name="from_date" readonly="1" on_change="onchange_date(from_date, to_date)"/>
                    <field name="to_date" readonly="1" on_change="onchange_date(from_date, to_date)"/>
                    <field name="close_date" readonly="1" on_change="onchange_close_date(to_date, close_date)"/>
                    <field name="name" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="view_vhr_ts_timesheet_detail_search" model="ir.ui.view">
            <field name="name">vhr.ts.timesheet.detail.view.search</field>
            <field name="model">vhr.ts.timesheet.detail</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="month"/>
                    <field name="year"/>
                    <field name="timesheet_id" string="Timesheet"/>
                    <field name="admin_id" string="Admin"/>
                    <field name="approve_id" string="Approver"/>
                    <group expand="0" string="Group by...">
                        <filter name="group_timesheet" string="Timesheet" icon="terp-personal" domain="[]"
                                context="{'group_by':'timesheet_id'}"/>                        
                        <filter string="Year" name="group_year" context="{'group_by':'year'}"/>
                        <filter string="Month" name="group_month" context="{'group_by':'month'}"/>
                        <filter string="Admin" name="group_admin_id" context="{'group_by':'admin_id'}"/>
                    </group>
                    <group expand="0" string="Filter">
                        <filter string="Current Month" name="current_month"
                                domain="[('from_date','&lt;=',(context_today()).strftime('%Y-%m-%d')),
                                ('to_date','&gt;=',(context_today()).strftime('%Y-%m-%d'))]"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_vhr_ts_timesheet_detail">
            <field name="name">Timesheet Setting</field>
            <field name="res_model">vhr.ts.timesheet.detail</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_current_month': 1,
            					   'rule_for_tree_form': True,'create':False,'duplicate':False}</field>
            <field name="view_id" ref="view_vhr_ts_timesheet_detail_tree"/>
            <field name="groups_id" eval=""/>
            <field name="search_view_id" ref="view_vhr_ts_timesheet_detail_search"/>
        </record>

    </data>
</openerp>