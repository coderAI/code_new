<?xml version="1.0" ?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_vhr_ts_ws_employee_tree">
            <field name="name">vhr.ts.ws.employee.tree</field>
            <field name="model">vhr.ts.ws.employee</field>
            <field name="arch" type="xml">
                <tree string="Working Schedule Employee" editable='top'>
                    <field name="employee_code" readonly='1'/>
                    <field name="employee_id" on_change="onchange_employee_id(employee_id)" required='1'
                    options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
                    <field name="department_id" readonly='1'/>
                    <field name="current_timesheet_id" readonly='1'/>
                    <!--<field name="company_id"/>-->
                    <field name="ws_id" required='1'
                    options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
                    <field name="ts_working_group_id" readonly='1'
                    options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
                    <field name="effect_from" required='1'/>
                    <field name="effect_to" readonly='1'/>
                    <field name="active" readonly='1'/>
                </tree>	
            </field>
        </record>

        <record model="ir.ui.view" id="view_vhr_ts_ws_employee_form">
            <field name="name">vhr.ts.ws.employee.form</field>
            <field name="model">vhr.ts.ws.employee</field>
            <field name="arch" type="xml">
                <form version="7.0" string="Working Schedule Employee" edit='false'>
                    <sheet>
                        <group col='4'>
                            <field name="employee_id" required='1' 
                            options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"
                                   on_change="onchange_employee_id(employee_id)"/>
                            <!--<field name="company_id" options="{'no_open': True}"  invisible='1'/>-->
                            <field name="ws_id"
                                   required="1"
                                   options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
                            <field name="ts_working_group_id"
                                   options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"
                                   readonly="1"/>
                            <field name="effect_from" required="1"/>
                        </group>
                        <group col='4'>
                            <field name="employee_code" readonly="1"/>
                            <field name="department_id" readonly='1' options="{'no_open': True}"/>
                            <field name="active" readonly='1'/>
                            <field name="effect_to" invisible='1'/>
                            <field name="is_new" invisible='1'/>
                        </group>
                        <notebook>
                            <page string="Logs">
                                <label string="*** Please press F5 to refresh the list of logs !" colspan="4"/>
                                <field name="audit_log_ids" mode="tree"
                                       widget="one2many_list" readonly="1" nolabel="1" colspan="4">
                                    <tree version="7.0">
                                        <field name="timestamp" required="1" readonly="1"/>
                                        <field name="user_id" readonly="1"/>
                                        <field name="method" readonly="1"/>
                                        <field name="field_description"/>
                                        <field name="old_value_text"/>
                                        <field name="new_value_text"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_vhr_ts_ws_employee_search">
            <field name="name">vhr.ts.ws.employee.search</field>
            <field name="model">vhr.ts.ws.employee</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <group expand="0" string="Group by...">
                        <!--<filter string="Company" name="company" context="{'group_by':'company_id'}"/>-->
                        <filter string="Working Schedule" name="Working Schedule" context="{'group_by':'ws_id'}"/>
                        <!--<filter string="Working Group" name="Working Group" context="{'group_by':'ts_working_group_id'}"/>-->
                    </group>
                    <group expand="0" string="Filter">
                        <filter string="Active = True" name="active_true" icon="terp-stage"
                                domain="[('active', '=', True)]"/>
                        <filter string="Active = False" name="active_false" icon="STOCK_NEW"
                                domain="[('active', '=', False)]"/>
                    </group>
                    <group expand="0" string="Filter by Employee">
                        <filter string="Active Employee" name="active_employee" icon="terp-stage"
                                domain="[('employee_id.active', '=', True)]"/>
                        <filter string="Inactive Employee" name="inactive_employee" icon="terp-stage"
                                domain="[('employee_id.active', '=', False)]"/>
                    </group>

                    <field name="name" string="Working Schedule of Employee"
                           filter_domain="['|','|',('employee_id.name','ilike',self),('employee_id.login','ilike',self),('employee_id.code','ilike',self)]"/>
                    <!--<field name="company_id"/>-->
                    <field name="effect_from" string="Effect From &#62;="
                           filter_domain="[('effect_from','>=',self)]"/>
                    <field name="ws_id"/>
                    <field name="current_timesheet_id"/>
                </search>
            </field>
        </record>

        <record id="act_vhr_ts_ws_employee" model="ir.actions.act_window">
            <field name="name">Working Schedule Employee</field>
            <field name="res_model">vhr.ts.ws.employee</field>
            <field name="type">ir.actions.act_window</field>
            <field name="context">{'search_default_active_employee':1, 'search_default_active_true':1,
            					   'rule_for_tree_form':True,'attachment':False,'duplicate':False}</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="limit">20</field>
        </record>

    </data>
</openerp>
