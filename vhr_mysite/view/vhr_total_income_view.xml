<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
    	<record id="view_vhr_total_income_tree" model="ir.ui.view">
            <field name="name">vhr.total.income.tree</field>
            <field name="model">vhr.total.income</field>
            <field name="arch" type="xml">
                <tree string="Total Income" version="7.0">
                	<field name="period"/>
                	<field name="employee_id" />
                    <field name="total_allowance"/>
                    <field name="total_benefit"/>
                    <field name="gross_salary"/>
                    <field name="total"/>
                </tree>
            </field>
        </record>
        
        <record id="view_vhr_total_income_form" model="ir.ui.view">
            <field name="name">vhr.total.income.form</field>
            <field name="model">vhr.total.income</field>
            <field name="arch" type="xml">
                <form string="Total Income" version="7.0">
					<sheet>
						<div>
                            <div class="oe_edit_only">
                                <label for="name" string="Name"/>
                            </div>
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
							<group name="General Left">
								<field name="employee_id" readonly="1"
									options="{'save_readonly' : True, 'no_quick_create' : True, 'no_create':True, 'no_open': True}"/>
							</group>
							<group name="General Right">
								<field name="employee_code" readonly="1"/>
							</group>
						</group>
                        <group colspan="4">
							<field name="period" readonly="1"/>
						</group>
                        <group name="General">
                        	<separator colspan="4" string="Allowance" />
                        	<group name="General Left">
								<field name="bonus_tet" widget="monetary"/>
								<field name="allowance_lunch" widget="monetary"/>
								<field name="allowance_packing" widget="monetary"/>
								<field name="allowance_petrol" widget="monetary"/>
								<field name="allowance_duty" widget="monetary"/>
								<field name="allowance_house_rent" widget="monetary"/>
								<field name="allowance_other" widget="monetary"/>
							</group>
							<group name="General Right">
								<field name="bonus_tet_actual" widget="monetary"/>
								<field name="allowance_lunch_actual" widget="monetary"/>
								<field name="allowance_packing_actual" widget="monetary"/>
								<field name="allowance_petrol_actual" widget="monetary"/>
								<field name="allowance_duty_actual" widget="monetary"/>
								<field name="allowance_house_rent_actual" widget="monetary"/>
								<field name="allowance_other_actual" widget="monetary"/>
							</group>
						</group>
                        <group>
							<separator colspan="4" string="Salary by Working" />
							<group name="General Left">
								<field name="incentive" widget="monetary"/>
								<field name="bonus_kpi" widget="monetary"/>
							</group>
							<group name="General Right">
								<field name="incentive_actual" widget="monetary"/>
								<field name="bonus_kpi_actual" widget="monetary"/>
							</group>
						</group>
                        <group>
							<separator colspan="4" string="Salary from ESOP" />
							<group name="General Left">
								<field name="total_esop_executable" widget="monetary"/>
								<field name="total_from_esop" widget="monetary"/>
							</group>
							<group name="General Right">
								<field name="total_esop_executable_actual" widget="monetary"/>
								<field name="total_from_esop_actual" widget="monetary"/>
							</group>
                        </group>
                        <group>
                        	<separator colspan="4" string="Support" />
                        	<group name="General Left">
								<field name="allowance_tel" widget="monetary"/>
								<field name="allowance_taxi" widget="monetary"/>
								<field name="allowance_team_building" widget="monetary"/>
								<field name="allowance_party" widget="monetary"/>
								<field name="insurance_compulsory" widget="monetary"/>
							</group>
							<group name="General Right">
								<field name="allowance_tel_actual" widget="monetary"/>
								<field name="allowance_taxi_actual" widget="monetary"/>
								<field name="allowance_team_building_actual" widget="monetary"/>
								<field name="allowance_party_actual" widget="monetary"/>
								<field name="insurance_compulsory_actual" widget="monetary"/>
							</group>
						</group>
                        <group>
                        	<separator colspan="4" string="Health Benefit" />
							<group name="General Left">
								<field name="insurance_24h" widget="monetary"/>
								<field name="insurance_health" widget="monetary"/>
								<field name="yearly_health_check" widget="monetary"/>
								<field name="gym_cost" widget="monetary"/>
							</group>
							<group name="General Right">
								<field name="insurance_24h_actual" widget="monetary"/>
								<field name="insurance_health_actual" widget="monetary"/>
								<field name="yearly_health_check_actual" widget="monetary"/>
								<field name="gym_cost_actual" widget="monetary"/>
							</group>
						</group>
                        <group>
                        	<separator colspan="4" string="Training Benefit" />
							<group name="General Left">
								<field name="benefit_training" widget="monetary"/>
							</group>
							<group name="General Right">
								<field name="benefit_training_actual" widget="monetary"/>
							</group>
						</group>
                        <group>
                        	<separator colspan="4" string="Leave" />
							<group name="General Left">
								<field name="entitled_leave" />
								<field name="entitled_leave_holiday" />
								<field name="entitled_leave_money" />
								<field name="entitled_leave_holiday_money" />
								<field name="total_leave_money" />
							</group>
							<group name="General Right">
								<field name="entitled_leave_actual" />
								<field name="entitled_leave_holiday_actual" />
								<field name="entitled_leave_money_actual" />
								<field name="entitled_leave_holiday_money_actual" />
								<field name="total_leave_money_actual" />
							</group>
                        </group>
					</sheet>
				</form>
            </field>
        </record>
    	
    	<record model="ir.actions.act_window" id="act_vhr_total_income">
            <field name="name">Total Income</field>
            <field name="res_model">vhr.total.income</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_total_income_tree"/>
        </record>
    
    </data>
</openerp>
