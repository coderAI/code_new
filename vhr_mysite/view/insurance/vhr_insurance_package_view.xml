<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
    	<record id="view_vhr_insurance_package_tree" model="ir.ui.view">
            <field name="name">vhr.insurance.package.tree</field>
            <field name="model">vhr.insurance.package</field>
            <field name="arch" type="xml">
                <tree string="Insurance Package" version="7.0">
                	<field name="name" />
                    <field name="code"/>
                    <field name="description"/>
                </tree>
            </field>
            <field name="groups_id" eval="[(6, 0, [ref('vhr_human_resource.vhr_cb'),])]" />
        </record>
        
        <record id="view_vhr_insurance_package_form" model="ir.ui.view">
            <field name="name">vhr.insurance.package.form</field>
            <field name="model">vhr.insurance.package</field>
            <field name="arch" type="xml">
                <form string="Insurance Package" version="7.0">
					<sheet>
						<div>
                            <div class="oe_edit_only">
                                <label for="name" string="Name"/>
                            </div>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group name="General">
                        	<group name="General Left">
								<field name="code"/>
							</group>
							<group name="General Right">
								<field name="description"/>
							</group>
						</group>
					</sheet>
				</form>
            </field>
            <field name="groups_id" eval="[(6, 0, [ref('vhr_human_resource.vhr_cb'),])]" />
        </record>
        
        <record id="view_vhr_insurance_package_search" model="ir.ui.view">
            <field name="name">vhr.insurance.package.search</field>
            <field name="model">vhr.insurance.package</field>
            <field name="groups_id" eval=""/>
            <field name="arch" type="xml">
                <search string="Insurance Package">
                    <field name="name" />
                    <field name="code"/>
                </search>
            </field>
            <field name="groups_id" eval="[(6, 0, [ref('vhr_human_resource.vhr_cb'),])]" />
        </record>
    	
    	<record model="ir.actions.act_window" id="act_vhr_insurance_package">
            <field name="name">Insurance Package</field>
            <field name="res_model">vhr.insurance.package</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_insurance_package_tree"/>
            <field name="search_view_id" ref="view_vhr_insurance_package_search"/>
        </record>
    
    </data>
</openerp>
