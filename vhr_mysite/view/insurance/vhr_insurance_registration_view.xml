<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
    	<record id="view_vhr_insurance_registration_tree" model="ir.ui.view">
            <field name="name">vhr.insurance.registration.tree</field>
            <field name="model">vhr.insurance.registration</field>
            <field name="arch" type="xml">
                <tree string="Insurance Registration" version="7.0">
                	<field name="name" />
                    <field name="period_id"/>
                    <field name="employee_id"/>
                </tree>
            </field>
            <field name="groups_id" eval="[(6, 0, [ref('vhr_human_resource.vhr_cb'),])]" />
        </record>
        
        <record id="view_vhr_insurance_registration_form" model="ir.ui.view">
            <field name="name">vhr.insurance.registration.form</field>
            <field name="model">vhr.insurance.registration</field>
            <field name="arch" type="xml">
                <form string="Insurance Registration" version="7.0">
					<sheet>
						<div>
                            <div class="oe_edit_only">
                                <label for="name" string="Name"/>
                            </div>
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group name="General">
                        	<group name="General Left">
								<field name="period_id" required='1'
                                	options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}"/>
                                <field name="is_buy" />
							</group>
							<group name="General Right">
								<field name="employee_id" required='1'
                                	options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}"/>
							</group>
						</group>
						<group string="Family Registration" col='4' attrs="{'invisible' : [('is_buy', '=', False)]}">
                            <field name="family_ids" nolabel='1'>
                            	<tree string="Family Registration" editable='top'>
				                    <field name="name" attrs="{'required' : True}"/>
				                    <field name="id_number" attrs="{'required' : True}"/>
				                    <field name="birth_date" attrs="{'required' : True}"/>
				                    <field name="relation_id" attrs="{'required' : True}"
                                	options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}"/>
				                    <field name="package_id" attrs="{'required' : True}"
                                	options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}"/>
				                </tree>
                            </field>
                        </group>
					</sheet>
				</form>
            </field>
            <field name="groups_id" eval="[(6, 0, [ref('vhr_human_resource.vhr_cb'),])]" />
        </record>
        
        <record id="view_vhr_insurance_registration_search" model="ir.ui.view">
            <field name="name">vhr.insurance.registration.search</field>
            <field name="model">vhr.insurance.registration</field>
            <field name="groups_id" eval=""/>
            <field name="arch" type="xml">
                <search string="Insurance Registration">
                    <field name="employee_id"/>
                </search>
            </field>
            <field name="groups_id" eval="[(6, 0, [ref('vhr_human_resource.vhr_cb'),])]" />
        </record>
    	
    	<record model="ir.actions.act_window" id="act_vhr_insurance_registration">
            <field name="name">Insurance Registration</field>
            <field name="res_model">vhr.insurance.registration</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_insurance_registration_tree"/>
            <field name="search_view_id" ref="view_vhr_insurance_registration_search"/>
        </record>
    
    </data>
</openerp>
