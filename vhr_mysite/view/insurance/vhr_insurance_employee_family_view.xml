<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
    	<record id="view_vhr_insurance_employee_family_tree" model="ir.ui.view">
            <field name="name">vhr.insurance.employee.family.tree</field>
            <field name="model">vhr.insurance.employee.family</field>
            <field name="arch" type="xml">
                <tree string="Family Registration" version="7.0">
                	<field name="name" />
                    <field name="insurance_id"/>
                    <field name="id_number"/>
                    <field name="birth_date"/>
                    <field name="relation_id"/>
                    <field name="package_id"/>
                </tree>
            </field>
            <field name="groups_id" eval="[(6, 0, [ref('vhr_human_resource.vhr_cb'),])]" />
        </record>
        
        <record id="view_vhr_insurance_employee_family_form" model="ir.ui.view">
            <field name="name">vhr.insurance.employee.family.form</field>
            <field name="model">vhr.insurance.employee.family</field>
            <field name="arch" type="xml">
                <form string="Family Registration" version="7.0">
					<sheet>
						<div>
                            <div class="oe_edit_only">
                                <label for="name" string="Name"/>
                            </div>
                            <h1>
                                <field name="name" required="1"/>
                            </h1>
                        </div>
                        <group name="General">
                        	<group name="General Left">
								<field name="insurance_id" required='1'
                                	options="{'no_quick_create' : True, 'no_create':True, 'no_open': True}"/>
                                <field name="id_number" required="1"/>
                                <field name="birth_date" required="1"/>
							</group>
							<group name="General Right">
								<field name="relation_id" required="1"/>
                                <field name="package_id" required="1"/>
							</group>
						</group>
					</sheet>
				</form>
            </field>
            <field name="groups_id" eval="[(6, 0, [ref('vhr_human_resource.vhr_cb'),])]" />
        </record>
        
        <record id="view_vhr_insurance_employee_family_search" model="ir.ui.view">
            <field name="name">vhr.insurance.employee.family.search</field>
            <field name="model">vhr.insurance.employee.family</field>
            <field name="groups_id" eval=""/>
            <field name="arch" type="xml">
                <search string="Family Registration">
                    <field name="name"/>
                    <field name="insurance_id"/>
                    <field name="id_number"/>
                </search>
            </field>
            <field name="groups_id" eval="[(6, 0, [ref('vhr_human_resource.vhr_cb'),])]" />
        </record>
    	
    	<record model="ir.actions.act_window" id="act_vhr_insurance_employee_family">
            <field name="name">Family Registration</field>
            <field name="res_model">vhr.insurance.employee.family</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_insurance_employee_family_tree"/>
            <field name="search_view_id" ref="view_vhr_insurance_employee_family_search"/>
        </record>
    
    </data>
</openerp>
