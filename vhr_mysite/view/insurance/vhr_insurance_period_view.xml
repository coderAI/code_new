<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
    	<record id="view_vhr_insurance_period_tree" model="ir.ui.view">
            <field name="name">vhr.insurance.period.tree</field>
            <field name="model">vhr.insurance.period</field>
            <field name="arch" type="xml">
                <tree string="Insurance Period" version="7.0">
                	<field name="name" />
                    <field name="from_date"/>
                    <field name="to_date"/>
                    <field name="note"/>
                </tree>
            </field>
            <field name="groups_id" eval="[(6, 0, [ref('vhr_human_resource.vhr_cb'),])]" />
        </record>
        
        <record id="view_vhr_insurance_period_form" model="ir.ui.view">
            <field name="name">vhr.insurance.period.form</field>
            <field name="model">vhr.insurance.period</field>
            <field name="arch" type="xml">
                <form string="Insurance Period" version="7.0">
					<sheet>
						<div>
                            <div class="oe_edit_only">
                                <label for="name" string="Name"/>
                            </div>
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group name="General">
                        	<group name="General Left">
								<field name="from_date"/>
							</group>
							<group name="General Right">
								<field name="to_date"/>
							</group>
						</group>
						<group colspan="2">
							<field name="note"/>
						</group>
					</sheet>
				</form>
            </field>
            <field name="groups_id" eval="[(6, 0, [ref('vhr_human_resource.vhr_cb'),])]" />
        </record>
        
        <record id="view_vhr_insurance_period_search" model="ir.ui.view">
            <field name="name">vhr.insurance.period.search</field>
            <field name="model">vhr.insurance.period</field>
            <field name="groups_id" eval=""/>
            <field name="arch" type="xml">
                <search string="Insurance Period">
                    <field name="name" />
                    <field name="from_date"/>
                    <field name="to_date"/>                 
                </search>
            </field>
            <field name="groups_id" eval="[(6, 0, [ref('vhr_human_resource.vhr_cb'),])]" />
        </record>
    	
    	<record model="ir.actions.act_window" id="act_vhr_insurance_period">
            <field name="name">Insurance Period</field>
            <field name="res_model">vhr.insurance.period</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_insurance_period_tree"/>
            <field name="search_view_id" ref="view_vhr_insurance_period_search"/>
        </record>
    
    </data>
</openerp>
