<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
    	<record id="view_vhr_payslip_tree" model="ir.ui.view">
            <field name="name">vhr.payslip.tree</field>
            <field name="model">vhr.payslip</field>
            <field name="arch" type="xml">
                <tree string="Payslip" version="7.0">
                	<field name="period" />
                	<field name="year"/>
                	<field name="month"/>
                	<field name="employee_id" />
                    <field name="gross_salary"/>
                    <field name="basic_salary"/>
                    <field name="allowance_salary"/>
                    <field name="total_gross_income"/>
                    <field name="total_sub"/>
                    <field name="net_salary"/>
                </tree>
            </field>
        </record>
        
        <record id="view_vhr_payslip_form" model="ir.ui.view">
            <field name="name">vhr.payslip.form</field>
            <field name="model">vhr.payslip</field>
            <field name="arch" type="xml">
                <form string="Payslip" version="7.0">
					<sheet>
						<div>
                            <div class="oe_edit_only">
                                <label for="name" string="Name"/>
                            </div>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
							<group name="General Left">
								<field name="employee_id"
									options="{'save_readonly' : True, 'no_quick_create' : True, 'no_create':True, 'no_open': True}"/>
							</group>
							<group name="General Right">
								<field name="employee_code"/>
							</group>
						</group>
						<group name="General">
                        	<group name="General Left">
								<field name="year"/>
							</group>
							<group name="General Right">
								<field name="month"/>
							</group>
						</group>
                        <group colspan="2">
							<field name="period"/>
						</group>
                        <group name="General">
                        	<separator colspan="4" string="Basic Salary Information"/>
                        	<group name="General Left">
								<field name="gross_salary" widget="monetary"/>
								<field name="allowance_salary" widget="monetary"/>
								<field name="basic_salary" widget="monetary"/>
								<field name="allowance_special_salary" widget="monetary"/>
								<field name="v_bonus" widget="monetary"/>
								<field name="actual_general_v_bonus" widget="monetary"/>
							</group>
							<group name="General Right">
								<field name="prev_gross_salary" widget="monetary"/>
								<field name="prev_allowance_salary" widget="monetary"/>
								<field name="prev_basic_salary" widget="monetary"/>
								<field name="prev_allowance_special_salary" widget="monetary"/>
								<field name="prev_v_bonus" widget="monetary"/>
								<field name="prev_actual_general_v_bonus" widget="monetary"/>
							</group>
						</group>
						<group name="General">
                        	<separator colspan="4" string="Month Information"/>
                        	<group name="General Left">
								<field name="standard_day"/>
								<field name="actual_wds"/>
								<field name="prev_actual_wds"/>
								<field name="unpaid_leave"/>
								<field name="paid_leave"/>
								<field name="leave_75_si"/>
								<field name="leave_100_si"/>
							</group>
							<group name="General Right">
								<field name="ot_normal_day"/>
								<field name="ot_normal_night"/>
								<field name="ot_dayoff_day"/>
								<field name="ot_dayoff_night"/>
								<field name="ot_holiday_day"/>
								<field name="ot_holiday_money"/>
							</group>
						</group>
						<group name="General">
                        	<separator colspan="4" string="Total Gross Income"/>
                        	<group name="General Left">
								<field name="actual_salary"/>
								<field name="actual_basic_salary"/>
								<field name="prev_actual_basic_salary"/>
								<field name="actual_general_allowance"/>
								<field name="prev_actual_general_allowance"/>
								<field name="actual_allowance_special_salary"/>
							</group>
							<group name="General Right">
								<field name="meal_allowance"/>
								<field name="parking_allowance"/>
								<field name="holiday_bonus"/>
								<field name="other_income"/>
								<field name="overtime_pay"/>
								<field name="performance_salary"/>
							</group>
							<group colspan="4">
								<field name="total_gross_income"/>
							</group>
						</group>
						<group name="General">
                        	<separator colspan="4" string="Total Gross Income"/>
                        	<group name="General Left">
								<field name="insurance_required"/>
							</group>
							<group name="General Right">
								<field name="pit"/>
								<field name="other_tax_income"/>
								<field name="meal_allowance_no_tax"/>
								<field name="ot_money_no_tax"/>
								<field name="self_deduction"/>
								<field name="dependent_deduction"/>
							</group>
							<group colspan="4">
								<field name="total_sub"/>
							</group>
						</group>
						<group name="General">
                        	<separator colspan="4" string="Total NET Income"/>
                        	<group name="General Left">
								<field name="federation_fee"/>
								<field name="company_advance"/>
								<field name="other_adjust"/>
							</group>
							<group name="General Right">
								<field name="advance_salary"/>
								<field name="remain_net_income"/>
							</group>
							<group colspan="4">
								<field name="net_salary"/>
							</group>
						</group>
						<group colspan="4">
							<field name="note"/>
						</group>
						<group colspan="4">
							<field name="explain1"/>
						</group>
                        <group colspan="4">
							<field name="explain2"/>
						</group>
					</sheet>
				</form>
            </field>
        </record>
        
        <record id="view_vhr_payslip_search" model="ir.ui.view">
            <field name="name">vhr.payslip.search</field>
            <field name="model">vhr.payslip</field>
            <field name="groups_id" eval=""/>
            <field name="arch" type="xml">
                <search string="Payslip">
                    <field name="employee_id"/>
                    <group expand="0" string="Group By">
		                 <filter name="group_by_year" string="Year"
		                               context="{'group_by':'year'}"/>
		                 <filter name="group_by_month" string="Month"
		                               context="{'group_by':'month'}"/>
                   </group>
                </search>
            </field>
            <!--<field name="groups_id" eval="[(6, 0, [ref('vhr_payroll.vhr_cnb_payroll'),])]" />-->
        </record>
    	
    	<record model="ir.actions.act_window" id="act_vhr_payslip">
            <field name="name">Payslip</field>
            <field name="res_model">vhr.payslip</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_payslip_tree"/>
        </record>
    
    </data>
</openerp>
