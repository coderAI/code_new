<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_vhr_employee_coordinate_form" model="ir.ui.view">
            <field name="name">vhr.employee.coordinate.view.form</field>
            <field name="model">vhr.employee.coordinate</field>
            <field name="groups_id" eval="[(4, ref('vhr_human_resource.vhr_cb'))]"/>
            <field name="arch" type="xml">
                <form string="Employee Coordinate" version="7.0">
       				<sheet>
       					<group col="4">
       						<field name="employee_id"  required="1" 
       						on_change="onchange_employee_id(employee_id)"
       						options="{'save_readonly' : True, 'no_quick_create' : True, 'no_create':True, 'no_open': True}"/>
                            <field name="employee_code"  readonly="1"/>
       						<field name="lat" required="1"/>
       						<field name="long" required="1" />
       						<field name="address" colspan='4'/>
       						<field name="note" colspan='4'/>
       						<field name='active'/>
       					</group>
       					<notebook>
       						<page string="Logs">
	                        	<label string="*** Please press F5 to refresh the list of logs !" colspan="4"/>
		                        <field name="audit_log_ids" mode="tree"
		                               widget="one2many_list" readonly="1" nolabel="1" colspan="4">
		                            <tree version="7.0">
		                                <field name="timestamp" required="1" readonly="1"/>
		                                <field name="user_id" readonly="1"/>
		                                <field name="method" readonly="1"/>
		                                <field name="field_description"/>
		                                <field name="old_value_text"/>
		                                <field name="new_value_text"/>
		                            </tree>
		                        </field>
	                        </page>
       					</notebook>
       				</sheet>
       			</form>
            </field>
        </record>

        <record id="view_vhr_employee_coordinate_tree" model="ir.ui.view">
            <field name="name">vhr.employee.coordinate.view.tree</field>
            <field name="model">vhr.employee.coordinate</field>
            <field name="groups_id" eval="[(4, ref('vhr_human_resource.vhr_cb'))]"/>
            <field name="arch" type="xml">
                <tree string="Employee Coordinate" version="7.0">
 					<field name="employee_code"/>
 					<field name="employee_id"/>
 					<field name="lat"/>
 					<field name="long"/>
 					<field name="address"/>
 					<field name="active"/>
                </tree>
            </field>
        </record>

        <record id="view_vhr_employee_coordinate_search" model="ir.ui.view">
            <field name="name">vhr.employee.coordinate.view.search</field>
            <field name="model">vhr.employee.coordinate</field>
            <field name="groups_id" eval="[(4, ref('vhr_human_resource.vhr_cb'))]"/>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name='lat'/>
                    <field name="long" />
                    <field name="address" />
                     <field name="name" string="Employee"
                               filter_domain="['|','|','|',('name','ilike',self),('employee_id.name','ilike',self),('employee_id.login','ilike',self),('employee_id.code','ilike',self)]"/>
              
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_vhr_employee_coordinate">
            <field name="name">Employee Coordinate</field>
            <field name="res_model">vhr.employee.coordinate</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_employee_coordinate_tree"/>
            <field name="groups_id" eval=""/>
            <field name="search_view_id" ref="view_vhr_employee_coordinate_search"/>
        </record>
        
        <menuitem name='Employee Coordinate'
				action="act_vhr_employee_coordinate"
				id="menu_vhr_employee_coordinate" 
        		sequence="3" parent="hr.menu_hr_main"
        		groups="vhr_human_resource.vhr_cb"/>
    </data>
</openerp>