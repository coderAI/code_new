<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
	
		<template id="vhr_mysite.report_payslip_template_style">
			<t t-call="vhr_mysite.report_bootstrap_style">
			.wrapper {
				font-family: 'Arial', Georgia, Serif !important;
				font-size: 10px;
			}
			.report-header,
			.report-title {
				font-weight: bold;
				text-align: center;
			}
			.report-content {
				width: 100%;
				display: inline-block;
			}
			
			table tbody tr td {
			    font-size: 10px;
			}
			
			.table > tbody > tr > td {
				padding: 2px 5px 2px 5px;
				line-height: 1;
			}
			
			.line-total {
				background-color: rgb(51, 63, 79) !important;
				color: #FFF;
				text-transform: uppercase;
			    font-weight: bold;
			}
			
			.line-subtotal {
				background-color: rgb(189, 214, 238) !important;
				font-weight: bold;
				color: rgb(51, 63, 79);
			}
			
			.pleft20 {
				padding-left: 20px !important;
			}
			
			.pright15 {
				padding-right: 15px !important;
			}
			
			.report-footer {
				font-weight: bold;
			}
			
			.mt20 {
				margin-top: 20px;
			}
			</t>
		</template>
		
		<template id="vhr_mysite.report_payslip_template_layout"
			inherit_id="web.layout" primary="True">
			<!-- Add report style -->
			<xpath expr="//head" position="inside">
				<style type="text/css">
					<t t-call="vhr_mysite.report_payslip_template_style" />
				</style>
			</xpath>
		</template>
		
		<template id="vhr_mysite.report_payslip_template">
			<t t-call="vhr_mysite.report_payslip_template_layout">
				<t t-call="report.html_container">
					<t t-foreach="docs" t-as="payslip">
						<div class="page">
							<div class="wrapper">
								<div class="company_logo">
									<img src="/vhr_mysite/static/src/img/payslip-logo.png" />
								</div>
								<div class="report-content text-center">
									<div class="report-header">
										<span t-if="not en">
											<b>BẢNG CHIẾT TÍNH LƯƠNG</b> <br/>
										</span>
										<span t-if="en">
											<b>PAYSLIP</b> <br/>
										</span>
										<span t-if="not en">Tháng: <t t-esc="payslip.period or ''" /></span>
										<span t-if="en">Month: <t t-esc="payslip.period or ''" /></span>
									</div>
									<br />
									<table class="table table-bordered">
										<tbody>
											<t t-if="payslip.employee_id">
												<t t-set="employee" t-value="payslip.employee_id" />
												<tr>
													<td class="text-right col-xs-6">
														<span t-if="not en">Họ và Tên:</span>
														<span t-if="en">Employee Name:</span>
													</td>
													<td class="text-left"><span t-esc="employee.name" /></td>
												</tr>
												<tr>
													<td class="text-right">
														<span t-if="not en">Mã nhân viên:</span>
														<span t-if="en">Employee Code:</span>
													</td>
													<td class="text-left"><span t-esc="employee.code" /></td>
												</tr>
												<tr>
													<td class="text-right">
														<span t-if="not en">Công ty:</span>
														<span t-if="en">Company:</span>
													</td>
													<td class="text-left"><span t-esc="employee.company_id and employee.company_id.name or ''" /></td>
												</tr>
												<tr>
													<td class="text-right">
														<span t-if="not en">Phòng ban:</span>
														<span t-if="en">Department:</span>
													</td>
													<td class="text-left"><span t-esc="employee.department_id and employee.department_id.name or ''" /></td>
												</tr>
												<tr>
													<td class="text-right">
														<span t-if="not en">Số tài khoản ngân hàng:</span>
														<span t-if="en">Bank Account No:</span>
													</td>
													<td class="text-left"><span t-esc="payslip.get_employee_bank_number()" /></td>
												</tr>
												<tr>
													<td class="text-right">
														<span t-if="not en">Mã số thuế thu nhập cá nhân:</span>
														<span t-if="en">Individual Tax Code:</span>
													</td>
													<td class="text-left"><span t-esc="payslip.get_employee_tax_number()" /></td>
												</tr>
											</t>
										</tbody>
									</table>
									<br/>
									<table class="table table-bordered">
										<tbody>
											<t t-if="payslip">
												<tr>
													<td class="line-subtotal" colspan="4">
														<span t-if="not en">THÔNG TIN CƠ BẢN</span>
														<span t-if="en">BASIC INFORMATION</span>
													</td>
													<td class="line-subtotal text-center text-bold col-xs-2">
														<span t-if="not en">LƯƠNG CŨ</span>
														<span t-if="en">OLD SALARY</span>
													</td>
													<td class="line-subtotal text-center text-bold col-xs-2">
														<span t-if="not en">LƯƠNG MỚI</span>
														<span t-if="en">CURRENT SALARY</span>
													</td>
												</tr>
												<tr>
													<td class="text-left col-xs-5">
														<span t-if="not en">Tổng mức lương thỏa thuận</span>
														<span t-if="en">Gross salary</span>
													</td>
													<td class="col-xs-1">(1)</td>
													<td colspan="2"></td>
													<td class="text-right"><span t-esc="payslip.format_money(payslip.prev_gross_salary)" /></td>
													<td class="text-right"><span t-esc="payslip.format_money(payslip.gross_salary)" /></td>
												</tr>
												<tr>
													<td class="text-left">
														<span t-if="not en">Mức lương</span>
														<span t-if="en">Base salary for insurance contributions</span>
													</td>
													<td>(2)</td>
													<td colspan="2"></td>
													<td class="text-right"><span t-esc="payslip.format_money(payslip.prev_basic_salary)" /></td>
													<td class="text-right"><span t-esc="payslip.format_money(payslip.basic_salary)" /></td>
												</tr>
												<t t-if="(int(payslip.year) &lt; 2016) or (int(payslip.year) == 2016 and int(payslip.month) &lt; 4)">
													<tr>
														<td class="text-left">
															<span t-if="not en">Trợ cấp tổng hợp</span>
															<span t-if="en">General allowance</span>
														</td>
														<td>(3)</td>
														<td colspan="2"></td>
														<td class="text-right"><span t-esc="payslip.format_money(payslip.prev_allowance_salary)" /></td>
														<td class="text-right"><span t-esc="payslip.format_money(payslip.allowance_salary)" /></td>
													</tr>
												</t>
												<t t-if="int(payslip.year) > 2016 or (int(payslip.year) == 2016 and int(payslip.month) >= 4)">
													<tr>
														<td class="text-left">
															<span t-if="not en">Thưởng V_Bonus</span>
															<span t-if="en">V_Bonus</span>
														</td>
														<td>(3)</td>
														<td colspan="2"></td>
														<td class="text-right"><span t-esc="payslip.format_money(payslip.prev_v_bonus)" /></td>
														<td class="text-right"><span t-esc="payslip.format_money(payslip.v_bonus)" /></td>
													</tr>
												</t>
												<tr>
													<td class="text-left">
														<span t-if="not en">Trợ cấp đặc thù của bộ phận</span>
														<span t-if="en">Special allowance</span>
													</td>
													<td>(4)</td>
													<td colspan="2"></td>
													<td class="text-right"><span t-esc="payslip.format_money(payslip.prev_allowance_special_salary)" /></td>
													<td class="text-right"><span t-esc="payslip.format_money(payslip.allowance_special_salary)" /></td>
												</tr>
												<tr class="line-emty-half"></tr>
												<tr>
													<td class="line-subtotal" colspan="6">
														<span t-if="not en">THÔNG TIN TRONG THÁNG</span>
														<span t-if="en">INFORMATION IN MONTH</span>
													</td>
												</tr>
												<tr>
													<td class="text-left col-xs-5">
														<span t-if="not en">Tổng số ngày công chuẩn</span>
														<span t-if="en">Standard working days</span>
													</td>
													<td class="col-xs-1">(5)</td>
													<td colspan="3"></td>
													<td class="text-right col-xs-2"><span t-esc="payslip.standard_day" /></td>
												</tr>
												<tr>
													<td class="text-left">
														<span t-if="not en">Tổng số ngày công thực tế</span>
														<span t-if="en">Actual working days</span>
													</td>
													<td>(6)</td>
													<td colspan="2"></td>
													<td class="text-right col-xs-2"><span t-esc="payslip.prev_actual_wds" /></td>
													<td class="text-right col-xs-2"><span t-esc="payslip.actual_wds" /></td>
												</tr>
												<tr>
													<td class="text-left">
														<span t-if="not en">Tổng số ngày nghỉ không lương</span>
														<span t-if="en">Unpaid leave</span>
													</td>
													<td>(7)</td>
													<td colspan="3"></td>
													<td class="text-right"><span t-esc="payslip.unpaid_leave" /></td>
												</tr>
												<tr>
													<td class="text-left">
														<span t-if="not en">Tổng số ngày nghỉ hưởng lương</span>
														<span t-if="en">Paid leave</span>
													</td>
													<td>(8)</td>
													<td colspan="3"></td>
													<td class="text-right"><span t-esc="payslip.paid_leave" /></td>
												</tr>
												<tr>
													<td class="text-left">
														<span t-if="not en">Tổng số ngày nghỉ hưởng lương BHXH (tỷ lệ 75%)</span>
														<span t-if="en">Leave subject to 75% Social Insurance payment</span>
													</td>
													<td>(9)</td>
													<td colspan="3"></td>
													<td class="text-right"><span t-esc="payslip.leave_75_si" /></td>
												</tr>
												<tr>
													<td class="text-left">
														<span t-if="not en">Tổng số ngày nghỉ hưởng lương BHXH (tỷ lệ 100%)</span>
														<span t-if="en">Leave subject to 100% Social Insurance payment</span>
													</td>
													<td>(10)</td>
													<td colspan="3"></td>
													<td class="text-right"><span t-esc="payslip.leave_100_si" /></td>
												</tr>
												<tr>
													<td class="text-left">
														<span t-if="not en">Số ngoài giờ làm việc ngày thường</span>
														<span t-if="en">OT during working day (h)</span>
													</td>
													<td>(11a)</td>
													<td colspan="3"></td>
													<td class="text-right"><span t-esc="payslip.ot_normal_day" /></td>
												</tr>
												<tr>
													<td class="text-left">
														<span t-if="not en">Số ngoài giờ làm việc ngày thường ca 3</span>
														<span t-if="en">OT during working day (Shift 3) (h)</span>
													</td>
													<td>(11b)</td>
													<td colspan="3"></td>
													<td class="text-right"><span t-esc="payslip.ot_normal_night" /></td>
												</tr>
												<tr>
													<td class="text-left">
														<span t-if="not en">Số ngoài giờ làm việc ngày nghỉ (thứ 7, CN)</span>
														<span t-if="en">OT during weekend (h)</span>
													</td>
													<td>(12a)</td>
													<td colspan="3"></td>
													<td class="text-right"><span t-esc="payslip.ot_dayoff_day" /></td>
												</tr>
												<tr>
													<td class="text-left">
														<span t-if="not en">Số ngoài giờ làm việc ngày nghỉ (thứ 7, CN) ca 3</span>
														<span t-if="en">OT during weekend (Shift 3) (h)</span>
													</td>
													<td>(12b)</td>
													<td colspan="3"></td>
													<td class="text-right"><span t-esc="payslip.ot_dayoff_night" /></td>
												</tr>
												<tr>
													<td class="text-left">
														<span t-if="not en">Số ngoài giờ làm việc ngày lễ, tết</span>
														<span t-if="en">OT during holiday (h)</span>
													</td>
													<td>(13a)</td>
													<td colspan="3"></td>
													<td class="text-right"><span t-esc="payslip.ot_holiday_day" /></td>
												</tr>
												<tr>
													<td class="text-left">
														<span t-if="not en">Số ngoài giờ làm việc ngày lễ, tết ca 3</span>
														<span t-if="en"> OT during holiday (Shift 3) (h)</span>
													</td>
													<td>(13b)</td>
													<td colspan="3"></td>
													<td class="text-right"><span t-esc="payslip.ot_holiday_money" /></td>
												</tr>
												<tr class="line-emty-half"></tr>
												<tr>
													<td class="line-total text-left" colspan="5">
														<span t-if="not en">I. TỔNG THU NHẬP PHÁT SINH TRONG THÁNG</span>
														<span t-if="en">I. TOTAL DERIVED INCOME</span>
													</td>
													<td class="line-total text-center"><span t-esc="payslip.format_money(payslip.total_gross_income)" /></td>
												</tr>
												<tr class="line-emty-half"></tr>
												<tr>
													<td colspan="5" class="line-subtotal col-xs-5">
														<span t-if="not en">A. LƯƠNG PHÁT SINH</span>
														<span t-if="en">A. DERIVED SALARY</span>
													</td>
													<td class="line-subtotal text-center"><span t-esc="payslip.format_money(payslip.actual_salary)" /></td>
												</tr>
												<tr>
													<td class="text-left col-xs-5">
														<span t-if="not en">Mức lương phát sinh</span>
														<span t-if="en">Derived base salary</span>
													</td>
													<td class="col-xs-1">(14)</td>
													<td class="col-xs-2" colspan="2">=(2)/(5)*(6)</td>
													<td class="text-right col-xs-2"><span t-esc="payslip.format_money(payslip.prev_actual_basic_salary)" /></td>
													<td class="text-right col-xs-2"><span t-esc="payslip.format_money(payslip.actual_basic_salary)" /></td>
												</tr>
												<t t-if="int(payslip.year) &lt; 2016 or (int(payslip.year) == 2016 and int(payslip.month) &lt; 4)">
													<tr>
														<td class="text-left">
															<span t-if="not en">Trợ cấp tổng hợp phát sinh</span>
															<span t-if="en">Derived general allowance</span>
														</td>
														<td>(15)</td>
														<td colspan="2">=(3)/(5)*(6)</td>
														<td class="text-right"><span t-esc="payslip.format_money(payslip.prev_actual_general_allowance)" /></td>
														<td class="text-right"><span t-esc="payslip.format_money(payslip.actual_general_allowance)" /></td>
													</tr>
												</t>
												<t t-if="int(payslip.year) > 2016 or (int(payslip.year) == 2016 and int(payslip.month) >= 4)">
													<tr>
														<td class="text-left">
															<span t-if="not en">Thưởng V_Bonus</span>
															<span t-if="en">Derived V_Bonus</span>
														</td>
														<td>(15)</td>
														<td colspan="2">=(3)/(5)*(6)</td>
														<td class="text-right"><span t-esc="payslip.format_money(payslip.prev_actual_general_v_bonus)" /></td>
														<td class="text-right"><span t-esc="payslip.format_money(payslip.actual_general_v_bonus)" /></td>
													</tr>
												</t>
												<tr>
													<td class="text-left">
														<span t-if="not en">Trợ cấp đặc thù của bộ phận phát sinh</span>
														<span t-if="en">Derived special allowance</span>
													</td>
													<td>(16)</td>
													<td colspan="3"></td>
													<td class="text-right"><span t-esc="payslip.format_money(payslip.actual_allowance_special_salary)" /></td>
												</tr>
												<tr class="line-emty-half"></tr>
												<tr>
													<td colspan="5" class="line-subtotal col-xs-5">
														<span t-if="not en">B. CÁC KHOẢN CỘNG THÊM</span>
														<span t-if="en">B. OTHER INCOME</span>
													</td>
													<td class="line-subtotal text-center"><span t-esc="payslip.format_money(payslip.actual_salary)" /></td>
												</tr>
												<tr>
													<td class="text-left col-xs-5">
														<span t-if="not en">Hỗ trợ cơm trưa (theo chính sách công ty)</span>
														<span t-if="en">Meal allowance</span>
													</td>
													<td class="col-xs-1">(17)</td>
													<td colspan="3"></td>
													<td class="text-right col-xs-2"><span t-esc="payslip.format_money(payslip.meal_allowance)" /></td>
												</tr>
												<tr>
													<td class="text-left">
														<span t-if="not en">Trợ cấp gửi xe (theo chính sách công ty)</span>
														<span t-if="en">Parking allowance</span>
													</td>
													<td>(18)</td>
													<td colspan="3"></td>
													<td class="text-right"><span t-esc="payslip.format_money(payslip.parking_allowance)" /></td>
												</tr>
												<tr>
													<td class="text-left">
														<span t-if="not en">Thưởng lễ</span>
														<span t-if="en">Holiday bonus</span>
													</td>
													<td>(19)</td>
													<td colspan="3"></td>
													<td class="text-right"><span t-esc="payslip.format_money(payslip.holiday_bonus)" /></td>
												</tr>
												<tr>
													<td class="text-left">
														<span t-if="not en">Các khoản khác (gồm trợ cấp công &amp; bù lương)</span>
														<span t-if="en">Other income</span>
													</td>
													<td>(20)</td>
													<td colspan="3">*</td>
													<td class="text-right"><span t-esc="payslip.format_money(payslip.other_income)" /></td>
												</tr>
												<tr>
													<td class="text-left">
														<span t-if="not en">Lương ngoài giờ</span>
														<span t-if="en">OT salary</span>
													</td>
													<td>(21)</td>
													<td colspan="3"></td>
													<td class="text-right"><span t-esc="payslip.format_money(payslip.overtime_pay)" /></td>
												</tr>
												<tr>
													<td class="text-left">
														<span t-if="not en">Lương doanh số</span>
														<span t-if="en">Commission salary</span>
													</td>
													<td>(22)</td>
													<td colspan="3"></td>
													<td class="text-right"><span t-esc="payslip.format_money(payslip.performance_salary)" /></td>
												</tr>
												<tr class="line-emty-half"></tr>
												<tr>
													<td class="line-total text-left" colspan="5">
														<span t-if="not en">II. TỔNG KHẤU TRỪ TRONG THÁNG</span>
														<span t-if="en">II. TOTAL DEDUCTION</span>
													</td>
													<td class="line-total text-center"><span t-esc="payslip.format_money(payslip.total_sub)" /></td>
												</tr>
												<tr class="line-emty-half"></tr>
												<tr>
													<td class="line-subtotal text-left" colspan="5">
														<span t-if="not en">A. BẢO HIỂM BẮT BUỘC (BHXH: 8.0%; BHYT: 1.5%; BHTN: 1.0%)</span>
														<span t-if="en">A. MANDATORY INSURANCE (Social: 8.0%; Health: 1.5%; Unemployment: 1.0%)</span>
													</td>
													<td class="line-subtotal text-center"><span t-esc="payslip.format_money(payslip.insurance_required)" /></td>
												</tr>
												<tr class="line-emty-half"></tr>
												<tr>
													<td colspan="5" class="line-subtotal col-xs-5">
														<span t-if="not en">B. THUẾ THU NHẬP CÁ NHÂN</span>
														<span t-if="en">B. PERSONAL INCOME TAX</span>
													</td>
													<td class="line-subtotal text-center"><span t-esc="payslip.format_money(payslip.pit)" /></td>
												</tr>
												<tr>
													<td class="text-left col-xs-5">
														<span t-if="not en">Các khoản thu nhập chịu thuế khác (đã thanh toán)</span>
