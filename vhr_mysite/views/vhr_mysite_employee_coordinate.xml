<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="employee_coordinate" name="Employee Coordinate">
            <t t-set="head">
                <!--<link href="/vhr_mysite/static/lib/esop/bootstrap-datepicker/css/datepicker.css" rel="stylesheet" type="text/css"/>
                <link href="/vhr_mysite/static/lib/esop/bootstrap-select2/select2.css" rel="stylesheet" type="text/css"/>
                <link href="/vhr_mysite/static/src/css/esop/style.css" rel="stylesheet" type="text/css"/>
                <script src="/vhr_mysite/static/lib/esop/bootstrap-datepicker/js/bootstrap-datepicker.js" type="text/javascript"/>
                <script src="/vhr_mysite/static/lib/esop/bootstrap-select2/select2.min.js" type="text/javascript"/>
                <script src="/vhr_mysite/static/lib/esop/jquery.bpopup.min.js" type="text/javascript"/>-->
                <script src="/vhr_mysite/static/src/js/emp_coor/employee_coordinate.js" type="text/javascript"/>
                <link href="/vhr_mysite/static/src/css/emp_coor/employee_coordinate.css"  rel="stylesheet" type="text/css"/>
            </t>
            <!--Call this layout to be synchronous with other sub layout -->
            <div style="display:None">
            	<t t-call="website.layout"></t>
            </div>
            
            <div id="wrap" class="employee_coordinate">
                <div class="oe_structure">
                    <div class="title-part">
                        <div class="col-sm-1"/>
                        <div class="col-sm-12">
                            <div class="row">
                            	<div id="side_panel">
                            		<form action="/map" method="post" id="emp_coor"  data-toggle="validator" role="form">
	                            		<div class="grid-title" style="margin: 0 15px 50px 10px">
	                                    	<div>
	                                    		<h4 style="font-family: arial">
	                                                <t t-esc="header"/>
	                                            </h4>
	                                    	</div>
	                                        
	                                    </div>
	                                    <div class="grid-body"  style="margin: 0 15px 10px 10px">
		                                    
		                                    <div class="row-fluid">
		                                    	<div class="row" style="margin: 0 -15px 15px -20px">
		                                    		<div class="col-md-12">
		                                    			<div class="glyphicon glyphicon-record" style="float:left;margin:15px 5px 0 0"></div>
		                                    			<div class="input-group" style="width:95%">
		                                    				<input type="text" name="origin_address" class="form-control" id='origin_address' t-att-value="coor_data['origin_address']"/>
				                                    		<span class="input-group-addon">
														        <i class="glyphicon glyphicon-search"></i>
														    </span>	
		                                    			</div>
		                                    		</div>
		                                    	</div>
		                                    </div>
		                                    <div class="row-fluid">
		                                    	<div class="row" style="margin-left: -20px">
		                                    		<div class="col-md-12">
		                                    			<div class="glyphicon glyphicon-map-marker" style="float:left;margin:15px 5px 0 0"></div>
		                                    			<div class="input-group" style="width:95%">
		                                    				<input type="text" name="dest_address" class="form-control" id='dest_address' value="Campus"  disabled="disabled"/>
		                                    			</div>
		                                    		</div>
		                                    	</div>
		                                    </div>
		                                    
		                                    <div class="row-fluid"  style="margin:25px 15px 0 15px">
		                                        <div class="row">
		                                            <p class="alert alert-success" id='map_info'>
		                                            </p>
		                                        </div>
		                                    </div>
		                                    <div class="row">
	                                            <div class="col-sm-6">
	                                                <div class="form-group">
	                                                    <label class="form-label">Latitude</label>
	                                                    <div class="controls">
	                                                        <input type="text" name="lat_value" class="form-control" id='lat_value' t-att-value="coor_data['lat_value']" readonly='1' />
	                                                    </div>
	                                                </div>
	                                            </div>
	                                            <div class="col-sm-6">
	                                                <div class="form-group">
	                                                    <label class="form-label">Longtitude</label>
	                                                    <div class="controls">
	                                                        <input type="text" name="long_value" class="form-control" id='long_value'  t-att-value="coor_data['long_value']" readonly='1'/>
	                                                    </div>
	                                                </div>
	                                            </div>
	                                           
	                                        </div>
	                                        <div class="row" style="display:None">
                                                <input type="text" name="cp_lat" class="form-control" id='cp_lat_value' t-att-value="campus['lat_value']" readonly='1' />
                                                <input type="text" name="cp_lng" class="form-control" id='cp_long_value'  t-att-value="campus['long_value']" readonly='1'/>
                                                <input type="text" name="distance_to_flem" class="form-control" id='distance_to_flem'   readonly='1'/>
                                                <input type="checkbox" name="is_updated" class="form-control" id='is_updated' 
                                                t-att-checked="'checked' if coor_data.get('is_updated') else ''" readonly='1'/>
                                                <input type="text" name="origin_address_default" class="form-control" id='origin_address_default'  
                                                t-att-value="coor_data['origin_address']" readonly='1'/>
	                                         </div>
	                                         <div style="text-align:right;" class='row-fluid'>
	                                            <t t-if="coor_data.get('lat_value', False) and coor_data.get('long_value')">
	                                                <button class="btn btn-success" id="btn_confirm" type='button'><t t-esc="btn_confirm"/></button>
	                                            </t>
	
	                                        </div>
	                                        <div class="row-fluid" t-if="error"  style="margin: 0 15px 25px 10px">
		                                        <div class="row">
		                                            <p class="alert alert-danger">
		                                                <t t-esc="error"/>
		                                            </p>
		                                        </div>
		                                    </div>
		                                    <div class="row-fluid" t-if="message"  style="margin: 0 15px 25px 10px">
		                                        <div class="row">
		                                            <p class="alert alert-success">
		                                                <t t-esc="message"/>
		                                            </p>
		                                        </div>
		                                    </div>
                                        </div>
                                       
                                    </form>
                            		
                            	</div>
                                <div class="grid simple horizontal">
                                    <div class="row-fluid">
                                            <div class="col-sm-6" id='map' style="height:100%;width:100%"></div>
                                                
										    <script async='defer' src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDLK_hTAW5Eah-O97zKdRZsDXDgjJYLa_Q&amp;callback=initMap">
										    </script>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
        </template>

    </data>
</openerp>
