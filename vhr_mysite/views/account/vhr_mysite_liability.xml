<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <template id="liability" name="Liabilities">
            <t t-set="head">
                <link href="/vhr_mysite/static/lib/esop/bootstrap-datepicker/css/datepicker.css" rel="stylesheet" type="text/css"/>
                <link href="/vhr_mysite/static/lib/esop/bootstrap-select2/select2.css" rel="stylesheet" type="text/css"/>
                <link href="/vhr_mysite/static/src/css/esop/style.css" rel="stylesheet" type="text/css"/>
                <script src="/vhr_mysite/static/lib/esop/bootstrap-datepicker/js/bootstrap-datepicker.js" type="text/javascript"/>
                <script src="/vhr_mysite/static/lib/esop/bootstrap-select2/select2.min.js" type="text/javascript"/>
                <script src="/vhr_mysite/static/src/js/esop/tabs_accordian.js" type="text/javascript"/>
                <script src="/vhr_mysite/static/lib/esop/jquery.bpopup.min.js" type="text/javascript"/>
            </t>
            <t t-call="website.layout">
                <div id="wrap" class="liability_list_view">
                    <div class="oe_structure">
                        <div class="title-part">
                            <div class="col-sm-12">
                                <div class="row">
                                    <div class="grid simple horizontal">
                                        <t t-if="header">
                                        <div class="grid-title text-center">
                                            <h4 style="font-family: arial">
                                                <span t-esc="header"/>
                                            </h4>
                                        </div>
                                        <form class="text-center" role="form" method="post" action="/liability" >
                                            <div class="form-group col-sm-3">
                                                <input placeholder="Số chứng từ" t-att-value="document_no" type="text" name="document_no" id="document_no" class="form-control" />
                                            </div>
                                            <div class="form-group col-sm-3">
                                                <input placeholder="Từ ngày" data-provide="datepicker" data-date-format="dd/mm/yyyy" t-att-value="date_from" type="text" name="date_from" id="date_from" class="form-control" />
                                            </div>
                                            <div class="form-group col-sm-3">
                                                <input placeholder="Đến ngày" data-provide="datepicker" data-date-format="dd/mm/yyyy" t-att-value="date_to" type="text" name="date_to" id="date_to" class="form-control" />
                                            </div>
                                            <div class="col-sm-3">
                                                <input type="hidden" name="domain" id="domain" value="[]" />
                                                <button type="submit" class="btn btn-success" id="btn_search">Tìm Kiếm</button>
                                            </div>
                                        </form>
                                        <br/>
                                        <div class="grid-body">
                                            <div class="row-fluid">
                                                <div class="row">
                                                    <table class="table table-condensed profile-tables" id="table_liabilities">
                                                        <thead>
                                                            <tr>
                                                                <th class="v-align-top">Mã Nhân Viên</th>
                                                                <th class="v-align-top">Tên Nhân Viên</th>
                                                                <th class="v-align-top">Bộ Phận</th>
                                                                <th class="v-align-top">Phòng Ban</th>
                                                                <th class="v-align-top">Số Chứng Từ</th>
                                                                <th class="v-align-top">Ngày Lập Chứng Từ</th>
                                                                <th class="v-align-top">Ngày Hoàn Ứng</th>
                                                                <th class="v-align-top">Tạm Ứng</th>
                                                                <th class="v-align-top">Diễn Giải</th>
                                                                <th/>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <t t-foreach="liability_datas" t-as="data">
                                                                <tr>
                                                                    <td>
                                                                        <span t-esc="data['employee_code']"/>
                                                                    </td>
                                                                    <td>
                                                                        <span t-esc="data['employee_name']"/>
                                                                    </td>
                                                                    <td>
                                                                        <span t-esc="data['department_name']"/>
                                                                    </td>
                                                                    <td>
                                                                        <span t-esc="data['div_name']"/>
                                                                    </td>
                                                                    <td>
                                                                       <span t-esc="data['document_no']"/>
                                                                    </td>
                                                                    <td>
                                                                       <span t-esc="data['document_day']"/>
                                                                    </td>
                                                                    <td>
                                                                       <span style="color: red" t-esc="data['reimbursement_day']"/>
                                                                    </td>
                                                                    <td>
                                                                       <span t-esc="'{0:,}'.format(int(data['advance_payment']))"/>
                                                                    </td>
                                                                    <td>
                                                                       <span t-esc="data['name']"/>
                                                                    </td>
                                                                    <td>
                                                                        <form role="form" action="/liability/form" method="post">
                                                                            <input type="hidden" t-att-value="data['id']" name="id" id="id" />
                                                                            <button type="submit" class="btn btn-primary btn-lg">Xem Chi Tiết</button>
                                                                        </form>
                                                                    </td>
                                                                </tr>
                                                            </t>
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

    </data>
</openerp>
