							</td>
						</tr>
						<tr>
							<td class="col-xs-3 required">Email cá nhân</td>
							<td>
								<t t-if="my_employee and my_employee.email">
									<a class="my_input_editable" id="my_email"
										t-att-data-value="my_employee.email"
										data-type="email"
										data-required="1"
										data-title="Email cá nhân (không nhập email tại Cty)"
										data-field="email">
										<t t-esc="my_employee.email" />
