						</tr>
						<tr>
							<td class="col-xs-3">Số nhà, tên đường</td>
							<td>
								<t t-if="my_employee and my_employee.temp_address">
									<a class="my_input_editable"
										id="my_temp_street"
										data-type="text"
										data-field="temp_address"
										data-title="Số nhà, tên đường, phường / xã"
										t-att-data-value="my_employee.temp_address">
										<span t-esc="my_employee.temp_address" />
									</a>
								</t>
								<t t-if="not my_employee or not my_employee.temp_address">
									<a class="my_input_editable"
										id="my_temp_street"
										data-type="text"
										data-field="temp_address"
										data-title="Số nhà, tên đường, phường / xã"></a>
								</t>
							</td>
						</tr>
					</tbody>
				</table>
			</div>
		</template>
		
		<!-- THE BUTTON UPDATE PROFILE -->
		<template id="vhr_mysite.my_profile_button_save">
			<t t-if="my_editable">
				<div class="text-right">
					<a href="#" class="btn btn-lg btn-primary btn_profile_send" id="btn_profile_send" >
						<span>Gửi</span>
						<div class="oe_breathing" ></div>
					</a>
				</div>
			</t>
		</template>
		
		<template id="vhr_mysite.iso_image_tracking">
			<t t-if="my_employee">
				<img style="display: none;" 
					t-att-src="'/vhr_mysite/static/src/img/blank.gif?randomnumber=' + 
							gen_string_random(size=15) + '&amp;username=' + my_employee.login or 'no_user'"/>
			</t>
		</template>
		
		<!-- TEMPLATE FOR PROFILE PAGE (NOW IS HOME PAGE) -->
		<template id="vhr_mysite.my_profile" name="Thông tin cá nhân">
			<t t-call="website.layout">
				<div class="my_profile">
					<t t-call="vhr_mysite.my_profile_button_save" />
					<t t-call="vhr_mysite.personal_info" />
					<t t-call="vhr_mysite.contact_info" />
					<!--<t t-call="vhr_mysite.holiday_info" />-->
					<t t-call="vhr_mysite.tabs_info" />
					<t t-call="vhr_mysite.my_profile_button_save" />
					<t t-call="vhr_mysite.iso_image_tracking" />
				</div>
			</t>
		</template>
		
		
		
		
		<!-- Demo page -->
		<template id="vhr_mysite.my_profile_demo" name="Thông tin cá nhân">
			<t t-call="website.layout">
				<div class="my_profile">
					<t t-call="vhr_mysite.demo_page" />
				</div>
			</t>
		</template>
		
		<!-- Demo page -->
		<template id="vhr_mysite.demo_page">
			<div class="container">
			    <h1 class="mt32">Chức năng đang được thực hiện</h1>
			    <p>
			        Chào mừng bạn đến với giao diện MYSITE mới.<br/>
			        Hiện tại MIS đang hoàn thiện chức năng để đưa đến những trải nghiệm mới mẻ cho Users.<br/>
			        Hãy ghé thăm trong một thời gian ngắn nữa nhé :)
			    </p>
			    <div class="button-primary go-system" t-if="check_permission">
					<h4 class="panel-title">
					  	<a href="/web">
					  		<i class="fa fa-sign-in fa-lg text-primary"></i>
					  		<span>Hệ thống HR</span>
					  	</a>
					</h4>
				</div>
			</div>
		</template>
		
		<!-- TEMPLATE FOR PROFILE PAGE TEMP -->
		<template id="vhr_mysite.my_profile_temp" name="Yêu cầu thay đổi thông tin">
			<t t-call="website.layout">
				<div class="my_common_notice">
					<i class="fa fa-file-o"></i>
					<span>Thông tin yêu cầu thay đổi</span>
				</div>
				<div class="my_profile_temp">
					<t t-foreach="res" t-as="values">
						<t t-call="vhr_mysite.info_temp_collapse">
							<t t-call="vhr_mysite.personal_info_temp" />
							<t t-call="vhr_mysite.contact_info_temp" />
							<t t-call="vhr_mysite.tabs_info_temp" />
						</t>
					</t>
				</div>
			</t>
		</template>


		<!-- CUSTOMIZE THE CURRENT WEBSITE LAYOUT -->
		<template id="vhr_mysite.layout" inherit_id="website.layout" name="Mysite Layout">
		
			<!-- HEAD: Fix the title-->
			<xpath expr="//head/t/t[@t-set='title']" position="replace">
				<t t-set="additional_title" t-value="main_object.name"/>
				<t t-set="title"><t t-raw="my_employee and my_employee.name + ' - ' or ''"/><t t-if="additional_title"><t t-raw="additional_title"/></t></t>
			</xpath>
			<!-- Insert the favicon -->
			<xpath expr="//head" position="inside">
				<link rel="icon" href="/vhr_mysite/static/src/img/icon_fav.ico" />
			</xpath>
			
			<!-- HEADER: -->
			<!-- add class app-header for the marionette app -->
			<xpath expr="//header" position="attributes">
				<attribute name="class">app-header</attribute>
			</xpath>
			<xpath expr="//header/div[@class='navbar navbar-default navbar-static-top']" position="attributes">
				<attribute name="style">display: none</attribute>
			</xpath>
			<xpath expr="//header" position="inside">
				<!--<div class="cover-image">-->
					<!--<a href="/">-->
						<!--<img src="/vhr_mysite/static/src/img/topBanner1.svg" />-->
					<!--</a>-->
				<!--</div>-->
			</xpath>
			
			<!-- MAIN: -->
			<!-- Replace main by new main for mysite:
					- Add basic infomation in the top
					- Add the side bar (menu) in the left
					- Move the t-raw to the  -->
			<xpath expr="//main" position="replace">
				<main class="app-main">
					<div id="my_employee_id">
						<t t-esc="my_employee_id or 1" />
					</div>
					<div id="my_employee_name">
						<t t-esc="my_employee_name or ''" />
					</div>
					<t t-if="my_employee">
						<div class="basic-info row">
							<t t-call="vhr_mysite.basic_info" />
						</div>
					</t>
					
					<div class="main-display row">
						<!-- is show button hide side bar -->
						<t t-if="show_button_toggle_sidebar">
							<div class="button-toggle-sidebar col-xs-12">
								<div id="button-toggle-sidebar">
									<i class="fa fa-minus-square-o"></i>
									<i class="fa fa-plus-square-o hidden"></i>
									<div class="oe_breathing" ></div>
								</div>
							</div>
						</t>
						<t t-if="my_employee and not demo_page">
							<div class="side-bar col-lg-3 col-md-3 col-sm-12 col-xs-12">
								<ul class="list-group">
									<t t-call="vhr_mysite.sidebar" />
								</ul>
							</div>
							<div class="main-content col-lg-9 col-md-9 col-sm-12 col-xs-12">
								<t t-if="show_notice">
									<t t-call="vhr_mysite.my_notices" />
								</t>
								<t t-raw="0" />
							</div>
						</t>
						<t t-if="not my_employee">
							<div class="container">
								<div class="row">
									<div class="main-content col-lg-12 col-md-12 col-sm-12 col-xs-12">
										<t t-raw="0" />
									</div>
								</div>
							</div>
						</t>
						
						<!-- Demo page -->
						<t t-if="my_employee and demo_page">
							<div class="container">
								<div class="row">
									<div class="main-content col-lg-12 col-md-12 col-sm-12 col-xs-12">
										<t t-raw="0" />
									</div>
								</div>
							</div>
						</t>
					</div>
					<t t-call="vhr_mysite.scroll_top" />
				</main>
			</xpath>
			
			<!-- FOOTER: -->
			<xpath expr="//footer" position="replace">
				<footer class="app-footer">
					<div class="container container_footer text-center">
						<span class="footer-description">© 2016</span>
					</div>
				</footer>
			</xpath>
			
			<!-- BODY -->
			<xpath expr="//body" position="inside">
				<script type="text/javascript" src="/vhr_mysite/static/src/js/config.js"></script>
			</xpath>
		</template>
    </data>
</openerp>
