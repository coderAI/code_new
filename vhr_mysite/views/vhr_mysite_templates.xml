		<!-- PERSONAL INFO -->
		<template id="vhr_mysite.personal_info">
			<div class="info-wrap"
				data-toggle="tooltip" role="tooltip"
       			data-placement="top" data-delay='{"show":"500", "hide":"100"}'
              	title="Nhấp vào thông tin có dòng chấm xanh bên dưới để chỉnh sửa">
				<div class="title-info"><h6>Thông tin cá nhân</h6></div>
				<table class="table" id="my_personal_info">
					<tbody>
						<tr>
							<td class="col-xs-3 required">Giới tính</td>
							<td>
								<t t-if="my_employee and my_employee.gender">
									<a href="#" id="my_gender" data-type="select"
									   data-title="Giới tính của bạn"
									   t-att-data-value="my_employee.gender"
									   data-field="gender"
									   data-required="1">
									   <t t-esc="get_gender_name(my_employee.gender)" />
									</a>
								</t>
								<t t-if="not my_employee or not my_employee.gender">
									<a href="#" id="my_gender" data-type="select" data-value=""
										data-title="Giới tính của bạn"
										class="editable editable-click"
										data-field="gender"
										data-required="1"></a>
								</t>
							</td>
						</tr>
						<tr>
							<td class="col-xs-3 required">Ngày sinh</td>
							<td>
								<t t-if="my_employee and my_employee.birthday">
									<a class="my_date_editable"
										data-type="combodate" data-title="Ngày sinh của bạn"
										t-att-data-value="my_employee and my_employee.birthday or ''"
										data-format="YYYY-MM-DD" data-viewformat="DD/MM/YYYY"
										data-template="DD / MMM / YYYY"
										data-field="birthday"
										data-required="1">
									<t t-esc="my_employee and format_date(my_employee.birthday) or ''" /></a>
								</t>
								<t t-if="not my_employee or not my_employee.birthday">
									<a class="my_date_editable"
										data-type="combodate" data-title="Ngày sinh của bạn"
										t-att-data-value="my_employee and my_employee.birthday or ''"
										data-format="YYYY-MM-DD" data-viewformat="DD/MM/YYYY"
										data-template="DD / MMM / YYYY"
										data-field="birthday"
										data-required="1"></a>
								</t>
							</td>
						</tr>
						<tr>
							<td class="col-xs-3 required">Tình trạng hôn nhân</td>
							<td>
								<t t-if="my_employee and my_employee.marital">
									<a href="#" id="my_marital" data-type="select"
										t-att-data-value="my_employee.marital"
										data-field="marital"
									   	data-title="Tình trạng hôn nhân"
									   	data-required="1">
									   	<t t-esc="get_marital_name(my_employee.marital)" />
									</a>
								</t>
								<t t-if="not my_employee or not my_employee.marital">
									<a href="#" id="my_marital" data-type="select"
										data-field="marital"
									   	data-title="Tình trạng hôn nhân"
									   	data-required="1"></a>
								</t>
							</td>
						</tr>
						<tr>
							<td class="col-xs-3">Số con</td>
							<td>
								<t t-if="my_employee and my_employee.children">
									<a href="#" id="my_children"
									   class="my_number_editable"
									   t-att-data-value="my_employee.children"
									   data-type="text"
									   data-field="children"
									   data-title="Bạn có mấy cháu rồi?">
									   <span t-esc="my_employee.children" />
									</a>
								</t>
								<t t-if="not my_employee or not my_employee.children">
									<a href="#" id="my_children"
										class="my_number_editable"
										data-type="text"
										data-field="children"
										data-title="Bạn có mấy cháu rồi?"></a>
								</t>
							</td>
						</tr>
						<tr>
							<td class="col-xs-3">Quốc tịch</td>
							<td>
								<t t-if="my_employee and my_employee.country_id">
									<a href="#" id="my_country"
										data-type="select"
										data-field="country_id"
										t-att-data-value="my_employee.country_id.id"
									   	data-title="Quốc tịch">
									   <t t-esc="my_employee.country_id.name" />
									</a>
								</t>
								<t t-if="not my_employee or not my_employee.country_id">
									<a href="#" id="my_ethnic"
										data-type="select"
										data-field="country_id"
									   	data-title="Quốc tịch"></a>
								</t>
							</td>
						</tr>
						<tr>
							<td class="col-xs-3 required">Dân tộc</td>
							<td>
								<t t-if="my_employee and my_employee.nation_id">
									<a href="#" id="my_ethnic"
										data-type="select"
										data-field="nation_id"
										t-att-data-value="my_employee.nation_id.id"
									   	data-title="Dân tộc"
									   	data-required="1">
									   <t t-esc="my_employee.nation_id.name" />
									</a>
								</t>
								<t t-if="not my_employee or not my_employee.nation_id">
									<a href="#" id="my_ethnic"
										data-type="select"
										data-field="nation_id"
									   	data-title="Dân tộc"
									   	data-required="1"></a>
								</t>
							</td>
						</tr>
						<tr>
							<td class="col-xs-3">Tôn giáo</td>
							<td>
								<t t-if="my_employee and my_employee.religion_id">
									<a href="#" id="my_religion"
										data-type="select"
										data-field="religion_id"
										t-att-data-value="my_employee.religion_id.id"
									   	data-title="Tôn giáo">
									   <span t-esc="my_employee.religion_id.name" />
								   </a>
								</t>
								<t t-if="not my_employee or not my_employee.religion_id">
									<a href="#" id="my_religion" data-type="select"
										data-field="religion_id" data-title="Tôn giáo"></a>
								</t>
							</td>
						</tr>
					</tbody>
				</table>
			</div>
		</template>
		
		<!-- PERSONAL INFO -->
		<template id="vhr_mysite.holiday_info">
