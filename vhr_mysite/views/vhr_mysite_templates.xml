		<!-- NOTICES -->
		<template id="vhr_mysite.my_notices">
			<div class="my_notices">
				<t t-if="my_notices">
					<t t-foreach="my_notices" t-as="my_notice">
						<div class="my_common_notice">
							<i class="fa fa-check-square-o"></i><span t-raw="my_notice" />
						</div>
					</t>
				</t>
				<t t-if="my_suggestion_notices">
					<t t-foreach="my_suggestion_notices" t-as="my_suggestion_notice">
						<div class="my_suggestion_notice">
							<i class="fa fa-thumbs-o-up"></i><span t-raw="my_suggestion_notice" />
						</div>
					</t>
				</t>
				<t t-if="my_system_notices">
					<t t-foreach="my_system_notices" t-as="my_system_notice">
						<div class="my_system_notice">
							<i class="fa fa-exclamation-triangle"></i><span t-raw="my_system_notice" />
						</div>
					</t>
				</t>
			</div>
		</template>

		<!-- BASIC INFORMATION BAR -->
		<template id="vhr_mysite.basic_info" name="Mysite basic information">
			<div class="my-basic-profile col-xs-12">
                <div class="logo col-lg-2 col-md-2 col-sm-2 col-xs-5">
                    <img src="/vhr_mysite/static/src/img/Logo.png" />
                </div>
				<div class="user-name col-lg-8 col-md-8 col-sm-8 col-xs-12 hidden-xs text-right">
					<a href="/">
						<h4><span t-esc="my_current_employee and my_current_employee.name or ''" /></h4>
					</a>
					<h6><span t-esc="my_current_employee and my_current_employee.code or ''" /></h6>
                    <p>
                        <span t-esc="my_current_employee and my_current_employee.title_id and my_current_employee.title_id.name or ''" />
                    </p>
				</div>
				<div class="user-avatar col-lg-2 col-md-2 col-sm-2 col-xs-7">
					<div class="avatar-block">
						<t t-if="my_current_employee and my_current_employee.image_medium">
							<img id="my_avatar_display" class="img-responsive img-circle"
								onclick="$('#my_avatar_file').click();"
								t-att-alt="my_current_employee.name"
								t-att-src="'data:image/png;base64,%s' % my_current_employee.image_medium" />
						</t>
						<t t-if="not my_current_employee or not my_current_employee.image_medium">
							<img id="my_avatar_display"
								onclick="$('#my_avatar_file').click();"
								src="/web/static/src/img/placeholder.png" />
						</t>
					</div>
					<input type="file" name="file" style="display: none;"
							accept="image/png, image/jpeg, image/jpg"
							id="my_avatar_file" /><br/>
					<a id="my_avatar_save">
						<i class="fa fa-floppy-o fa-lg"></i>
					</a>
				</div>
                <div class="logan col-xs-12 text-center">SLOGAN</div>
			</div>

