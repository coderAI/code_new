<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="vesting_info" name="Vesting Info">
            <t t-set="head">
                <link href="/vhr_mysite/static/lib/esop/bootstrap-datepicker/css/datepicker.css" rel="stylesheet" type="text/css"/>
                <link href="/vhr_mysite/static/lib/esop/bootstrap-select2/select2.css" rel="stylesheet" type="text/css"/>
                <link href="/vhr_mysite/static/src/css/esop/style.css" rel="stylesheet" type="text/css"/>
                <script src="/vhr_mysite/static/lib/esop/bootstrap-datepicker/js/bootstrap-datepicker.js" type="text/javascript"/>
                <script src="/vhr_mysite/static/lib/esop/bootstrap-select2/select2.min.js" type="text/javascript"/>
                <script src="/vhr_mysite/static/src/js/esop/esop.js" type="text/javascript"/>
                <script src="/vhr_mysite/static/lib/esop/jquery.bpopup.min.js" type="text/javascript"/>
            </t>
            <t t-call="website.layout">
                <div id="wrap">
                    <div class="oe_structure">
                        <div class="title-part">
                            <div class="col-sm-1"></div>
                            <div class="col-sm-10">
                                <div class="row">
                                    <div class="grid simple horizontal">
                                        <div class="grid-title">
                                            <h4 style="font-family: arial">
                                                <t t-esc="vt_header"/>
                                            </h4>
                                        </div>
                                        <div class="grid-body">
                                            <div class="row-fluid" t-if="error">
                                                <div class="row">
                                                    <p class="alert alert-danger">
                                                        <t t-esc="error"/>
                                                    </p>
                                                </div>
                                            </div>
                                            <div class="row-fluid" t-if="message">
                                                <div class="row">
                                                    <p class="alert alert-success">
                                                        <t t-esc="message"/>
                                                    </p>
                                                </div>
                                            </div>
                                            <div class="row-fluid" t-if="vesting_line">
                                                <form action="/mysite/vesting_info" method="post">
                                                    <div class="row">
                                                        <div class="col-sm-6">
                                                            <div class="form-group">
                                                                <label class="form-label"><t t-esc="vt_all"/></label>
                                                                <div class="controls">
                                                                    <input id="vesting" type="text" class="form-control"
                                                                           t-att-value="'{0:,}'.format(vesting_line['stock_qty'])"
                                                                           disabled="disabled"/>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="col-sm-6">
                                                            <div class="form-group">
                                                                <label class="form-label"><t t-esc="vt_price"/></label>
                                                                <div class="controls">
                                                                    <input type="text" class="form-control" id="price"
                                                                           t-att-value="'{0:,}'.format(vesting_line['grant_price'])" disabled="disabled"/>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-sm-6">
                                                            <div class="form-group">
                                                                <label class="form-label"><t t-esc="vt_qty"/></label>
                                                                <div class="controls">
                                                                    <t t-if="vesting_line['status'] == 'draft'">
                                                                        <input id="vested" type="text" name="vested"
                                                                           t-att-value="'{0:,}'.format(vesting_line['vested_qty'])" class="form-control"/>
                                                                    </t>
                                                                    <t t-if="vesting_line['status'] in ['confirm', 'done']">
                                                                        <input id="vested" type="text" name="vested"
                                                                           t-att-value="'{0:,}'.format(vesting_line['vested_qty'])" class="form-control" disabled="disabled"/>
                                                                    </t>

                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-6">
                                                            <div class="form-group">
                                                                <label class="form-label"><t t-esc="lbl_total_amt"/></label>
                                                                <div class="controls">
                                                                    <input type="text" id="total_amt" t-att-value="'{0:,}'.format(vesting_line['vested_amt'])"
                                                                           class="form-control" disabled="disabled"/>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <input type="hidden" name="line_ids" t-att-value="line_ids"/>
                                                    <input type="hidden" id="confirm_date" name="confirm_date" t-att-value="confirm_date"/>

                                                    <div class="form-group">
                                                        <div class="row" style="text-align:center;">
                                                            <t t-if="vesting_line['status'] == 'draft'">
                                                                <button class="btn btn-primary" id="confirm_vesting"><t t-esc="btn_confirm"/></button>
                                                            </t>
                                                        </div>
                                                    </div>

                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-1"></div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

    </data>
</openerp>
