<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	
	  	<!-- SEARCH PAGE -->
		<template id="vhr_mysite.my_search" name="Tìm kiếm">
			<t t-call="website.layout">
				<div class="my_search_result">
					<t t-call="vhr_mysite.my_search_more"/>
					<div class="title-info"><h6>Kết quả tìm kiếm cho từ khóa "<span t-esc="keyword" />"</h6></div>
					<table id="my_search_table" class="table table-striped table-bordered" cellspacing="0" width="100%">
						<thead>
				            <tr>
				                <th>Hình</th>
				                <th>Họ tên</th>
				                <th>Mã NV</th>
				                <th>Domain acc</th>
				                <th>Giới tính</th>
				                <th>Ngày sinh</th>
				                <th>Chức danh</th>
				                <th>Bộ phận</th>
				                <th>EXT</th>
				                <th>Số điện thoại</th>
				                <th>Bàn làm việc</th>
				            </tr>
				        </thead>
				        <tbody>
				        	<t t-if="results">
				        	<t t-foreach="results" t-as="item">
				        		<tr>
				        			<td class="text-center">
				        				<t t-if="item.image_medium">
				        					<img class="search-image-item"
				        						t-att-alt="item.name"
												t-att-src="'data:image/png;base64,%s' % item.image_medium" />
				        				</t>
				        				<t t-if="not item.image_medium">
				        					<img class="search-image-item"
				        						t-att-alt="item.name"
				        						src="/web/static/src/img/placeholder.png"/>
				        				</t>
									</td>
				        			<td><span t-esc="item.name" /></td>
				        			<td><span t-esc="item.code" /></td>
				        			<td><span t-esc="item.login" /></td>
				        			<td><span t-esc="item.gender and (item.gender == 'male' and 'Nam' or 'Nữ') or ''" /></td>
				        			<td><span t-esc="format_date(item.birthday)" /></td>
				        			<td><span t-esc="item.title_id.name" /></td>
				        			<td><span t-esc="item and
			                					(item.team_id and item.team_id.complete_code or
			                					(item.department_id and item.department_id.complete_code)) or ''" /></td>
				        			<td><span t-esc="item.ext_no" /></td>
				        			<td><span t-esc="item.mobile and item.mobile or item.mobile_phone" /></td>
				        			<td><span t-esc="item.seat_no" /></td>
				        		</tr>
				        	</t>
				        	</t>
				        </tbody>
					</table>
				</div>
			</t>
		</template>
		
		<template id="vhr_mysite.my_search_more">
			<div class="my_search_more_table">
				<div class="title-info"><h6>Bảng tìm kiếm chi tiết</h6></div>
				<div class="form-group">
					<div class="col-xs-4">
						<span class="info_label">Bộ phận</span>
					</div>
		    		<div class="col-xs-8 select-info select_division">
		    			<select class="form-control">
		    				<option value="-1"></option>
		    				<t t-if="divisions">
		    					<t t-foreach="divisions" t-as="division">
		    						<t t-if="selected_div and selected_div == division['id']">
		    							<option selected="selected" t-att-value="division['id']"><t t-esc="division['code'] + ' - ' + division['name']"/></option>
		    						</t>
		    						<t t-if="not selected_div or selected_div != division['id']">
		    							<option t-att-value="division['id']"><t t-esc="division['code'] + ' - ' + division['name']"/></option>
		    						</t>
		    					</t>
		    				</t>
		    			</select>
		    			<t t-if="selected_div">
		    				<div class="oe_breathing hidden" ></div>
		    			</t>
		    			<t t-if="not selected_div">
		    				<div class="oe_breathing" ></div>
		    			</t>
		    		</div>
				</div>
				<div class="form-group">
					<!-- <div class="col-xs-4">
						<span class="info_label">Nơi làm việc</span>
					</div>
		    		<div class="col-xs-8 select-info select_wplace">
		    			<select class="form-control">
		    				<option value="-1"></option>
		    			</select>
		    			<div class="oe_breathing  hidden" ></div>
		    		</div> -->
				</div>
				<div class="form-group">
					<div class="col-xs-4">
						<span class="info_label">Phòng ban</span>
					</div>
		    		<div class="col-xs-8 select-info select_dept">
		    			<select class="form-control">
		    				<option value="-1"></option>
		    				<t t-if="depts">
		    					<t t-foreach="depts" t-as="dept">
		    						<t t-if="selected_dept and selected_dept == dept['id']">
		    							<option selected="selected" t-att-value="dept['id']"><t t-esc="dept['code'] + ' - ' + dept['name']"/></option>
		    						</t>
		    						<t t-if="not selected_dept or selected_dept != dept['id']">
		    							<option t-att-value="dept['id']"><t t-esc="dept['code'] + ' - ' + dept['name']"/></option>
		    						</t>
		    					</t>
		    				</t>
		    			</select>
		    			<div class="oe_breathing hidden" ></div>
		    		</div>
				</div>
				<div class="form-group"></div>
				<div class="form-group">
					<div class="col-xs-4">
						<span class="info_label">Nhóm</span>
					</div>
		    		<div class="col-xs-8 select-info select_team">
		    			<select class="form-control">
		    				<option value="-1"></option>
		    				<t t-if="teams">
		    					<t t-foreach="teams" t-as="team">
		    						<t t-if="selected_team and selected_team == team['id']">
		    							<option selected="selected" t-att-value="team['id']"><t t-esc="team['code'] + ' - ' + team['name']"/></option>
		    						</t>
		    						<t t-if="not selected_team or selected_team != team['id']">
		    							<option t-att-value="team['id']"><t t-esc="team['code'] + ' - ' + team['name']"/></option>
		    						</t>
		    					</t>
		    				</t>
		    			</select>
		    			<div class="oe_breathing hidden" ></div>
		    		</div>
				</div>
				<div class="form-group"></div>
				<div class="form-group text-left">
					<a href="#" class="btn btn-lg btn-primary select-info" id="btn_detail_search" >
						<span>Tìm kiếm</span>
						<div class="oe_breathing hidden" ></div>
					</a>
				</div>
			</div>
		</template>
    	
    </data>
</openerp>
