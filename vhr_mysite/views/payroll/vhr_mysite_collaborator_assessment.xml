<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="collaborator_assessment" name="Collaborator Assessment">
            <t t-set="head">
                <link href="/vhr_mysite/static/lib/esop/bootstrap-datepicker/css/datepicker.css" rel="stylesheet" type="text/css"/>
                <link href="/vhr_mysite/static/lib/esop/bootstrap-select2/select2.css" rel="stylesheet" type="text/css"/>
                <link href="/vhr_mysite/static/src/css/esop/style.css" rel="stylesheet" type="text/css"/>
                <script src="/vhr_mysite/static/lib/esop/bootstrap-datepicker/js/bootstrap-datepicker.js" type="text/javascript"/>
                <script src="/vhr_mysite/static/lib/esop/bootstrap-select2/select2.min.js" type="text/javascript"/>
                <script src="/vhr_mysite/static/lib/esop/jquery.bpopup.min.js" type="text/javascript"/>
            </t>
            <t t-call="website.layout">
                <div id="wrap" class="collaborator_assessment">
                    <div class="oe_structure">
                        <div class="title-part">
                            <div class="col-sm-1"/>
                            <div class="col-sm-12 collaborator_assessment">
                                <div class="row">
                                    <div class="grid simple horizontal">
                                        <div class="grid-title">
                                            <t t-if="cb_approve or dh_approve">
                                               <div class="text-right">
                                                   <button class="btn btn-success" id="btn_approve"><t t-esc="btn_approve"/></button>
                                                   <button class="btn btn-danger" id="btn_reject"><t t-esc="btn_reject"/></button>
                                               </div>
                                            </t>
                                            <h4 style="font-family: arial">
                                                <t t-esc="header"/>
                                            </h4>
                                        </div>
                                        <div class="grid-body">
                                            <div class="row-fluid" t-if="error">
                                                <div class="row">
                                                    <p class="alert alert-danger">
                                                        <t t-esc="error"/>
                                                    </p>
                                                </div>
                                            </div>
                                           <div class="row-fluid" t-if="message">
                                                <div class="row">
                                                    <p class="alert alert-success">
                                                        <t t-esc="message"/>
                                                    </p>
                                                </div>
                                            </div>
                                            <t t-if="data">
                                            <div class="row-fluid">
                                                <form action="/collaborator/assessment" method="post" id="collaborator_assessment">
                                                    <div class="row">
                                                        <div class="col-sm-4">
                                                            <div class="form-group">
                                                                <label class="form-label">Người yêu cầu</label>
                                                                <div class="controls">
                                                                    <input type="text" class="form-control" disabled="disabled" t-att-value="data.get('requester')" />
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-4">
                                                            <div class="form-group">
                                                                <label class="form-label">Ngày yêu cầu</label>
                                                                <div class="controls">
                                                                    <input type="text" class="form-control" t-att-value="format_date(data.get('request_date',''))" disabled="disabled"/>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-4">
                                                            <div class="form-group">
                                                                <label class="form-label">Công ty*</label>
                                                                <div class="controls">
                                                                    <select name="company_id" id="company_id" style="width:100%"
                                                                            t-att-disabled="data.get('state', False) and data['state'] != 'draft' and 'disabled' or ''">
                                                                        <t t-foreach="comp_list" t-as="item">
                                                                            <option t-att-value="item['id']" t-att-selected="item['id'] == data.get('company_id') and 'selected' or ''">
                                                                               <t t-esc="item['name']"/>
                                                                            </option>
                                                                        </t>
                                                                    </select>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-4">
                                                            <div class="form-group">
                                                                <label class="form-label">Phòng ban chịu phí*</label>
                                                                <div class="controls">
                                                                    <input type="text" class="form-control typeahead"  t-att-value="data.get('department', '')"
                                                                           name="department_name" id="department_name" required="required"/>
                                                                    <input type="hidden" t-att-value="data.get('department_id', '')" name="department_id" id="department_id"/>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-4">
                                                            <div class="form-group">
                                                                <label class="form-label">Tháng*</label>
                                                                <div class="controls">
                                                                    <select name="month" id="month" style="width:100%"
                                                                            t-att-disabled="data.get('state', False) and data['state'] != 'draft' and 'disabled' or ''">
                                                                        <t t-foreach="months" t-as="item">
                                                                            <option t-att-value="item[0]" t-att-selected="item[0] == data.get('month') and 'selected' or ''">
                                                                               <t t-esc="item[1]"/>
                                                                            </option>
                                                                        </t>
                                                                    </select>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-4">
                                                            <div class="form-group">
                                                                <label class="form-label">Năm*</label>
                                                                <div class="controls">
                                                                    <select name="year" id="year" style="width:100%"
                                                                            t-att-disabled="data.get('state', False) and data['state'] != 'draft' and 'disabled' or ''">
                                                                        <t t-foreach="years" t-as="item">
                                                                            <option t-att-value="item[0]" t-att-selected="item[0] == data.get('year') and 'selected' or ''">
                                                                               <t t-esc="item[1]"/>
                                                                            </option>
                                                                        </t>
                                                                    </select>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-4">
                                                            <div class="form-group">
                                                                <label class="form-label">Loại*</label>
                                                                <div class="controls">
                                                                    <select name="collaborator_assessment_type_id" id="collaborator_assessment_type_id" style="width:100%"
                                                                            t-att-disabled="data.get('state', False) and data['state'] != 'draft' and 'disabled' or ''">
                                                                        <t t-foreach="ca_types" t-as="item">
                                                                            <option t-att-value="item['id']" t-att-code="item['code']"
                                                                                    t-att-selected="item['id'] == data.get('collaborator_assessment_type_id') and 'selected' or ''">
                                                                               <t t-esc="item.get('name')"/>
                                                                            </option>
                                                                        </t>
                                                                    </select>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row register-ca-detail">
                                                        <h4 class="form-title">
                                                            Chi Tiết Bảng Chấm Công.
                                                        </h4>
                                                        <br/>
                                                        <t t-if="not data.get('state', False) or data.get('state', False) == 'draft'">
                                                        <div>
                                                            <a class="btn" id="btn_add">
                                                                <i class="fa fa-plus fa-lg text-info"/>Thêm
                                                            </a>
                                                        </div>
                                                        </t>
                                                        <input type="hidden" name="ca_detail_lines" t-att-value="data.get('ca_detail_lines', {})" required="required"/>
                                                        <table class="table table-condensed profile-tables" id="tb_ca_products"
                                                               t-att-style="data.get('is_ca_products', 0) != 1 and 'display:none' or ''">
                                                            <thead>
                                                                <tr>
                                                                    <th class="v-align-top">STT</th>
                                                                    <th class="v-align-top">Nhân viên</th>
                                                                    <th class="v-align-top">Sản phẩm</th>
                                                                    <th class="v-align-top">Thanh toán</th>
                                                                    <th class="v-align-top">Ghi chú</th>
                                                                    <th class="v-align-top"></th>
                                                                </tr>
                                                            </thead>
                                                            <tbody id="tb_ca_products_container">
                                                                <tr>
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                        <table class="table table-condensed profile-tables" id="tb_ca_months"
                                                               t-att-style="data.get('is_ca_products', 0) == 1 and 'display:none' or ''">
                                                            <thead>
                                                                <tr>
                                                                    <th class="v-align-top">STT</th>
                                                                    <th class="v-align-top">Nhân viên</th>
                                                                    <th class="v-align-top">Thời gian</th>
                                                                    <th class="v-align-top">Số giờ</th>
                                                                    <th class="v-align-top">Thanh Toán</th>
                                                                    <th class="v-align-top">Ghi chú</th>
                                                                    <th class="v-align-top"></th>
                                                                </tr>
                                                            </thead>
                                                            <tbody id="tb_ca_months_container">
                                                                <tr>
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                    <div class="row p-t-20"> </div>
                                                    <input type="hidden" id="ca_id" name="ca_id" t-att-value="ca_id"/>
                                                    <div class="form-group">
                                                        <div class="row" style="text-align:center;">
                                                            <t t-if="not data.get('state', False) or data.get('state') == 'draft'">
                                                                <button class="btn btn-success" id="btn_confirm"><t t-esc="btn_confirm"/></button>
                                                            </t>
                                                        </div>
                                                    </div>
                                                </form>
                                                <t t-call="vhr_mysite.collaborator_modal" />
                                            </div>
                                            </t>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-1"/>
                        </div>
                    </div>
                </div>
            </t>
        </template>

    </data>
</openerp>
