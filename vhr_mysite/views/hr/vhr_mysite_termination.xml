<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="termination" name="Termination Registration">
            <t t-set="head">
                <link href="/vhr_mysite/static/lib/esop/bootstrap-datepicker/css/datepicker.css" rel="stylesheet" type="text/css"/>
                <link href="/vhr_mysite/static/lib/esop/bootstrap-select2/select2.css" rel="stylesheet" type="text/css"/>
                <link href="/vhr_mysite/static/src/css/esop/style.css" rel="stylesheet" type="text/css"/>
                <script src="/vhr_mysite/static/lib/esop/bootstrap-datepicker/js/bootstrap-datepicker.js" type="text/javascript"/>
                <script src="/vhr_mysite/static/lib/esop/bootstrap-select2/select2.min.js" type="text/javascript"/>
                <script src="/vhr_mysite/static/lib/esop/jquery.bpopup.min.js" type="text/javascript"/>
            </t>
            <t t-call="website.layout">
                <div id="wrap" class="termination_request">
                    <div class="oe_structure">
                        <div class="title-part">
                            <div class="col-sm-1"/>
                            <div class="col-sm-12 termination">
                                <div class="row">
                                    <div class="grid simple horizontal">
                                        <div class="grid-title">
                                            <t t-if="lm_approve or dh_approve">
                                               <div class="text-right">
                                                   <button class="btn btn-success" id="btn_approve"><t t-esc="btn_approve"/></button>
                                                   <button class="btn btn-danger" id="btn_reject"><t t-esc="btn_reject"/></button>
                                               </div>
                                            </t>
                                            <h4 style="font-family: arial">
                                                <t t-esc="header"/>
                                            </h4>
                                        </div>
                                        <div class="grid-body">
                                            <div class="row-fluid" t-if="error">
                                                <div class="row">
                                                    <p class="alert alert-danger">
                                                        <t t-esc="error"/>
                                                    </p>
                                                </div>
                                            </div>
                                           <div class="row-fluid" t-if="message">
                                                <div class="row">
                                                    <p class="alert alert-success">
                                                        <t t-esc="message"/>
                                                    </p>
                                                </div>
                                            </div>
                                            <t t-if="data">
                                            <div class="row-fluid">
                                                <form action="/termination" method="post" id="termination">
                                                    <div class="row">
                                                        <div class="col-sm-4">
                                                            <div class="form-group">
                                                                <label class="form-label">Họ tên</label>
                                                                <div class="controls">
                                                                    <input type="text" class="form-control" disabled="disabled" t-att-value="data.get('emp_name')" />
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-4">
                                                            <div class="form-group">
                                                                <label class="form-label">Mã nhân viên</label>
                                                                <div class="controls">
                                                                    <input type="text" class="form-control" t-att-value="data.get('employee_code')" disabled="disabled"/>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-4">
                                                            <div class="form-group">
                                                                <label class="form-label">Báo cáo cho</label>
                                                                <div class="controls">
                                                                    <input type="text" class="form-control" disabled="disabled"
                                                                           t-att-value="data.get('reporter', '')" />
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-4">
                                                            <div class="form-group">
                                                                <label class="form-label">Công ty</label>
                                                                <div class="controls">
                                                                    <input type="text" class="form-control" disabled="disabled"
                                                                           t-att-value="data.get('company', '')"/>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-4">
                                                            <div class="form-group">
                                                                <label class="form-label">Văn phòng</label>
                                                                <div class="controls">
                                                                    <input type="text" class="form-control" disabled="disabled"
                                                                           t-att-value="data.get('office', '')"/>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-4">
                                                            <div class="form-group">
                                                                <label class="form-label">Phòng ban</label>
                                                                <div class="controls">
                                                                    <input type="text" class="form-control" disabled="disabled"
                                                                           t-att-value="data.get('department', '')" />
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-4">
                                                            <div class="form-group">
                                                                <label class="form-label">Số hợp đồng</label>
                                                                <div class="controls">
                                                                    <input type="text" class="form-control" disabled="disabled"
                                                                           t-att-value="data.get('contract', '')" />
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-4">
                                                            <div class="form-group">
                                                                <label class="form-label">Vị trí</label>
                                                                <div class="controls">
                                                                    <input type="text" class="form-control" disabled="disabled"
                                                                           t-att-value="data.get('job_title', '')" />
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-4">
                                                            <div class="form-group">
                                                                <label class="form-label">Cấp bậc</label>
                                                                <div class="controls">
                                                                    <input type="text" class="form-control" disabled="disabled"
                                                                           t-att-value="data.get('job_level', '')" />
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-4">
                                                            <div class="form-group">
                                                                <label class="form-label">Thời hạn hợp đồng</label>
                                                                <div class="controls">
                                                                    <input type="text" class="form-control" disabled="disabled"
                                                                           t-att-value="data.get('contract_type', '')" />
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-4">
                                                            <div class="form-group">
                                                                <label class="form-label">Ngày bắt đầu</label>
                                                                <div class="controls">
                                                                    <input type="text" class="form-control" disabled="disabled"
                                                                           t-att-value="format_date(data.get('date_start_contract', ''))"/>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-4">
                                                            <div class="form-group">
                                                                <label class="form-label">Ngày kết thúc</label>
                                                                <div class="controls">
                                                                    <input type="text" class="form-control" disabled="disabled"
                                                                           t-att-value="format_date(data.get('date_end_contract', ''))" />
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row" id="">
                                                        <h4 class="form-title">
                                                            Thông Tin Nghỉ Việc.
                                                        </h4>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-sm-6">
                                                            <div class="form-group">
                                                                <label class="form-label">Ngày tạo đơn xin nghỉ việc</label>
                                                                <div class="controls">
                                                                    <div class="controls">
                                                                        <input type="text" class="form-control" disabled="disabled"
                                                                               t-att-value="format_date(data.get('request_date', False))"/>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-6">
                                                            <div class="form-group">
                                                                <label class="form-label">Ngày cuối cùng làm việc mong muốn</label>
                                                                <div class="controls">
                                                                    <div class="controls">
                                                                        <div class="input-append controls success date" data-date-format="dd/mm/yyyy" style="width:100%"
                                                                             t-att-class="(data.get('state', False) and data['state'] != 'draft') and 'controls' or 'input-append controls success date'">
                                                                            <input id="date_end_working_expect" name="date_end_working_expect" type="text" class="form-control datepicker"
                                                                                   t-att-class="(data.get('state', False) and data['state'] != 'draft') and 'form-control' or 'form-control datepicker'"
                                                                                   t-att-disabled="(data.get('state', False) and data['state'] != 'draft') and 'disabled' or ''"
                                                                                   t-att-value="format_date(data.get('date_end_working_expect', False))"/>
                                                                            <t t-if="not data.get('state', False) or data['state'] == 'draft'">
                                                                                <span class="add-on"><span class="arrow"/><i class="fa fa-th"/></span>
                                                                            </t>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-6">
                                                            <div class="form-group">
                                                                <label class="form-label">Ngày cuối cùng làm việc theo luật LĐ</label>
                                                                <div class="controls">
                                                                    <div class="controls">
                                                                        <input type="text" class="form-control" disabled="disabled"
                                                                               t-att-value="format_date(data.get('date_end_working_follow_rule', False))"/>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-6">
                                                            <div class="form-group">
                                                                <label class="form-label">Ngày cuối cùng làm việc được cho phép</label>
                                                                <div class="controls">
                                                                    <div class="controls">
                                                                        <div data-date-format="dd/mm/yyyy" style="width:100%"
                                                                             t-att-class="not (lm_approve or dh_approve) and 'controls' or 'input-append controls success date'">
                                                                            <input id="date_end_working_approve" name="date_end_working_approve" type="text"
                                                                                   t-att-class="not (lm_approve or dh_approve) and 'form-control' or 'form-control datepicker'"
                                                                                   t-att-disabled="not (lm_approve or dh_approve) and 'disabled' or ''"
                                                                                   t-att-value="format_date(data.get('date_end_working_approve', False))"/>
                                                                            <t t-if="lm_approve or dh_approve">
                                                                                <span class="add-on"><span class="arrow"/><i class="fa fa-th"/></span>
                                                                            </t>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-12">
                                                            <div class="form-group">
                                                                <label class="form-label">Lý do nghỉ việc</label>
                                                                <div class="controls">
                                                                    <textarea name="employee_reason" style="width:100%; height:100px;" required="required"
                                                                        t-att-disabled="data.get('state', False) and data['state'] != 'draft' and 'disabled' or ''"><t t-esc="data.get('employee_reason', '')"/></textarea>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <t t-if="data.get('state', False) and data['state'] != 'draft'">
                                                            <div class="col-sm-12">
                                                                <div class="form-group">
                                                                    <label class="form-label">Ghi chú của Line Manager</label>
                                                                    <div class="controls">
                                                                        <textarea name="lm_note" style="width:100%; height:100px;" required="required"
                                                                            t-att-required="data['state'] == 'supervisor' and 'required' or ''"
                                                                            t-att-disabled="not lm_approve and 'disabled' or ''"><t t-esc="data.get('lm_note', '')"/></textarea>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </t>

                                                    </div>
                                                    <div class="row p-t-20"> </div>
                                                    <input type="hidden" id="ter_id" name="ter_id" t-att-value="ter_id"/>
                                                    <div class="form-group">
                                                        <div class="row" style="text-align:center;">
                                                            <t t-if="not data.get('state', False) or data.get('state') == 'draft'">
                                                                <button class="btn btn-success" id="btn_confirm"><t t-esc="btn_confirm"/></button>
                                                            </t>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                            </t>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-1"/>
                        </div>
                    </div>
                </div>
            </t>
        </template>

    </data>
</openerp>
