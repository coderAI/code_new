<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	<!-- list template -->
        <template id="termination_list" name="Termination List">
            <t t-set="head">
                <link href="/vhr_mysite/static/lib/esop/bootstrap-datepicker/css/datepicker.css" rel="stylesheet" type="text/css"/>
                <link href="/vhr_mysite/static/lib/esop/bootstrap-select2/select2.css" rel="stylesheet" type="text/css"/>
                <link href="/vhr_mysite/static/src/css/esop/style.css" rel="stylesheet" type="text/css"/>
                <script src="/vhr_mysite/static/lib/esop/bootstrap-datepicker/js/bootstrap-datepicker.js" type="text/javascript"/>
                <script src="/vhr_mysite/static/lib/esop/bootstrap-select2/select2.min.js" type="text/javascript"/>
                <script src="/vhr_mysite/static/lib/esop/jquery.bpopup.min.js" type="text/javascript"/>
                
                <!-- giang adding -->
				<link href="/vhr_mysite/static/lib/bootstrap_pagination/bootstrap.css" rel="stylesheet" type="text/css"/>                                                
                <script src="/vhr_mysite/static/lib/bootstrap_pagination/pagination.js" type="text/javascript"/>
            </t>
            <t t-call="website.layout">
                <div id="wrap" class="termination_request">
                    <div class="oe_structure">
                        <div class="title-part">
                            <div class="col-sm-1"/>
                            <div class="col-sm-12 termination">
                                <div class="row">
                                    <div class="grid simple horizontal">
                                    	<div class="row-fluid" t-if="error">
                                                <div class="row">
                                                    <p class="alert alert-danger">
                                                        <t t-esc="error"/>
                                                    </p>
                                                </div>
                                            </div>
                                        <t t-if="header">
                                        <div class="grid-title">
                                            <h4 style="font-family: arial">
                                                <t t-esc="header"/>
                                            </h4>
                                        </div>                                                                                                           
                                        <div class="grid-body">
                                            <div class="row-fluid">
                                                <div class="row">
                                                    <table class="table table-condensed profile-tables" id="table_document">
                                                        <thead>
                                                            <tr>
                                                                <th class="v-align-top">Mã Nhân Viên</th>
                                                                <th class="v-align-top">Họ Tên</th>
                                                                <th class="v-align-top">Phòng Ban</th>
                                                                <th class="v-align-top">vị trí</th>
                                                                <th class="v-align-top">Ngày Yêu Cầu</th>                                                                
                                                                <th class="v-align-top">Ngày Cuối Cùng Làm Việc Theo Luật</th>
                                                                <th class="v-align-top">Ngày Cuối Cùng Làm Việc Mong Muốn</th>
                                                                <th class="v-align-top">Ngày Cuối Cùng Làm Việc Được Cho Phép</th>
                                                                <th class="v-align-top">Trạng Thái</th>                                                                
                                                                <th/>
                                                            </tr>
                                                        </thead>
                                                        <tbody id="table_document_body">
                                                            <t t-foreach="ter_lines" t-as="line">
                                                                <t t-if="line">
                                                                    <tr class="info_item">
                                                                        <td>
                                                                            <t t-esc="line['employee_code']"/>
                                                                        </td>
                                                                        <td>
                                                                            <t t-esc="line['employee_name']"/>
                                                                        </td>
                                                                        <td>
                                                                            <t t-esc="line['department']"/>
                                                                        </td>
                                                                        <td>
                                                                            <t t-esc="line['job_title']"/>                                                                            
                                                                        </td>
                                                                        <td>
                                                                           <t t-esc="format_date(line['request_date'])"/>                                                                           
                                                                        </td>
                                                                        <td>
                                                                           <t t-esc="format_date(line['date_end_working_follow_rule'])"/>                                                                           
                                                                        </td>
                                                                        <td>
                                                                           <t t-esc="format_date(line['date_end_working_expect'])"/>                                                                           
                                                                        </td>
                                                                        <td>
                                                                           <t t-esc="format_date(line['date_end_working_approve'])"/>                                                                           
                                                                        </td>
                                                                        <td>
                                                                           <t t-esc="get_label(line['state'])"/>                                                                           
                                                                        </td>                                                                                                              
                                                                        <td>
                                                                            <form action="/termination" method="post" id="termination">
                                                                            	<input type="hidden" name="ter_id" t-att-value="line['id']"/>	                                                                                
                                                                                <div class="form-group">
                                                                                    <div>
                                                                                        <button class="btn btn-primary btn-lg">Xem Chi Tiết</button>
                                                                                    </div>
                                                                                </div>

                                                                            </form>
                                                                        </td>
                                                                    </tr>
                                                                </t>
                                                            </t>
                                                        </tbody>                                                        
                                                    </table>
                                                    <t t-if="len(ter_lines) > 10">
                                                        <div class="col-md-12 text-center">
                                                           <ul class="pagination pagination-lg pager" id="myPager"></ul>
                                                        </div>
                                                    </t>

                                                </div>
                                            </div>
                                        </div>
                                        </t>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-1"/>
                        </div>
                    </div>
                </div>
            </t>
        </template>

    </data>
</openerp>
