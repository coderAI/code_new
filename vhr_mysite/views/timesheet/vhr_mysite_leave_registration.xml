<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="leave_registration" name="Leave Registration">
            <t t-set="head">
                <link href="/vhr_mysite/static/lib/esop/bootstrap-datepicker/css/datepicker.css" rel="stylesheet" type="text/css"/>
                <link href="/vhr_mysite/static/lib/esop/bootstrap-select2/select2.css" rel="stylesheet" type="text/css"/>
                <link href="/vhr_mysite/static/src/css/esop/style.css" rel="stylesheet" type="text/css"/>
                <script src="/vhr_mysite/static/lib/esop/bootstrap-datepicker/js/bootstrap-datepicker.js" type="text/javascript"/>
                <script src="/vhr_mysite/static/lib/esop/bootstrap-select2/select2.min.js" type="text/javascript"/>
                <script src="/vhr_mysite/static/lib/esop/jquery.bpopup.min.js" type="text/javascript"/>
            </t>
            <t t-call="website.layout">
                <div id="wrap" class="leave_registration">
                    <div class="oe_structure">
                        <div class="title-part">
                            <div class="col-sm-1"/>
                            <div class="col-sm-12">
                                <div class="row">
                                    <div class="grid simple horizontal">
                                        <div class="grid-title">
                                            <t t-if="lm_approve or dh_approve">
                                               <div class="text-right">
                                                   <button class="btn btn-success" id="btn_approve"><t t-esc="btn_approve"/></button>
                                                   <button class="btn btn-danger" id="btn_reject"><t t-esc="btn_reject"/></button>
                                               </div>
                                            </t>
                                            <t t-if="can_renew">
                                               <div class="text-right">
                                                   <a class="btn btn-success" href="/leave/registration">
                                                       <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                                                       Thêm Mới
                                                   </a>
                                               </div>
                                            </t>
                                            <h4 style="font-family: arial">
                                                <t t-esc="header"/>
                                            </h4>
                                        </div>
                                        <div class="grid-body">
                                            <div class="row-fluid" t-if="error">
                                                <div class="row">
                                                    <p class="alert alert-danger">
                                                        <t t-esc="error"/>
                                                    </p>
                                                </div>
                                            </div>
                                           <div class="row-fluid" t-if="message">
                                                <div class="row">
                                                    <p class="alert alert-success">
                                                        <t t-esc="message"/>
                                                    </p>
                                                </div>
                                            </div>

                                           <div class="row-fluid">
                                                <form action="/leave/registration" method="post" id="leave">
                                                     <div class="row">
                                                        <div class="col-sm-4 padding-none">
                                                            <div class="form-group">
                                                                <div class="col-xs-10">
                                                                    <label class="form-label bold">Số phép đã đăng ký:</label>
                                                                </div>
                                                                <div class="col-xs-2 text-right" id="leaves_submitted">
                                                                    <t t-esc="leave_data.get('leaves_submitted', 0)"/>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-4 padding-none">
                                                            <div class="form-group">
                                                                <div class="col-xs-10">
                                                                    <label class="form-label bold">Số phép đã nghỉ:</label>
                                                                </div>
                                                                <div class="col-xs-2 text-right" id="leaves_taken">
                                                                    <a href="/leave"><t t-esc="leave_data.get('leaves_taken', 0)"/></a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-4 padding-none">
                                                            <div class="form-group">
                                                                <div class="col-xs-10">
                                                                    <label class="form-label bold">Tổng số phép có:</label>
                                                                </div>
                                                                <div class="col-xs-2 text-right" id="total_leaves">
                                                                    <t t-esc="leave_data.get('total_leaves', 0)"/>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    
                                                        <div class="col-sm-4 padding-none">
                                                            <div class="form-group">
                                                                <div class="col-xs-10">
                                                                    <label t-att-class="leave_data.get('max_leaves', 0) > 0 and 'form-label bold' or 'form-label text-error bold'">
                                                                        Số phép tối đa được đăng ký:
                                                                    </label>
                                                                </div>
                                                                <div t-att-class="leave_data.get('max_leaves', 0) > 0 and 'col-xs-2 text-right' or 'col-xs-2 text-error text-right'" class="" id="max_allow">
                                                                    <t t-esc="leave_data.get('max_leaves', 0)"/>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-4 padding-none">
                                                            <div class="form-group text-info">
                                                                <div class="col-xs-10">
                                                                    <label class="form-label bold">Số phép đăng ký:</label>
                                                                </div>
                                                                <div class="col-xs-2 text-right" id="leave_register">
                                                                    <t t-esc="leave_data.get('number_of_days_temp', 0)"/>
                                                                </div>
                                                                <input type="hidden" name="number_of_days_temp" id="number_of_days_temp"/>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-4 padding-none">
                                                            <div class="form-group text-info">
                                                                <div class="col-xs-10">
                                                                    <label class="form-label bold">Số phép còn lại:</label>
                                                                </div>
                                                                <div class="col-xs-2 text-right" id="remaining_leaves">
                                                                    <t t-esc="leave_data.get('remaining_leaves', 0)"/>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="grid-title">
                                                        <h4 class="form-title">
                                                            Thông Tin Đăng Ký.
                                                        </h4>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-sm-4 padding-none">
                                                            <div class="col-xs-6">
                                                                <label class="form-label bold"><b>Ngày đăng ký:</b></label>
                                                            </div>
                                                            <div class="col-xs-6 text-right" id="remaining_leaves">
                                                                <b><t t-esc="format_date(leave_data['create_date'])"/></b>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-sm-6">
                                                            <div class="form-group">
                                                                <label class="form-label">Loại nghỉ</label>
                                                                <div class="controls">
                                                                    <select name="holiday_status_id" id="holiday_status_id" style="width:100%"
                                                                            t-att-disabled="leave_data.get('state', False) and leave_data['state'] != 'draft' and 'disabled' or ''">
                                                                        <t t-foreach="holiday_status" t-as="type">
                                                                            <t t-if="type_id == type.id">
                                                                               <option t-att-value="type.id" selected="True">
                                                                                   <t t-esc="type.name"/>
                                                                               </option>
                                                                            </t>
                                                                            <t t-if="type_id != type.id">
                                                                               <option t-att-value="type.id">
                                                                                   <t t-esc="type.name"/>
                                                                               </option>
                                                                            </t>
                                                                        </t>
                                                                    </select>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-6">
                                                            <div class="form-group">
                                                                <label class="form-label">Lý do</label>
                                                                <div class="controls">
                                                                    <t t-if="not leave_data.get('state', False) or leave_data.get('state') == 'draft'">
                                                                        <textarea name="notes" style="width: 100%;" onblur="this.setCustomValidity('');" oninvalid="if(!this.value) this.setCustomValidity('Vui lòng nhập lý do nghỉ!');"
                                                                                  required="required"><t t-esc="leave_data.get('notes', '')"/></textarea>
                                                                    </t>
                                                                    <t t-if="leave_data.get('state', False) and leave_data.get('state') != 'draft'">
                                                                        <textarea name="notes" style="width: 100%;" required="required" disabled="disabled"><t t-esc="leave_data.get('notes', '')"/></textarea>
                                                                    </t>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-6">
                                                            <div class="form-group">
                                                                <label class="form-label">Từ ngày</label>
                                                                <br/>
                                                                <t t-if="not leave_data.get('state', False) or leave_data.get('state') == 'draft'">
                                                                    <div class="input-append controls success date" id="from_date" data-date-format="dd/mm/yyyy" style="width:100%">
                                                                        <input id="date_from" name="date_from" t-att-value="format_date(leave_data.get('date_from', ''))"
                                                                               type="text" class="form-control datepicker"/>
                                                                        <span class="add-on">
                                                                            <span class="arrow"/> <i class="fa fa-th"/>
                                                                        </span>
                                                                    </div>
                                                                </t>
                                                                <t t-if="leave_data.get('state', False) and leave_data.get('state') != 'draft'">
                                                                    <div class="controls">
                                                                        <input name="date_from" t-att-value="format_date(leave_data.get('date_from', ''))" class="form-control" type="text" disabled="disabled"/>
                                                                    </div>
                                                                </t>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-6">
                                                            <div class="form-group">
                                                                <label class="form-label">Đến ngày</label>
                                                                <br/>
                                                                <t t-if="not leave_data.get('state', False) or leave_data.get('state') == 'draft'">
                                                                    <div class="input-append controls success date" id="to_date" data-date-format="dd/mm/yyyy" style="width:100%">
                                                                        <input id="date_to" name="date_to" t-att-value="format_date(leave_data.get('date_to', ''))"
                                                                               type="text" class="form-control datepicker"/>
                                                                        <span class="add-on">
                                                                            <span class="arrow"/> <i class="fa fa-th"/>
                                                                        </span>
                                                                    </div>
                                                                </t>
                                                                <t t-if="leave_data.get('state', False) and leave_data.get('state') != 'draft'">
                                                                    <div class="controls">
                                                                        <input name="date_to" t-att-value="format_date(leave_data.get('date_to', ''))" class="form-control" type="text" disabled="disabled"/>
                                                                    </div>
                                                                </t>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-sm-12">
                                                            <div class="row">
                                                                <div class="col-sm-12">
                                                                    <div class="form-label text-error bold" id="description">
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-sm-12">
                                                            <div class="row">
                                                                <div class="col-sm-12">
                                                                    <div class="form-label text-error bold" id="to_date_ins">
                                                                    </div>
                                                                    <input type="hidden" name="to_date_insurance" id="to_date_insurance"/>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="register-leave-detail">
                                                        <h4 class="form-title">
                                                            Chi Tiết Phiếu Nghỉ.
                                                        </h4>
                                                        <br/>
                                                        <input type="hidden" name="leave_detail_lines" t-att-value="leave_data.get('leave_detail_lines')" required="required"/>
                                                        <table class="table table-condensed profile-tables" id="table_document">
                                                        <thead>
                                                            <tr>
                                                                <th class="v-align-top">STT</th>
                                                                <th class="v-align-top">Ngày</th>
                                                                <th class="v-align-top">1/2 đầu ngày/ca</th>
                                                                <th class="v-align-top">1/2 cuối ngày/ca</th>
                                                                <th class="v-align-top">Cả ngày</th>
                                                                <th class="v-align-top"></th>
                                                            </tr>
                                                        </thead>
                                                        <tbody id="tb-leave-container">
                                                            <tr>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                    </div>
                                                    <div class="row p-t-20"> </div>
                                                    <input type="hidden" name="leave_id" t-att-value="leave_id" id="leave_id"/>
                                                    <div class="form-group">
                                                        <div class="row" style="text-align:center;">
                                                            <t t-if="not leave_data.get('state', False) or leave_data.get('state') == 'draft'">
                                                                <button class="btn btn-success" id="btn_confirm"><t t-esc="btn_confirm"/></button>
                                                            </t>

                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-1"/>
                        </div>
                    </div>
                </div>
            </t>
        </template>

    </data>
</openerp>
