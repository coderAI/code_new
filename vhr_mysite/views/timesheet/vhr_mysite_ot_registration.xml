<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="overtime_registration" name="Overtime Registration">
            <t t-set="head">
                <link href="/vhr_mysite/static/lib/esop/bootstrap-datepicker/css/datepicker.css" rel="stylesheet" type="text/css"/>
                <link href="/vhr_mysite/static/lib/esop/bootstrap-select2/select2.css" rel="stylesheet" type="text/css"/>
                <link href="/vhr_mysite/static/src/css/esop/style.css" rel="stylesheet" type="text/css"/>
                <script src="/vhr_mysite/static/lib/esop/bootstrap-datepicker/js/bootstrap-datepicker.js" type="text/javascript"/>
                <script src="/vhr_mysite/static/lib/esop/bootstrap-select2/select2.min.js" type="text/javascript"/>
                <script src="/vhr_mysite/static/lib/esop/jquery.bpopup.min.js" type="text/javascript"/>
            </t>
            <t t-call="website.layout">
                <div id="wrap" class="overtime_registration">
                    <div class="oe_structure">
                        <div class="title-part">
                            <div class="col-sm-1"/>
                            <div class="col-sm-12">
                                <div class="row">
                                    <div class="grid simple horizontal">
                                        <div class="grid-title">
                                            <t t-if="lm_approve">
                                               <div class="text-right">
                                                   <button class="btn btn-success" id="btn_approve_ot"><t t-esc="btn_approve"/></button>
                                                   <button class="btn btn-danger" id="btn_reject_ot"><t t-esc="btn_reject"/></button>
                                               </div>
                                            </t>
                                            <t t-if="can_renew">
                                               <div class="text-right">
                                                   <a class="btn btn-success" href="/overtime/registration">
                                                       <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                                                       Thêm Mới
                                                   </a>
                                               </div>
                                            </t>
                                            <h4 style="font-family: arial">
                                                <t t-esc="header"/>
                                            </h4>
                                        </div>
                                        <div class="grid-body">
                                            <div class="row-fluid" t-if="error">
                                                <div class="row">
                                                    <p class="alert alert-danger">
                                                        <t t-esc="error"/>
                                                    </p>
                                                </div>
                                            </div>
                                           <div class="row-fluid" t-if="message">
                                                <div class="row">
                                                    <p class="alert alert-success">
                                                        <t t-esc="message"/>
                                                    </p>
                                                </div>
                                            </div>

                                           <div class="row-fluid">
                                                <form action="/overtime/registration" method="post" id="overtime">
                                                    <div class="row">
                                                        <div class="col-sm-4">
                                                            <div class="form-group">
                                                                <label class="form-label">Họ tên</label>
                                                                <div class="controls">
                                                                    <input type="text" class="form-control" t-att-value="overtime_data['employee_name']" disabled="disabled"/>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-4">
                                                            <div class="form-group">
                                                                <label class="form-label">Mã nhân viên</label>
                                                                <div class="controls">
                                                                    <input type="text" class="form-control" t-att-value="overtime_data['employee_code']" disabled="disabled"/>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-4">
                                                            <div class="form-group">
                                                                <label class="form-label">Ngày đăng ký</label>
                                                                <div class="controls">
                                                                    <input type="text" class="form-control" t-att-value="format_date(overtime_data['request_date'])" disabled="disabled"/>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-4">
                                                            <div class="form-group">
                                                                <label class="form-label">Phòng ban</label>
                                                                <div class="controls">
                                                                    <input type="text" class="form-control" t-att-value="overtime_data['department']" disabled="disabled"/>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-4">
                                                            <div class="form-group">
                                                                <label class="form-label">Báo cáo cho</label>
                                                                <div class="controls">
                                                                    <input type="text" class="form-control" t-att-value="overtime_data['reporter']" disabled="disabled"/>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row register-overtime-detail">
                                                        <h4 class="form-title">
                                                            Chi Tiết Phiếu Đăng Ký.
                                                        </h4>
                                                        <br/>
                                                        <input type="hidden" name="overtime_detail_lines" t-att-value="overtime_data.get('overtime_detail_lines')"/>
                                                        <table class="table table-condensed profile-tables" id="table_document">
                                                            <thead>
                                                                <tr>
                                                                    <th class="v-align-top hidden-xs">STT</th>
                                                                    <th class="v-align-top">Ngày</th>
                                                                    <th class="v-align-top">Lý do OT</th>
                                                                    <th class="v-align-top">Giờ vào<br/>(hh:mm)</th>
                                                                    <th class="v-align-top">Giờ ra<br/>(hh:mm)</th>
                                                                    <th class="v-align-top">Nghỉ giữa ca<br/>(phút)</th>
                                                                    <th class="v-align-top">Tổng giờ OT</th>
                                                                    <th class="v-align-top">Nghỉ bù</th>
                                                                    <th class="v-align-top"></th>
                                                                </tr>
                                                            </thead>
                                                            <tbody id="tb-overtime-container">
                                                            </tbody>
                                                        </table>
                                                        <t t-if="not overtime_data.get('state', False)">
                                                        <div><a class="btn" id="btn_add"><i class="fa fa-plus fa-lg text-info"></i>Thêm</a></div>
                                                        </t>
                                                    </div>
                                                    <div class="row p-t-20"> </div>
                                                    <input type="hidden" name="ot_id" t-att-value="ot_id"/>
                                                    <div class="form-group">
                                                        <div class="row" style="text-align:center;">
                                                             <t t-if="not overtime_data.get('state', False) or overtime_data.get('state', False) == 'draft'">
                                                                 <button class="btn btn-success" id="btn_save"><t t-esc="btn_confirm"/></button>
                                                             </t>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-1"/>
                        </div>
                    </div>
                </div>
            </t>
        </template>

    </data>
</openerp>
