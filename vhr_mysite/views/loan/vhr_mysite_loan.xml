<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <template id="loan" name="Loan">
            <t t-set="head">
                <link href="/vhr_mysite/static/lib/esop/bootstrap-datepicker/css/datepicker.css" rel="stylesheet" type="text/css"/>
                <link href="/vhr_mysite/static/lib/esop/bootstrap-select2/select2.css" rel="stylesheet" type="text/css"/>
                <link href="/vhr_mysite/static/src/css/esop/style.css" rel="stylesheet" type="text/css"/>
                <script src="/vhr_mysite/static/lib/esop/bootstrap-datepicker/js/bootstrap-datepicker.js" type="text/javascript"/>
                <script src="/vhr_mysite/static/lib/esop/bootstrap-select2/select2.min.js" type="text/javascript"/>
                <script src="/vhr_mysite/static/src/js/esop/tabs_accordian.js" type="text/javascript"/>
                <script src="/vhr_mysite/static/lib/esop/jquery.bpopup.min.js" type="text/javascript"/>
            </t>
            <t t-call="website.layout">
                <div id="wrap" class="loan_request">
                    <div class="oe_structure">
                        <div class="title-part">
                            <div class="col-sm-12">
                                <div class="row">
                                    <div class="grid simple horizontal">
                                        <t t-if="header">
                                        <div class="grid-title">
                                            <h4 style="font-family: arial">
                                                <t t-esc="header"/>
                                            </h4>
                                        </div>
                                        <!-- <div class="row">
                                            <div class="col-sm-10">
                                                <a class="btn btn-success" href="/loan/form">Đăng Ký Mới</a>
                                            </div>
                                        </div> -->
                                        <div class="grid-body">
                                            <div class="row-fluid">
                                                <div class="row">
                                                    <table class="table table-condensed profile-tables" id="table_document">
                                                        <thead>
                                                            <tr>
                                                                <th class="v-align-top">Mã Nhân Viên</th>
                                                                <th class="v-align-top">Tên Nhân Viên</th>
                                                                <th class="v-align-top">Phòng Ban</th>
                                                                <th class="v-align-top">Công Ty</th>
                                                                <th class="v-align-top">Mục Đích Tạm Ứng</th>
                                                                <th class="v-align-top">Tổng Tiền Phải Trả</th>
                                                                <th class="v-align-top">Thời Điểm Vay</th>
                                                                <th class="v-align-top">Thời Điểm Bắt Đầu Trả</th>
                                                                <th class="v-align-top">Số Tháng Trả</th>
                                                                <th class="v-align-top">Số Tiền Trả Mỗi Tháng</th>
                                                                <th class="v-align-top">Trạng Thái</th>
                                                                <th/>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <t t-foreach="loan_datas" t-as="data">
                                                                <tr>
                                                                    <td>
                                                                        <span t-esc="data['employee_code']"/>
                                                                    </td>
                                                                    <td>
                                                                        <span t-esc="data['employee_name']"/>
                                                                    </td>
                                                                    <td>
                                                                        <span t-esc="data['department_name']"/>
                                                                    </td>
                                                                    <td>
                                                                        <span t-esc="data['company_name']"/>
                                                                    </td>
                                                                    <td>
                                                                       <span t-esc="data['loan_type_name']"/>
                                                                    </td>
                                                                    <td>
                                                                       <span t-esc="'{0:,}'.format(data['amount'])"/>
                                                                    </td>
                                                                    <td>
                                                                       <span t-esc="data['text_loan_time']"/>
                                                                    </td>
                                                                    <td>
                                                                       <span t-esc="data['text_paid_time']"/>
                                                                    </td>
                                                                    <td>
                                                                       <span t-esc="data['total_month_pay']"/>
                                                                    </td>
                                                                    <td>
                                                                       <span t-esc="'{0:,}'.format(data['pay_each_month'])"/>
                                                                    </td>
                                                                    <td>
                                                                       <span t-esc="data['status']"/>
                                                                    </td>
                                                                    <td>
                                                                        <a t-att-href="'/loan/form?id=' + encrypt_query_value(str(data['id']))" class="btn btn-primary btn-lg">Xem Chi Tiết</a>
                                                                    </td>
                                                                </tr>
                                                            </t>
                                                            <t t-if="not loan_datas">
                                                                <tr>
                                                                    <td colspan="12">Không có đăng ký vay nợ nào.</td>
                                                                </tr>
                                                            </t>
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

    </data>
</openerp>
