		<template id="vhr_mysite.salary_history" name="Quá trình lương">
			<t t-call="website.layout">
				<div>
					<div class="title-info"><h6>Quá trình lương</h6></div>
					<table class="table table-striped table-bordered my_salary_history_info">
						<thead>
							<tr>
								<th>STT</th>
								<th>Công ty</th>
								<th>Hiệu lực</th>
								<th>Lương Gross</th>
								<th>Lương cơ bản</th>
								<th>Trợ cấp</th>
								<th>Lương thử việc</th>
								<th>KPI</th>
								<th>Lương CTV</th>
							</tr>
						</thead>
						<tbody>
							<t t-if="salaries">
								<t t-set="stt" t-value="1"/>
								<t t-foreach="salaries" t-as="salary">
									<tr>
										<td><span t-esc="stt" /></td>
										<td>
											<t t-if="salary.company_id">
												<span t-esc="salary.company_id.name or ''" />
											</t>
										</td>
										<td>
											<t t-if="salary.effect_from">
												<span t-esc="format_date(salary.effect_from)" />
											</t>
										</td>
										<td class="text-right">
											<span t-esc="salary.gross_salary and '{:,.0f}'.format(salary.gross_salary) or ''" />
										</td>
										<td class="text-right">
											<span t-esc="salary.basic_salary and '{:,.0f}'.format(salary.basic_salary) or ''" />
										</td>
										<td class="text-right">
											<span t-esc="salary.general_allowance and '{:,.0f}'.format(salary.general_allowance) or ''" />
										</td>
										<td class="text-right">
											<span t-esc="salary.probation_salary and '{:,.0f}'.format(salary.probation_salary) or ''" />
										</td>
										<td class="text-right">
											<span t-esc="salary.kpi_amount and '{:,.0f}'.format(salary.kpi_amount) or ''" />
										</td>
										<td class="text-right">
											<span t-esc="salary.collaborator_salary and '{:,.0f}'.format(salary.collaborator_salary) or ''" />
										</td>
									</tr>
									<t t-set="stt" t-value="stt+1"/>
								</t>
							</t>
						</tbody>
					</table>
				</div>
			</t>
		</template>
		
		<template id="vhr_mysite.kpi_history" name="Kết quả KPI">
			<t t-call="website.layout">
				<div>
					<div class="title-info"><h6>Kết quả KPIs</h6></div>
					<table class="table table-striped table-bordered my_kpi_history_info">
						<thead>
							<tr>
								<th>STT</th>
								<th>Từ ngày</th>
								<th>Đến ngày</th>
								<th>Xếp loại</th>
								<th>Điểm KPI</th>
							</tr>
						</thead>
						<tbody>
							<t t-if="assess_recs">
								<t t-set="stt" t-value="1"/>
								<t t-foreach="assess_recs" t-as="rec">
									<tr>
										<td><span t-esc="stt" /></td>
										<td><span t-esc="rec.from_date and format_date(rec.from_date) or ''" /></td>
										<td><span t-esc="rec.to_date and format_date(rec.to_date) or ''" /></td>
										<td><span t-esc="rec.calibration_id and rec.calibration_id.name or ''" /></td>
										<td><span t-esc="rec.kpi_score and '{:,}'.format(rec.kpi_score) or ''" /></td>
									</tr>
									<t t-set="stt" t-value="stt+1"/>
								</t>
							</t>
						</tbody>
					</table>
				</div>
			</t>
		</template>
		
		
	</data>
</openerp>