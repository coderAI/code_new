<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
	
		<template id="vhr_mysite.working_history" name="Quá trình làm việc">
			<t t-call="website.layout">
				<div>
					<div class="title-info"><h6>Quá trình làm việc</h6></div>
					<table class="table table-striped table-bordered" id="my_working_history_info">
						<thead>
							<tr>
								<th>STT</th>
								<th>Hiệu lực</th>
								<th>Công ty</th>
								<th>Phòng ban</th>
								<th>Chức danh</th>
								<th>Cấp bậc</th>
								<th>Trưởng phòng</th>
								<th>Cấp trên trực tiếp</th>
							</tr>
						</thead>
						<tbody>
							<t t-if="wk_recs">
								<t t-set="stt" t-value="1"/>
								<t t-foreach="wk_recs" t-as="wk_rec">
									<tr>
										<td><span t-esc="stt" /></td>
										<td>
											<t t-if="wk_rec.effect_from">
												<span t-esc="format_date(wk_rec.effect_from)" />
											</t>
										</td>
										<td>
											<t t-if="wk_rec.company_id">
												<span t-esc="wk_rec.company_id.name" />
											</t>
										</td>
										<td>
											<t t-if="wk_rec.team_id_new">
												<span t-esc="wk_rec.team_id_new.complete_code" />
											</t>
											<t t-if="not wk_rec.team_id_new and wk_rec.department_id_new ">
												<span t-esc="wk_rec.department_id_new.complete_code" />
											</t>
										</td>
										<td>
											<t t-if="wk_rec.job_title_id_new">
												<span t-esc="wk_rec.job_title_id_new.name" />
											</t>
										</td>
										<td>
											<t t-if="wk_rec.job_level_id_new">
												<span t-esc="wk_rec.job_level_id_new.name" />
											</t>
										</td>
										<td>
											<t t-if="wk_rec.manager_id_new">
												<span t-esc="wk_rec.manager_id_new.name" />
											</t>
										</td>
										<td>
											<t t-if="wk_rec.report_to_new">
												<span t-esc="wk_rec.report_to_new.name" />
											</t>
										</td>
									</tr>
									<t t-set="stt" t-value="stt+1"/>
								</t>
							</t>
						</tbody>
					</table>
				</div>
			</t>
		</template>
		
