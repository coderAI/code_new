					<div class="title-info"><h6>Quá trình hợp đồng</h6></div>
					<table class="table table-striped table-bordered" id="my_contract_history_info">
						<thead>
							<tr>
								<th>STT</th>
								<th>Số hợp đồng</th>
								<th>Loại hợp đồng</th>
								<th>Hiệu lực</th>
								<th>Hết hạn</th>
								<th>Chức danh</th>
								<th>Cấp bậc</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							<t t-if="contracts">
								<t t-set="stt" t-value="1"/>
								<t t-foreach="contracts" t-as="contract">
									<tr>
										<td><span t-esc="stt" /></td>
										<td><span t-esc="contract.name or ''" /></td>
										<td>
											<t t-if="contract.type_id">
												<span t-esc="contract.type_id.name or ''" />
											</t>
										</td>
