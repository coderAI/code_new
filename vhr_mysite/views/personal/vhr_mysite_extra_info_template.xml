<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	
		<!-- STORAGE INFO -->
		<template id="vhr_mysite.document_info">
			<table class="table" id="my_document_info">
				<thead>
					<tr>
						<th class="required">Loại</th>
						<th class="required">Số</th>
						<th>Ngày cấp</th>
						<th>Ngày hết hạn</th>
						<th>Nơi cấp</th>
						<th>Quốc gia</th>
						<th class="required">Trạng thái</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<t t-foreach="personal_documents" t-as="document">
						<t t-if="document and document.document_type_id">
							<tr t-att-data-id="not show_extra and document.id or (document.personal_document_id and document.personal_document_id.id or False)"
								 t-att-data-update-id="show_extra and document.id or False" >
								<td>
									<t t-if="document.document_type_id.id and document.document_type_id.name">
										<a class="my_document_type" data-type="select"
											t-att-data-value="document.document_type_id.id"
											data-required="1"
											data-field="document_type_id"
											data-title="Loại giấy tờ"
											data-error-message="Tab Giấy tờ cá nhân: Loại giấy tờ">
											<span t-esc="document.document_type_id.name or ''" />
										</a>
									</t>
									<t t-if="not document.document_type_id.id or not document.document_type_id.name">
										<a class="my_document_type" data-type="select"
											data-title="Loại giấy tờ"
											data-required="1"
											data-value=""
											data-field="document_type_id"
											data-error-message="Tab Giấy tờ cá nhân: Loại giấy tờ"></a>
									</t>
								</td>
								<td>
									<t t-if="document.number">
										<a class="my_number_editable" data-type="text"
											t-att-data-value="document.number"
											data-field="number"
											data-required="1"
											data-title="Số giấy tờ"
											data-error-message="Tab Giấy tờ cá nhân: Số giấy tờ"
											data-maxlength="12"
    										data-minlength="8"
    										autocomplete="off">
											<span t-esc="document.number" />
										</a>
									</t>
									<t t-if="not document.number">
										<a class="my_number_editable" data-type="text"
											data-value=""
											data-field="number"
											data-required="1"
											data-title="Số giấy tờ"
											data-error-message="Tab Giấy tờ cá nhân: Số giấy tờ"
											data-maxlength="12"
    										data-minlength="8"
    										autocomplete="off"></a>
									</t>
								</td>
								<td>
									<t t-if="document.issue_date">
										<a class="my_date_editable"
											data-type="combodate"
											data-title="Ngày cấp"
											t-att-data-value="document and document.issue_date or ''"
											data-format="YYYY-MM-DD"
											data-viewformat="DD/MM/YYYY"
											data-template="DD / MMM / YYYY"
											data-field="issue_date">
												<span t-esc="document.issue_date and format_date(document.issue_date) or ''" />
										</a>
									</t>
									<t t-if="not document.issue_date">
										<a class="my_date_editable"
											data-value=""
											data-type="combodate"
											data-title="Ngày cấp"
											data-format="YYYY-MM-DD"
											data-viewformat="DD/MM/YYYY"
											data-template="DD / MMM / YYYY"
											data-field="issue_date"></a>
									</t>
								</td>
								<td>
									<t t-if="document.expiry_date">
										<a class="my_date_editable"
											data-type="combodate"
											data-title="Ngày hết hạn"
											t-att-data-value="document.expiry_date"
											data-format="YYYY-MM-DD"
											data-viewformat="DD/MM/YYYY"
											data-template="DD / MMM / YYYY"
											data-field="expiry_date">
												<span t-esc="format_date(document.expiry_date)" />
										</a>
									</t>
									<t t-if="not document.expiry_date">
										<a class="my_date_editable"
											data-value=""
											data-type="combodate" 
											data-title="Ngày hết hạn"
											data-format="YYYY-MM-DD" data-viewformat="DD/MM/YYYY"
											data-template="DD / MMM / YYYY"
											data-field="expiry_date"></a>
									</t>
								</td>
								<td>
									<t t-if="document.city_id">
										<a class="my_document_city"
											data-field="city_id"
											t-att-data-value="document.city_id.id"
											data-type="select"
											data-title="Tỉnh, thành phố">
											<span t-esc="document.city_id.name" />
										</a>
									</t>
									<t t-if="not document.city_id">
										<a class="my_document_city"
											data-value=""
											data-field="city_id"
											data-type="select" data-title="Tỉnh, thành phố"></a>
									</t>
								</td>
								<td>
									<t t-if="document.country_id">
										<a class="my_document_country"
											data-field="country_id"
											t-att-data-value="document.country_id.id"
											data-type="select"
											data-title="Quốc gia">
											<span t-esc="document.country_id.name" />
										</a>
									</t>
									<t t-if="not document.country_id">
										<a class="my_document_country"
											data-value="243"
											data-field="country_id"
											data-type="select" data-title="Quốc gia"></a>
									</t>
								</td>
								<td>
									<t t-if="document.state">
										<a class="my_document_state"
											data-field="state"
											t-att-data-value="document.state"
											data-type="select"
											data-title="Trạng thái"
											data-required="1"
											data-error-message="Tab Giấy tờ cá nhân: Trạng thái">
											<span t-esc="get_document_status(document.state)" />
										</a>
									</t>
									<t t-if="not document.state">
										<a class="my_document_state"
											data-field="state"
											data-type="select"
											data-title="Trạng thái"
											data-required="1"
											data-error-message="Tab Giấy tờ cá nhân: Trạng thái"></a>
									</t>
								</td>
								<td></td>
							</tr>
						</t>
					</t>
				</tbody>
			</table>
			
			<div class="text-left text-danger" style="margin-bottom:10px;">
				<span>*** Lưu ý: Vui lòng nhập đủ thông tin CMND, Mã số thuế và Sổ BHXH</span>
			</div>
			
			<t t-if="my_editable">
				<div class="button-extra">
					<div class="col-xs-4">
						<a href="#" class="btn btn-primary btn-my-extra"
							data-table="my_document_info"
							id="btn_document_add">Thêm mới</a>
					</div>
					<div class="col-xs-4 text-center">
						<a class="btn btn-primary btnPrevious btn-my-nav disable" >&#60;</a>
						<a class="btn btn-primary btnNext btn-my-nav" >&#62;</a>
					</div>
				</div>
			</t>
			
			<!-- THIS BUTTON USED IN QUICKEDIT -->
			<t t-if="show_extra">
				<div class="button-extra">
					<div class="col-xs-4">
						<a href="#" class="btn btn-primary btn-my-extra"
							data-table="my_document_info"
							id="btn_document_add">Thêm mới</a>
					</div>
					<div class="col-xs-4 text-center">
						<a class="btn btn-primary btnPrevious btn-my-nav" >&#60;</a>
						<a class="btn btn-primary btnNext btn-my-nav" >&#62;</a>
					</div>
				</div>
			</t>
		</template>
    	
    	<!-- ACCOUNT INFO -->
    	<template id="vhr_mysite.account_info">
    		<!-- <table class="table table-striped" id="my_bank_info"> -->
    		<table class="table" id="my_bank_info">
				<thead>
					<tr>
						<th class="required">Chủ tài khoản</th>
						<th class="required">Số tài khoản</th>
						<th class="required">Ngân hàng</th>
						<th class="required">Chi nhánh</th>
						<!--<th>Tài khoản chính</th>-->
						<th>Ngày áp dụng</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<t t-foreach="bank_accounts" t-as="account">
						<t t-if="account">
							<tr t-att-data-id="not show_extra and account.id or (account.res_bank_id and account.res_bank_id.id or False)"
								 t-att-data-update-id="show_extra and account.id or False" >
								<td>
									<t t-if="account.owner_name">
										<a class="my_input_editable"
											t-att-data-value="account.owner_name"
											data-type="text"
											data-field="owner_name"
											data-title="Chủ tài khoản"
											data-required="1"
											data-error-message="Tab Tài khoản ngân hàng: Chủ tài khoản">
											<span t-esc="account.owner_name" />
										</a>
									</t>
									<t t-if="not account.owner_name">
										<a class="my_input_editable" data-type="text"
											data-field="owner_name"
											data-title="Chủ tài khoản"
											data-required="1"
											data-error-message="Tab Tài khoản ngân hàng: Chủ tài khoản"></a>
									</t>
								</td>
								<td>
									<t t-if="account.acc_number">
										<a class="my_number_editable"
											t-att-data-value="account.acc_number"
											data-type="text"
											data-field="acc_number"
											data-title="Số tài khoản"
											data-required="1"
											data-error-message="Tab Tài khoản ngân hàng: Số tài khoản"
											minlength="1"
    										autocomplete="off">
											<span t-esc="account.acc_number" />
										</a>
									</t>
									<t t-if="not account.acc_number">
										<a class="my_number_editable" data-type="text"
											data-field="acc_number"
											data-title="Số tài khoản"
											data-required="1"
											data-error-message="Tab Tài khoản ngân hàng: Số tài khoản"
											minlength="1"
    										autocomplete="off"></a>
									</t>
								</td>
								<td>
									<t t-if="account.bank">
										<a class="my_bank"
											data-type="select"
											data-field="bank"
											t-att-data-value="account.bank.id"
											data-title="Ngân hàng"
											data-required="1"
											data-error-message="Tab Tài khoản ngân hàng: Tên ngân hàng">
											<t t-esc="account.bank.name" />
										</a>
									</t>
									<t t-if="not account.bank">
										<a class="my_bank"
											data-type="select"
											data-field="bank"
											data-title="Ngân hàng"
											data-required="1"
											data-error-message="Tab Tài khoản ngân hàng: Tên ngân hàng"></a>
									</t>
								</td>
								<td>
									<t t-if="account.bank_branch">
										<a class="my_bank_branch"
											data-type="select"
											data-field="bank_branch"
											t-att-data-value="account.bank_branch.id"
											data-title="Chi nhánh"
											data-required="1"
											data-error-message="Tab Tài khoản ngân hàng: Chi nhánh">
											<t t-esc="account.bank_branch.name" />
										</a>
									</t>
									<t t-if="not account.bank_branch">
										<a class="my_bank_branch"
											data-type="select"
											data-field="bank_branch"
											data-title="Chi nhánh"
											data-required="1"
											data-error-message="Tab Tài khoản ngân hàng: Chi nhánh"></a>
									</t>
								</td>
								<!--<td>-->
									<!--<t t-if="account.is_main">-->
										<!--<input type="checkbox" checked="checked"-->
												<!--data-value="1"-->
												<!--class="my_bank_is_main"-->
												<!--data-field="is_main"/>-->
									<!--</t>-->
									<!--<t t-if="not account.is_main">-->
										<!--<input type="checkbox"-->
												<!--data-value="0"-->
												<!--data-field="is_main"-->
												<!--class="my_bank_is_main" />-->
									<!--</t>-->
								<!--</td>-->
								<td>
									<t t-if="account.effect_from">
										<a href="#">
											<t t-esc="format_date(account.effect_from)" />
										</a>
									</t>
								</td>
								<td></td>
							</tr>
						</t>
					</t>
				</tbody>
			</table>
			
			<div class="text-left text-danger" style="margin-bottom:10px;">
				<span>*** Lưu ý: Vui lòng chỉ chọn duy nhất một tài khoản chính</span>
			</div>
			
			<t t-if="my_editable">
				<div class="button-extra">
					<div class="col-xs-4">
						<t t-if="not bank_accounts or (bank_accounts and len(bank_accounts) == 1 and (bank_accounts[0].owner_name == 'Unknown' or bank_accounts[0].owner_name[0:7] == 'Unknown'))">
							<a href="#" class="btn btn-primary btn-my-extra"
								data-table="my_bank_info"
								id="btn_bank_add">Thêm mới</a>
						</t>
					</div>
					<div class="col-xs-4 text-center">
						<a class="btn btn-primary btnPrevious btn-my-nav" >&#60;</a>
						<a class="btn btn-primary btnNext btn-my-nav disable" >&#62;</a>
					</div>
				</div>
			</t>
			
			<!-- THIS BUTTON USED IN QUICKEDIT -->
			<t t-if="show_extra">
				<div class="button-extra">
					<div class="col-xs-4">
						<t t-if="not bank_accounts or (bank_accounts and len(bank_accounts) == 1 and (bank_accounts[0].owner_name == 'Unknown' or bank_accounts[0].owner_name[0:7] == 'Unknown'))">
							<a href="#" class="btn btn-primary btn-my-extra"
								data-table="my_bank_info"
								id="btn_bank_add">Thêm mới</a>
						</t>
					</div>
					<div class="col-xs-4 text-center">
						<a class="btn btn-primary btnPrevious btn-my-nav" >&#60;</a>
						<a class="btn btn-primary btnNext btn-my-nav" >&#62;</a>
					</div>
				</div>
			</t>
    	</template>
    	
    	<!-- PARTNER INFO -->
    	<template id="vhr_mysite.partner_info">
    		<!-- <table class="table table-striped" id="my_partner_info"> -->
    		<table class="table" id="my_partner_info">
				<thead>
					<tr>
						<th class="required">Họ tên</th>
						<th class="required">Mối liên hệ</th>
						<th>Điện thoại di động</th>
						<th>Điện thoại bàn</th>
						<th>Địa chỉ</th>
						<th>Khẩn cấp</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<t t-foreach="relation_partners" t-as="partner">
						<t t-if="partner">
							<tr t-att-data-id="not show_extra and partner.id or (partner.relation_partner_id and partner.relation_partner_id.id or False)"
								 t-att-data-update-id="show_extra and partner.id or False" >
								<td>
									<t t-if="partner.name">
										<a class="my_input_editable"
											data-required="1"
											t-att-data-value="partner.name"
											data-type="text"
											data-field="name"
											data-title="Họ tên"
											data-error-message="Tab Người thân: Họ tên người thân">
											<span t-esc="partner.name" />
										</a>
									</t>
									<t t-if="not partner.name">
										<a class="my_input_editable"
											data-required="1"
											data-type="text"
											data-field="name"
											data-title="Họ tên"
											data-error-message="Tab Người thân: Họ tên người thân"></a>
									</t>
								</td>
								<td>
									<t t-if="partner.relationship_id">
										<a href="#" class="my_partner_relationship"
											data-required="1"
											data-type="select"
											data-field="relationship_id"
											t-att-data-value="partner.relationship_id.id"
											data-title="Mối quan hệ"
											data-error-message="Tab Người thân: Mối quan hệ">
											<span t-esc="partner.relationship_id.name" />
										</a>
									</t>
									<t t-if="not partner.relationship_id">
										<a href="#" class="my_partner_relationship"
											data-required="1"
											data-type="select"
											data-field="relationship_id"
											data-title="Mối quan hệ"
											data-error-message="Tab Người thân: Mối quan hệ"></a>
									</t>
								</td>
								<td>
									<t t-if="partner.mobile">
										<a class="my_number_editable"
											t-att-data-value="partner.mobile"
											data-type="text"
											data-field="mobile"
											t-att-data-required="partner.is_emergency and '1' or '0'"
											data-title="Di động người thân"
											data-maxlength="11"
											data-minlength="9"
    										autocomplete="off">
											<span t-esc="partner.mobile" />
										</a>
									</t>
									<t t-if="not partner.mobile">
										<a class="my_number_editable" data-type="text"
											data-field="mobile"
											t-att-data-required="partner.is_emergency and '1' or '0'"
											data-maxlength="11"
											data-minlength="9"
    										autocomplete="off"
											data-title="Di động người thân"></a>
									</t>
								</td>
								<td>
									<t t-if="partner.phone">
										<a class="my_number_editable"
											t-att-data-value="partner.phone"
											data-type="text"
											data-field="phone"
											data-title="Điện thoại bàn"
											data-maxlength="10"
											data-minlength="7"
    										autocomplete="off">
											<span t-esc="partner.phone" />
										</a>
									</t>
									<t t-if="not partner.phone">
										<a class="my_number_editable"
											data-type="text"
											data-field="phone"
											data-title="Điện thoại bàn"
											data-maxlength="10"
											data-minlength="7"
    										autocomplete="off"></a>
									</t>
								</td>
								<td>
									<t t-if="partner.street">
										<a class="my_input_editable"
											t-att-data-value="partner.street"
											data-type="text"
											data-title="Số nhà, tên đường, phường / xã">
											<span t-esc="partner.street" />
										</a>
									</t>
									<t t-if="not partner.street">
										<a class="my_input_editable" data-type="text"
											data-title="Số nhà, tên đường, phường / xã"></a>
									</t>
									,&#160;
									<t t-if="partner.district_id">
										<a href="#" class="my_partner_district"
											data-type="select"
											data-field="district_id"
											t-att-data-value="partner.district_id.id"
											data-title="Quận / Huyện">
											<span t-esc="partner.district_id.name" />
										</a>
									</t>
									<t t-if="not partner.district_id">
										<a href="#" class="my_partner_district" data-type="select"
											data-field="district_id" data-title="Quận / Huyện"></a>
									</t>
									,&#160;
									<t t-if="partner.city_id">
										<a href="#" class="my_partner_city"
											data-type="select"
											data-field="city_id"
											t-att-data-value="partner.city_id.id"
											data-title="Tỉnh / Thành Phố">
											<span t-esc="partner.city_id.name" />
										</a>
									</t>
									<t t-if="not partner.city_id">
										<a href="#" class="my_partner_city" data-type="select"
											data-field="city_id" data-title="Tỉnh / Thành Phố"></a>
									</t>
								</td>
								<td>
									<t t-if="partner.is_emergency">
										<input type="checkbox" checked="checked"
												data-value="1"
												class="my_partner_is_emergency"
												data-field="is_emergency"
												data-fields-required="mobile"/>
									</t>
									<t t-if="not partner.is_emergency">
										<input type="checkbox"
												data-value="0"
												data-field="is_emergency"
												data-fields-required="mobile"
												class="my_partner_is_emergency" />
									</t>
								</td>
								<td></td>
							</tr>
						</t>
					</t>
				</tbody>
