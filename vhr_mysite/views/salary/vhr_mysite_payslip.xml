<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	<template id="vhr_mysite.vhr_payslip" name="Phiếu lương">
			<t t-call="website.layout">
				<!-- Neu active form hoac chua active form nhung la cnb -->
				<t t-if="active_form or (not active_form and is_cb)">
				
				<t t-if="employee">
					<div class="title-info">
						<h6><span class="lgVN">Phiếu lương của nhân viên: </span><span class="lgEN">Employee Payslip: </span><span t-esc="employee.name" /> - <span t-esc="employee.code" /></h6>
					</div>
				</t>
				<div class="my_payslip">
					<!--SELECT LANGUAGE-->
					<div class="col-xs-2 text-right form-group">
						<select id="select-lg" name="select-lg" class="form-control">
							<option value="lgVN">Tiếng Việt</option>
							<option value="lgEN">English</option>
						</select>
					</div>
					<div class="select-period col-xs-6 text-left form-inline">
						<div class="row">
							<div class="col-xs-6 form-group">
								<label for="select-year">
									<span class="lgVN">Chọn năm: </span>
									<span class="lgEN">Select Year: </span>
								</label>
								<select id="select-year" name="select-year" class="form-control">
									<option value=""></option>
									<t t-foreach="years" t-as="year">
										<option t-att-value="year or -1">
											<span t-esc="year" />
										</option>
									</t>
								</select>
							</div>
							<div class="col-xs-6 form-group">
								<label for="select-month">
									<span class="lgVN">Chọn tháng: </span>
									<span class="lgEN">Select Month: </span>
								</label>
								<select id="select-month" name="select-month" class="form-control">
									<option value=""></option>
									<t t-foreach="months" t-as="month">
										<option t-att-value="month and month or -1">
											<span t-esc="month" />
										</option>
									</t>
								</select>
							</div>
						</div>
					</div>
					<t t-if="is_cb">
						<div class="col-xs-1"></div>
						<div class="search-payslip col-xs-3 text-right">
							<input data-toggle="tooltip" role="tooltip"
		              			class="todo-search-field" data-placement="bottom"
		              			title="Nhập chính xác domain acc hoặc mã nhân viên"
		              			data-delay='{"show":"500", "hide":"100"}'
		              			type="search" value="" placeholder="Tìm kiếm ..."
		              			id="input_payslip_search"/>
		              		<i class="fa fa-search fa-lg" id="btn_payslip_search"></i>
						</div>
					</t>

					<t t-if="payslips">
						<t t-foreach="payslips" t-as="payslip">
							<t t-call="vhr_mysite.payslip_detail" />
						</t>
					</t>
				</div>
				
				</t>
				
				<t t-if="not active_form and not is_cb">
					<t t-call="vhr_mysite.payslip_not_avaiable" />
				</t>
			</t>
		</template>
		
		<template id="vhr_mysite.vhr_payslip_search" name="Phiếu lương">
			<t t-call="website.layout">
				<!-- Neu active form hoac la cb nhung chua active form -->
				<t t-if="active_form or (not active_form and is_cb)">
				
				<t t-if="employee">
					<div class="title-info">
						<h6><span class="lgVN">Kết quả tìm kiếm phiếu lương cho nhân viên: </span><span class="lgEN">Found employee payslip: </span><span t-esc="employee.name" /> - <span t-esc="employee.code" /></h6>
					</div>
				</t>
				<t t-if="not employee">
					<div class="title-info">
						<h6><span class="lgVN">Không tìm thấy kết quả cho từ khóa </span><span class="lgEN">Not found for the key word </span>"<span t-esc="query" />"</h6>
					</div>
				</t>
			
				<div class="my_payslip">
					<!--SELECT LANGUAGE-->
					<div class="col-xs-2 text-right form-group">
						<select id="select-lg" name="select-lg" class="form-control">
							<option value="lgVN">Tiếng Việt</option>
							<option value="lgEN">English</option>
						</select>
					</div>
					<div class="select-period col-xs-6 text-left form-inline">
						<div class="row">
							<div class="col-xs-6 form-group">
								<label for="select-year">
									<span class="lgVN">Chọn năm: </span>
									<span class="lgEN">Select Year: </span>
								</label>
								<select id="select-year" name="select-year" class="form-control">
									<option value=""></option>
									<t t-foreach="years" t-as="year">
										<option t-att-value="year or -1">
											<span t-esc="year" />
										</option>
									</t>
								</select>
							</div>
							<div class="col-xs-6 form-group">
								<label for="select-month">
									<span class="lgVN">Chọn tháng: </span>
									<span class="lgEN">Select Month: </span>
								</label>
								<select id="select-month" name="select-month" class="form-control">
									<option value=""></option>
									<t t-foreach="months" t-as="month">
										<option t-att-value="month and month or -1">
											<span t-esc="month" />
										</option>
									</t>
								</select>
							</div>
						</div>
					</div>
					<t t-if="is_cb">
						<div class="col-xs-1"></div>
						<div class="search-payslip col-xs-3 text-right">
							<input data-toggle="tooltip" role="tooltip"
		              			class="todo-search-field" data-placement="bottom"
		              			title="Nhập chính xác domain acc hoặc mã nhân viên"
		              			data-delay='{"show":"500", "hide":"100"}'
		              			type="search" value="" placeholder="Tìm kiếm ..."
		              			id="input_payslip_search"/>
		              		<i class="fa fa-search fa-lg" id="btn_payslip_search"></i>
						</div>
					</t>
					<t t-if="payslips">
						<t t-foreach="payslips" t-as="payslip">
							<t t-call="vhr_mysite.payslip_detail" />
						</t>
					</t>
				</div>
				
				</t>
				
				<t t-if="not active_form and not is_cb">
					<t t-call="vhr_mysite.payslip_not_avaiable" />
				</t>
			</t>
		</template>
		
		<template id="vhr_mysite.payslip_not_avaiable" name="Chi tiết phiếu lương chưa được mở">
			<div class="title-info">
				<h6>Hiện tại chức năng xem phiếu lương chưa được mở.</h6>
				<h6>Bạn vui lòng truy cập lại sau.</h6>
			</div>
		</template>
		
		<template id="vhr_mysite.payslip_detail" name="Chi tiết phiếu lương">
				<div t-att-class="payslip and payslip.year and payslip.month and 
								'vhr_payslip_' + str(payslip.year) + str(payslip.month) +
								(selected_period and (selected_period == str(payslip.period)) and ' selected' or '') or 'vhr_payslip'">
					<div class="title-info">
						<h6>
							<span class="lgVN">BẢNG CHIẾT TÍNH LƯƠNG</span>
							<span class="lgEN">PAYSLIP</span>
						</h6>
						<span class="lgVN">Tháng: <t t-esc="payslip.period or ''" /></span>
						<span class="lgEN">Month: <t t-esc="payslip.period or ''" /></span>
					</div>
					<t t-if="payslip.note">
						<p style="font-size:16px; color:#e74c3c; text-align:center;" t-raw="payslip.note and payslip.note or ''" />
					</t>
					
					<t t-if="payslip.from_date and payslip.to_date">
						<p style="font-size:16px; color:#e74c3c; text-align:center;">
							<span class="lgVN">Lương tháng </span><span class="lgEN">Monthly salary </span><b><t t-esc="payslip.period or ''" /></b>
							<span class="lgVN">được tính từ ngày </span><span class="lgEN">from </span><b><t t-esc="payslip.from_date and format_date(payslip.from_date) or ''" /></b>
							<span class="lgVN">đến ngày </span><span class="lgEN">to </span><b><t t-esc="payslip.to_date and format_date(payslip.to_date) or ''" /></b>
						</p>
					</t>
					<table class="table table-striped table-bordered">
						<tbody>
							<t t-if="employee">
								<tr>
									<td class="text-right col-xs-5">
										<span class="lgVN">Họ và Tên:</span>
										<span class="lgEN">Employee Name:</span>
									</td>
									<td class="text-left"><span t-esc="employee.name" /></td>
								</tr>
								<tr>
									<td class="text-right">
										<span class="lgVN">Mã Nhân Viên:</span>
										<span class="lgEN">Employee Code:</span>
									</td>
									<td class="text-left"><span t-esc="employee.code" /></td>
								</tr>
								<tr>
									<td class="text-right">
										<span class="lgVN">Phòng ban:</span>
										<span class="lgEN">Department:</span>
									</td>
									<td class="text-left"><span t-esc="employee.department_id and employee.department_id.name or ''" /></td>
								</tr>
								<tr>
									<td class="text-right">
										<span class="lgVN">Số tài khoản ngân hàng:</span>
										<span class="lgEN">Bank Account No:</span>
									</td>
									<td class="text-left"><span t-esc="bank_account_number and bank_account_number or ''" /></td>
								</tr>
								<tr>
									<td class="text-right">
										<span class="lgVN">Mã số thuế thu nhập cá nhân:</span>
										<span class="lgEN">Individual Tax Code:</span>
									</td>
									<td class="text-left"><span t-esc="pit_number" /></td>
								</tr>
							</t>
						</tbody>
					</table>
					<table class="table table-striped table-bordered">
						<tbody>
							<tr class="line-emty-half"></tr>
							<t t-if="payslip">
								<tr>
									<td class="line-subtotal" colspan="1">
										<span class="lgVN">THÔNG TIN CƠ BẢN</span>
										<span class="lgEN">BASIC INFORMATION</span>
									</td>
									<td class="line-subtotal" colspan="3"></td>
									<td class="line-subtotal text-center text-bold col-xs-2">
										<span class="lgVN">LƯƠNG CŨ</span>
										<span class="lgEN">OLD SALARY</span>
									</td>
									<td class="line-subtotal text-center text-bold col-xs-2">
										<span class="lgVN">LƯƠNG MỚI</span>
										<span class="lgEN">CURRENT SALARY</span>
									</td>
								</tr>
								<tr>
									<td class="text-left col-xs-5">
										<span class="lgVN">Tổng mức lương thỏa thuận</span>
										<span class="lgEN">Gross salary</span>
									</td>
									<td class="col-xs-1">(1)</td>
									<td colspan="2"></td>
									<td class="text-right"><span t-esc="format_money(payslip.prev_gross_salary)" /></td>
									<td class="text-right"><span t-esc="format_money(payslip.gross_salary)" /></td>
								</tr>
								<tr>
									<td class="text-left">
										<span class="lgVN">Mức lương</span>
										<span class="lgEN">Base salary for insurance contributions</span>
									</td>
									<td>(2)</td>
									<td colspan="2"></td>
									<td class="text-right"><span t-esc="format_money(payslip.prev_basic_salary)" /></td>
									<td class="text-right"><span t-esc="format_money(payslip.basic_salary)" /></td>
								</tr>
								<t t-if="(int(payslip.year) &lt; 2016) or (int(payslip.year) == 2016 and int(payslip.month) &lt; 4)">
									<tr>
										<td class="text-left">
											<span class="lgVN">Trợ cấp tổng hợp</span>
											<span class="lgEN">General allowance</span>
										</td>
										<td>(3)</td>
										<td colspan="2"></td>
										<td class="text-right"><span t-esc="format_money(payslip.prev_allowance_salary)" /></td>
										<td class="text-right"><span t-esc="format_money(payslip.allowance_salary)" /></td>
									</tr>
								</t>
								<t t-if="int(payslip.year) > 2016 or (int(payslip.year) == 2016 and int(payslip.month) >= 4)">
									<tr>
										<td class="text-left">
											<span class="lgVN">Thưởng V_Bonus</span>
											<span class="lgEN">V_Bonus</span>
										</td>
										<td>(3)</td>
										<td colspan="2"></td>
										<td class="text-right"><span t-esc="format_money(payslip.prev_v_bonus)" /></td>
										<td class="text-right"><span t-esc="format_money(payslip.v_bonus)" /></td>
									</tr>
								</t>
								<tr>
									<td class="text-left">
										<span class="lgVN">Trợ cấp đặc thù của bộ phận</span>
										<span class="lgEN">Special allowance</span>
									</td>
									<td>(4)</td>
									<td colspan="2"></td>
									<td class="text-right"><span t-esc="format_money(payslip.prev_allowance_special_salary)" /></td>
									<td class="text-right"><span t-esc="format_money(payslip.allowance_special_salary)" /></td>
								</tr>
								<tr class="line-emty-half"></tr>
								
								<tr data-toggle="collapse" t-att-data-target="'#in_month_info' + str(payslip.id)" class="accordion-toggle">
									<td colspan="6" class="line-subtotal">
										<div class="subtotal-title text-left">
											<span class="lgVN">THÔNG TIN TRONG THÁNG</span>
											<span class="lgEN">INFORMATION IN MONTH</span>
										</div>
										<div class="subtotal-icon text-right">
											<i class="fa fa-angle-down down-icon"></i>
										</div>
									</td>
								</tr>
								<tr>
									<td colspan="6" class="collapse_row">
										<div class="accordion-body collapse" t-att-id="'in_month_info' + str(payslip.id)">
											<table class="table table-striped table-bordered">
												<tr>
													<td class="text-left col-xs-5">
														<span class="lgVN">Tổng số ngày công chuẩn</span>
														<span class="lgEN">Standard working days</span>
													</td>
													<td class="col-xs-1">(5)</td>
													<td colspan="3"></td>
													<td class="text-right col-xs-2"><span t-esc="payslip.standard_day" /></td>
												</tr>
												<tr>
													<td class="text-left">
														<span class="lgVN">Tổng số ngày công thực tế</span>
														<span class="lgEN">Actual working days</span>
													</td>
													<td>(6)</td>
													<td colspan="2"></td>
													<td class="text-right col-xs-2"><span t-esc="payslip.prev_actual_wds" /></td>
													<td class="text-right col-xs-2"><span t-esc="payslip.actual_wds" /></td>
												</tr>
												<tr>
													<td class="text-left">
														<span class="lgVN">Tổng số ngày nghỉ không lương</span>
														<span class="lgEN">Unpaid leave</span>
													</td>
													<td>(7)</td>
													<td colspan="3"></td>
													<td class="text-right"><span t-esc="payslip.unpaid_leave" /></td>
												</tr>
												<tr>
													<td class="text-left">
														<span class="lgVN">Tổng số ngày nghỉ hưởng lương</span>
														<span class="lgEN">Paid leave</span>
													</td>
													<td>(8)</td>
													<td colspan="3"></td>
													<td class="text-right"><span t-esc="payslip.paid_leave" /></td>
												</tr>
												<tr>
													<td class="text-left">
														<span class="lgVN">Tổng số ngày nghỉ hưởng lương BHXH (tỷ lệ 75%)</span>
														<span class="lgEN">Leave subject to 75% Social Insurance payment</span>
													</td>
													<td>(9)</td>
													<td colspan="3"></td>
													<td class="text-right"><span t-esc="payslip.leave_75_si" /></td>
												</tr>
												<tr>
													<td class="text-left">
														<span class="lgVN">Tổng số ngày nghỉ hưởng lương BHXH (tỷ lệ 100%)</span>
														<span class="lgEN">Leave subject to 100% Social Insurance payment</span>
													</td>
													<td>(10)</td>
													<td colspan="3"></td>
													<td class="text-right"><span t-esc="payslip.leave_100_si" /></td>
												</tr>
												<tr>
													<td class="text-left">
														<span class="lgVN">Số ngoài giờ làm việc ngày thường</span>
														<span class="lgEN">OT during working day (h)</span>
													</td>
													<td>(11a)</td>
													<td colspan="3"></td>
													<td class="text-right"><span t-esc="payslip.ot_normal_day" /></td>
												</tr>
												<tr>
													<td class="text-left">
														<span class="lgVN">Số ngoài giờ làm việc ngày thường ca 3</span>
														<span class="lgEN">OT during working day (Shift 3) (h)</span>
													</td>
													<td>(11b)</td>
													<td colspan="3"></td>
													<td class="text-right"><span t-esc="payslip.ot_normal_night" /></td>
												</tr>
												<tr>
													<td class="text-left">
														<span class="lgVN">Số ngoài giờ làm việc ngày nghỉ (thứ 7, CN)</span>
														<span class="lgEN">OT during weekend (h)</span>
													</td>
													<td>(12a)</td>
													<td colspan="3"></td>
													<td class="text-right"><span t-esc="payslip.ot_dayoff_day" /></td>
												</tr>
												<tr>
													<td class="text-left">
														<span class="lgVN">Số ngoài giờ làm việc ngày nghỉ (thứ 7, CN) ca 3</span>
														<span class="lgEN">OT during weekend (Shift 3) (h)</span>
													</td>
													<td>(12b)</td>
													<td colspan="3"></td>
													<td class="text-right"><span t-esc="payslip.ot_dayoff_night" /></td>
												</tr>
												<tr>
													<td class="text-left">
														<span class="lgVN">Số ngoài giờ làm việc ngày lễ, tết</span>
														<span class="lgEN">OT during holiday (h)</span>
													</td>
													<td>(13a)</td>
													<td colspan="3"></td>
													<td class="text-right"><span t-esc="payslip.ot_holiday_day" /></td>
												</tr>
												<tr>
													<td class="text-left">
														<span class="lgVN">Số ngoài giờ làm việc ngày lễ, tết ca 3</span>
														<span class="lgEN"> OT during holiday (Shift 3) (h)</span>
													</td>
													<td>(13b)</td>
													<td colspan="3"></td>
													<td class="text-right"><span t-esc="payslip.ot_holiday_money" /></td>
												</tr>
											</table>
										</div>
									</td>
								</tr>
								
								<tr class="line-emty-half"></tr>
								<tr>
									<td class="line-total text-left" colspan="5">
										<span class="lgVN">I. TỔNG THU NHẬP PHÁT SINH TRONG THÁNG</span>
										<span class="lgEN">I. TOTAL DERIVED INCOME</span>
									</td>
									<td class="line-total text-center"><span t-esc="format_money(payslip.total_gross_income)" /></td>
								</tr>
								<tr class="line-emty-half"></tr>
								<tr data-toggle="collapse" t-att-data-target="'#in_month_actual_salary' + str(payslip.id)" class="accordion-toggle">
									<td colspan="1" class="line-subtotal col-xs-5">
										<div class="subtotal-title text-left">
											<span class="lgVN">A. LƯƠNG PHÁT SINH</span>
											<span class="lgEN">A. DERIVED SALARY</span>
										</div>
										<div class="subtotal-icon text-right">
											<i class="fa fa-angle-down down-icon"></i>
										</div>
									</td>
									<td class="line-subtotal" colspan="4"></td>
									<td class="line-subtotal text-center"><span t-esc="format_money(payslip.actual_salary)" /></td>
								</tr>
								<tr>
									<td colspan="6" class="collapse_row">
										<div class="accordion-body collapse" t-att-id="'in_month_actual_salary' + str(payslip.id)">
											<table class="table table-striped table-bordered">
												<tr>
													<td class="text-left col-xs-5">
														<span class="lgVN">Mức lương phát sinh</span>
														<span class="lgEN">Derived base salary</span>
													</td>
													<td class="col-xs-1">(14)</td>
													<td class="col-xs-2" colspan="2">=(2)/(5)*(6)</td>
													<td class="text-right col-xs-2"><span t-esc="format_money(payslip.prev_actual_basic_salary)" /></td>
													<td class="text-right col-xs-2"><span t-esc="format_money(payslip.actual_basic_salary)" /></td>
												</tr>
												<t t-if="int(payslip.year) &lt; 2016 or (int(payslip.year) == 2016 and int(payslip.month) &lt; 4)">
