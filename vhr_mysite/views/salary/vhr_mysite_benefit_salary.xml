<?xml version="1.0" ?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_vhr_mysite_benefit_salary_form">
            <field name="name">vhr.mysite.benefit.salary.form</field>
            <field name="model">vhr.mysite.benefit.salary</field>
            <field name="groups_id" eval="[(4, ref('vhr_human_resource.vhr_cb'))]"/>
            <field name="arch" type="xml">
                <form string="Salary" version="7.0">
                    <sheet>
                        <group col="4">
                        		<field name="employee_id" required="True" options="{'no_quick_create':True, 'no_create':True,'no_open':True}"
                        		on_change="onchange_employee_id(employee_id)"/>
                        		<field name="company_id" options="{'no_quick_create':True, 'no_create':True,'no_open':True}"/>
                        		<field name="employee_code" readonly='1'/>
                        		<field name="salary" required='1'/>
                        		<field name="active"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                        <notebook>
       						<page string="Logs">
	                        	<label string="*** Please press F5 to refresh the list of logs !" colspan="4"/>
		                        <field name="audit_log_ids" mode="tree"
		                               widget="one2many_list" readonly="1" nolabel="1" colspan="4">
		                            <tree version="7.0">
		                                <field name="timestamp" required="1" readonly="1"/>
		                                <field name="user_id" readonly="1"/>
		                                <field name="method" readonly="1"/>
		                                <field name="field_description"/>
		                                <field name="old_value_text"/>
		                                <field name="new_value_text"/>
		                            </tree>
		                        </field>
	                        </page>
       					</notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_vhr_mysite_benefit_salary_tree" model="ir.ui.view">
            <field name="name">vhr.mysite.benefit.salary.tree</field>
            <field name="model">vhr.mysite.benefit.salary</field>
            <field name="groups_id" eval="[(4, ref('vhr_human_resource.vhr_cb'))]"/>
            <field name="arch" type="xml">
                <tree string="Salary">
                	<field name="employee_code"/>
                    <field name="employee_id"/>
                    <field name="company_id"/>
                    <field name="salary"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="view_vhr_mysite_benefit_salary_search" model="ir.ui.view">
            <field name="name">vhr.mysite.benefit.salary.search</field>
            <field name="model">vhr.mysite.benefit.salary</field>
            <field name="groups_id" eval="[(4, ref('vhr_human_resource.vhr_cb'))]"/>
            <field name="arch" type="xml">
                <search string="Salary">
                    <field name="name" string="Employee" 
	                  		filter_domain="['|','|','|',('name','ilike',self),('employee_id.name','ilike',self),('employee_id.login','ilike',self),('employee_id.code','ilike',self)]"/>

                    <field name="company_id"/>
                    <filter string="Active = True" name="active_true" icon="terp-stage"
                            domain="[('active', '=', True)]"/>
                    <filter string="Active = False" name="active_false" icon="STOCK_NEW"
                            domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>


        <record id="act_vhr_mysite_benefit_salary" model="ir.actions.act_window">
            <field name="name">Salary</field>
            <field name="res_model">vhr.mysite.benefit.salary</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_mysite_benefit_salary_tree"/>
            <field name="search_view_id" ref="view_vhr_mysite_benefit_salary_search"/>
        </record>

    </data>
</openerp>