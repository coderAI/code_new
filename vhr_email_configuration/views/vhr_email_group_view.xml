<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="assets_backend" name="email_group assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <link rel="stylesheet" href="/vhr_email_configuration/static/src/css/style.css"/>
            </xpath>
        </template>

        <record id="view_vhr_email_group_form" model="ir.ui.view">
            <field name="name">vhr.email.group.view.form</field>
            <field name="model">vhr.email.group</field>
            <field name="groups_id" eval=""/>
            <field name="arch" type="xml">
                <form string="Email Group" version="7.0">
       				<sheet>
       					<group col="4">
                            <field name="name" required="1"/>
                            <field name="code" required="1"/>
                            <field name="to_email" required="1" class="text_height"/>
                            <field name="cc_email" class="text_height"/>
                            <field name="active"/>
       					</group>
       					<group>
       						<field name="description"/>
       					</group>
       					<notebook>
       						<page string="Logs">
	                        	<label string="*** Please press F5 to refresh the list of logs !" colspan="4"/>
		                        <field name="audit_log_ids" mode="tree"
		                               widget="one2many_list" readonly="1" nolabel="1" colspan="4">
		                            <tree version="7.0">
		                                <field name="timestamp" required="1" readonly="1"/>
		                                <field name="user_id" readonly="1"/>
		                                <field name="method" readonly="1"/>
		                                <field name="field_description"/>
		                                <field name="old_value_text"/>
		                                <field name="new_value_text"/>
		                            </tree>
		                        </field>
	                        </page>
       					</notebook>
       				</sheet>
       			</form>
            </field>
        </record>

        <record id="view_vhr_email_group_tree" model="ir.ui.view">
            <field name="name">vhr.email.group.view.tree</field>
            <field name="model">vhr.email.group</field>
            <field name="groups_id" eval=""/>
            <field name="arch" type="xml">
                <tree string="Email group" version="7.0">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="to_email"/>
                    <field name="cc_email"/>
                    <field name="description"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="view_vhr_email_group_search" model="ir.ui.view">
            <field name="name">vhr.email.group.view.search</field>
            <field name="model">vhr.email.group</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name='name'/>
                    <field name='code'/>
                    <field name='to_email'/>
                    <field name='cc_email'/>
                    <filter string="Active = True" name="active_true" icon="terp-stage"
                            domain="[('active', '=', True)]"/>
                    <filter string="Active = False" name="active_false" icon="STOCK_NEW"
                            domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_vhr_email_group">
            <field name="name">Email group</field>
            <field name="res_model">vhr.email.group</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_email_group_tree"/>
            <field name="groups_id" eval=""/>
            <field name="search_view_id" ref="view_vhr_email_group_search"/>
        </record>

    </data>
</openerp>