<template>
    <t t-name="CalendarExtraView.toolbar">
        <span>
            <button id="btn-save" type="button" class="oe_button oe_list_add oe_highlight">Save
            </button>
            <span class="oe_alternative">
                <!--<span class="oe_fade">or</span>-->
                <!--<a class="oe_bold oe_list_discard" href="#">Clear</a>-->
            </span>
        </span>
        <t t-if="data" t-foreach="data" t-as="item">
            <t t-if="item.search">
                <span><t t-esc="item.label"/>:
                </span>
                <span>
                    <div t-att-name="item.name" t-att-id="item.search == 1 and 'search_field' or ''"
                         class="form-control select-field-data">
                    </div>
                </span>
            </t>
        </t>
        <t t-if="data" t-foreach="data" t-as="item">
            <t t-if="item.search == false">
                <span><t t-esc="item.label"/>:
                </span>
                <span>
                    <div t-att-name="item.name" t-att-id="item.search == 1 and 'search_field' or ''"
                         class="form-control select-field-data">
                    </div>
                </span>
            </t>
        </t>
        <span class="glyphicon glyphicon-filter toolbar-icon-search"></span>

        <span>Year:</span>
        <span>
            <input type="number" class="form-control" id="filter_year"/>
        </span>
        <span>Month:</span>
        <span>
            <select id="filter_month" class="form-control">
                <option value=""></option>
                <option value="1">Jan</option>
                <option value="2">Feb</option>
                <option value="3">Mar</option>
                <option value="4">Apr</option>
                <option value="5">May</option>
                <option value="6">Jun</option>
                <option value="7">Jul</option>
                <option value="8">Aug</option>
                <option value="9">Sep</option>
                <option value="10">Oct</option>
                <option value="11">Nov</option>
                <option value="12">Dec</option>
            </select>
            <!--<input type="number" class="form-control" id="filter_month"/>-->
        </span>
        <span id="error_message"></span>
        <!--<span>-->
        <!--<t t-esc="message or ''"/>-->
        <!--</span>-->

    </t>
    <t t-name="CalendarExtraView.month">
        <t t-foreach="models" t-as="month">
            <tr>
                <td class="month-name">
                    <t t-esc="month.name"/>
                </td>
                <t t-foreach="month.days" t-as="day">
                    <td t-att-class="'date ' + day.name" t-att-id="day.full_name">
                        <div class="editable" contenteditable="true"></div>
                    </td>
                </t>
            </tr>
        </t>
    </t>
    <t t-name="CalendarExtraView">
        <div class="calendar">
            <div class="toolbar"></div>
            <div id="divValid">
                <span id="MainContent_lblValid" class="glyphicon glyphicon-exclamation-sign validation">Please input
                    valid type
                </span>
            </div>
            <table class="table-calendar table table-bordered">
                <thead>
                    <tr>
                        <th>Month</th>
                        <th>01</th>
                        <th>02</th>
                        <th>03</th>
                        <th>04</th>
                        <th>05</th>
                        <th>06</th>
                        <th>07</th>
                        <th>08</th>
                        <th>09</th>
                        <th>10</th>
                        <th>11</th>
                        <th>12</th>
                        <th>13</th>
                        <th>14</th>
                        <th>15</th>
                        <th>16</th>
                        <th>17</th>
                        <th>18</th>
                        <th>19</th>
                        <th>20</th>
                        <th>21</th>
                        <th>22</th>
                        <th>23</th>
                        <th>24</th>
                        <th>25</th>
                        <th>26</th>
                        <th>27</th>
                        <th>28</th>
                        <th>29</th>
                        <th>30</th>
                        <th>31</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </t>


</template>