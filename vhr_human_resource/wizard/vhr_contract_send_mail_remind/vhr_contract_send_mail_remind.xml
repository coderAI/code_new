<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	
    	<record id="vhr_contract_send_mail_remind_view" model="ir.ui.view">
            <field name="name">vhr.contract.send.mail.remind.form</field>
            <field name="model">vhr.contract.send.mail.remind</field>
            <field name="groups_id" eval="[(4, ref('base.group_user'))]"/>
            <field name="arch" type="xml">
                 <form string="Note" version="7.0">
                 	<group col='4'>
                 		<field name="time_meet_user_sign_contract" required='1'/>
                 		<field name="day_meet_user_sign_contract" required='1'/>
                 	</group>
                 	<field name="contract_ids">
                 		<tree editable='true' create='false'>
                 			<field name="emp_code" readonly='1'/>
                 			<field name="employee_id" readonly='1'/>
                 			<field name="type_id" readonly='1'/>
                 			<field name="date_start" readonly='1'/>
							<field name="date_end"  readonly='1'/>
							<field name="mail_to_remind" required='1'/>
							<field name="is_invited" readonly='1'/>
                 		</tree>
                 	</field>
                    <footer>
                        <button name="execute_send_mail"
                                string="Send Mail" one_click_button="True"
                                type="object" icon="gtk-save"
                                class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        
		<act_window id="action_vhr_contract_send_mail_remind"
            key2="client_action_multi" name="Send Mail"
            res_model="vhr.contract.send.mail.remind" 
        	src_model="hr.contract"
            view_mode="form" target="new" view_type="form" />       	  
        
    </data>
</openerp>