<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	
    	<record id="vhr_contract_receive_hard_copy_view" model="ir.ui.view">
            <field name="name">vhr.contract.delivery.form</field>
            <field name="model">vhr.contract.receive.hard.copy</field>
            <field name="groups_id" eval="[(4, ref('base.group_user'))]"/>
            <field name="arch" type="xml">
                 <form string="Note" version="7.0">
                 	<separator string="Are you sure to receive Hard Copy of Contract(s) ?"/>
                 	<field name="contract_ids">
                 		<tree editable='true' create='false'>
                 			<field name="emp_code" readonly='1'/>
                 			<field name="employee_id" readonly='1'/>
                 			<field name="type_id" readonly='1'/>
                 			<field name="date_start" readonly='1'/>
							<field name="date_end"  readonly='1'/>
							<field name="is_delivered" readonly='1'/>
							<field name="is_signed_by_emp"/>
                 		</tree>
                 	</field>
                    <footer>
                        <button name="execute_receive"
                                string="Yes" one_click_button="True"
                                context ="{'contract_ids':context.get('contract_ids')}"
                                type="object" icon="gtk-save"
                                class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        
		<act_window id="action_vhr_contract_receive_hard_copy"
            key2="client_action_multi" name="Receive Hard Copy"
            res_model="vhr.contract.receive.hard.copy" 
        	src_model="hr.contract"
        	context="{'contract_ids':context.get('active_ids')}"
            view_mode="form" target="new" view_type="form" />       	  
        
    </data>
</openerp>