<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	
		<record id="view_vhr_wizard_privacy_statement" model="ir.ui.view">
	        <field name="name">vhr.wizard.privacy.statement</field>
            <field name="model">vhr.wizard.privacy.statement</field>
            <field name="type">form</field>
            <field name="groups_id" eval="[(4, ref('vhr_human_resource.vhr_cb'))]"/>
            <field name="arch" type="xml">
                <form string="Privacy Statement" version="7.0">
                	<div class="oe_right" name="buttons">
                        <div class="oe_right" name="buttons">
                        	<button name="update_list_working_record"
                                string="Filter"
                                type="object"
	                        	icon="fa-filter"
                                class="oe_stat_button"/>
                        	
                            <button name="print_multi_privacy_statement"
                                string="Print"
                                type="object"
	                        	icon="fa-book"
                                class="oe_stat_button"/>
                        </div>
                    </div>
                	<group col="4">
                		<field name="change_form_ids" required='1' widget="many2many_tags" colspan='4' context="{'active_test' : True}"
   						options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
       					<newline/>
                		<field name='report_id' required='1' options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
                		<field name="company_id" 
                		options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
   						
						<field name="division_id"
						options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
						
            			<field name="department_group_id"
            			context="{'dept_from_division' : division_id}"
						options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
            			
						<field name="department_id"  context="{'dept_from_department_group' : department_group_id,'dept_from_division_bypass_group':division_id}"
            			options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
            			<field name="team_id" context="{'dept_from_department' : department_id}"
            			options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
            			<field name="employee_id"
            			options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
            			<field name="effect_from"/>
            			<!--<field name="effective_at_date"/>-->
					</group>
					<newline/>
					
                	<group string="Employees">
                		<field name="working_ids" nolabel="1" options="{'save_readonly': True}">
                			<tree string="Working Record" version="7.0" create='false' edit='false' >
			      				<field name="employee_code"/>
			      				<field name="employee_id"/>
			      				<field name="contract_id"/>
			      				<field name="company_code" string="Entity"/>
			      				<field name="department_id_new"/>
			      				<field name="job_title_id_new"/>
			      				<field name="change_form_name"/>
								<field name="effect_from" string="Effective From"/>
								<field name="effect_to" string="Effective To"/>
								<field name="salary_setting_id_new"/>
								<field name="active"/>
			      			</tree>
                		</field>
                	</group>
                </form>
            </field>
        </record>
        
        
        
        <record id="act_vhr_wizard_privacy_statement" model="ir.actions.act_window">
            <field name="name">Privacy Statement</field>
            <field name="res_model">vhr.wizard.privacy.statement</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_vhr_wizard_privacy_statement"/>
            <field name="context">{'record_type': 'record','search_default_active_true':1, 'show_other_info':True, 'hide_form_view_button':True}</field> 
            <field name="target">current</field>
       </record>
       
       
       <record id="act_vhr_dimension_privacy_statement_report" model="ir.actions.act_window">
            <field name="name">Type Of Report</field>
       		<field name="res_model">vhr.dimension</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('dimension_type_id.code','=','PRIVACY_STATEMENT_REPORT')]</field> 
            <field name="context">{'dimension_type': 'PRIVACY_STATEMENT_REPORT'}</field> 
            <field name="view_id" ref="vhr_master_data.view_vhr_dimension_tree"/> 
            <field name="groups_id" eval=""/>
            <field name="search_view_id" ref="vhr_master_data.view_vhr_dimension_search"/>
       	</record> 
       	

       	<record id="act_wizard_privacy_statement_ir_action_report_xml" model="ir.actions.act_window">
            <field name="name">Reports</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ir.actions.report.xml</field>
            <field name="view_type">form</field>
            <field name="domain">[('report_name','in',['letter_salary_decrease','letter_salary_freeze','letter_promotion','letter_salary_increase'])]</field> 
            <field name="view_id" ref="base.act_report_xml_view_tree"/>
            <field name="search_view_id" ref="base.act_report_xml_search_view"/>
        </record>
       
       <record model="ir.actions.act_window.view" id="inherit_wizard_privacy_ir_action_report_xml_tree">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="base.act_report_xml_view_tree"/>
            <field name="act_window_id" ref="act_wizard_privacy_statement_ir_action_report_xml"/>
        </record>
       

    </data>
</openerp>