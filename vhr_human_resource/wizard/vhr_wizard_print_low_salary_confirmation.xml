<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	
		<record id="view_vhr_wizard_prin_low_salary_confirmation" model="ir.ui.view">
	        <field name="name">vhr.wizard.print.low.salary.confirmation</field>
            <field name="model">vhr.wizard.print.low.salary.confirmation</field>
            <field name="type">form</field>
            <field name="groups_id" eval="[(6, 0,[ref('vhr_human_resource.vhr_cb'),
            									  ref('vhr_master_data.vhr_assistant_to_hrbp'),
            									  ref('vhr_master_data.vhr_hrbp'),
            									  ref('vhr_master_data.vhr_dept_admin'),
            									  ref('base.group_user')])]"/>
            <field name="arch" type="xml">
                <form string="Cam kết thu nhập thấp" version="7.0">
                	<group col="4">
                		<field name="employee_id" required='1' 
                		context="{'active_test' : False,'tree_view_ref':'vhr_human_resource.view_vhr_human_resource_mimimal_employee_tree'}"
   						options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
   						<field name='money_number'/>
   						<field name='money_char'/>
					</group>
					<footer>
                            <button name="action_print" one_click_button="True"
                                    string="Export" type="object"
                                    class="oe_highlight" icon="gtk-save"/>
                            
                            or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                        </footer>
					
                </form>
            </field>
        </record>
        
        
        <record id="act_vhr_wizard_print_low_salary_confirmation" model="ir.actions.act_window">
            <field name="name">Cam kết thu nhập thấp</field>
            <field name="res_model">vhr.wizard.print.low.salary.confirmation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_vhr_wizard_prin_low_salary_confirmation"/>
            <field name="context">{}</field> 
            <field name="target">new</field>
       </record>
       
       
        
    </data>
</openerp>