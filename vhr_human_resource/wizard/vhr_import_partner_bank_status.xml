<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record model="ir.actions.act_window" id="action_vhr_import_partner_bank_status">
			<field name="name">Import Bank Account Status</field>
			<field name="res_model">vhr.import.status</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_mode">tree,form</field>
			<field name="groups_id" eval="" />
			<field name="domain"
				eval="[('module_id', '=', ref('base.module_vhr_human_resource')),('model_id.model','=','res.partner.bank')]" />
			<field name="search_view_id" ref="vhr_common.view_vhr_import_status_search" />
		</record>
		
		<record id="action_vhr_import_partner_bank_status_tree" model="ir.actions.act_window.view">
			<field name="sequence">1</field>
			<field name="view_id" ref="vhr_common.view_vhr_import_status_tree" />
			<field name="act_window_id" ref="action_vhr_import_partner_bank_status" />
			<field name="view_mode">tree</field>
		</record>
		<record id="action_vhr_import_partner_bank_status_form" model="ir.actions.act_window.view">
			<field name="sequence">2</field>
			<field name="view_id" ref="vhr_common.view_vhr_import_status_form" />
			<field name="act_window_id" ref="action_vhr_import_partner_bank_status" />
			<field name="view_mode">form</field>
		</record>


		<!-- Import bank accounts -->
		<record id="view_vhr_import_partner_bank" model="ir.ui.view">
			<field name="name">vhr.import.status.partner.bank.form</field>
			<field name="model">vhr.import.status</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Import Banks Account">
					<div class="oe_title">
						<h2>
							<label string="Import Banks Account" />
						</h2>
					</div>
					<br />
					<group>
						<field name="db_datas" filename="name_data" />
						<field name="name_data" readonly="1" options="{'save_readonly' : True}" />
					</group>
					<div>
						<![CDATA[
							<a href="/vhr_human_resource/static/template/import_bank_accounts_template.xlsx">Bank Accounts template</a>
						]]>
					</div>
					<footer>
						<button name="import_excel_thread" string="Import"
							context="{'function': 'thread_import_partner_bank',
										  'model': 'res.partner.bank',
										  'module':'module_vhr_human_resource'}"
							type="object" icon="gtk-apply"
							default_focus="1" />
						or
						<button string="Cancel" class="oe_link" special="cancel" />
					</footer>
				</form>
			</field>
		</record>

		<record id="action_vhr_import_partner_bank" model="ir.actions.act_window">
			<field name="name">Import Banks Account</field>
			<field name="res_model">vhr.import.status</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>
		<record id="action_vhr_import_partner_bank_form" model="ir.actions.act_window.view">
			<field name="sequence">2</field>
			<field name="view_id" ref="view_vhr_import_partner_bank" />
			<field name="act_window_id" ref="action_vhr_import_partner_bank" />
			<field name="view_mode">form</field>
		</record>
	</data>
</openerp>