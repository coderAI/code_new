<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	
		<record id="view_vhr_wizard_employment_confirmation" model="ir.ui.view">
	        <field name="name">vhr.wizard.employment.confirmation</field>
            <field name="model">vhr.wizard.employment.confirmation</field>
            <field name="type">form</field>
            <field name="groups_id" eval="[(4, ref('vhr_human_resource.vhr_cb_employment_confirm'))]"/>
            <field name="arch" type="xml">
                <form string="Employment Confirmation" version="7.0">
                	<group col="4">
                		<field name="employee_ids" required='1' widget="many2many_tags" context="{'active_test' : False}"
   						options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
                		<field name='report_name' required='1' 
                		options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
					</group>
					<div style="height:20px"></div>
					<footer>
                            <button name="action_print" one_click_button="True"
                                    string="Export" type="object"
                                    class="oe_highlight" icon="gtk-save"/>
                            
                            or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                        </footer>
					
                </form>
            </field>
        </record>
        
        
        <record id="act_vhr_wizard_employment_confirmation" model="ir.actions.act_window">
            <field name="name">Employment Confirmation</field>
            <field name="res_model">vhr.wizard.employment.confirmation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_vhr_wizard_employment_confirmation"/>
            <field name="context">{}</field> 
            <field name="target">new</field>
       </record>
       
       
        
    </data>
</openerp>