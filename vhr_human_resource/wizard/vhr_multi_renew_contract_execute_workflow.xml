<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	
    	<record id="account_vhr_multi_renew_contract_execute_workflow_view" model="ir.ui.view">
            <field name="name">vhr.multi.renew.contract.execute.workflow.form</field>
            <field name="model">vhr.multi.renew.contract.execute.workflow</field>
            <field name="groups_id" eval="[(4, ref('base.group_user'))]"/>
            <field name="arch" type="xml">
                 <form string="Note" version="7.0">
                    <separator string="Comment" colspan="4"/>
                    <field name="comment" colspan="4" required="context.get('required_comment',False)"/>
                    <footer>
                        <button name="execute_workflow"
                                string="Submit"
                                type="object" icon="gtk-save"
                                class="oe_highlight" context="{'ACTION_COMMENT': comment}"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        

        <act_window id="action_vhr_multi_renew_contract_execute_approve"
        	domain="[('state', '!=', False)]"
            key2="client_action_multi" name="Approve"
            res_model="vhr.multi.renew.contract.execute.workflow" 
        	src_model="vhr.multi.renew.contract"
        	context="{'action': 'submit'}"
        	groups="vhr_human_resource.vhr_cb_contract"
            view_mode="form" target="new" view_type="form" />
        
        <act_window id="action_vhr_multi_renew_contract_execute_approve_with_email"
        	domain="[('state', '!=', False)]"
            key2="client_action_multi" name="Approve with email"
            res_model="vhr.multi.renew.contract.execute.workflow" 
        	src_model="vhr.multi.renew.contract"
        	context="{'action': 'submit','send_mail':True}"
        	groups="vhr_human_resource.vhr_cb_contract"
            view_mode="form" target="new" view_type="form" />
            
		<act_window id="action_vhr_multi_renew_contract_execute_return"
			domain="[('state', '!=', False)]"
            key2="client_action_multi" name="Return"
            res_model="vhr.multi.renew.contract.execute.workflow" 
        	src_model="vhr.multi.renew.contract"
        	context="{'action': 'return', 'required_comment': True}"
        	groups="vhr_human_resource.vhr_cb_contract"
            view_mode="form" target="new" view_type="form" />     
        
		<act_window id="action_vhr_multi_renew_contract_execute_reject"
			domain="[('state', '!=', False)]"
            key2="client_action_multi" name="Reject"
            res_model="vhr.multi.renew.contract.execute.workflow" 
        	src_model="vhr.multi.renew.contract"
        	context="{'action': 'reject', 'required_comment': True}"
        	groups="vhr_human_resource.vhr_cb_contract"
            view_mode="form" target="new" view_type="form" />       	  
        
    </data>
</openerp>