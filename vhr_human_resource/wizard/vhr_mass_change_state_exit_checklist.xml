<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	
    	<record id="action_vhr_mass_change_state_exit_checklist_view" model="ir.ui.view">
            <field name="name">vhr.mass.change.state.exit.checklist.form</field>
            <field name="model">vhr.mass.change.state.exit.checklist</field>
            <field name="groups_id" eval="[(4, ref('base.group_user'))]"/>
            <field name="arch" type="xml">
                 <form string="Mass Change Exit Checklist's State" version="7.0">
                    <separator colspan="6"
							string="Chọn danh sách phòng ban muốn phê duyệt giùm ?" />
                    <newline />
					<newline />
					<group  col="4" >
						<field name="is_approve_responsibilities_hand_over"/>
						<!--<field name="is_approve_administrative_office"/>-->
						<field name="is_approve_administrative_office_other"/>
						<field name="is_approve_it_office"/>
						<field name="is_approve_it_office_other"/>
						<field name="is_approve_accounting_office"/>
						<field name="is_approve_hr_office_training"/>
						<field name="is_approve_hr_office_other"/>
						<newline />
						<newline />
						<field name='comment' colspan='4'/>
						<field name="is_able_to_mass_change" invisible='1'/>
					</group>
                    
                    <footer>
                        <button name="execute"  one_click_button="True"
                                string="Execute"
                                type="object" icon="gtk-save"
                                class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        

        <act_window id="action_vhr_mass_change_state_exit_checklist"
            key2="client_action_multi" name="Mass Change State"
            res_model="vhr.mass.change.state.exit.checklist" 
        	src_model="vhr.exit.checklist.request"
            view_mode="form" target="new" view_type="form" />
        
        
    </data>
</openerp>