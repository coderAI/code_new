<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="vhr_hr_export_hrbp_department_view" model="ir.ui.view">
            <field name="name">vhr.hr.export.hrbp.department.form</field>
            <field name="model">vhr.hr.export.hrbp.department</field>
            <field name="groups_id" eval="[(4, ref('vhr_human_resource.vhr_cb'))]"/>
            <field name="arch" type="xml">
                <form string="Export HRBPs List">
                    <sheet>
                        <div class="oe_right oe_button_box" name="button_box">
                            <button name="action_export" one_click_button="True"
                                    string="Export" type="object"
                                    class="oe_stat_button bg_icon_green" icon="fa-mail-forward"/>
                            <button string="Cancel" class="oe_stat_button bg_icon_red" special="cancel"
                                    icon="fa-times"/>
                        </div>
                        <group string="Export Detail">
                                <field name="organization_class_id"
                                on_change="onchange_organization_class_id(organization_class_id)"
                                options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
                                <field name="department_ids" 
                                 attrs="{'required':[('organization_class_id','=',False)]}"
                                options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="act_vhr_hr_export_hrbp_department" model="ir.actions.act_window">
            <field name="name">Export HRBPs List</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vhr.hr.export.hrbp.department</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="vhr_hr_export_hrbp_department_view"/>
            <field name="target">new</field>
        </record>
        
        <record id="report_hrbp_department" model="ir.actions.report.xml">
		      <field name="name">Export HRBPs List</field>
		      <field name="model">vhr.hr.export.hrbp.department</field>
		      <field name="type">ir.actions.report.xml</field>
		      <field name="report_name">report_hrbp_department</field>
              <field name="groups_id" eval="[(4, ref('vhr_human_resource.vhr_cb'))]"/>
		      <field name="report_type">xlsx</field>
		      <field name="auto" eval="False"/>
	    </record>


    </data>
</openerp>