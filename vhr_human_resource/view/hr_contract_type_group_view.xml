<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	<record id="view_hr_contract_type_group_form" model="ir.ui.view">
       		<field name="name">hr.contract.type.group.view.form</field>
       		<field name="model">hr.contract.type.group</field>
       		<field name="arch" type="xml">
       			<form string="Contract Type Group" version="7.0">
       				<sheet>
       					<group col="4">
       						<group>
       							<field name="name" required='1'/>
       							<field name="prefix" 
       							attrs="{'readonly': [('is_offical','=',True)], 'required': [('is_offical','=',False)], 'invisible': [('is_offical','=',True)]}"/>
                            	<field name="suffix" required='1'/>
                            	<field name="number_of_day_to_prepare_terminate" />
       						</group>
       						<group>
       							<field name="name_en"/>
	       						<field name="code" required='1'/>
	       						<field name="is_offical" string='Official'/>
	       						<field name="active"/>
       						</group>                            
       					</group>
       					<group>
       						<field name="description"/>
       					</group>
       					<notebook>
       						<page string="Logs">
	                        	<label string="*** Please press F5 to refresh the list of logs !" colspan="4"/>
		                        <field name="audit_log_ids" mode="tree"
		                               widget="one2many_list" readonly="1" nolabel="1" colspan="4">
		                            <tree version="7.0">
		                                <field name="timestamp" required="1" readonly="1"/>
		                                <field name="user_id" readonly="1"/>
		                                <field name="method" readonly="1"/>
		                                <field name="field_description"/>
		                                <field name="old_value_text"/>
		                                <field name="new_value_text"/>
		                            </tree>
		                        </field>
	                        </page>
       					</notebook>
       				</sheet>
       			</form>
       		</field>
       	</record>
       	
       	<record id="view_hr_contract_type_group_tree" model="ir.ui.view">
       		<field name="name">hr.contract.type.group.view.tree</field>
       		<field name="model">hr.contract.type.group</field>
       		<field name="arch" type="xml">
      			<tree string="Contract Type Group" version="7.0">
      				<field name="code"/>
      				<field name="name"/>
					<field name="name_en"/>
					<field name="prefix"/>
					<field name="suffix"/>					
					<field name="description"/>
					<field name="is_offical" string='Official'/>
					<field name="number_of_day_to_prepare_terminate"/>
					<field name="active"/>
      			</tree>
     		</field>
       	</record>
       	
       	<record id="view_hr_contract_type_group_search" model="ir.ui.view">
        	<field name="name">hr.contract.type.group.view.search</field>
        	<field name="model">hr.contract.type.group</field>
        	<field name="arch" type="xml">
        		<search string="Contract Type Group">
        			<field name="name" string="Contract Type Group" 
        			 filter_domain="['|','|','|',('name','ilike',self),('name_en','ilike',self),('code','ilike',self),('description','ilike',self)]"/>
        			<group expand="0" string="Filter">
						<filter string="Active = True" name="active_true" icon="terp-stage"
	                            domain="[('active', '=', True)]"/>
	                    <filter string="Active = False" name="active_false" icon="STOCK_NEW"
	                            domain="[('active', '=', False)]"/>	                   
	                </group>    
        		</search>
        	</field>
        </record>
        
        <record model="ir.actions.act_window" id="act_hr_contract_type_group">
       		<field name="name">Contract Type Group</field> 
            <field name="res_model">hr.contract.type.group</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_hr_contract_type_group_tree"/>
            <field name="search_view_id" ref="view_hr_contract_type_group_search"/>
       	</record>
       	
       	
    </data>
</openerp>