<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data noupdate='0'>

		<record model="ir.actions.act_window" id="action_vhr_import_pit_status">
			<field name="name">Import PIT Status</field>
			<field name="res_model">vhr.import.status</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_mode">tree,form</field>
			<field name="groups_id" eval="" />
			<field name="domain"
				eval="[('module_id', '=', ref('base.module_vhr_human_resource')),('model_id.model','=','vhr.duty.free')]" />
			<field name="search_view_id" ref="vhr_common.view_vhr_import_status_search" />
		</record>

		<record id="action_vhr_import_pit_status_tree" model="ir.actions.act_window.view">
			<field name="sequence">1</field>
			<field name="view_id" ref="vhr_common.view_vhr_import_status_tree" />
			<field name="act_window_id" ref="action_vhr_import_pit_status" />
			<field name="view_mode">tree</field>
		</record>

		<record id="action_vhr_import_pit_status_form" model="ir.actions.act_window.view">
			<field name="sequence">2</field>
			<field name="view_id" ref="vhr_common.view_vhr_import_status_form" />
			<field name="act_window_id" ref="action_vhr_import_pit_status" />
			<field name="view_mode">form</field>
		</record>

		<!-- Import Tax Code -->
		<record id="view_vhr_import_pit" model="ir.ui.view">
			<field name="name">vhr.import.status.pit.form</field>
			<field name="model">vhr.import.status</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Import PIT">
					<div class="oe_title">
						<h2>
							<label string="Import PIT" />
						</h2>
					</div>
					<br />
					<group>
						<field name="db_datas" filename="name_data" />
						<field name="name_data" readonly="1" options="{'save_readonly' : True}" />
					</group>
					<div>
						<![CDATA[
							<a href="/vhr_human_resource/static/template/import_pit_template.xlsx">Import PIT Template</a>
						]]>
					</div>
					<footer>
						<button name="import_excel_thread" string="Import"
							context="{'function': 'thread_import_pit',
										  'model': 'vhr.duty.free',
										  'module':'module_vhr_human_resource'}"
							type="object" icon="gtk-apply"
							default_focus="1" />
						or
						<button string="Cancel" class="oe_link" special="cancel" />
					</footer>
				</form>
			</field>
		</record>

		<record id="action_vhr_import_pit" model="ir.actions.act_window">
			<field name="name">Import PIT</field>
			<field name="res_model">vhr.import.status</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

		<record id="action_vhr_import_pit_form" model="ir.actions.act_window.view">
			<field name="sequence">2</field>
			<field name="view_id" ref="view_vhr_import_pit" />
			<field name="act_window_id" ref="action_vhr_import_pit" />
			<field name="view_mode">form</field>
		</record>

	</data>
</openerp>