<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_vhr_termination_agreement_contract_form" model="ir.ui.view">
            <field name="name">vhr.termination.agreement.contract.view.form</field>
            <field name="model">vhr.termination.agreement.contract</field>
            <field name="groups_id" eval=""/>
            <field name="arch" type="xml">
                <form string="Termination Agreement" version="7.0">
       				<sheet>
       					<div class="oe_right" name="button_box">
       						<button class="oe_stat_button bg_icon_orange" style="width:40px !important"
                                        name="action_print_termination_agreement" icon="fa-print" type="object"/>
       					</div>
       					<group col="4">
                            <field name="employee_id" required="1"  attrs="{'readonly': [('is_created','=',True)]}"
                            	on_change="onchange_employee_id(employee_id, old_contract_id, new_contract_id, effect_date)"
                            	options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
                            <field name="employee_code" readonly="1"/>
       						<field name="effect_date" required="1" on_change="onchange_effect_date(employee_id, join_date, effect_date)"/>
       						<field name="seniority" options="{'save_readonly': True}"/>
       						<field name="remain_leave"/>
       						<field name="join_date" invisible='1'
       						    options="{'save_readonly': True}"/>
       						<field name="name" invisible='1'/>
       						<field name="is_created" invisible='1'/>
       					</group>
       					<notebook>
       						<page string="Info">
       							<group>
       								<group string="Old Contract">
	       								<field name="old_contract_id" required="1" 
	       									domain = "[('employee_id','=',employee_id),('id','!=',new_contract_id),('state','=','signed')]"
	       									on_change="onchange_old_contract_id(old_contract_id)"
	       									options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
	       								<field name="old_company_id" readonly="1"
	       								options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
	       								<field name="old_info_signer" readonly="1"/>
	       								<field name="old_title_signer" readonly="1"/>
	       								<field name="old_type_id" readonly="1"
	       								options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
	       								<field name="old_date_start" readonly="1"/>
	       								<field name="old_date_end" readonly="1"/>
	       								<field name="old_liquidation_date" readonly="1"/>
	       							</group>
	       							<group string="New Contract">
	       								<field name="new_contract_id" required="1" 
	       									domain = "[('employee_id','=',employee_id),('id','!=',old_contract_id),('state','=','signed')]"
	       									on_change="onchange_new_contract_id(new_contract_id)"
	       									options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
	       								<field name="new_company_id" readonly="1"
	       								options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
	       								<field name="new_info_signer" readonly="1"/>
	       								<field name="new_title_signer" readonly="1"/>
	       								<field name="new_type_id" readonly="1"
	       								options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
	       								<field name="new_date_start" readonly="1"/>
	       								<field name="new_date_end" readonly="1"/>
	       								<field name="new_liquidation_date" readonly="1"/>
	       							</group>
       							</group>
       							
       						</page>
       						<page string="Logs">
	                        	<label string="*** Please press F5 to refresh the list of logs !" colspan="4"/>
		                        <field name="audit_log_ids" mode="tree"
		                               widget="one2many_list" readonly="1" nolabel="1" colspan="4">
		                            <tree version="7.0">
		                                <field name="timestamp" required="1" readonly="1"/>
		                                <field name="user_id" readonly="1"/>
		                                <field name="method" readonly="1"/>
		                                <field name="field_description"/>
		                                <field name="old_value_text"/>
		                                <field name="new_value_text"/>
		                            </tree>
		                        </field>
	                        </page>
       					</notebook>
       				</sheet>
       			</form>
            </field>
        </record>

        <record id="view_vhr_termination_agreement_contract_tree" model="ir.ui.view">
            <field name="name">vhr.termination.agreement.contract.view.tree</field>
            <field name="model">vhr.termination.agreement.contract</field>
            <field name="groups_id" eval=""/>
            <field name="arch" type="xml">
                <tree string="Termination Agreement" version="7.0">
                	<field name='employee_code'/>
                    <field name="employee_id"/>
 					<field name="effect_date"/>
 					<field name="seniority"  />
                </tree>
            </field>
        </record>

        <record id="view_vhr_termination_agreement_contract_search" model="ir.ui.view">
            <field name="name">vhr.termination.agreement.contract.view.search</field>
            <field name="model">vhr.termination.agreement.contract</field>
            <field name="arch" type="xml">
                <search string="Search">
                   <field name="name" string="Termination Agreement" 
	                  		filter_domain="['|','|','|',('name','ilike',self),('employee_id.name','ilike',self),('employee_id.login','ilike',self),('employee_id.code','ilike',self)]"/>
				   <field name="effect_date"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_vhr_termination_agreement_contract">
            <field name="name">Termination Agreement</field>
            <field name="res_model">vhr.termination.agreement.contract</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_termination_agreement_contract_tree"/>
            <field name="groups_id" eval=""/>
            <field name="search_view_id" ref="view_vhr_termination_agreement_contract_search"/>
        </record>
    </data>
</openerp>