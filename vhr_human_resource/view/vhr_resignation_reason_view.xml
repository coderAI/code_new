<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	<record id="view_vhr_resignation_reason_form" model="ir.ui.view">
       		<field name="name">vhr.resignation.reason.view.form</field>
       		<field name="model">vhr.resignation.reason</field>
       		<field name="arch" type="xml">
       			<form string="Termination Reason" version="7.0">
       				<sheet>
       					<group col="4">
       						<group>
       							<field name="name" required='1'/>
       							<field name="resignation_type_id" attrs="{'readonly':[('reason_group_id','!=',False)]}"  options="{'no_quick_create':True, 'no_create':True}"
       							 readonly="context.get('resignation_type')"/>
       							<field name="reason_group_id" required='0'  options="{'no_quick_create':True, 'no_create':True}"
       							 readonly="context.get('resignation_type')"/>
       							<field name="is_hrbp"/>
       						</group>
       						<group>
       							<field name="name_en"/>
	       						<field name="code" required='1'/>       						
	       						<field name="active"/>
       						</group>
       					</group>
       					<group>
       						<field name="description"/>
       					</group>
       					<notebook>
       						<page string="Logs">
	                        	<label string="*** Please press F5 to refresh the list of logs !" colspan="4"/>
		                        <field name="audit_log_ids" mode="tree"
		                               widget="one2many_list" readonly="1" nolabel="1" colspan="4">
		                            <tree version="7.0">
		                                <field name="timestamp" required="1" readonly="1"/>
		                                <field name="user_id" readonly="1"/>
		                                <field name="method" readonly="1"/>
		                                <field name="field_description"/>
		                                <field name="old_value_text"/>
		                                <field name="new_value_text"/>
		                            </tree>
		                        </field>
	                        </page>
       					</notebook>
       				</sheet>
       			</form>
       		</field>
       	</record>
       	
       	<record id="view_vhr_resignation_reason_tree" model="ir.ui.view">
       		<field name="name">vhr.resignation.reason.view.tree</field>
       		<field name="model">vhr.resignation.reason</field>
       		<field name="arch" type="xml">
      			<tree string="Termination Reason" version="7.0">
      				<field name="code"/>
      				<field name="name"/>
					<field name="name_en"/>
					<field name='reason_group_id'/>
					<field name="resignation_type_id"/>
					<field name="active"/>
      			</tree>
     		</field>
       	</record>
       	
       	<record id="view_vhr_resignation_reason_search" model="ir.ui.view">
        	<field name="name">vhr.resignation.reason.view.search</field>
        	<field name="model">vhr.resignation.reason</field>
        	<field name="arch" type="xml">
        		<search string="Termination Reason">
        			<group expand="0" string="Group by...">
        				<filter string="Termination Type" name="Termination Type" context="{'group_by':'resignation_type_id'}" invisible='1'/>
        				<filter string="Resignation Group" name="Resignation Group" context="{'group_by':'reason_group_id'}"/>
        			</group>
        			<group expand="0" string="Filter">
        				<filter string="Active = True" name="active_true" icon="terp-stage"
                            domain="[('active', '=', True)]"/>
	                    <filter string="Active = False" name="active_false" icon="STOCK_NEW"
	                            domain="[('active', '=', False)]"/>
	                    <filter string="HRBP = True" name="is_hrbp_true" icon="terp-stage"
	                            domain="[('is_hrbp', '=', True)]"/>
	                    <filter string="HRBP = False" name="is_hrbp_false" icon="STOCK_NEW"
	                            domain="[('is_hrbp', '=', False)]"/>
        			</group>
        			<field name="name" string="Termination Reason" 
        			 filter_domain="['|','|',('name','ilike',self),('name_en','ilike',self),('code','ilike',self)]"/>
        		</search>
        	</field>
        </record>
        
        <record model="ir.actions.act_window" id="act_vhr_resignation_reason">
       		<field name="name">Termination Reason</field> 
            <field name="res_model">vhr.resignation.reason</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_resignation_reason_tree"/>
            <field name="search_view_id" ref="view_vhr_resignation_reason_search"/>
       	</record>
       	
       	
    </data>
</openerp>