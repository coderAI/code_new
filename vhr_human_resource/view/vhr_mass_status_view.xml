<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	<record id="view_vhr_mass_status_form_inherit" model="ir.ui.view">
       		<field name="name">vhr.mass.status.view.form.inherit</field>
       		<field name="model">vhr.mass.status</field>
       		<field name="inherit_id" ref="vhr_common.view_vhr_mass_status_form"/>
       		<field name="arch" type="xml">
       			<xpath expr="//field[@name='module_id']" position="replace">
       				<field name="module_id" groups="vhr_human_resource.vhr_cb"
                            options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}" />
       			</xpath>
       			<xpath expr="//field[@name='model_id']" position="replace">
       				<field name="model_id" groups="vhr_human_resource.vhr_cb"
                            options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}" />
       			</xpath>
       		</field>
       	</record>
       	
       	<record id="view_vhr_mass_status_tree_inherit" model="ir.ui.view">
       		<field name="name">vhr.mass.status.view.tree.inherit</field>
       		<field name="model">vhr.mass.status</field>
       		<field name="inherit_id" ref="vhr_common.view_vhr_mass_status_tree"/>
       		<field name="arch" type="xml">
      			<xpath expr="//field[@name='module_id']" position="replace">
       				<field name="module_id" groups="vhr_human_resource.vhr_cb"
                            options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}" />
       			</xpath>
       			<xpath expr="//field[@name='model_id']" position="replace">
       				<field name="model_id" groups="vhr_human_resource.vhr_cb"
                            options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}" />
       			</xpath>
     		</field>
       	</record>
       	
       	<record id="view_vhr_mass_status_detail_tree_inherit" model="ir.ui.view">
            <field name="name">vhr.mass.status.detail.view.tree.inherit</field>
            <field name="model">vhr.mass.status.detail</field>
            <field name="inherit_id" ref="vhr_common.view_vhr_mass_status_detail_tree"/>
            <field name="arch" type="xml">
            	<xpath expr="//field[@name='message']" position="replace">
       				<field name="message" groups="vhr_human_resource.vhr_cb"/>
       			</xpath>
       			
            </field>
        </record>
       	
       	
       	
    </data>
</openerp>