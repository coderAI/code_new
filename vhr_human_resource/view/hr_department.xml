<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	
    	
    	<record id="view_vhr_human_resource_hr_department_form_inherit" model="ir.ui.view">
            <field name="name">vhr.human.resource.hr.department.view.form.inherit</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="vhr_master_data.view_hr_department_form"/>
            <field name="arch" type="xml">
            	<field name="parent_id" position='attributes'>
					<attribute name="on_change">onchange_parent_id(parent_id, context)</attribute>
				</field>
				<field name="name" position='attributes'>
					<attribute name="on_change">onchange_name(name, context)</attribute>
				</field>
				<field name="name_en" position='attributes'>
					<attribute name="on_change">onchange_name_en(name_en, context)</attribute>
				</field>
				<field name="code" position='attributes'>
					<attribute name="on_change">onchange_code(code, context)</attribute>
				</field>
				<field name="organization_class_id" position='attributes'>
					<attribute name="on_change">onchange_organization_class_id(organization_class_id, context)</attribute>
				</field>
				<field name="manager_id" position='attributes'>
					<attribute name="on_change">onchange_manager_id(manager_id, context)</attribute>
				</field>
				<field name="company_id" position='attributes'>
					<attribute name="on_change">onchange_company_id(company_id, context)</attribute>
				</field>
                <xpath expr="//field[@name='salary_setting_id']" position="after">
                    <field name="new_wr_effect_from" 
                    attrs="{'invisible': [('is_change_parent_id','=', False),('is_change_data_to_create_history','=', False)],'required':['|',('is_change_parent_id','!=', False),('is_change_data_to_create_history','!=',False)]}" readonly='0'/>
                    <field name='is_create_new_wr' readonly='0'
                    attrs="{'invisible': [('is_change_parent_id','=', False),('is_change_data_to_create_history','=', False)],'required':['|',('is_change_parent_id','!=', False),('is_change_data_to_create_history','!=',False)]}"/>
                    <field name='is_change_parent_id' invisible='1'/>
                    <field name='is_change_data_to_create_history' invisible='1'/>
                </xpath>
                <xpath expr="//field[@name='note']" position="after">
                	<separator string="History"/>
                    <field name='history_ids'>
                    	<tree create='false' editable='true'>
                            <field name="name"/>
                            <field name="name_en"/>
                            <field name="code"/>
                            <field name="manager_id"/>
                            <field name="effect_from"/>
                            <field name="effect_to"/>
                            <field name="note"/>
                        </tree>
                    </field>
                </xpath>
                
            </field>
        </record>
        
        <record id="view_vhr_human_resource_hr_department_form_fa_inherit" model="ir.ui.view">
            <field name="name">vhr.human.resource.hr.department.view.form.fa.inherit</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="vhr_master_data.view_hr_department_form_fa"/>
            <field name="arch" type="xml">
            	<field name="payment_recever_id" position='attributes'>
					<attribute name="context">{'tree_view_ref':'vhr_human_resource.view_vhr_human_resource_mimimal_employee_tree'}</attribute>
				</field>
				<field name="advance_recever_id" position='attributes'>
					<attribute name="context">{'tree_view_ref':'vhr_human_resource.view_vhr_human_resource_mimimal_employee_tree'}</attribute>
				</field>
				<field name="travel_authorization_receiver_id" position='attributes'>
					<attribute name="context">{'tree_view_ref':'vhr_human_resource.view_vhr_human_resource_mimimal_employee_tree'}</attribute>
				</field>
				<field name="expense_report_recever_id" position='attributes'>
					<attribute name="context">{'tree_view_ref':'vhr_human_resource.view_vhr_human_resource_mimimal_employee_tree'}</attribute>
				</field>
				<field name="planning_approval_recever_id" position='attributes'>
					<attribute name="context">{'tree_view_ref':'vhr_human_resource.view_vhr_human_resource_mimimal_employee_tree'}</attribute>
				</field>
				<field name="budget_controller" position='attributes'>
					<attribute name="context">{'tree_view_ref':'vhr_human_resource.view_vhr_human_resource_mimimal_employee_tree'}</attribute>
				</field>
				<field name="mtk_receiver_id" position='attributes'>
					<attribute name="context">{'tree_view_ref':'vhr_human_resource.view_vhr_human_resource_mimimal_employee_tree'}</attribute>
				</field>
				<field name="non_mtk_receiver_id" position='attributes'>
					<attribute name="context">{'tree_view_ref':'vhr_human_resource.view_vhr_human_resource_mimimal_employee_tree'}</attribute>
				</field>
				<field name="good_request_receiver_id" position='attributes'>
					<attribute name="context">{'tree_view_ref':'vhr_human_resource.view_vhr_human_resource_mimimal_employee_tree'}</attribute>
				</field>
				<field name="eform_viewer_ids" position='attributes'>
					<attribute name="context">{'tree_view_ref':'vhr_human_resource.view_vhr_human_resource_mimimal_employee_tree'}</attribute>
				</field>
				<field name="hrbp_viewer_ids" position='attributes'>
					<attribute name="context">{'tree_view_ref':'vhr_human_resource.view_vhr_human_resource_mimimal_employee_tree'}</attribute>
				</field>
            </field>
        </record>
        
    </data>
</openerp>