<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	<record id="view_vhr_log_error_system_form" model="ir.ui.view">
       		<field name="name">vhr.log.error.system.view.form</field>
       		<field name="model">vhr.log.error.system</field>
       		<field name="groups_id" eval="[(4, ref('vhr_base.hrs_group_system'))]"/>
       		<field name="arch" type="xml">
       			<form string="Log Error System" version="7.0">
       				<sheet>
       					<group col="4">
       						<field name="module"/>
       						<field name="model"/>	
       						<field name="log_time" required='1'/>
       						<field name="parameter" required='1'/>
       					</group>
       					<group>
       						<field name="description"/>
       					</group>
       				</sheet>
       			</form>
       		</field>
       	</record>
       	
       	<record id="view_vhr_log_error_system_tree" model="ir.ui.view">
       		<field name="name">vhr.log.error.system.view.tree</field>
       		<field name="model">vhr.log.error.system</field>
       		<field name="groups_id" eval="[(4, ref('vhr_base.hrs_group_system'))]"/>
       		<field name="arch" type="xml">
      			<tree string="Log Error System" version="7.0" readonly='1'>
      				<field name="log_time"/>	
      				<field name="module"/>
       				<field name="model"/>		
					<field name="parameter"/>
      			</tree>
     		</field>
       	</record>
       	
       	<record id="view_vhr_log_error_system_search" model="ir.ui.view">
        	<field name="name">vhr.log.error.system.view.search</field>
        	<field name="model">vhr.log.error.system</field>
        	<field name="groups_id" eval="[(4, ref('vhr_base.hrs_group_system'))]"/>
        	<field name="arch" type="xml">
        		<search string="Log Error System">
        			<field name="name" string="Termination Type" 
        			 filter_domain="['|','|',('log_time','ilike',self),('parameter','ilike',self),('description','ilike',self)]"/>
        			<field name="module"/>
       				<field name="model"/>
        			
        		</search>
        	</field>
        </record>
        
        <record model="ir.actions.act_window" id="act_vhr_log_error_system">
       		<field name="name">Log Error System</field> 
            <field name="res_model">vhr.log.error.system</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'rule_for_tree_form': True,'create':False}</field> 
            <field name="view_id" ref="view_vhr_log_error_system_tree"/>
            <field name="search_view_id" ref="view_vhr_log_error_system_search"/>
       	</record>
       	
       	
    </data>
</openerp>