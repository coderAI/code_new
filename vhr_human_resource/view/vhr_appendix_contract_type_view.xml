<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	<record id="view_vhr_appendix_contract_type_form" model="ir.ui.view">
       		<field name="name">vhr.appendix.contract.type.view.form</field>
       		<field name="model">vhr.appendix.contract.type</field>
       		<field name="arch" type="xml">
       			<form string="Appendix Contract Type" version="7.0">
       				<sheet>
       					<group col="4">
       						<group>
       							<field name="name" required='1'/>
       							<field name="contract_sub_type_id" options="{'no_quick_create':True, 'no_create':True,'no_open':True}"/>
       							<field name="is_extension_appendix"/>
       							<field name="is_change_mission"/>
       							<field name="is_change_allowance"/>
       						</group>
       						<group>
       							<field name="name_en"/>
       							<field name="code" required='1'/>
       							<field name="is_change_salary"/>
       							<field name="active"/>
       						</group>								
						</group>
       					<group>
       						<field name="description"/>
       					</group>
       					<notebook>
       						<page string="Logs">
	                        	<label string="*** Please press F5 to refresh the list of logs !" colspan="4"/>
		                        <field name="audit_log_ids" mode="tree"
		                               widget="one2many_list" readonly="1" nolabel="1" colspan="4">
		                            <tree version="7.0">
		                                <field name="timestamp" required="1" readonly="1"/>
		                                <field name="user_id" readonly="1"/>
		                                <field name="method" readonly="1"/>
		                                <field name="field_description"/>
		                                <field name="old_value_text"/>
		                                <field name="new_value_text"/>
		                            </tree>
		                        </field>
	                        </page>
       					</notebook>
       				</sheet>
       			</form>
       		</field>
       	</record>
       	
       	<record id="view_vhr_appendix_contract_type_tree" model="ir.ui.view">
       		<field name="name">vhr.appendix.contract.type.view.tree</field>
       		<field name="model">vhr.appendix.contract.type</field>
       		<field name="arch" type="xml">
  				<tree string="Appendix Contract Type" version="7.0">
      				<field name="code"/>
      				<field name="name"/>
					<field name="name_en"/>
					<field name="description"/>
					<field name="contract_sub_type_id"/>
					<field name="active"/>
      			</tree>
     		</field>
       	</record>
       	
       	<record id="view_vhr_appendix_contract_type_search" model="ir.ui.view">
        	<field name="name">vhr.appendix.contract.type.view.search</field>
        	<field name="model">vhr.appendix.contract.type</field>
        	<field name="arch" type="xml">
    			<search string="Appendix Contract Type">
        			<field name="name" string="Appendix Contract Type" 
        			 filter_domain="['|','|','|',('name','ilike',self),('name_en','ilike',self),('code','ilike',self),('description','ilike',self)]"/>
        			<group expand="0" string="Filter">
						<filter string="Active = True" name="active_true" icon="terp-stage"
	                            domain="[('active', '=', True)]"/>
	                    <filter string="Active = False" name="active_false" icon="STOCK_NEW"
	                            domain="[('active', '=', False)]"/>	                   
	                </group>    
        		</search>        
        	</field>
        </record>
        
        <record model="ir.actions.act_window" id="act_vhr_appendix_contract_type">
       		<field name="name">Appendix Contract Type</field> 
            <field name="res_model">vhr.appendix.contract.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_appendix_contract_type_tree"/>
            <field name="search_view_id" ref="view_vhr_appendix_contract_type_search"/>
       	</record>
        
       	
       	
    </data>
</openerp>