<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	<record id="view_hr_contract_type_form" model="ir.ui.view">
       		<field name="name">hr.contract.type.view.form</field>
       		<field name="model">hr.contract.type</field>
       		<field name="inherit_id" ref="hr_contract.hr_contract_type_view_form"/>
       		<field name="arch" type="xml">
       			<form position="replace">
	       			<form string="Contract Type" version="7.0">
	       				<sheet>
	       					<group col="4">
	       						<group>
	       							<field name="name" required='1'/>
	       							<field name="contract_type_group_id" required='1' options="{'no_quick_create':True, 'no_create':True}"/>
	       							<field name="life_of_contract" string="Duration (Month)"/>
	       							<field name="active"/>
	       						</group>
	       						<group>
	       							<field name="name_en"/>
	       							<field name="code" required='1'/>
	       							<field name="is_official" invisible="1"/>
	       						</group>								
							</group>
	       					<group>
	       						<field name="description"/>
	       					</group>
	       					<notebook>
	       						<page string="Logs">
		                        	<label string="*** Please press F5 to refresh the list of logs !" colspan="4"/>
			                        <field name="audit_log_ids" mode="tree"
			                               widget="one2many_list" readonly="1" nolabel="1" colspan="4">
			                            <tree version="7.0">
			                                <field name="timestamp" required="1" readonly="1"/>
			                                <field name="user_id" readonly="1"/>
			                                <field name="method" readonly="1"/>
			                                <field name="field_description"/>
			                                <field name="old_value_text"/>
			                                <field name="new_value_text"/>
			                            </tree>
			                        </field>
		                        </page>
	       					</notebook>
	       				</sheet>
	       			</form>
       			</form>
       		</field>
       	</record>
       	
       	<record id="view_hr_contract_type_tree" model="ir.ui.view">
       		<field name="name">hr.contract.type.view.tree</field>
       		<field name="model">hr.contract.type</field>
       		<field name="inherit_id" ref="hr_contract.hr_contract_type_view_tree"/>
       		<field name="arch" type="xml">
  				<field name="name" position="before">
  					<field name="code"/>
  				</field>
  				<field name="name" position="after">
  					<field name="name_en"/>
					<field name="is_official" invisible="1"/>
					<field name="life_of_contract" string="Duration (Month)"/>
					<field name="contract_type_group_id"/>				
					<field name="active"/>
  				</field>
     		</field>
       	</record>
       	
       	<record id="view_hr_contract_type_search" model="ir.ui.view">
        	<field name="name">hr.contract.type.view.search</field>
        	<field name="model">hr.contract.type</field>
        	<field name="inherit_id" ref="hr_contract.hr_contract_type_view_search"/>
        	<field name="arch" type="xml">
    			<field name="name" position='replace'>    				
    				<field name="name" string="Contract Type" 
    					filter_domain="['|','|',('name','ilike',self),('name_en','ilike',self),('code','ilike',self)]"/>    				
 					<group expand="0" string="Group By">
                    	<filter string="Contract Type Group" icon="terp-go-home" domain="[]"
                                context="{'group_by':'contract_type_group_id'}"/>
                    </group>
                 	<group expand="0" string="Filter">      			
						<filter string="Active = True" name="active_true" icon="terp-stage"
		                        domain="[('active', '=', True)]"/>
		                <filter string="Active = False" name="active_false" icon="STOCK_NEW"
		                        domain="[('active', '=', False)]"/>
	                </group>
				</field>	                
        	</field>
        </record>
        
       	
       	
    </data>
</openerp>