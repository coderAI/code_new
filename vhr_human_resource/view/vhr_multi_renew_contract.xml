<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    
    	
    	<record id="view_vhr_multi_renew_contract_submit_form" model="ir.ui.view">
            <field name="name">vhr.multi.renew.contract.submit.form</field>
            <field name="model">vhr.multi.renew.contract</field>
            <field name="type">form</field>
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <form string="Note" version="7.0">
                    <separator string="Comment" colspan="4" required="context.get('required_comment',False)"/>
                    <footer>
                        <button name="execute_workflow"
                                string="Submit" one_click_button="True"
                                type="object" icon="gtk-save"
                                class="oe_highlight" context="{'ACTION_COMMENT': action_comment}"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        			
        <record id="vhr_multi_renew_contract_view" model="ir.ui.view">
            <field name="name">vhr.multi.renew.contract.form</field>
            <field name="model">vhr.multi.renew.contract</field>
            <field name="arch" type="xml">
                <form string="Renewal Contract" version="7.0">
                	<header>
       					<field name="state" widget="statusbar" class="oe_right" 
							statusbar_visible="draft,department,cb,finish"/>
       				</header>		
       				<div class="oe_right" name="buttons">	
                        <div class="oe_button_box" attrs="{'invisible': [('is_person_do_action','=',False)]}">
                            <br/>		
                            <button string="Send Email" name="action_send_email" type="object"
								class="oe_stat_button bg_icon_green"
	                            icon="fa-sun-o"
								context="{'action':'send_email','state': state}" 
                                attrs="{'invisible': ['|','|',('is_cb','=',False),('state','not in',['department']),('is_send_mail','=',True)]}"
							    />
                            	
                            <button string="Submit" name="open_window" type="object"
                            	class="oe_stat_button bg_icon_green"
	                            icon="fa-mail-forward"
								context="{'state': state,'action':'submit'}" 
                                states="draft"/>
							
							<button string="Approve" name="open_window" type="object"
								class="oe_stat_button bg_icon_green"
	                            icon="fa-mail-forward"
								context="{'action':'submit','state': state}" 
							    states="department"/>
							
							<button string="Execute" name="open_window" type="object"
								class="oe_stat_button bg_icon_green"
	                            icon="fa-mail-forward"
								context="{'action':'submit','state': state}" 
							    states="cb"/>
						
							<button string="Return" name="open_window" type="object"
								class="oe_stat_button bg_icon_red"
	                            icon="fa-mail-reply"
								context="{'action':'return','state': state, 'required_comment':True}" 
							    states="cb"/>	
							
							<button string="Reject" name="open_window" type="object"
								class="oe_stat_button bg_icon_red"
		                        icon="fa-times"
								context="{'action':'reject','state': state, 'required_comment':True}" 
							    states="draft"/>		
							
							<button string="Renew Contract" name="open_window" type="object"
								class="oe_stat_button bg_icon_green"
	                            icon="fa-mail-forward"
								attrs="{'invisible': ['|',('note','=',False),('state','!=','finish')]}"
								context="{'action':'renew_contract','state': state, 'required_comment':True}"/>
							
							<button string="Split Request" name="split_request" type="object"
								class="oe_stat_button bg_icon_green"
	                            icon="fa-sun-o"
								attrs="{'invisible': ['|','|',('count_detail_lines','&lt;', 50),('is_person_do_action','=',False),('state','!=','cb')]}"/>
									
                        </div>
                   </div> 
                   <group string="General">
                   		<group>
                   			<field name="team_id" readonly='1' options="{'no_open': True,'save_readonly': True}"/> 		
                   			<field name="department_id" readonly='1' options="{'no_open': True,'save_readonly': True}"/> 	
                   			<field name="department_group_id" readonly='1' options="{'no_open': True,'save_readonly': True}"/> 	
                   			<field name="date_from" readonly='1'/>	
                   			<field name="is_collaborator" readonly='1' attrs="{'invisible': [('is_collaborator','=',False)]}"/>		
                   			<field name="is_probation" readonly='1' attrs="{'invisible': [('is_probation','=',False)]}"/>	
                   			<field name='is_send_mail' 
                   		groups='vhr_human_resource.vhr_cb' attrs="{'invisible': [('state','in',['draft','cancel'])]}"/>	
                   			<field name="approver_id" groups='vhr_human_resource.vhr_cb'  options="{'no_open': True,'save_readonly': True}"/>		
                   			<field name="cc_work_mail" groups='vhr_human_resource.vhr_cb'  options="{'no_open': True,'save_readonly': True}"/>			
                   		</group>
                   		<group>
                   			<field name="manager_id" readonly='1' attrs="{'invisible': [('manager_id','=',False)]}"
                  	      options="{'no_open': True,'save_readonly': True}" />
                      		<field name="report_to" readonly='1' attrs="{'invisible': [('report_to','=',False)]}"
                      		  options="{'no_open': True,'save_readonly': True}"/>	
                      		<field name="date_to"  readonly='1'/>  	
                      		<field name="is_finish_by_system" readonly='1' attrs="{'invisible': [('is_finish_by_system','=',False)]}"/>	
                      		<field name='is_offline' 
                   		groups='vhr_human_resource.vhr_cb_contract' attrs="{'readonly': [('state','!=','draft')]}"/>		
                   			<field name='date_request' readonly='1'/>
                   			<field name='date_send_mail_dept' readonly='1'/>
                   			<field name='contact_point'/>
                   		</group>			
                   		<field name='is_person_do_action' invisible='1'/>	
                   		<field name='is_cb' invisible='1'/>	
                   		<field name='count_detail_lines' invisible='1'/>
                   		<field name="note" colspan='4' nolabel='1'	/>	
                   </group> 
                  <notebook>
                  	<page string="Contracts">
                  		<field name="contract_lines" colspan="4" nolabel="1" required="1"  
                  		    context="{'is_probation':is_probation, 'is_collaborator':is_collaborator}"	
                  			attrs="{'readonly': ['|',('state','not in',['draft','department','cb']),('is_person_do_action','=',False)]}">
                            <tree string="Vesting" version="7.0" create="0" editable="top" delete='0'>
                            	<field name="employee_code" readonly="1"/>	
                                <field name="employee_id" readonly="1"/>
                                <!--Current Contract Information-->
                                <field name="type_name" string="Current Term" readonly="1"/>
                                <field name="date_start" readonly="1"/>
                                <field name="date_end_temp_func" readonly="1"/>
                                <field name="remain_day_for_renew" readonly='1'/>
                                
                                <!--DH/LM Confirmation-->
                                <field name="renew_status" required="1" on_change="on_change_status(renew_status)"
                                	colclass="vhr_human_resource_background_yellow"/>
                                		
                                <field name="new_type_id" string="New Term" 
                                	   options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"
                                       attrs="{'readonly': [('renew_status', 'in', ['reject', 'pending'])],
                                               'required': [('renew_status', 'not in', ['reject', 'pending']),('appendix_type_id','=',False)]}"
                                       domain="[('id', 'in', list_contract_type_id)]" colclass="vhr_human_resource_background_yellow"
                                       on_change="on_change_new_info(new_type_id,new_date_start)"/>
                                
                                <field name="appendix_type_id" string="New Appendix Type" 
                                	   invisible="context.get('is_probation',False) and context.get('is_collaborator', False)"
                                	   options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"
                                       attrs="{'readonly': [('renew_status', 'in', ['reject', 'pending'])],
                                               'required': [('renew_status', 'not in', ['reject', 'pending']),('new_type_id','=',False)]}"
                                       domain="[('id', 'in', list_appendix_type_id)]" colclass="vhr_human_resource_background_yellow"
                                       on_change="on_change_appendix_new_info(appendix_type_id,new_date_start)"/>
                                
                                <field name="include_probation"
                                       invisible="not context.get('is_probation',False)"
                                       on_change="onchange_include_probation(include_probation, employee_id, company_id, new_type_id)"/>
                                	
                                 <field name="new_date_start" string="New Effective Date"
                                 	   invisible='1' 
                                 	   options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"
                                       attrs="{'readonly': [('renew_status', 'in', ['reject', 'pending'])],
                                               'required': [('renew_status', 'not in', ['reject', 'pending'])]}"
                                       on_change="on_change_new_info(new_type_id,new_date_start)"/> 
                                       
                                <field name="new_date_end" options="{'save_readonly': True}" string="New Expired Date"
                                       attrs="{'readonly': [('renew_status', 'in', ['reject', 'pending'])]}"/>
                                <field name="new_date_start_temp" invisible='1' option="{'save_readonly':True}"/>
                                <button name="btn_go_to_new_contract" string="New Contract" type="object" icon="terp-gtk-go-back-rtl"
                                 attrs="{'invisible': [('new_contract_id','=',False),('new_appendix_contract_id','=',False)]}"/>
                                <!--Invisible-->
                                <field name="company_id" readonly="1" invisible="1"/>
                                <!--<field name="is_on_probation" readonly="1" invisible="1"/>
                                <field name="is_terminated" readonly="1" invisible="1"/>-->
                                <field name="contract_name" string="Current Contract" readonly="1" invisible='1'/>
                                <field name="list_contract_type_id" invisible="1"/>
                                <field name="list_appendix_type_id" invisible='1'/>
                                <field name="is_collaborator" invisible="1"/>
                                <field name="state" invisible='1'/>
                                <field name="new_contract_id" invisible='1'/>
                                <field name="new_appendix_contract_id" invisible='1'/>
                                <field name="date_end" invisible='1'/>
                                
                            </tree>
                        </field>
                  	</page>	
                  	<page string="Log state changes" attrs="{'invisible': [('state','=',False)]}">
                            <field name="state_log_ids" readonly="1"/>
                    </page>	
                    <page string="Logs" groups="vhr_base.hrs_group_system,vhr_human_resource.vhr_cb_contract">
		       				<label string="*** Please press F5 to refresh the list of logs !" colspan="4"/>
	                        <field name="audit_log_ids" mode="tree"
	                               widget="one2many_list" readonly="1" nolabel="1" colspan="4">
	                            <tree version="7.0">
	                                <field name="timestamp" required="1" readonly="1"/>
	                                <field name="user_id" readonly="1"/>
	                                <field name="method" readonly="1"/>
	                                <field name="field_description"/>
	                                <field name="old_value_text"/>
	                                <field name="new_value_text"/>
	                            </tree>
	                        </field>
                        </page>
                        
                  </notebook> 
                            
                            <!--<field name="is_access" invisible="1"/>-->
                </form>
            </field>
        </record>
       
       <record id="view_vhr_multi_renew_contract_tree_official" model="ir.ui.view">
       		<field name="name">vhr.multi.renew.contract.view.tree.official</field>
       		<field name="model">vhr.multi.renew.contract</field>
       		<field name="arch" type="xml">
      			<tree string="Working Record" version="7.0"
      				colors="red:is_overtime_remind == True and state=='department';blue:state == 'department';green:state == 'cb';grey:state=='finish' and note != ''">
      				<field name="department_group_id"/>
      				<field name="department_id"/>
      				<field name="approver_id"/>
					<field name="date_from" string="End From"/>
					<field name="date_to" string="End To"/>
					<field name="count_detail_lines"/>
					<field name="remain_day_for_renew"/>
					<field name="state"/>
					<field name="waiting_for"/>
					<field name="note" invisible='1'/>
					<field name="is_overtime_remind" invisible='1'/>
      			</tree>
     		</field>
       	</record>
       	
       <record id="view_vhr_multi_renew_contract_tree_collaborator" model="ir.ui.view">
       		<field name="name">vhr.multi.renew.contract.view.tree.collaborator</field>
       		<field name="model">vhr.multi.renew.contract</field>
       		<field name="arch" type="xml">
      			<tree string="Working Record" version="7.0"
      				colors="red:is_overtime_remind == True and state=='department';blue:state == 'department';green:state == 'cb';grey:state=='finish' and note != ''">
      				<field name="department_group_id"/>
      				<field name="department_id"/>
      				<field name="approver_id"/>
					<field name="date_from" string="End From"/>
					<field name="date_to" string="End To"/>
					<field name="count_detail_lines"/>
					<field name="remain_day_for_renew"/>
					<field name="state"/>
					<field name="waiting_for"/>
					<field name="note" invisible='1'/>
					<field name="is_overtime_remind" invisible='1'/>
      			</tree>
     		</field>
       	</record>		
       	 
      	<record id="view_vhr_multi_renew_contract_search_official" model="ir.ui.view">
        	<field name="name">vhr.multi.renew.contract.view.search.official</field>
        	<field name="model">vhr.multi.renew.contract</field>
        	<field name="arch" type="xml">
        		<search string="Renewal Contract">
        			<group expand="0" string="Group by...">
        				<filter string="Department Group" name="department_group" context="{'group_by':'department_group_id'}"/>
        				<filter string="Department" name="department" context="{'group_by':'department_id'}"/>
        				<filter string="Approver" name="approver_id" context="{'group_by':'approver_id'}"/>
        			</group>
                    <group expand="0" string="Status">
                    	<filter string="Draft" name="state_draft" icon="STOCK_NEW"
                            domain="[('state', '=', 'draft')]"/>
                    	<filter string="Waiting Department" name="state_department" icon="STOCK_NEW"
                            domain="[('state', '=', 'department')]"/>
                    	<filter string="Waiting C&amp;B" name="state_cb" icon="STOCK_NEW"
                            domain="[('state', '=', 'cb')]"/>
                    	<filter string="Finish" name="state_finish" icon="STOCK_NEW"
                            domain="[('state', '=', 'finish')]"/>
                    	<filter string="Finish By System" name="state_system_finish" icon="STOCK_NEW"
                            domain="['&amp;',('state', '=', 'finish'),('is_finish_by_system', '=', True)]"/>
                    		
                    	<filter string="Cancel" name="state_cancel" icon="STOCK_NEW"
                            domain="[('state', '=', 'cancel')]"/>
                    	
                        <filter string="Error Finish" name="state_error_finish" icon="STOCK_NEW"
                            domain="['&amp;',('state', '=', 'finish'),('note','!=','')]"/>	
        			</group>
                    <field name="name" string="Approver" 
	                  		filter_domain="['|','|','|',('name','ilike',self),('approver_id','ilike',self),('approver_id','ilike',self),('approver_id.code','ilike',self)]"/>

        			<field name="department_id"/>
        			<field name="department_group_id"/>
                     <field name="date_from" string="End From &gt;"
                           filter_domain="[('date_from','&gt;=',self)]"/>
                    <field name="date_to" string="End To &lt;"
                           filter_domain="[('date_to','&lt;=',self)]"/>
        		</search>
        	</field>
        </record>	
       
       <record id="view_vhr_multi_renew_contract_search_collaborator" model="ir.ui.view">
        	<field name="name">vhr.multi.renew.contract.view.search.collaborator</field>
        	<field name="model">vhr.multi.renew.contract</field>
        	<field name="arch" type="xml">
        		<search string="Renewal Contract">
        			<group expand="0" string="Group by...">
        				<filter string="Department Group" name="department_group" context="{'group_by':'department_group_id'}"/>
        				<filter string="Department" name="department" context="{'group_by':'department_id'}"/>
        				<filter string="Approver" name="approver_id" context="{'group_by':'approver_id'}"/>
        			</group>
                    <group expand="0" string="Status">
                    	<filter string="Draft" name="state_draft" icon="STOCK_NEW"
                            domain="[('state', '=', 'draft')]"/>
                    	<filter string="Waiting Department" name="state_department" icon="STOCK_NEW"
                            domain="[('state', '=', 'department')]"/>
                    	<filter string="Waiting C&amp;B" name="state_cb" icon="STOCK_NEW"
                            domain="[('state', '=', 'cb')]"/>
                    	<filter string="Finish" name="state_finish" icon="STOCK_NEW"
                            domain="[('state', '=', 'finish')]"/>
                    	<filter string="Finish By System" name="state_system_finish" icon="STOCK_NEW"
                            domain="['&amp;',('state', '=', 'finish'),('is_finish_by_system', '=', True)]"/>
                    	<filter string="Cancel" name="state_cancel" icon="STOCK_NEW"
                            domain="[('state', '=', 'cancel')]"/>
                    	<filter string="Error Finish" name="state_error_finish" icon="STOCK_NEW"
                            domain="['&amp;',('state', '=', 'finish'),('note','!=','')]"/>
        			</group>
                    <field name="name" string="Approver" 
	                  		filter_domain="['|','|','|',('name','ilike',self),('approver_id','ilike',self),('approver_id','ilike',self),('approver_id.code','ilike',self)]"/>
					
					<field name="department_group_id"/>
        			<field name="department_id"/>
                     <field name="date_from" string="End From &gt;"
                           filter_domain="[('date_from','&gt;=',self)]"/>
                    <field name="date_to" string="End To &lt;"
                           filter_domain="[('date_to','&lt;=',self)]"/>
        		</search>
        	</field>
        </record>  
        
       
       <record id="action_multi_renew_probation_contract" model="ir.actions.act_window">
            <field name="name">Renewal Probation Contract</field>	
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vhr.multi.renew.contract</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="view_vhr_multi_renew_contract_tree_official"/>
            <field name="search_view_id" ref="view_vhr_multi_renew_contract_search_official"/>
            <field name="limit">40</field>
            <field name="domain">[('is_probation','=',True)]</field>
            <field name="context">{'rule_for_tree_form': True,'search_default_state_draft':True,
           							'search_default_state_cb':True,'search_default_state_department':True, 	
            					   'create':False,'duplicate':False,'delete':False,'is_probation': True}</field>
        </record>
          
        <record id="action_multi_renew_official_contract" model="ir.actions.act_window">
            <field name="name">Renewal Official Contract</field>	
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vhr.multi.renew.contract</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="view_vhr_multi_renew_contract_tree_official"/>
            <field name="search_view_id" ref="view_vhr_multi_renew_contract_search_official"/>
            <field name="limit">40</field>
            <field name="domain">[('is_collaborator','=',False),('is_probation','=',False)]</field>
            <field name="context">{'rule_for_tree_form': True,'search_default_state_draft':True,
           							'search_default_state_cb':True,'search_default_state_department':True, 	
            					   'create':False,'duplicate':False,'delete':False	}</field>
        </record>
       
       <record model="ir.actions.act_window" id="action_multi_renew_collaborator_contract">
       		<field name="name">Renewal Non Official Contract</field> 
            <field name="res_model">vhr.multi.renew.contract</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
           <field name="domain">[('is_collaborator','=',True)]</field> 
            <field name="context">{'rule_for_tree_form': True,'search_default_state_draft':True,
           							'search_default_state_cb':True,'search_default_state_department':True, 	
            					   'create':False,'duplicate':False,'delete':False}</field>
            <field name="view_id" ref="view_vhr_multi_renew_contract_tree_collaborator"/>
            <field name="limit">40</field>
            <field name="search_view_id" ref="view_vhr_multi_renew_contract_search_collaborator"/>
       	</record>                
	</data>
</openerp>