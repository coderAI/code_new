<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_vhr_resign_reason_detail_form" model="ir.ui.view">
            <field name="name">vhr.resign.reason.detail.view.form</field>
            <field name="model">vhr.resign.reason.detail</field>
            <field name="groups_id" eval=""/>
            <field name="arch" type="xml">
                <form string="Resign Reason Detail" version="7.0">
       				<sheet>
       					<group colspan="4">
       						<field name="termination_request_id" required="0" options="{'no_quick_create': True}"/>
                            <field name="resignation_reason_id" required="1"  options="{'no_quick_create': True}"/>
                            <field name="percentage" on_change="onchange_percentage(percentage)"/>
       					</group>
       					<group>
       						<field name="description"/>
       					</group>
       				</sheet>
       			</form>
            </field>
        </record>

        <record id="view_vhr_resign_reason_detail_tree" model="ir.ui.view">
            <field name="name">vhr.resign.reason.detail.view.tree</field>
            <field name="model">vhr.resign.reason.detail</field>
            <field name="groups_id" eval=""/>
            <field name="arch" type="xml">
                <tree string="Resign Reason Detail" version="7.0" editable="True">
                	<field name="termination_request_id"/>
                    <field name="resignation_reason_id"/>
                    <field name="percentage"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="view_vhr_resign_reason_detail_search" model="ir.ui.view">
            <field name="name">vhr.resign.reason.detail.view.search</field>
            <field name="model">vhr.resign.reason.detail</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name='termination_request_id'/>
                    <field name='resignation_reason_id'/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_vhr_resign_reason_detail">
            <field name="name">Resign Reason Detail</field>
            <field name="res_model">vhr.resign.reason.detail</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_resign_reason_detail_tree"/>
            <field name="groups_id" eval=""/>
            <field name="search_view_id" ref="view_vhr_resign_reason_detail_search"/>
        </record>
    </data>
</openerp>