<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_vhr_exit_checklist_department_fa_form" model="ir.ui.view">
            <field name="name">vhr.exit.checklist.department.fa.view.form</field>
            <field name="model">vhr.exit.checklist.department.fa</field>
            <field name="groups_id" eval=""/>
            <field name="arch" type="xml">
                <form string="Exit Checklist Department FA" version="7.0">
       				<sheet>
       					<group col='4'>
   							<field name="department_id" required='1'
   							options="{'no_quick_create' : True, 'no_create':True, 'no_open': True,'save_readonly': True}"/>
   							<field name="active"/>
   							<field name="note" colspan='4'/>
       					</group>
       					
       				</sheet>
       			</form>
            </field>
        </record>

        <record id="view_vhr_exit_checklist_department_fa_tree" model="ir.ui.view">
            <field name="name">vhr.exit.checklist.department.fa.view.tree</field>
            <field name="model">vhr.exit.checklist.department.fa</field>
            <field name="groups_id" eval=""/>
            <field name="arch" type="xml">
                <tree string="Exit Checklist Department FA" version="7.0">
                	
                    <field name="department_id" />
 					<field name="active"/>
 					<field name="note"/>
                </tree>
            </field>
        </record>
        
		
        <record id="view_vhr_exit_checklist_department_fa_search" model="ir.ui.view">
            <field name="name">vhr.exit.checklist.department.fa.view.search</field>
            <field name="model">vhr.exit.checklist.department.fa</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="department_id" />
 					<field name="active"/>
 					<field name="note"/>
                </search>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="act_vhr_exit_checklist_department_fa">
            <field name="name">Exit Checklist Department FA</field>
            <field name="res_model">vhr.exit.checklist.department.fa</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_vhr_exit_checklist_department_fa_tree"/>
            <field name="groups_id" eval=""/>
            <field name="search_view_id" ref="view_vhr_exit_checklist_department_fa_search"/>
        </record>
    </data>
</openerp>